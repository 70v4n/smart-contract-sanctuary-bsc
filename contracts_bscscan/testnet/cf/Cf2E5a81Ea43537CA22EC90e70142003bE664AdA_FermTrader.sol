pragma solidity >=0.6.12;

contract FermTrader {
    using SafeMath for uint256;
    using Address for address;
    
    IERC20 token;
    IUniswapV2Router02 uniswapRouter;
    IUniswapV2Pair uniswapPair;
    AggregatorV3Interface internal priceFeed;

    address _WETH;
    address payable feeWallet;

    uint bnbFee = 1;

    constructor (address _tokenAddress, address _uniswapPair, address _priceFeedAddress) {
        token = IERC20(_tokenAddress);
        uniswapRouter = IUniswapV2Router02(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);
        uniswapPair = IUniswapV2Pair(_uniswapPair);
        priceFeed = AggregatorV3Interface(_priceFeedAddress);

        _WETH = uniswapRouter.WETH();

        feeWallet = payable(msg.sender);     
    }

    // modifier requiresFee() {
    //     require(msg.value > getFee(), "Insufficient Fee!");
    //     _;
    // }

    function getLatestPrice() public view returns (int) {
        (
            uint80 roundID,
            int price,
            uint startedAt,
            uint timeStamp,
            uint80 answeredInRound
        ) = priceFeed.latestRoundData();
        return price;
    }

    function getFee() public view returns (uint){
        int latestPrice = getLatestPrice();
        uint256 fee = bnbFee * 10 ** 18;
        return fee.div(uint256(latestPrice));
    }

    function takeFee() internal returns (uint) {
        uint fee = getFee();

        feeWallet.transfer(fee);

        return msg.value.sub(fee);
    }

    function getPathForBNBtoToken() private view returns (address[] memory) {
        address[] memory path = new address[](2);
        path[0] = address(_WETH);
        path[1] = address(token);

        return path;
    }

    function getPathForTokentoBNB() private view returns (address[] memory) {
        address[] memory path = new address[](2);
        path[0] = address(token);
        path[1] = address(_WETH);

        return path;
    }

    function getReserves() public view returns (uint112 reserve0, uint112 reserve1, uint32 blockTimestampLast) {
        return uniswapPair.getReserves();
    }
    
    function getAmountOut(uint _amountIn) public view returns (uint) {
        ( uint112 reserve0, uint112 reserve1, uint32 blockTimestampLast ) = getReserves();
        return uniswapRouter.getAmountOut(_amountIn, reserve1, reserve0);
    }

    function convertEthToToken(uint bnbAmount) internal {
        uint deadline = block.timestamp + 300;

        uint amountOut = getAmountOut(bnbAmount);

        uniswapRouter.swapETHForExactTokens{ value: bnbAmount }(amountOut, getPathForBNBtoToken(), msg.sender, deadline);

        (bool success,) = feeWallet.call{ value: address(this).balance }("");
        require(success, "refund failed");
    }

    function buyToken(uint amountOut, uint bnbAmount) internal {
        convertEthToToken(bnbAmount);
    }

    function sellToken(uint amountOut, uint amountIn) internal returns (uint[] memory amounts) {
        address[] memory path = new address[](2);
        path[0] = address(token);
        path[1] = address(_WETH);

        return uniswapRouter.swapExactTokensForETH(amountOut, amountIn, path, msg.sender, block.timestamp + 900);
    }

    function run() public payable { // requiresFee() {
        // require(iterations > 1, "Must have more than one iteration.");
        // uint bnbAmount = takeFee();
        uint256 allowance = token.allowance(msg.sender, address(this));
        uint256 amountOut = getAmountOut(msg.value);
        // require(allowance > amountIn, "Insufficient approval");

        // for (int i=0; i <= iterations; i++) {
            buyToken(amountOut, msg.value);
            // sellToken(amountOut, amountIn);
            // buyToken(amountOut);
        // }
    }
}

