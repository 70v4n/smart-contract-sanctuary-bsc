    function ownerOf(uint256 tokenId) external view returns (address owner);
    
}

contract UpdateProfile is Ownable {
    
    address accountContract;
    Price private price;
    bool private isOpen = true;
    string private website;
    
    constructor(address _accountContract, string memory _website) {
       accountContract = _accountContract; 
       website = _website;
    }
    
    function updateProfile(uint256 tokenId, string memory nickName, string memory avatar) public {
        require(isOpen,"can not update profile now");
        require(IERC721(accountContract).ownerOf(tokenId) == msg.sender,"token is not own");
        if(price.exchangeToken != address(0) && price.rate > 0){
            IERC20(price.exchangeToken).transferFrom(msg.sender,address(this),price.rate);
        }
        if(bytes(nickName).length > 0){
            IAccount(accountContract).changeNickName(tokenId,nickName);
        }
        
        if(bytes(avatar).length > 0){
             IAccount(accountContract).changeNickName(tokenId,string(abi.encodePacked(website,avatar)));
        }else{
            IAccount(accountContract).changeNickName(tokenId,avatar);
        }
    }
    
    function setPrice(address _exchangeToken, uint256 _rate) public onlyController {
        price = Price({
            exchangeToken:_exchangeToken,
            rate:_rate
        });
    }
    
    function withdraw(address account) public onlyOwner {
        address exchangeToken = price.exchangeToken;
        if(exchangeToken != address(0)){
            uint256 amount = IERC20(exchangeToken).balanceOf(address(this));
            if(amount > 0) {
                IERC20(exchangeToken).transfer(account,amount);
            }
        }
    }
    
    function setWebsite(string memory _website) public onlyController {
        website = _website;
    }
    
    function getWebsite() public view returns (string memory) {
        return website;
    }
    
    function getPirce() public view returns (Price memory) {
        return price;
    }
    
    function setOpen(bool _isOpen) public onlyController {
        isOpen = _isOpen;
    }
    
    struct Price {
        address exchangeToken;
        uint256 rate;
    }
}