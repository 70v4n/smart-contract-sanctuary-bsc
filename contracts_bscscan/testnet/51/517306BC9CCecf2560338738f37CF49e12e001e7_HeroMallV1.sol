contract HeroMallV1 is Ownable {
    
    address private heroAddress;
    uint256 private maxTotalSupply;
    string private  baseName;
    uint256 private totalSupply;
    bool private isOpen = true;
    Price private sellPrice;
    uint256 [] private races;
    uint256 private seed = uint256(keccak256(abi.encodePacked(block.number, msg.sender, block.timestamp))) % 10000;
    address private receiverAddress = 0x000000000000000000000000000000000000dEaD;
    uint256 private maxBuyTimes =1;
    mapping(address=>uint256)buyTimes;
    
    
    constructor(address _heroAddress,uint256 _maxTotalSupply,string memory _baseName) {
        heroAddress = _heroAddress;
        maxTotalSupply = _maxTotalSupply;
        baseName = _baseName;
    }
    
    function recruit(uint256 amount) public {
        require(isOpen, "the mall is close");
        require(amount == sellPrice.price, "amount is wrong");
        if(maxBuyTimes > 0){
            require(maxBuyTimes > buyTimes[msg.sender],"you don't have enough purchases");
        }
        uint256 currentId = totalSupply + 1;
        require(maxTotalSupply >= currentId ,"salt out");
        
        string memory name = string(abi.encodePacked(baseName, "#", uint2str(currentId)));
        uint256 random = getRandom();
        uint256 race = races[random % races.length];
        
        IERC20(sellPrice.exchangeToken).transferFrom(msg.sender,receiverAddress,amount);
        INFT(heroAddress).mint(msg.sender,name,1,1,1,race,1);
        
        totalSupply += 1;
        buyTimes[msg.sender] += 1;
    }
    
    function getTotalSupply() public view returns (uint256){
        return totalSupply;
    }
    
    function getMaxTotalSupply() public view returns (uint256){
        return maxTotalSupply;
    }
    
    function setOpen(bool _isOpen) public onlyController {
        isOpen = _isOpen;
    }
    
    function getIsOpen() public view returns (bool) {
        return isOpen;
    }
    
    function setPrice(address _exchangeToken,uint256 _price) public onlyController {
        sellPrice = Price({
            exchangeToken:_exchangeToken,
            price:_price
        });
    }
    
    function setBaseName(string memory _name) public onlyController {
        baseName = _name;
    }
    
    function getBaseName() public view returns (string memory) {
        return baseName;
    }
    
    function getPirce() public view returns (Price memory) {
        return sellPrice;
    }
    
    function addRaces(uint256 [] memory  _races) public onlyController {
        uint256 length = _races.length;
        require(length > 0);
        for (uint256 i = 0; i < length; i++) {
            races.push(_races[i]);
        }
    }
    
    function getRaces() public view returns (uint256 [] memory) {
        return races;
    }
    
    
    function setReceiverAddress(address _receiverAddress) public onlyController {
        receiverAddress = _receiverAddress;
    }
    
    function getReceiverAddress() public view returns (address) {
        return receiverAddress;
    }
    
    function setMaxTotalSupply(uint256 _maxTotalSupply) public onlyController {
        maxTotalSupply = _maxTotalSupply;
    }
    
    function setMaxBuyTimes(uint256 _maxBuyTimes) public onlyController {
        maxBuyTimes = _maxBuyTimes;
    }
    
    function getMaxBuyTimes() public view returns (uint256) {
        return maxBuyTimes;
    }
    
    function getBuyTimes(address account) public view returns(uint256) {
        return buyTimes[account];
    }
 
    function uint2str(uint256 _i) private pure returns (string memory str) {
        if (_i == 0) {
            return "0";
        }
        uint256 j = _i;
        uint256 length;
        while (j != 0) {
            length++;
            j /= 10;
        }

        bytes memory bstr = new bytes(length);
        uint256 k = length;
        j = _i;
        while (j != 0) {
            bstr[--k] = bytes1(uint8(48 + j % 10));
            j /= 10;
        }
        str = string(bstr);
    }
    
    function getRandom() private  returns (uint256) {
        uint256 randomNumber = uint256(
            uint256(keccak256(abi.encodePacked(block.timestamp, msg.sender, seed))) % 10000
        );
        seed = seed + 1;
        return randomNumber;
    }
    
    struct Price {
        address exchangeToken;
        uint256 price;
    }
}