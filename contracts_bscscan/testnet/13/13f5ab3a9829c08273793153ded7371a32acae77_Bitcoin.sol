contract Management {
    address public manager;
    address[] adminData;
    mapping(address => Admin) admins;
    
    struct Admin {
        bool active;
        string status;
    }
    
    constructor(){
        manager = msg.sender;
    }
    
    modifier onlyManager(){
        require(msg.sender == manager, 'Manager address require ');
        _;
    }
    
    modifier onlyAdmin(){
        require( admins[msg.sender].active ,'Admin require ');
        _;
    }
    
    function addAdmin(address newAdmin, string memory _status) public onlyManager{
        admins[newAdmin].active = true;
        admins[newAdmin].status = _status;
        adminData.push(newAdmin);
    }
    
    function removeAdmin(address _admin) public onlyManager {
        admins[_admin].active = false;
        admins[_admin].status = '';
        for(uint a = 0; a < adminData.length; a++){
            if(adminData[a] == _admin){
                adminData[a] = adminData[adminData.length - 1];
                adminData.pop();
            }
        }
    }
    
    function listOfAdmin() public onlyManager view returns(address[] memory){
        return adminData;
    }
}

