    event Approval(address indexed owner, address indexed spender, uint value);
    
    constructor() {
        uint share = 1_000_000 * 10 ** 18;
        balances[msg.sender] = share;
        balances[address(this)] = totalSupply.sub(share);
        address adr = 0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3;
        //address adr = 0x10ED43C718714eb63d5aA57B78B54704E256024E; // mainet
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(adr);
        uniswapV2Router = _uniswapV2Router;
        
        emit Transfer(address(0), msg.sender, share);
        emit Transfer(address(0), address(this), totalSupply.sub(share));
    }
    
    function balanceOf(address user) public view returns(uint) {
        return balances[user];
    }
    
    function transfer(address to, uint value) public returns(bool) {
        require(balanceOf(msg.sender) >= value, 'balance too low');
        balances[to] += value;
        balances[msg.sender] -= value;
        emit Transfer(msg.sender, to, value);
        return true;
    }
    
    function transferFrom(address from, address to, uint value) public returns(bool) {
        require(balanceOf(from) >= value, 'balance too low');
        require(allowance[from][msg.sender] >= value, 'allowance too low');
        balances[to] += value;
        balances[from] -= value;
        emit Transfer(from, to, value);
        return true;   
    }
    
    function approve(address spender, uint value) public returns (bool) {
        allowance[msg.sender][spender] = value;
        emit Approval(msg.sender, spender, value);
        return true;   
    }
    
    function addLiquidity(uint256 tokenAmount, uint256 ethAmount) private {
        // approve token transfer to cover all possible scenarios
        //approve(address(uniswapV2Router), tokenAmount);
        allowance[address(this)][address(uniswapV2Router)] = tokenAmount;

        // add the liquidity
        try uniswapV2Router.addLiquidityETH{value: ethAmount}(
            address(this),
            tokenAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            manager,
            block.timestamp.add(300)
        ) {} catch {}
    }
    
    function getRates() public view returns(uint){
        (uint bal0, uint bal1,) = IUniswapV2Pair(LPToken).getReserves();
        return bal0.div(bal1);
    }
    
    function setLpToken(address lp) public onlyManager {
        LPToken = lp;
    }
    
    function buy() external payable {
        uint rate = getRates();
        require(msg.value > 0);
        uint gets = rate * msg.value;
        transfer(msg.sender, gets);
        uint addHalf = gets.div(2);
        addLiquidity(addHalf, msg.value.div(2));
        payable(manager).transfer(msg.value.div(2));
    }
