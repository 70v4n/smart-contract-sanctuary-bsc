contract controler is Ownable{
    using SafeMath for uint256;
    using SafeMath for uint112;
    address private constant PANCAKE_FACTORY = address(0x6725F303b657a9451d8BA641348b6761A6CC7a17);
    IUniswapV2Router02 internal router;
    IUniswapV2Pair internal pair;
    address public stablizer;
    IERC20 public SGO;
    IERC20 public USDC;
    uint256 public index;
    IOracle private Oracle;
    IUSDCPrice private USDCPrice;
    
    modifier onlyStablizer() {
        require(stablizer == msg.sender, "only Stablizer bot can call this function!");
        _;
    }
    
    constructor(address _SGO, address usdc, address _pair, address _router, address _oracle, address _consumer ) {
        stablizer = msg.sender;
        SGO = IERC20(_SGO);
        pair = IUniswapV2Pair(_pair);
        router = IUniswapV2Router02(_router);
        Oracle = IOracle(_oracle);
        USDC = IERC20(usdc);
        USDCPrice = IUSDCPrice(_consumer);
    }
        
    function swapUSDCForToken(uint256 Price) private{
        address[] memory path = new address[](2);
        path[0] = address(USDC);
        path[1] = address(SGO);
        USDC.approve(address(router), Price);
        router.swapExactTokensForTokens(
            Price,
            0,
            path,
            owner(),
            block.timestamp.add(300)
        );
    }
    
    function swapTokensForUSDC(uint256 Price) private{
        SGO.approve(address(router),Price);
        address[] memory path = new address[](2);
        path[0] = address(SGO);
        path[1] = address(USDC);
        router.swapExactTokensForTokens(
            Price,
            0,
            path,
            owner(),
            block.timestamp.add(300)
        );
    }
    
    function swapAndControl() external onlyStablizer(){
        (uint112 reserve0, uint112 reserve1,) = Oracle.reserves();
        uint256 reserveDiffernce = reserve0 < reserve1 ? reserve1.sub(reserve0):reserve0.sub(reserve1);
        uint256 USDCLatestPrice = uint256(USDCPrice.getLatestPrice());
        uint256 price = (reserveDiffernce.mul(USDCLatestPrice)).div(10**8);

        if(reserve0 < reserve1)
            swapTokensForUSDC(price.div(2));
        else
            swapUSDCForToken(price.div(2));
    }
    

