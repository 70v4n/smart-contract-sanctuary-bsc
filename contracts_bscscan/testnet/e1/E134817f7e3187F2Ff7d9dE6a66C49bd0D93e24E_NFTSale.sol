pragma solidity 0.8.10;

import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
interface BipgoNFT {
    function createNFTSale(address _to,string memory _metadata,uint256 collectId) external returns (uint);
}
interface IERC20 {
    function balanceOf(address owner) external view returns (uint);
    function allowance(address owner, address spender) external view returns (uint);

    function approve(address spender, uint value) external returns (bool);
    function transfer(address to, uint value) external returns (bool);
    function transferFrom(address from, address to, uint value) external returns (bool);
}

contract NFTSale {
    using SafeMath for uint;
    /// @dev get deposti amount from a user
    mapping(address => uint) public _depositAddressesBNBAmount; // Address' deposit amount
    /// @dev true if a address have a nft
    mapping(address => bool) public _bippers;
    /// @dev save total of nft sold by this contract
    uint public _totalBippersSold;
    /// @dev total mount deposit in this contract
    uint public _totalAddressesDepositAmount; // Total addresses' deposit amount
    /// @dev admin address (gnosis safe wallet)
    address payable public _admin; // Admin address
    /// @dev adress of nft base contract
    address public _bep21Contract; // External erc20 contract
    /// @dev address to get transfer the commisions and COST of mint a NFT
    address payable public commissions;
    /// @dev COST of a golden box NFT
    uint256 public  priceGoldenBox;
    /// @dev COST of a silver box NFT
    uint256 public priceSilverBox;
    /// @dev COST of a diamond box NFT    
    uint256 public priceDiamondBox;
    /// @dev Deposit event
    event Deposit(address indexed _from, uint _value);
    /// @dev BGO token address
    address private constant BGO_TOKEN = 0xFE9fdc1D4774AA2317B6e4AdBbca1329DEA26173;
    /// @dev admin address
     modifier onlyAdmin() { // Is Admin?
        require(_admin == msg.sender);
        _;
    }
    /** 
    @notice Function that initializes the nft sale contract
    @dev define admin and NFT base contract address
    @param bep21Contract Address of the NFT base contract
    */
    function startContract(address bep21Contract) public {
        _admin = payable(0xD82F580fB7448F1b9A20A2FB241D8A1fffE1bd44);
        _bep21Contract = bep21Contract;
        commissions = payable(0xD82F580fB7448F1b9A20A2FB241D8A1fffE1bd44);
    }
    /**
    @notice function that update de price of each NFT Box to sale in the marketplace
    @param  priceSilver price in bgo for the silver box
    @param  priceGolden price in bgo for the golden box
    @param  priceDiamond price in bgo for the diamond box
    */
    function updatePriceNFTBoxes(uint256 priceSilver,uint256 priceGolden,uint256 priceDiamond) external onlyAdmin{
        require(priceSilver >= priceSilverBox && priceGolden >= priceGoldenBox && priceDiamond >= priceDiamondBox,"wrong values");
        priceSilverBox = priceSilver;
        priceGoldenBox = priceGolden;
        priceDiamondBox = priceDiamond;
    }
    /**
    *@notice Increase the value in tokens to an address
    *@dev Transfer
    *@param _metadata url with token metadata
    *@param _mount mount on weis
    *@param collectId Id from actual collection of NFT
    *@return int with new NFT id
    */
    function buyNFT1(string memory _metadata,uint256 _mount,uint256 collectId) external payable returns (uint) {
        require(_mount == priceSilverBox, "Wrong value");
        _bippers[msg.sender] = true;
        _totalBippersSold = _totalBippersSold.add(1);
        _totalAddressesDepositAmount = _totalAddressesDepositAmount.add(_mount);
        _depositAddressesBNBAmount[msg.sender] = _depositAddressesBNBAmount[msg.sender].add(_mount);
        IERC20 bgoContract = IERC20(BGO_TOKEN);
        BipgoNFT bep21Contract = BipgoNFT(_bep21Contract);
        bgoContract.transferFrom(msg.sender,commissions,_mount);
        uint256 id = bep21Contract.createNFTSale(msg.sender, _metadata,collectId);
        emit Deposit(msg.sender, _mount);
        return id;
    }
    /**
    *@notice Increase the value in tokens to an address
    *@dev Transfer
    *@param _metadata url with token metadata
    *@param _mount mount on weis
    *@param collectId Id from actual collection of NFT
    *@return int with new NFT id
    */
     function buyNFT2(string memory _metadata,uint256 _mount,uint256 collectId) external payable returns (uint) {
        require(_mount == priceGoldenBox , "Wrong value");
        _bippers[msg.sender] = true;
        _totalBippersSold = _totalBippersSold.add(1);
        _totalAddressesDepositAmount = _totalAddressesDepositAmount.add(_mount);
        _depositAddressesBNBAmount[msg.sender] = _depositAddressesBNBAmount[msg.sender].add(_mount);
        IERC20 bgoContract = IERC20(BGO_TOKEN);
        BipgoNFT bep21Contract = BipgoNFT(_bep21Contract);
        bgoContract.transferFrom(msg.sender,commissions,_mount);
        uint256 id = bep21Contract.createNFTSale(msg.sender, _metadata,collectId);
        emit Deposit(msg.sender, _mount);
        return id;
    }
   /**
    *@notice Increase the value in tokens to an address
    *@dev Transfer
    *@param _metadata url with token metadata
    *@param _mount mount on weis
    *@param collectId Id from actual collection of NFT
    *@return int with new NFT id
    */
     function buyNFT3(string memory _metadata,uint256 _mount,uint256 collectId) external payable returns (uint) {
        require(_mount == priceDiamondBox, "Wrong value");
        _bippers[msg.sender] = true;
        _totalBippersSold = _totalBippersSold.add(1);
        _totalAddressesDepositAmount = _totalAddressesDepositAmount.add(_mount);
        _depositAddressesBNBAmount[msg.sender] = _depositAddressesBNBAmount[msg.sender].add(_mount);
         IERC20 bgoContract = IERC20(BGO_TOKEN);
        BipgoNFT bep21Contract = BipgoNFT(_bep21Contract);
        bgoContract.transferFrom(msg.sender,commissions,_mount);
        uint256 id = bep21Contract.createNFTSale(msg.sender, _metadata,collectId);
        emit Deposit(msg.sender, _mount);
        return id;
    }
}

