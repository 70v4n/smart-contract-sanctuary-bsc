import './DividendPayingToken.sol';

import '../utils/Ownable.sol';
import '../utils/EnumerableSet.sol';
import '../utils/RecordQueue.sol';

contract YoloDogeDividendTracker is DividendPayingToken, Ownable {
    using RecordQueue for RecordQueue.Queue;
    using EnumerableSet for EnumerableSet.AddressSet;
    RecordQueue.Queue private records;
    EnumerableSet.AddressSet private tokenHoldersSet;


    mapping (address => bool) public excludedFromDividends;
    mapping (address => uint256) public nextClaimTime;
    mapping (address => uint256) public lastSellTime;

    // 1 Day
    uint256 public claimWait = 240;
    uint256 public immutable minimumTokenBalanceForDividends;
    uint256 public lastProcessedIndex;

    event ExcludeFromDividends(address indexed account);
    event ClaimWaitUpdated(uint256 indexed newValue, uint256 indexed oldValue);
    event Claim(address indexed account, uint256 amount);

    constructor() public DividendPayingToken("YoloDogeDividendTracker", "YoloDogeDividendTracker") {
        minimumTokenBalanceForDividends = 10000 * (10**9); //must hold 10000+ tokens
    }

    function _transfer(address, address, uint256) internal override {
        require(false, "YoloDogeDividendTracker: No transfers allowed");
    }

    function excludeFromDividends(address account) external onlyOwner {
    	require(!excludedFromDividends[account]);
    	excludedFromDividends[account] = true;

    	_setBalance(account, 0);
    	tokenHoldersSet.remove(account);

    	emit ExcludeFromDividends(account);
    }

    function updateClaimWait(uint256 newClaimWait) external onlyOwner {
        require(newClaimWait >= 0 && newClaimWait <= 86400 * 7, "YoloDogeDividendTracker: claimWait must be updated to between 0 and 24 * 7 hours");
        require(newClaimWait != claimWait, "YoloDogeDividendTracker: Cannot update claimWait to same value");
        claimWait = newClaimWait;
        emit ClaimWaitUpdated(newClaimWait, claimWait);
    }

    function getLastProcessedIndex() external view returns(uint256) {
    	return lastProcessedIndex;
    }

    function getNumberOfTokenHolders() external view returns(uint256) {
        return tokenHoldersSet.length();
    }


    function canClaim(address _account) private view returns (bool) {
    	return nextClaimTime[_account] >= block.timestamp;
    }

    function updateBalance(address _account, uint256 _newBalance, uint256 _tNewBalance) external onlyOwner {
    	if(excludedFromDividends[_account])
    		return;
        uint256 initialBalance = balanceOf(_account);
        if (_newBalance == initialBalance)
            return;

        Record memory record;
        record.addr = _account;
        record.balance = _newBalance;
        record.timestamp = block.timestamp;
        if (_newBalance < initialBalance) {
            // Sell
            _setBalance(_account, 0);
            tokenHoldersSet.remove(_account);
            nextClaimTime[_account] = block.timestamp + claimWait;
            lastSellTime[_account] = block.timestamp;
        }
        if (_tNewBalance >= minimumTokenBalanceForDividends)
            records.push(record);
    }

    function processQueue(uint256 gasLimit) public returns (bool, uint256, uint256) {
    	uint256 gasUsed = 0;
    	uint256 gasLeft = gasleft();
    	uint256 iterations = 0;
        uint256 queueSize = records.size();
        while (gasUsed < gasLimit && queueSize > 0) {
    		iterations++;
            Record memory record = records.front();
            if (record.timestamp + claimWait >= block.timestamp) {
                if (record.timestamp >= lastSellTime[record.addr]) {
                    _setBalance(record.addr, record.balance);
                    if (!tokenHoldersSet.contains(record.addr))
                        tokenHoldersSet.add(record.addr);
                }
                records.pop();
                queueSize--;
            } else {
                break;
            }

    		uint256 newGasLeft = gasleft();
    		gasUsed += gasLeft - newGasLeft;
    		gasLeft = newGasLeft;
        }

        if (queueSize > 0 && records.front().timestamp + claimWait >= block.timestamp) {
            // Still need to process queue
            return (false, iterations, queueSize);
        } else {
            return (true, iterations, queueSize);
        }
    }

    function process(uint256 gasLimit) public returns (uint256, uint256, uint256) {
    	uint256 quailifiedHolder = tokenHoldersSet.length();

    	if (quailifiedHolder == 0) {
    		return (0, 0, lastProcessedIndex);
    	}

    	uint256 _lastProcessedIndex = lastProcessedIndex;
    	uint256 gasUsed = 0;
    	uint256 gasLeft = gasleft();
    	uint256 iterations = 0;
    	uint256 claims = 0;

    	while (gasUsed < gasLimit && iterations < quailifiedHolder) {
    		_lastProcessedIndex++;

    		if (_lastProcessedIndex >= tokenHoldersSet.length()) {
    			_lastProcessedIndex = 0;
    		}

    		address account = tokenHoldersSet.at(_lastProcessedIndex);

    		if (canClaim(account)) {
    			processAccount(payable(account));
    			claims++;
    		}

    		iterations++;

    		uint256 newGasLeft = gasleft();
    		gasUsed += gasLeft - newGasLeft;
    		gasLeft = newGasLeft;
    	}

    	lastProcessedIndex = _lastProcessedIndex;
    	return (iterations, claims, lastProcessedIndex);
    }

    function processAccount(address payable account) public onlyOwner {
        uint256 amount = _withdrawDividendOfUser(account);
    	nextClaimTime[account] = block.timestamp + claimWait;
        emit Claim(account, amount);
    }
}

