contract MainExchange is Ownable,ReentrancyGuard {
    
   uint public perBnbToken = 2e18;
   IBEP20 public token;
   
   event Exchange(address user,uint8 flag,uint amount,uint time);
   
   constructor (address _token) {
       token = IBEP20(_token);
   }
   
   receive()external payable{}

   function exchange(address _user,uint _amount,uint8 _flag)public payable  {
       require(_flag == 1 || _flag ==2,"Incorrct flag");
       uint amt;
       if (_flag == 1) {
       require(msg.value > 0 && _amount == 0,"Flag 1 params wrong");
        amt = (perBnbToken*msg.value/1e18);
       token.transfer(_user,amt);
       }
       else {
       require(msg.value == 0 && _amount > 0,"Flag 2 params wrong");
        amt = (_amount/perBnbToken*1e18);
        token.transferFrom(msg.sender,address(this),_amount);
       require(payable(_user).send(amt),"BNB Transfer failed");
       }
       emit Exchange(_user,_flag,amt,block.timestamp);
   }
   
   function updatePrice(uint8 _price) public onlyOwner {
       require(_price > 0,"Invalid price");
       perBnbToken = _price;
   }
   
   function retrive(address _user,uint amount,uint8 _type)public onlyOwner {
        require(_user != address(0) && amount > 0,"Invalid argument");
        if (_type == 1) {
        require(token.balanceOf(address(this)) >= amount,"Insufficent amount");
        token.transfer(_user,amount);
        }
        else {
        require(address(this).balance >= amount,"Insufficent amount");
        require(payable(_user).send(amount),"send failed");
        }
    }
   
}