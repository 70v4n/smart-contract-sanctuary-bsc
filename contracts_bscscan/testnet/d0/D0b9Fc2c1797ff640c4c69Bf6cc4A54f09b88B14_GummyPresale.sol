// File: Presale.sol

contract GummyPresale is Ownable, ReentrancyGuard, Pausable {

    IERC20 public gummy;
    uint256 public tokensPerWei;    // number of tokens per 1 BNB wei
    uint256 public tokensSold;      // number of GUMMY tokens sold
    uint256 public minBuyInBNB;     // minimum number of BNB to spend to be able to participate in the presale
    uint256 public maxBuyInBNB;     // maximum number of BNB committable at once in the presale
    uint256 public hardCapBNB;      // maximum number of tokens to sell

    event Sell(address _buyer, uint256 _amount);

    constructor (IERC20 gummy_, uint256 tokensPerWei_, uint256 minBuyInBNB_,
                    uint256 maxBuyInBNB_, uint256 hardCapBNB_){
        gummy = gummy_;
        tokensPerWei = tokensPerWei_;
        minBuyInBNB = minBuyInBNB_;
        maxBuyInBNB = maxBuyInBNB_;
        hardCapBNB = hardCapBNB_;

        _pause();   // presale is paused upon creation
    }


    receive() external payable {
        buyTokens();
    }


    function setHardCapBNB(uint256 _newHardCapBNB) external onlyOwner {
        require(_newHardCapBNB >= address(this).balance, "already over");
        hardCapBNB = _newHardCapBNB;
    }

    function setMinBuyInBNB(uint256 _newMinBuyInBNB) external onlyOwner {
        minBuyInBNB = _newMinBuyInBNB;
    }

    function setMaxBuyInBNB(uint256 _newMaxBuyInBNB) external onlyOwner {
        maxBuyInBNB = _newMaxBuyInBNB;
    }

    function setTokensPerWei(uint256 _newTokensPerWei) external onlyOwner {
        tokensPerWei = _newTokensPerWei;
    }


    function buyTokens() public payable nonReentrant whenNotPaused {
        require(address(this).balance <= hardCapBNB, "hard cap reached");
        uint256  _tokensToSend = msg.value * tokensPerWei;
        require(_tokensToSend <= gummy.balanceOf(address(this)), "not enough tokens in the contract");
        require(msg.value >= minBuyInBNB, "not enough BNB");
        require(msg.value <= maxBuyInBNB, "too much BNB");

        gummy.transfer(msg.sender, _tokensToSend);

        tokensSold += _tokensToSend;

        emit Sell(msg.sender, _tokensToSend);
    }


    function startPresale() external onlyOwner {
        _unpause();
    }


    function endPreSale() external payable onlyOwner whenNotPaused {
        require(gummy.transfer(owner(), gummy.balanceOf(address(this))));
        payable(owner()).transfer(address(this).balance);
        _pause();
    }
}