pragma solidity ^0.8.10;

import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721ReceiverUpgradeable.sol";
import "./interface/ICoolPool.sol";
import "./erc721/interface/ICoolMiner.sol";

contract CoolMinerMining is Initializable, AccessControlUpgradeable, PausableUpgradeable, ReentrancyGuardUpgradeable, IERC721ReceiverUpgradeable {
    using SafeERC20Upgradeable for IERC20Upgradeable;
    using SafeMathUpgradeable for uint256;

    uint256 public totalHashrate; // unit 0.000001T
    

    uint256 public startTime;
    uint256 public totalClaimedReward;

    IERC20Upgradeable public stakingToken;
    IERC20Upgradeable public coolgasToken;

    ICoolMiner public minerNFT;

    address public benefit;
    ICoolPool public coolpool;

    mapping (address => bool) public bannedList;

    mapping(address => uint256) public balances; // users staking token balance
    mapping(address => mapping(uint256 => uint256)) private _ownedTokens;
    mapping(uint256 => uint256) private _ownedTokensIndex;

    mapping(uint256 => MinerInfo) public allminers;
    mapping(uint256 => ClaimedRecord) public claimrecord;
    // Mapping from token ID to owner address
    mapping(uint256 => address) private owners;

    uint256 constant DECIMAL = 100000000;

    uint256 public free2ClaimTime; // default 7 days
    uint256 public feePerDay; // default 5%
    uint256 public maxStakingDays; // default 90 days
    uint256 public minStakingDays; // default 1 days

    uint256 public gasCostPerTPerDay; // 10 * 1eth

    uint256 constant HASHRATE_PER_TOKEN = 1000000; // already mul DECIMAL

    struct MinerInfo {
        address owner;
        uint256 unClaimReward;
        uint256 unClaimGas;
        uint256 createTime;
        uint256 lastClaimTime;
        uint256 lastStakingTime;
        uint256 gasAmount;
        uint256 outOfGasTime;
        bool staking;
    }
    struct ClaimedRecord {
        uint256 claimedReward;
        uint256 claimedGas;
    }

    event Staking(address account, uint256 tokenId);
    event Unstaking(address account, uint256 tokenId);
    event ClaimReward(address account);


    function onlyForTestChangeMinerInfo(uint256 tokenId, uint256 createTime, uint256 unClaimReward, uint256 lastClaimTime, uint256 lastStakingTime, uint256 outOfGasTime) public {
        require(allminers[tokenId].createTime > 0, "not exsit");
        allminers[tokenId].createTime = createTime;
        allminers[tokenId].unClaimReward = unClaimReward;
        allminers[tokenId].lastClaimTime = lastClaimTime;
        allminers[tokenId].lastStakingTime = lastStakingTime;
        allminers[tokenId].outOfGasTime = outOfGasTime;
    }

    function initialize(address _coolpool, address _stakingtoken, address _coolgas, address _minercontract, address _benefit) public initializer{
        __Context_init_unchained();
        __AccessControl_init_unchained();
        __ReentrancyGuard_init_unchained();
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        free2ClaimTime = 7 days;
        feePerDay = 5000000; // already  0.05 * DECIMAL
        maxStakingDays = 90;
        minStakingDays = 1;
        gasCostPerTPerDay =  1 ether / 10; // 0.1 ether
        coolpool = ICoolPool(_coolpool);
        coolgasToken = IERC20Upgradeable(_coolgas);
        stakingToken = IERC20Upgradeable(_stakingtoken);
        minerNFT = ICoolMiner(_minercontract);
        benefit = _benefit;
    }

    function hashrate() view external returns(uint256) {
        return totalHashrate;
    }

    function staking(uint256 tokenId, uint256 stakingDays) external notContract nonReentrant whenNotPaused notBanned {
        require(startTime < block.timestamp, "not start");
        ICoolMiner.TokensViewFront memory info = minerNFT.getToken(tokenId);
        require(msg.sender == info.tokenOwner, "only owner");
        require(stakingDays <= maxStakingDays, "Exceed days");
        require(stakingDays >= minStakingDays, "Insufficient days");
        require(allminers[tokenId].outOfGasTime <= block.timestamp, "staking, not time");
        _staking(msg.sender, tokenId, info.hashPower, info.gasRatio, stakingDays);
        emit Staking(msg.sender, tokenId);
    }

    function _staking(address account, uint256 tokenId, uint256 _hashrate, uint256 _gasRatio, uint256 stakingDays) private {
        uint256 gascost = gasCost(_hashrate, stakingDays, _gasRatio);
        coolgasToken.safeTransferFrom(msg.sender, address(this), gascost);
        if (allminers[tokenId].owner == address(0)) {
            minerNFT.safeTransferFrom(account, address(this), tokenId);
            _addTokenToOwner(account, tokenId);
            totalHashrate += _hashrate;
            allminers[tokenId].owner = account;

            allminers[tokenId].unClaimReward = 0;
            allminers[tokenId].unClaimGas = 0;
            allminers[tokenId].createTime = block.timestamp;
            allminers[tokenId].lastClaimTime = block.timestamp;
            allminers[tokenId].lastStakingTime = block.timestamp;
            allminers[tokenId].gasAmount = gascost;
            allminers[tokenId].outOfGasTime = block.timestamp + stakingDays * 1 days;
            claimrecord[tokenId].claimedReward = 0;
            claimrecord[tokenId].claimedGas = 0;
        } else {
            uint256 startTimestamp = allminers[tokenId].lastStakingTime;
            uint256 endTimestamp = allminers[tokenId].outOfGasTime;

            allminers[tokenId].unClaimReward += calcuTokenReward(_hashrate, startTimestamp, endTimestamp);
            allminers[tokenId].unClaimGas += calcuGasReward(_hashrate, startTimestamp, endTimestamp);
            allminers[tokenId].gasAmount = gascost;
            allminers[tokenId].lastStakingTime = block.timestamp;
            allminers[tokenId].outOfGasTime = block.timestamp + stakingDays * 1 days;  
        }
    }

    function _unstaking(address account, uint256 tokenId) private {
        require(allminers[tokenId].staking, "not staking");
        _claimRewards(account, tokenId);
        minerNFT.safeTransferFrom(address(this), account, tokenId);
        _removeTokenFromOwner(account, tokenId);
        totalHashrate -= minerNFT.getToken(tokenId).hashPower;
        if (allminers[tokenId].outOfGasTime > block.timestamp) {
            uint256 lefttime = allminers[tokenId].outOfGasTime - block.timestamp;
            uint256 leftgas = lefttime.mul(allminers[tokenId].gasAmount).div(allminers[tokenId].outOfGasTime - allminers[tokenId].lastStakingTime);
            coolgasToken.safeTransfer(account, leftgas);
        }
        delete allminers[tokenId];
    }

    function unstaking(uint256 tokenId) external notContract nonReentrant whenNotPaused notBanned {
        require(allminers[tokenId].owner == msg.sender, "only owner");
        _unstaking(msg.sender, tokenId);
        emit Unstaking(msg.sender, tokenId);
    }

    function calcuTokenReward(uint256 _hashrate, uint256 startTimestamp, uint256 endTimestamp) public view returns(uint256) {
        uint256 startDays = daysOfTimestamp(startTimestamp);
        uint256 endDays = daysOfTimestamp(endTimestamp);
        uint256 totalReward = 0;
        totalReward += ((endTimestamp - timestampOfDays(endDays)).mul(coolpool.tokenRewardPerTPerDay(endDays - 1)).div(1 days)).mul(_hashrate).div(DECIMAL);
        totalReward -= ((startTimestamp - timestampOfDays(startDays)).mul(coolpool.tokenRewardPerTPerDay(startDays)).div(1 days)).mul(_hashrate).div(DECIMAL);

        for (uint256 index = startDays; index < endDays; index++) {
            totalReward += (coolpool.tokenRewardPerTPerDay(index).mul(_hashrate)).div(DECIMAL);
        }
        return totalReward;
    }

    function calcuGasReward(uint256 _hashrate, uint256 startTimestamp, uint256 endTimestamp) public view returns(uint256) {
        uint256 startDays = daysOfTimestamp(startTimestamp);
        uint256 endDays = daysOfTimestamp(endTimestamp);
        uint256 totalReward = 0;
        totalReward += ((endTimestamp - timestampOfDays(endDays)).mul(coolpool.gasRewardPerTPerDay(endDays - 1)).div(1 days)).mul(_hashrate).div(DECIMAL);
        totalReward -= ((startTimestamp - timestampOfDays(startDays)).mul(coolpool.gasRewardPerTPerDay(startDays)).div(1 days)).mul(_hashrate).div(DECIMAL);

        for (uint256 index = startDays; index < endDays; index++) {
            totalReward += (coolpool.gasRewardPerTPerDay(index).mul(_hashrate)).div(DECIMAL);
        }
        return totalReward;
    }

    function gasCost(uint256 _hashrate, uint256 stakingDay, uint256 gasRatio) public view returns(uint256) {
        return (_hashrate.mul(stakingDay).mul(gasCostPerTPerDay)).div(DECIMAL).mul(gasRatio).div(DECIMAL);
    }

    function claimRewards(uint256 tokenId) external notContract nonReentrant whenNotPaused notBanned {
        require(allminers[tokenId].staking, "not staking");
        _claimRewards(msg.sender, tokenId);
        emit ClaimReward(msg.sender);
    }

    function _claimRewards(address account, uint256 tokenId) private  {
        uint256 startTimestamp = allminers[tokenId].lastClaimTime;
        uint256 endTimestamp = allminers[tokenId].outOfGasTime;
        uint256 tokenReward = 0;
        uint256 gasReward = 0;
        if (endTimestamp > block.timestamp) {
            endTimestamp = block.timestamp;
        }
        uint256 _hashrate = minerNFT.getToken(tokenId).hashPower;
        tokenReward = calcuTokenReward(_hashrate, startTimestamp, endTimestamp) + allminers[tokenId].unClaimReward;
        gasReward = calcuGasReward(_hashrate, startTimestamp, endTimestamp) + allminers[tokenId].unClaimGas;
        totalClaimedReward += tokenReward;
        uint256 fee = feeOfClaim(tokenId);
        if (fee != 0) {
            uint256 tokenRewardFee = tokenReward.mul(fee).div(DECIMAL);
            uint256 gasRewardFee = gasReward.mul(fee).div(DECIMAL);
            coolpool.claimReward(benefit, tokenRewardFee);
            coolpool.mintGas(benefit, gasRewardFee);
            tokenReward -= tokenRewardFee;
            gasReward -= gasRewardFee;
        }
        coolpool.claimReward(account, tokenReward);
        coolpool.mintGas(account, gasReward);
        allminers[tokenId].unClaimReward = 0;
        allminers[tokenId].unClaimGas = 0;
        claimrecord[tokenId].claimedReward += tokenReward;
        claimrecord[tokenId].claimedGas += gasReward;
        allminers[tokenId].lastClaimTime = block.timestamp;
    }

    function daysOfTimestamp(uint256 timestamp) pure public returns(uint256) {
        return timestamp / 1 days;
    }

    function timestampOfDays(uint256 _days) pure public returns(uint256) {
        return _days * 1 days;
    }

    function feeOfClaim(uint256 tokenId) view internal returns(uint256) {
        uint256 stakingTime = block.timestamp - allminers[tokenId].lastClaimTime;
        if (stakingTime >= free2ClaimTime) {
            return 0;
        } else {
            return (free2ClaimTime - stakingTime).mul(feePerDay).div(1 days).mul(minerNFT.getToken(tokenId).feeRatio).div(DECIMAL);
        }
    }

    function setGasCostPerTPerDay(uint256 _gasCostPerTPerDay) public onlyRole(DEFAULT_ADMIN_ROLE) {
        gasCostPerTPerDay = _gasCostPerTPerDay;
    }

    function setStartTime(uint256 _startTime) public onlyRole(DEFAULT_ADMIN_ROLE) {
        startTime = _startTime;
    }

    function setBenefit(address _benefit) public onlyRole(DEFAULT_ADMIN_ROLE) {
        benefit = _benefit;
    }
    
    function setFeePerDay(uint256 _feePerDay) public onlyRole(DEFAULT_ADMIN_ROLE) {
        feePerDay = _feePerDay;
    }

    function setFree2ClaimTime(uint256 _free2ClaimTime) public onlyRole(DEFAULT_ADMIN_ROLE) {
        free2ClaimTime = _free2ClaimTime;
    }

    function setBanned(address[] memory accounts, bool banned) public onlyRole(DEFAULT_ADMIN_ROLE) {
        for (uint32 index = 0; index < accounts.length; index++) {
            bannedList[accounts[index]] = banned;
        }
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external pure returns (bytes4) {
        return IERC721ReceiverUpgradeable.onERC721Received.selector;
    }

    function pause() external onlyRole(DEFAULT_ADMIN_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(DEFAULT_ADMIN_ROLE) {
        _unpause();
    }

    modifier notContract() {
        require(!_isContract(msg.sender), "Contract not allowed");
        require(msg.sender == tx.origin, "Proxy contract not allowed");
        _;
    }

    modifier notBanned() {
        require(bannedList[msg.sender] == false,"user banned");
        _;
    }

    function _isContract(address _addr) internal view returns (bool) {
        uint size;
        assembly {
            size := extcodesize(_addr)
        }
        return size > 0;
    }

    function arrayMiners(address account, uint _from, uint _to) public view returns(MinerInfo[] memory) {
        require(_to < balances[account], "Wrong max array value");
        require((_to - _from) <= balances[account], "Wrong array range");
        MinerInfo[] memory tokens = new MinerInfo[](_to - _from + 1);
        uint index = 0;
        for (uint i = _from; i <= _to; i++) {
            // uint id = tokenOfOwnerByIndex(account, i);
            uint id = _ownedTokens[account][i];
            tokens[index] = allminers[id];
            index++;
        }
        return (tokens);
    }

    // function tokenOfOwnerByIndex(address account, uint256 index) public view  returns (uint256) {
    //     require(index < balances[account], "owner index out of bounds");
    //     return _ownedTokens[account][index];
    // }

    function _removeTokenFromOwner(address from, uint256 tokenId) private {

        uint256 lastTokenIndex = balances[from] - 1;
        uint256 tokenIndex = _ownedTokensIndex[tokenId];
        if (tokenIndex != lastTokenIndex) {
            uint256 lastTokenId = _ownedTokens[from][lastTokenIndex];

            _ownedTokens[from][tokenIndex] = lastTokenId;
            _ownedTokensIndex[lastTokenId] = tokenIndex;
        }
        delete _ownedTokensIndex[tokenId];
        delete _ownedTokens[from][lastTokenIndex];
        balances[from]--;
    }

    function _addTokenToOwner(address to, uint256 tokenId) private {
        uint256 length = balances[to];
        _ownedTokens[to][length] = tokenId;
        _ownedTokensIndex[tokenId] = length;
        balances[to]++;
    }
}

