pragma solidity ^0.8;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./3rdparty/pancakeswapv2/IPancakeFactory.sol";
import "./3rdparty/pancakeswapv2/IPancakePair.sol";
import "./3rdparty/pancakeswapv2/IPancakeRouter02.sol";

contract RenuePaymentGateway is Ownable {
    using SafeMath for uint256;

    IERC20 internal base = IERC20(0x55d398326f99059fF775485246999027B3197955);

    IPancakeFactory internal pancakeFactory =
        IPancakeFactory(0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73);

    IPancakeRouter02 internal pancakeRouter =
        IPancakeRouter02(0x10ED43C718714eb63d5aA57B78B54704E256024E);

    event Payment(
        address to,
        address tokenIn,
        uint256 amountIn,
        address tokenOut,
        uint256 amountOut,
        bytes data
    );

    constructor(address _base, address _router) {
        base = IERC20(_base);
        pancakeRouter = IPancakeRouter02(_router);
        pancakeFactory = IPancakeFactory(pancakeRouter.factory());

        _transferOwnership(_msgSender());
    }

    function getRate(address token)
        public
        view
        returns (uint256 _rate, uint256 _timestamp)
    {
        address _pairAddress = pancakeFactory.getPair(address(base), token);
        IPancakePair _pair = IPancakePair(_pairAddress);

        (uint256 _reserve0, uint256 _reserve1, uint256 _latestTimestamp) = _pair
            .getReserves();

        if (_pair.token0() == address(base)) {
            _rate = _reserve0.mul(1e18).div(_reserve1);
        } else if (_pair.token1() == address(base)) {
            _rate = _reserve1.mul(1e18).div(_reserve0);
        } else {
            revert("91");
        }

        _timestamp = _latestTimestamp;
    }

    function getAmountIn(address token, uint256 amountOut)
        public
        view
        returns (uint256 _amountIn)
    {
        address _base = address(base);

        IPancakePair _pair = IPancakePair(pancakeFactory.getPair(_base, token));

        (uint256 _reserve0, uint256 _reserve1, ) = _pair.getReserves();
        _amountIn = pancakeRouter.getAmountIn(amountOut, _reserve0, _reserve1);
    }

    function payWithSwap(
        address token,
        uint256 amountOut,
        address to,
        uint256 slip,
        uint256 deadline,
        bytes calldata data
    ) public payable {
        address _base = address(base);
        IERC20 _token = IERC20(token);

        uint256 _amountIn = getAmountIn(token, amountOut);
        uint256 amountIn = _amountIn.mul(slip.add(1e18)).div(1e18);
        _token.approve(address(this), amountIn);

        address[] memory _path = new address[](2);
        _path[0] = token;
        _path[1] = _base;

        pancakeRouter.swapExactTokensForTokens(
            _amountIn,
            amountOut,
            _path,
            to,
            deadline
        );

        emit Payment(to, token, amountIn, _base, amountOut, data);
    }
}

