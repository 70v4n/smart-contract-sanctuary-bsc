contract axeBondingCalculator {
    using FixedPoint for *;
    using SafeMath for uint256;

    IERC20 internal immutable AXE;

    constructor(address _AXE) {
        require(_AXE != address(0), "Zero address: AXE");
        AXE = IERC20(_AXE);
    }

    function getKValue(address _pair) public view returns (uint256 k_) {
        uint256 token0 = IERC20Metadata(IPancakePair(_pair).token0()).decimals();
        uint256 token1 = IERC20Metadata(IPancakePair(_pair).token1()).decimals();
        uint256 decimals = token0 + token1 - IERC20Metadata(_pair).decimals();

        (uint256 reserve0, uint256 reserve1, ) = IPancakePair(_pair).getReserves();
        k_ = reserve0 * reserve1 / 10**decimals;
    }

    function getTotalValue(address _pair) public view returns (uint256 _value) {
        _value = getKValue(_pair).sqrrt() * 2;
    }

    function valuation(address _pair, uint256 amount_) external view returns (uint256 _value) {
        uint256 totalValue = getTotalValue(_pair);
        uint256 totalSupply = IPancakePair(_pair).totalSupply();

        _value = totalValue * FixedPoint.fraction(amount_, totalSupply).decode112with18() / 1e18;
    }

    function markdown(address _pair) external view returns (uint256) {
        (uint256 reserve0, uint256 reserve1, ) = IPancakePair(_pair).getReserves();

        uint256 reserve;
        if (IPancakePair(_pair).token0() == address(AXE)) {
            reserve = reserve1;
        } else {
            require(IPancakePair(_pair).token1() == address(AXE), "Invalid pair");
            reserve = reserve0;
        }
        return reserve * (2 * (10**IERC20Metadata(address(AXE)).decimals())) / getTotalValue(_pair);
    }
}

