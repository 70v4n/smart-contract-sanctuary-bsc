contract FlipCoin {
    using SafeMath for uint256;
    mapping(string => address) public players;
    
    IERC20 public token = IERC20(0x1cabA2f02147Fc0883a77C89258c290FdFB43c80);
    address public admin;
    uint256 public _winnerRate = 95;
    
    constructor () {
        admin = msg.sender;
    }
    
    function changeAdmin(address sender) public returns (bool success) {
        assert(msg.sender == admin);
        admin = sender;
        return true;
    }
    
    function updateWinnerRate(uint256 newRate) public returns (bool success) {
        assert(msg.sender == admin);
        _winnerRate = newRate;
        return true;
    }
    
    function bet(string memory playerID, uint256 tokenAmount) payable public returns (bool success) {
        require(msg.value>= 0.0002 ether,"Can't bet zero amount");    // this is for txn fee for admin
        
        payable(admin).transfer(msg.value);
        token.transferFrom(msg.sender, address(this), tokenAmount);
        players[playerID] = msg.sender;
        return true;
    }
    
    function prize(uint number,uint betAmount,uint winnerRate, address winner) public returns (bool success) {
        assert(msg.sender == admin);
        require(betAmount > 0, "Can't prize, the amount is zero.");
        uint amount = betAmount.mul(winnerRate).div(1000);
        token.transfer(winner, amount);
        token.transfer(admin, betAmount.sub(amount));
        return true;
    }
    
    function compareStrings(string memory a, string memory b) public pure returns (bool) {
        return (keccak256(abi.encodePacked((a))) == keccak256(abi.encodePacked((b))));
    }
}