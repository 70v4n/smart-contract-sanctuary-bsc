contract PublicSale is Ownable {
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;
    IERC20 public onSaleToken;
    IERC20 public quoteErc20;
    address public masterAccount;
    uint256 public unitPrice; // Actual value/100. 10 => 0.1
    uint256 public purchaseMaxAmount;
    uint256 public purchaseMinAmount;
    uint256 public releasePercent; //Actual value/100. 10 => 10%
    uint256 public totalReleaseLeft;
    mapping(address => uint256) public purchasedAmount;
    mapping(address => uint256) public releasedAmount;

    EnumerableSet.AddressSet private whitelist;

    event Purchase(address indexed user, uint256 amount, uint256 price);
    event Claim(address indexed user, uint256 amount);

    constructor(
        address _tokenAddress,
        address _quoteErc20Address,
        address _masterAccount,
        uint256 _unitPrice,
        uint256 _purchaseMaxAmount,
        uint256 _purchaseMinAmount
    ) {
        require(_tokenAddress != address(0) && _tokenAddress != address(this));
        require(_quoteErc20Address != address(0) && _quoteErc20Address != address(this));
        onSaleToken = IERC20(_tokenAddress);
        quoteErc20 = IERC20(_quoteErc20Address);
        masterAccount = _masterAccount;
        unitPrice = _unitPrice;
        purchaseMaxAmount = _purchaseMaxAmount;
        purchaseMinAmount = _purchaseMinAmount;
    }

    // Setting
    function adjustSetting(
        uint256 _unitPrice,
        uint256 _purchaseMaxAmount,
        uint256 _purchaseMinAmount
    ) external onlyOwner {
        unitPrice = _unitPrice;
        purchaseMaxAmount = _purchaseMaxAmount;
        purchaseMinAmount = _purchaseMinAmount;
    }

    // Setting 
    function adjustManager(
        address _tokenAddress,
        address _quoteErc20Address,
        address _masterAccount
    ) external onlyOwner {
        onSaleToken = IERC20(_tokenAddress);
        quoteErc20 = IERC20(_quoteErc20Address);
        masterAccount = _masterAccount;
    }

    // Emergency withdrawal
    function emergenceRemovalOnSaleToken() external onlyOwner {
        onSaleToken.transfer(_msgSender(), onSaleToken.balanceOf(address(this)));
    }

    // Book the purchase
    // amount: amout of onSaleToken to book purcahse.
    function buy(uint256 amount) external {
        require(whitelist.contains(_msgSender()), "Non-whitelist");
        require(onSaleToken.balanceOf(address(this)).sub(totalReleaseLeft) > amount, "Insufficient token left");
        uint256 targetAmount = amount.mul(unitPrice).div(100);
        require(purchasedAmount[_msgSender()].add(targetAmount) < purchaseMaxAmount, "Maximal purchase limit");
        require(purchasedAmount[_msgSender()].add(targetAmount) > purchaseMinAmount, "Minimal purchase limit");
        quoteErc20.transferFrom(_msgSender(), masterAccount, targetAmount);

        purchasedAmount[_msgSender()] += amount;
        totalReleaseLeft += amount;

        emit Purchase(_msgSender(), amount, unitPrice);
    }

    // Batch adding free token to claim; root only;
    function batchAddFreeToken(uint256[] calldata amount, address[] calldata user) external onlyOwner {
        for (uint256 n; n < user.length; ++n) { 
            require(whitelist.contains(user[n]), "Non-whitelist");
            require(onSaleToken.balanceOf(address(this)).sub(totalReleaseLeft) > amount[n], "Insufficient token left");

            purchasedAmount[user[n]] += amount[n];
            totalReleaseLeft += amount[n];

            emit Purchase(user[n], amount[n], 0);
        }
    }

    // Query claimable amount
    function claimableAmount(address user) public view returns (uint256) {
        return purchasedAmount[user].mul(releasePercent).div(100).sub(releasedAmount[user]);
    }

    // User Claim their token
    function claim() external {
        uint256 amount = claimableAmount(_msgSender());
        onSaleToken.transfer(_msgSender(), amount);
        releasedAmount[_msgSender()] += amount;
        totalReleaseLeft -= amount;

        emit Claim(_msgSender(), amount);
    }

    // Release the amount of token to certain percentage level.  x => x%
    // e.g. If you want to release 10% token twice.
    // call release(10) and then call release(20)
    function release(uint256 percent) external onlyOwner {
        require(percent < 100, "Wrong input!");
        releasePercent = percent;
    }


    // Add Whitelist
    function addWhitelist(address[] calldata users) external onlyOwner {
        for (uint256 n; n < users.length; ++n) {
            whitelist.add(users[n]);
        }
    }

    // Remove Whitelist
    function removeWhitelist(address[] calldata users) external onlyOwner {
        for (uint256 n; n < users.length; ++n) {
            whitelist.remove(users[n]);
        }
    }

}