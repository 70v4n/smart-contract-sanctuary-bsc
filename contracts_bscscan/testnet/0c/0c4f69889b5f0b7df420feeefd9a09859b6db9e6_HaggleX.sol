contract HaggleX is
    Initializable,
    BEP20Upgradeable,
    BEP20BurnableUpgradeable,
    PausableUpgradeable,
    AccessControlUpgradeable,
    UUPSUpgradeable
{



    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");

    event Staked(address sender, uint256 amount, uint256 lockedTime);
    event Unstaked(address sender, uint256 amount);

    

    struct StakeType {
        uint256 rewardPercent; // Percent reward to get each period
        uint256 lockedTime; // How long the stake is locked before allowed to withdraw
        uint256 maxWithdrawals; //The maximum amount of times an account can withdraw from a particular stake
        uint256 totalStaked; //Total amount staked for a particular StakeType
    }

    //Available Staking Options
    mapping(uint256 => StakeType) private _stakingOptions;

    //Stake details
    struct Stake {
        uint256 amount; // Amount staked
        uint256 startTime; // When staking started
        uint256 stakeType; // Type of stake
        uint256 lastWithdrawTime; // Track the last lastWithdrawTime time
        uint256 noOfWithdrawals; // Number of Withdrawals made
        bool stakeActive; //Tracks whether a stake is still active
    }

    //Each stake owned by an address
    mapping(address => mapping(uint256 => Stake)) private _staking;

    //Number of stakes owned by an address
    mapping(address => uint256) private _stakesCount;

    //deployment time
    uint256 private deploymentTime;
    uint256 private stakedSupply;

    uint private lastOtherRewardWithdrawalTime;


    address public LEADERSHIP_BOARD;
    address public UNIVERSAL_BASIC_INCOME;
    address public DEVELOPMENT;



        //#######   CROSS CHAIN VARIABLES    ##########

  

    // flag to enable/disable swapout vs vault.burn so multiple events are triggered
    bool private _vaultOnly;

    // configurable delay for timelock functions
    uint public delay;

    // set of minters, can be this bridge or other bridges
    mapping(address => bool) public isMinter;
    address[] public minters;

    // primary controller of the token contract
    address public vault;

    address public pendingMinter;
    uint private delayMinter;

    address public pendingVault;
    uint private delayVault;



    modifier onlyMinter() {
        require(isMinter[_msgSender()], "HaggleX: FORBIDDEN");
        _;
    }

    modifier onlyVault() {
        require(_msgSender() == mpcVault(), "HaggleX: FORBIDDEN");
        _;
    }


    function mpcVault() public view returns (address) {
        if (block.timestamp >= delayVault) {
            return pendingVault;
        }
        return vault;
    }



    function setVaultOnly(bool enabled) external onlyVault {
        _vaultOnly = enabled;
    }

    function initVault(address _vault) external onlyRole(DEFAULT_ADMIN_ROLE) {
        vault = _vault;
        pendingVault = _vault;
        isMinter[_vault] = true;
        isMinter[_msgSender()] = true;
        minters.push(_vault);
        minters.push(_msgSender());
        delayVault = block.timestamp;
    }

    function setMinter(address _auth) external onlyVault {
        pendingMinter = _auth;
        delayMinter = block.timestamp + delay;
    }

    function applyMinter() external onlyVault {
        require(block.timestamp >= delayMinter);
        isMinter[pendingMinter] = true;
        minters.push(pendingMinter);
    }

    // No time delay revoke minter emergency function
    function revokeMinter(address _auth) external onlyVault {
        isMinter[_auth] = false;
    }

    function getAllMinters() external view returns (address[] memory) {
        return minters;
    }


    function changeMPCVault(address newVault) external onlyVault returns (bool) {
        require(newVault != address(0), "HaggleX: address(0x0)");
        pendingVault = newVault;
        delayVault = block.timestamp + delay;
        emit LogChangeMPCVault(vault, pendingVault, delayVault);
        return true;
    }


    function applyMPCVault() external onlyVault {
        require(block.timestamp >= delayVault);
        vault = pendingVault;
    }


    event LogChangeMPCVault(address indexed oldVault, address indexed newVault, uint indexed effectiveTime);
    event LogSwapin(bytes32 indexed txhash, address indexed account, uint amount);
    event LogSwapout(address indexed account, address indexed bindaddr, uint amount);
    event LogAddAuth(address indexed auth, uint timestamp);







    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() initializer {}

    function initialize() public initializer {
        __BEP20_init("HaggleX", "HAG");
        __BEP20Burnable_init();
        __Pausable_init();
        __AccessControl_init();
        __UUPSUpgradeable_init();

        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(PAUSER_ROLE, _msgSender());
        _setupRole(MINTER_ROLE, _msgSender());
        _setupRole(UPGRADER_ROLE, _msgSender());

        //tracks the total staked supply
        stakedSupply = 0;



        //STAKING PLANS

        //staking for 3months
        _stakingOptions[1].rewardPercent = 15;
        _stakingOptions[1].lockedTime = 90 days;
        _stakingOptions[1].totalStaked = 0;
        _stakingOptions[1].maxWithdrawals = 90;

        //staking for 6months
        _stakingOptions[2].rewardPercent = 30;
        _stakingOptions[2].lockedTime = 180 days;
        _stakingOptions[2].totalStaked = 0;
        _stakingOptions[2].maxWithdrawals = 180;

        //staking for 12months
        _stakingOptions[3].rewardPercent = 55;
        _stakingOptions[3].lockedTime = 360 days;
        _stakingOptions[3].totalStaked = 0;
        _stakingOptions[3].maxWithdrawals = 360;

        //Time Contract was deployed
        deploymentTime = block.timestamp;

        // existingTokenAddress = 0xd9145CCE52D386f254917e481eB44e9943F39138;

        delay = 2*24*3600;
    }


    /// @dev Sets `value` as allowance of `spender` account over caller account's HaggleX token,
    /// after which a call is executed to an ERC677-compliant contract with the `data` parameter.
    /// Emits {Approval} event.
    /// Returns boolean value indicating whether operation succeeded.
    /// For more information on approveAndCall format, see https://github.com/ethereum/EIPs/issues/677.
    function approveAndCall(address spender, uint256 value, bytes calldata data) external returns (bool) {
        // _approve(_msgSender(), spender, value);
        uint256 allowanceBal = allowance(_msgSender(),spender);
        allowanceBal = allowanceBal + value;
        emit Approval(_msgSender(), spender, value);

        return IApprovalReceiver(spender).onTokenApproval(_msgSender(), value, data);
    }

     /// @dev Moves `value` Fedora token from caller's account to account (`to`),
    /// after which a call is executed to an ERC677-compliant contract with the `data` parameter.
    /// A transfer to `address(0)` triggers an ETH withdraw matching the sent Fedora token in favor of caller.
    /// Emits {Transfer} event.
    /// Returns boolean value indicating whether operation succeeded.
    /// Requirements:
    ///   - caller account must have at least `value` Fedora token.
    /// For more information on transferAndCall format, see https://github.com/ethereum/EIPs/issues/677.
    function transferAndCall(address to, uint256 value, bytes calldata data) external returns (bool) {
        require(to != address(0) || to != address(this));

        uint256 balanceSender = balanceOf(_msgSender());
        uint256 balanceTo = balanceOf(to);

        require(balanceSender >= value, "HaggleX: transfer amount exceeds balance");

        balanceSender = balanceSender - value;
        balanceTo = balanceTo + value;
        emit Transfer(_msgSender(), to, value);

