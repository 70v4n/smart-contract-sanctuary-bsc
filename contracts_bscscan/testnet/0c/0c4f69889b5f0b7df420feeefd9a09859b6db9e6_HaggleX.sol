    }



    function pause() public onlyRole(PAUSER_ROLE) returns (bool) {
        _pause();
        return true;
    }

    function unpause() public onlyRole(PAUSER_ROLE) returns (bool) {
        _unpause();
        return true;
    }

    function mint(address to, uint256 amount) public onlyMinter returns (bool) {
        _mint(to, amount);
        return true;
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal override whenNotPaused {
        super._beforeTokenTransfer(from, to, amount);
    }

    function _authorizeUpgrade(address newImplementation)
        internal
        override
        onlyRole(UPGRADER_ROLE)
    {}

    /* Set the token contract for which to call for the stake reward
     *
     */
    function getTotalSupply() public view returns (uint256) {
        return totalSupply() + stakedSupply;
    }

    /* Get available tokens
     *
     */
    function getMyBalance() external view returns (uint256) {
        return balanceOf(_msgSender());
    }

    /* Get all tokens including staked
     *
     */
    function getMyFullBalance() external view returns (uint256) {
        uint256 balance = balanceOf(_msgSender());
        for (uint256 i = 1; i <= _stakesCount[_msgSender()]; i++) {
            balance += getStakeAmount(i);
        }
        return balance;
    }

    /* returns true or false depending on if a stake is locked
     * or free to withdraw.
     */
    function isStakeLocked(uint256 stake_) internal view returns (bool) {
        uint256 stakingTime = block.timestamp -
            _staking[_msgSender()][stake_].startTime;
        return
            stakingTime <
            _stakingOptions[_staking[_msgSender()][stake_].stakeType]
                .lockedTime;
    }

    /* Get all stakes a address holds
     */
    function getStakes() external view returns (uint256[4][] memory) {
        uint256[4][] memory tempStakeList = new uint256[4][](
            _stakesCount[_msgSender()] + 1
        );
        for (uint256 i = 1; i <= _stakesCount[_msgSender()]; i++) {
            tempStakeList[i][0] = getStakeAmount(i);
            tempStakeList[i][1] = getRemainingLockTime(i);
            tempStakeList[i][2] = calculateDailyStakeReward(i);
            tempStakeList[i][3] = getNoOfWithdrawals(i);
        }
        return tempStakeList;
    }

    /* Returns the amount of token provided with a stake.
     *
     */
    function getStakeAmount(uint256 stake_) internal view returns (uint256) {
        return _staking[_msgSender()][stake_].amount;
    }

    /* Returns the remaining lock time of a stake, if unlocked
     * returns 0.
     */
    function getRemainingLockTime(uint256 stake_)
        internal
        view
        returns (uint256)
    {
        uint256 stakingTime = block.timestamp -
            _staking[_msgSender()][stake_].startTime;
        if (
            stakingTime <
            _stakingOptions[_staking[_msgSender()][stake_].stakeType].lockedTime
        ) {
            return
                _stakingOptions[_staking[_msgSender()][stake_].stakeType]
                    .lockedTime - stakingTime;
        } else {
            return 0;
        }
    }

      /* Gets the Rewards from minted Tokens.
     */
    function getStakePercentageReward(uint stakeType_) internal view returns (uint) {
        uint rewardPerc = getHalvedReward() * (_stakingOptions[stakeType_].rewardPercent);
        return  rewardPerc/(100);
    }

    /* Calculates the Daily Reward of the of a particular stake
     *
     */
    function calculateDailyStakeReward(uint256 stake_)
        internal
        view
        returns (uint256)
    {
        uint256 reward = getStakeAmount(stake_) *
            (
                getStakePercentageReward(
                    _staking[_msgSender()][stake_].stakeType
                )
            );
        return
            reward /
            (getTotalStakedAmount(_staking[_msgSender()][stake_].stakeType));
    }

    /* Gets the number of withdrawals made already.
     */
    function getNoOfWithdrawals(uint256 stake_)
        internal
        view
        returns (uint256)
    {
        return _staking[_msgSender()][stake_].noOfWithdrawals;
    }

    /* Returns the last Withdrawal time.
     */
    function getLastWithdrawalTime(uint256 stake_)
        public
        view
        returns (uint256)
    {
        return _staking[_msgSender()][stake_].lastWithdrawTime;
    }

    /* Returns the Total number of staked amount for a particular stake option
     *
     */
    function getTotalStakedAmount(uint256 stakeType_)
        public
        view
        returns (uint256)
    {
        return _stakingOptions[stakeType_].totalStaked;
    }

    

    /* Calculates the halved reward of a staking.
     */
    function getHalvedReward() public view returns (uint256) {
        uint256 reward;

        if (block.timestamp <= deploymentTime + 180 days ) {
            //halvening 1
            reward = 6000000000000;
        } else if (block.timestamp > deploymentTime + 180 days && block.timestamp <= deploymentTime + 365 days) {
            //halvening 2
            reward = 2500000000000;
        } else if (block.timestamp > deploymentTime + 365 days && block.timestamp <= deploymentTime + 730 days) {
            //halvening 3
            reward = 3000000000000;
        } else if (block.timestamp > deploymentTime + 730 days && block.timestamp <= deploymentTime + 1096 days) {
            //halvening 4
            reward = 2500000000000;
        } else if (block.timestamp > deploymentTime + 1096 days && block.timestamp <= deploymentTime + 1461 days) {
            //halvening 5
            reward = 2000000000000;
        }  else if (block.timestamp > deploymentTime + 1461 days && block.timestamp <= deploymentTime + 1826 days) {
            //halvening 6
            reward = 3500000000000;
        } else if (block.timestamp > deploymentTime + 1826 days && block.timestamp <= deploymentTime + 2191 days) {
            //halvening 7
            reward = 4000000000000;
        } else if (block.timestamp > deploymentTime + 2191 days && block.timestamp <= deploymentTime + 2557 days) {
            //halvening 8
            reward = 2000000000000;
        } else if (block.timestamp > deploymentTime + 2557 days && block.timestamp <= deploymentTime + 2992 days) {
            //halvening 9
            reward = 500000000000;
        } else if (block.timestamp > deploymentTime + 2992 days && block.timestamp <= deploymentTime + 3287 days) {
            //halvening 10
            reward = 150000000000;
        } else if (block.timestamp > deploymentTime + 3287 days) {
            //halvening 11
            reward = 29371584000;
        } else {
            reward = 0 gwei;
        }

        return reward;
    }

    //WITHDRAWALS
    /* Withdraw the staked reward delegated
     *
     */
    function withdrawStakeReward(uint256 stake_) public returns (bool) {
        require(
            isStakeLocked(stake_) ||
                (_staking[_msgSender()][stake_].noOfWithdrawals <
                    _stakingOptions[_staking[_msgSender()][stake_].stakeType]
                        .maxWithdrawals),
            "HaggleX: Stake withdrawal no longer available!"
        );
        require(
            block.timestamp >=
                _staking[_msgSender()][stake_].lastWithdrawTime + 1 days,
            "HaggleX: Not yet time to withdraw Stake reward"
        );
        _staking[_msgSender()][stake_].noOfWithdrawals++;
        _staking[_msgSender()][stake_].lastWithdrawTime = block.timestamp;
        uint256 _amount = calculateDailyStakeReward(stake_);
        _mint(_msgSender(), _amount);
        return true;
    }

   

    /* Stake
     *
     */
    function stake(uint256 _amount, uint256 stakeType_) public returns (bool) {
        require(
            stakeType_ == 1 || stakeType_ == 2 || stakeType_ == 3,
            "HaggleX: incorrect stake type "
        );
        _burn(_msgSender(), _amount);
        stakedSupply += _amount;
        Stake memory temp;
        temp.amount = _amount;
        temp.startTime = block.timestamp;
        temp.stakeType = stakeType_;
        temp.lastWithdrawTime = block.timestamp;
        temp.noOfWithdrawals = 0;
        temp.stakeActive = true;
        _stakesCount[_msgSender()]++;
        _staking[_msgSender()][_stakesCount[_msgSender()]] = temp;
        _stakingOptions[stakeType_].totalStaked += _amount;
        emit Staked(
            _msgSender(),
            _amount,
            _stakingOptions[stakeType_].lockedTime
        );
        return true;
    }

    /* Unstake previous stake, mints back the original tokens,
     * sends mint function call to reward contract to mint the
     * reward to the sender address.
     */
    function unstake(uint256 stake_) public returns (bool) {
        require(!isStakeLocked(stake_), "HaggleX:Stake still locked!");
        require(
            _staking[_msgSender()][stake_].stakeActive,
            "HaggleX:Stake is no longer active"
        );
        require(
            _staking[_msgSender()][stake_].noOfWithdrawals ==
                _stakingOptions[_staking[_msgSender()][stake_].stakeType]
                    .maxWithdrawals,
            "HaggleX: All stake rewards are not yet withdrawn"
        );
        uint256 _amount = _staking[_msgSender()][stake_].amount;
        stakedSupply -= _amount;
        _stakingOptions[_staking[_msgSender()][stake_].stakeType]
            .totalStaked -= _amount;
        _staking[_msgSender()][stake_].stakeActive = false;
        _mint(_msgSender(), _amount);
        emit Unstaked(_msgSender(), _amount);
        return true;
    }

    function Swapin(
        bytes32 txhash,
        address account,
        uint256 amount
    ) public onlyMinter returns (bool) {
        _mint(account, amount);
        emit LogSwapin(txhash, account, amount);
        return true;
    }

    function Swapout(uint256 amount, address bindaddr) public returns (bool) {
        require(!_vaultOnly, "HaggleX: onlyMinter");
        require(bindaddr != address(0), "HaggleX: address(0x0)");
        _burn(_msgSender(), amount);
        emit LogSwapout(_msgSender(), bindaddr, amount);
        return true;
    }


    function claimNewTokens() public returns (bool) {
        uint balance = IBEP20(address(0x35335CfA59efeFd9a049eeAFB641F1C7dE538Af7)).balanceOf(_msgSender());
        require(balance > 0, "HaggleX: You do not have a previous balance");     
        _mint(_msgSender(), balance * 20);
        return true;
    }

