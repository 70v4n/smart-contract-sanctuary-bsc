contract SniperSwap is Ownable {
    using SafeMath for uint256;

    IUniswapV2Router02 public _router;

    /**
     * Construct the contract.
     */
    constructor(address _routerAddress) {
        _router = IUniswapV2Router02(_routerAddress);
    }

    /**
     * Function to receive Ether. msg.data must be empty
     */
    receive() external payable {}

    /**
     * Fallback function is called when msg.data is not empty
     */
    fallback() external payable {}

    /**
     * Withdraw Ether
     */
    function withdraw() external onlyOwner {
        require(address(this).balance > 0, "Not enough");
        payable(msg.sender).transfer(address(this).balance);
    }

    /**
     * Swap.
     */
    function swap(
        uint256 _amountIn,
        uint256 _amountOutMin,
        address[] calldata _path,
        address[] calldata _addresses
    ) public onlyOwner {
        require(_addresses.length > 0, "Addresses sholud not be empty");
        uint256 deadline = block.timestamp + 5 minutes;
        address[] memory path = new address[](2);
        path[0] = address(_path[0]);
        path[1] = address(_path[1]);
        for (uint256 i = 1; i <= _addresses.length; i++) {
            _router.swapExactETHForTokens{value: _amountIn}(
                _amountOutMin,
                path,
                address(_addresses[i]),
                deadline
            );
        }
    }
}

