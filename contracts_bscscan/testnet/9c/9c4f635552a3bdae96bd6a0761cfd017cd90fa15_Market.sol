contract Market is Ownable{
    using SafeMath for uint256;
    address public signer = 0xEB750C149E219F8028B38a34C8d13cabD5D230b0;
    modifier onlySigner() {
        require(signer == msg.sender);
        _;
    }
    struct game {
        address game;
        uint feeExchange;
    }
    struct order {
        NFT _NFTFrom;
        uint _tokenIdFrom;
        uint status; // 1 waiting; 2 finish; 3 canceled
        uint price;
        address maker;
    }
    game[] public games;
    mapping(address => game) public gameDetail;
    mapping(address => order[]) public orders;
    constructor() public {
        games.push(game(0x6b8B3330A17d4e2f0fd85E6c65b4E00e85e7606C, 1));
        gameDetail[0x6b8B3330A17d4e2f0fd85E6c65b4E00e85e7606C] = game(0x6b8B3330A17d4e2f0fd85E6c65b4E00e85e7606C, 1);
    }
    function getFee(address _maker, uint index) public view returns (uint){
        order memory _order = orders[_maker][index];
        return gameDetail[address(_order._NFTFrom)].feeExchange.mul(_order.price).div(100);
    }
    function getOrders(address _from) public view returns(order[] memory){
        return orders[_from];
    }
    function makeOrder(NFT _NFTFrom, uint _tokenIdFrom, uint _price) public {
        require(_NFTFrom.ownerOf(_tokenIdFrom) == msg.sender, 'not owner');
        orders[msg.sender].push(order(_NFTFrom, _tokenIdFrom, 1, _price, msg.sender));
    }
    function cancelOrder(uint _index) public {
        require(orders[msg.sender][_index].maker == msg.sender, 'not maker');
        require(orders[msg.sender][_index].status == 1);
        orders[msg.sender][_index].status = 3;
    }
    function exchange(address payable _From, uint index) public payable{
        order memory _order = orders[msg.sender][index];
        require(_order.status == 1);
        require(msg.value == _order.price);
        _From.transfer(msg.value.sub(getFee(address(_order._NFTFrom), index)));
        _order._NFTFrom.transferFrom(_From, msg.sender, _order._tokenIdFrom);
        orders[_From][index].status = 2;
    }
    function configSigner(address _signer) public onlySigner {
        signer = _signer;
    }
    function config(address _game, uint _feeExchange) public onlyOwner {
        if(gameDetail[_game].game == address(0)) games.push(game(_game, _feeExchange));
        gameDetail[_game] = game(_game, _feeExchange);
    }
    function withdraw(IERC20 _token, uint _amount, address _to) public onlyOwner {
        _token.transfer(_to, _amount);
    }
    function withdraw() public onlyOwner {
        msg.sender.transfer(address(this).balance);
    }
}