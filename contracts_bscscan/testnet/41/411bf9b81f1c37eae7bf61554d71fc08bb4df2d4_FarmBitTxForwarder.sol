pragma solidity ^0.8.2;

import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "./FMBPriceTracker.sol";

contract FarmBitTxForwarder is EIP712, AccessControl {
    using ECDSA for bytes32;

    struct ForwardRequest {
        address from;
        address to;
        uint256 value;
        uint256 gas;
        uint256 txFee; // Transaction fee in FMB
        uint256 nonce;
        bytes data;
    }

    bytes32 private constant _TYPEHASH =
        keccak256("ForwardRequest(address from,address to,uint256 value,uint256 gas,uint256 txFee,uint256 nonce,bytes data)");

    mapping(address => uint256) private _nonces;

    IERC20 public fmbToken;
    
    // Roles
    bytes32 public constant FUND_TRANSFERER_ROLE = keccak256("FUND_TRANSFERER_ROLE");
    bytes32 public constant EXECUTOR_ROLE = keccak256("EXECUTOR_ROLE");

    constructor(address _fmbToken) EIP712("FarmBitTxForwarder", "0.0.1") {
        fmbToken = IERC20(_fmbToken);
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    }

    function getNonce(address from) public view returns (uint256) {
        return _nonces[from];
    }

    function verify(ForwardRequest calldata req, bytes calldata signature) public view returns (bool) {
        address signer = _hashTypedDataV4(
            keccak256(abi.encode(_TYPEHASH, req.from, req.to, req.value, req.gas, req.txFee, req.nonce, keccak256(req.data)))
        ).recover(signature);
        return _nonces[req.from] == req.nonce && signer == req.from;
    }

    function execute(ForwardRequest calldata req, bytes calldata signature)
        external
        payable
        onlyRole(EXECUTOR_ROLE)
        isRequestValid(req, signature)
        returns (bool, bytes memory) {
        _nonces[req.from] = req.nonce + 1;

        (bool success, bytes memory returndata) = req.to.call{gas: req.gas, value: req.value}(
            abi.encodePacked(req.data, req.from)
        );
        // Validate that the relayer has sent enough gas for the call.
        // See https://ronan.eth.link/blog/ethereum-gas-dangers/
        assert(gasleft() > req.gas / 63);

        if (success && req.txFee > 0) {
            fmbToken.transferFrom(req.from, address(this), req.txFee);
        }

        return (success, returndata);
    }

    function transferFmb(address spender, address receiver, uint256 amount) external 
        onlyRole(FUND_TRANSFERER_ROLE) hasEnoughAllowance(spender, amount)
        returns (bool) {
        return fmbToken.transferFrom(spender, receiver, amount);
    }

    function withdrawFmb(address receiver, uint256 amount) external onlyRole(DEFAULT_ADMIN_ROLE) {
        fmbToken.transfer(receiver, amount);
    }

    modifier hasEnoughAllowance(address owner, uint256 minimum) {
        require(fmbToken.allowance(owner, address(this)) >= minimum, "FarmBitTxForwarder: insufficient allowance");
        _;
    }

    modifier isRequestValid(ForwardRequest calldata req, bytes calldata signature) {
        require(verify(req, signature), "FarmBitTxForwarder: signature does not match request");
        require(fmbToken.allowance(req.from, address(this)) >= req.txFee, "FarmBitTxForwarder: insufficient allowance");
        _;
    }
}

