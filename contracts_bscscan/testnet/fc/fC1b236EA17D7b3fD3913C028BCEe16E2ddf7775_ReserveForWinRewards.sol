contract ReserveForWinRewards is Ownable { 

    using SafeMath for uint256;

    IAddresses public gameAddresses;

    IERC20 public BZAI;
    uint256 _nextUpdateTimestamp;
    bool _rewardsFinished = false;

    //  200M total reserve added to pool during 50 Months = 1521 Days => each hours (36 504Hours)
    // 200 000 000 / 36 504 = 5 478.85 BZAI 
    uint256 public monthlyAddOn = 547885 * 1E16; 

    constructor(address _BZAI){
        BZAI = IERC20(_BZAI);
        _nextUpdateTimestamp = block.timestamp;
    }

    modifier onlyGame(){
        require(msg.sender == gameAddresses.getWinRewardsAddress(),"only Rewards contract auth");
        _;
    }

    function setGameAddresses(address _address) external onlyOwner{
        gameAddresses = IAddresses(_address);
    } 

    function getNextUpdateTimestamp() external view returns(uint256){
        return _nextUpdateTimestamp;
    }

    function getRewardFinished() external view returns(bool){
        return _rewardsFinished;
    }

    function updateRewards() external onlyGame returns(bool){
         if(block.timestamp < _nextUpdateTimestamp || _rewardsFinished ){
            return true;
        } else{
            uint256 _toSend = monthlyAddOn;
            _nextUpdateTimestamp = _nextUpdateTimestamp.add(3600);
            if(BZAI.balanceOf(address(this)) <= _toSend){
                _toSend = BZAI.balanceOf(address(this));
                _rewardsFinished = true;
            }
            return(BZAI.transfer(msg.sender,_toSend));
        }
    }

}

