pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Capped.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract RoundTokenV2 is ERC20Capped, Ownable {

	using SafeMath for uint256;

	// events

    event Buy(address from, address to, uint amount, uint tax, uint8 idx );
    event Sell(address from, address to, uint amount, uint tax, uint8 idx );
    event Log(uint _valor);

	// Custom data structures

    struct witheListItem {
        bool _exists;
        uint _buyedAmount;
        uint _round;
        uint _allowedRound;
    }

	// Custom state variables

  	uint256 private CAP = 100000000;
  	uint256 private TOTALSUPPLY = CAP.mul(10 ** 18);
    bool private _paused;  // If contract is paused for trading
    uint8 private _sellTax;     // Tax percentage for sell transaction
    uint8 private _buyTax;     // Tax percentage for buy transaction
    address private _taxWallet;
    uint private _currentRound; // Current open round - Zero when there is no open round
    uint private _lastRound; // Last finished round
    uint private _maxRounds; // Maxim number of rounds (dault value = 2)
    bool private _sellPaused; // Sell method paused
    uint private _buyLimit; // Maximun amount of token allowed to buy per wallet 
    uint private _roundTime; // Duration in seconds of each round
    uint private _currentRoundTS; // CurrentRound Start timestamp
    uint private _tokenPrice; // token price in wei (defaults to 1 ether / bnb)
    uint private _totalTime; // _maxRounds * _roundTime
    mapping (address => witheListItem) private _whiteList; // Amount buyed for each withe listed address
    bool private _canStart;
    address private _pancakeRouter;

	constructor() ERC20("RoundToken", "RTT") ERC20Capped(TOTALSUPPLY) Ownable()
	{
	 	ERC20._mint(msg.sender, TOTALSUPPLY);
		_paused = false;
		_maxRounds = 2;
		_buyLimit = 40000;
    _buyLimit = _buyLimit.mul(10**18);
		_roundTime = 90;
		_sellTax = 15;
		_buyTax = 30;    
    _sellPaused = false; 
    _canStart = false;
    _totalTime = _roundTime.mul(_maxRounds);
    _pancakeRouter = address(0);
    _taxWallet = address(0);


  }

    // External Functions

    function configure (
      uint256 __maxrounds, 
      uint256 __buyLimit, 
      uint256 __roundTime,
      uint8 __sellTax,
      uint8 __buyTax,
      address __taxWallet    
		) external onlyOwner {

    	require(_currentRound == 0,"Round still running");
	    require(__maxrounds > 0 && _currentRound == 0,"Empty max rounds or rounds already started");
      require(__maxrounds >= _maxRounds,"maxRounds. Cannot add");      
      require(__taxWallet != address(0),"Empty Tax Wallet");      

      _maxRounds = __maxrounds;
      _buyLimit = __buyLimit;
      _roundTime = __roundTime;
      _sellTax = __sellTax;
      _buyTax = __buyTax;    
      _totalTime = __roundTime.mul(_maxRounds);
      _taxWallet = __taxWallet;
    }


    function pauseContract() external onlyOwner {
      _paused = true;
    }

    function resumeContract() external onlyOwner {
      require(_paused == true,"Token not paused");
      _paused = false;      
    }

    function pauseSell() external onlyOwner {
      _sellPaused = true;
    }

    function resumeSell() external onlyOwner {
      _sellPaused = false;
    }

    function roundStart() external onlyOwner {
      _canStart = true;
      _roundStart();
    }

	  function whiteListAddress(address __wallet, uint _allowedRound) external onlyOwner {
      require(__wallet != address(0),"Empty Address");
      require( _whiteList[__wallet]._exists != true, "Address already whitelisted");
      require(__wallet != owner(),"Cannot whitelist owner");
      witheListItem memory _temp;
      _temp._exists = true;
      _temp._buyedAmount = 0;
      _temp._round = 0;
      _temp._allowedRound = _allowedRound;

      _whiteList[__wallet] = _temp;
    }

	  function whiteListRemoveAddress(address __wallet) external onlyOwner {
      require( _whiteList[__wallet]._exists == true && _whiteList[__wallet]._buyedAmount == 0,"Cannot remove");

      delete _whiteList[__wallet];
    }

   
  // Public Functions

    function canStartRound() public view returns (bool){
      return _canStart;
    }

    function canStopRound() public view returns (bool){
      return _launchFinished();
    }

    function getCurrentRound() public view returns (uint) {
        return _round();
    }

    function isFinished() public view returns (bool) {
        return _launchFinished();
    }

   function isWhiteListed(address __wallet) public view returns (bool){
        require(__wallet != address(0),"Empty Address");

        return _whiteList[__wallet]._exists;
    }

	// Internal functions

  function _beforeTokenTransfer(
      address from,
      address to,
      uint256 amount
  ) internal virtual override {
      super._beforeTokenTransfer(from, to, amount);
      require(! _paused, "Can't do token transfers while paused");

      if (to != _taxWallet) {
        if (! _launchFinished() ) {
          if (from != address(0)) {
            if (from != owner()) {
              require(_currentRound != 0,"No round started");
              require(_whiteList[to]._allowedRound == _round(),"Not allowed to buy in this round" );        
              require(_whiteList[to]._round == 0,"Cant' Buy");
              require(_whiteList[to]._buyedAmount.add(amount) <= _buyLimit,"Buy limit exceded" );  
            } else {
              // get pancake Liquidity Pool address from firt liquidity transaction.
              _pancakeRouter = to;
            }
          }        
        } else {
          if (_sellPaused) {
            if (to == _pancakeRouter) {
              require(from == owner(),"Cannot sell");
            }
          }
        }
      }

  }

  function _afterTokenTransfer(
      address from,
      address to,
      uint256 amount
  ) internal virtual override {	
      super._afterTokenTransfer(from, to, amount);     

      if (to != _taxWallet)  {
        if (! _launchFinished() ) {
          if (from != address(0)) {		
            if ( _lastRound == 0 && _currentRound == 0) {				
              // Automaticaly starts round 1 after first external transfer (must be add liquidity to pool)
              _roundStart();
              _canStart = true;
            } else {
                  _whiteList[to]._buyedAmount = amount;
                  _whiteList[to]._round = _currentRound;
            }
          }
        }
      }
  }

  function _transfer(
        address sender,
        address recipient,
        uint256 amount
  ) internal virtual override {
        uint256 _tax;

        if (sender != owner()) {
          if (recipient == _pancakeRouter) {
            // sell
            _tax = amount.mul(_sellTax).div(100);
            emit Sell(sender, recipient, amount.sub(_tax), _tax,_sellTax);
          } else {
            // buy 
            _tax = amount.mul(_buyTax).div(100);
            emit Buy(sender, recipient, amount.sub(_tax), _tax,_buyTax);
          }
          
          amount -= _tax;
          super._transfer(sender,_taxWallet,_tax); 
        }
          
        super._transfer(sender,recipient,amount);
        
        
    }


  function _roundStart() internal  {
    require(! _paused, "Can't start round while paused");
    //require(_currentRound == 0,"Round still running");
    //require( _lastRound.add(1) <= _maxRounds ,"Max rounds reached");
  
    _lastRound = _currentRound;
    _currentRound = _lastRound.add(1);
    _currentRoundTS = block.timestamp;

  }
  
  function _round() internal view returns (uint _roundCurrent) {
    uint _elapsedTime;
    uint _relativeRound;

    require(block.timestamp >= _currentRoundTS);
    _elapsedTime = block.timestamp.sub(_currentRoundTS);
    _relativeRound = _elapsedTime.div(_roundTime) + 1; 
    if (_relativeRound > _maxRounds) {
      _roundCurrent = 0;
    } else {
      _roundCurrent = _relativeRound;
    }
  }

  function _launchFinished() internal view returns(bool) {
    bool result;
    if (_currentRoundTS == 0) {
      result = false;
    } else {
      result = block.timestamp >= _currentRoundTS.add(_totalTime);
    }
    return result;
  }
}

