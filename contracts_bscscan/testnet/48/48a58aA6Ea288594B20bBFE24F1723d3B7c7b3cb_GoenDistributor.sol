pragma solidity 0.6.12;

import '@pancakeswap/pancake-swap-lib/contracts/token/BEP20/IBEP20.sol';
import '../interfaces/IGoenDistributor.sol';
import '@openzeppelin/contracts/access/Ownable.sol';


contract GoenDistributor is Ownable, IGoenDistributor {
    
    address public keeper = address(0);

    uint256 public goenPrice;
    uint256 public rate = 10;

    IBEP20 private GOEN_TOKEN;

    uint256 constant GOEN_MINIMAL_PRICE = 25000000000000000;

    uint256 constant SECONDS_IN_DAY = 86400;

    modifier onlyKeeper() {
        require(msg.sender == keeper, "GoenDistributor: Only keeper can do this");
        _;
    }

    function setGoen(address addr) 
    public
    onlyKeeper {
        GOEN_TOKEN = IBEP20(addr);
    }

    function setKeeper(address addr)
    public
    onlyOwner {
        keeper = addr;
    }

    function setGoenPrice(uint256 price)
    public
    onlyKeeper {
        goenPrice = price;
    }

    function setRate(uint256 r)
    public
    onlyKeeper {
        rate = r;
    }

    function harvest(uint256 totalValue, uint256 period) public override returns (uint256) {
        uint256 priceApplicable = (goenPrice < GOEN_MINIMAL_PRICE) ? GOEN_MINIMAL_PRICE : goenPrice;
        uint256 amount = (totalValue*period*rate)/(365*SECONDS_IN_DAY*priceApplicable);
        GOEN_TOKEN.transfer(msg.sender, amount);
        return amount;
    }
}

