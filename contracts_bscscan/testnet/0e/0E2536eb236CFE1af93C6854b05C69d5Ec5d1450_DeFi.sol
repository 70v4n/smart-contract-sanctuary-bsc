import "@openzeppelin/contracts/utils/Context.sol";

contract VerifiedExecutorGuard is Context{

    address[] private _verifiedExecutors;

    modifier onlyVerifiedContract(){
        bool isVerified = _isVerifiedExecutor(_msgSender());
        require(isVerified, "Can only be called from verified contract");
        _;
    }

    function _setVerifiedExecutors(address[] calldata addresses) internal virtual {
        _verifiedExecutors = addresses;
    }

    function _addVerifiedExecutor(address addr) internal virtual {
        require(!_isVerifiedExecutor(addr), "Address is already a verified executor");
        _verifiedExecutors.push(addr);
    }

    function _removeVerifiedExecutor(address addr) internal virtual {
        uint256 index = _verifiedExecutors.length;
        for (uint256 i = 0; i < _verifiedExecutors.length; i++) {
            if (_verifiedExecutors[i] == addr) {
                index = i;
                break;
            }
        }
        require(index != _verifiedExecutors.length, "Contract not found in verified executors");
        for (uint i = index; i < _verifiedExecutors.length - 1; i++) {
            _verifiedExecutors[i] = _verifiedExecutors[i + 1];
        }
        _verifiedExecutors.pop();
    }

    function _isVerifiedExecutor(address addr) private view returns (bool){
        for (uint i = 0; i < _verifiedExecutors.length; i++) {
            if (_verifiedExecutors[i] == addr) {
                return true;
            }
        }
        return false;
    }
}

