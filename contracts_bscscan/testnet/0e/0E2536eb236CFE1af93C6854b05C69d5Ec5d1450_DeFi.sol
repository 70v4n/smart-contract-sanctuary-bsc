       0: mint
    **/
    event EarnedXp(address indexed recipient, uint indexed tokenId);

    uint256 private _price = 0.02e18;
    string private _baseTokenURI;
    mapping(uint256 => address) private _whitelist;

    constructor() ERC721("Promitto: Chain Travelers", "PCT") {
        _baseTokenURI = "https://api.promitto.io/metadata/";
    }

    function mint(uint256 tokenId) payable nonReentrant external {
        require(_whitelist[tokenId] == _msgSender(), "Only whitelisted tokens can be minted");
        require(msg.value == _price, "Not the correct amount of ether");
        _safeMint(_msgSender(), tokenId);
        delete _whitelist[tokenId];
        emit EarnedXp(_msgSender(), 0);
    }

    // Override transfer function for disabling transfer
