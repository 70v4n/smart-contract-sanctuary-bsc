import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./utils/VerifiedExecutorGuard.sol";
import "./tokens/BEP20.sol";

contract Resource is BEP20, VerifiedExecutorGuard, ReentrancyGuard {

    mapping(uint256 => uint256) private _staked;
    uint256 _period;
    uint256 _tokenGains;

    constructor(string memory name, string memory symbol, uint256 period, uint256 tokens) BEP20(name, symbol) {
        _addVerifiedExecutor(_msgSender());
        _period = period;
        _tokenGains = tokens;
    }

    function decimals() public override pure returns (uint8) {
        return 0;
    }

    function mintFromTimestamp(address recipient, uint256 timestamp) nonReentrant onlyVerifiedContract external {
        uint256 amount = tokenGainsForTimestamp(timestamp);
        _mint(recipient, amount);
    }

    function mintAmount(address recipient, uint256 amount) nonReentrant onlyVerifiedContract external {
        _mint(recipient, amount);
    }

    function tokenGainsForTimestamp(uint256 timestamp) onlyVerifiedContract public view returns (uint256){
        return ((block.timestamp - timestamp) / _period) * _tokenGains;
    }

    function burn(address recipient, uint256 amount) nonReentrant onlyVerifiedContract external {
        BEP20._burn(recipient, amount);
    }

    function removeVerifiedExecutor(address addr) external onlyOwner {
        VerifiedExecutorGuard._removeVerifiedExecutor(addr);
    }

    function addVerifiedExecutor(address addr) external onlyOwner {
        VerifiedExecutorGuard._addVerifiedExecutor(addr);
    }

    function setVerifiedExecutors(address[] calldata addresses) external onlyOwner {
        VerifiedExecutorGuard._setVerifiedExecutors(addresses);
    }
}

