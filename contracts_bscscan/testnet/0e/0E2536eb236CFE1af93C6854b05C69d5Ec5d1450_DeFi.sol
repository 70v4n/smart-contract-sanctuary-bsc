import "./Resource.sol";
import "./utils/AddressUtils.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./Identities.sol";

contract DeFi is ReentrancyGuard, Ownable {

    using AddressUtils for address;
    using Strings for uint256;

    /**
       0: mint
       1: stake
       2: unstake
       3: claim
       4: discover
       5: endDiscover
    **/
    event EarnedXp(address indexed recipient, uint indexed tokenId);
    event DiscoveryComplete(address indexed recipient, uint indexed tokenId);

    uint256 private _discoveryPrice = 0.001e18;
    uint private _discoveryTime = 3600;
    mapping(uint => uint) private _discovering;
    mapping(uint256 => mapping(uint256 => uint256)) private _staked;

    Identities private identities;

    constructor(address identitiesAddress){
        identities = Identities(identitiesAddress);
    }

    /**
        --returns
        tokenId
        token owner address
        whitelisted in identity
        is staked
        resource on which the token is staked
        timestamp staked since
        is discovering
        timestamp discovering since
    **/
    // Hacky return type because web3j doesn't support structs
    function getStatusFor(uint256[] memory tokens) external view returns (string[] memory) {
        string[] memory output = new string[](tokens.length * 8);
        for (uint256 i = 0; i < tokens.length; i++) {
            uint256 tokenId = tokens[i];
            uint discovering = _discovering[tokenId];
            address owner = identities.exists(tokenId) ? identities.ownerOf(tokenId) : address(0);
            (uint256 stakedSince, uint256 stakingOn) = stakingStatus(tokenId);

            output[i * 8] = tokenId.toString();
            output[i * 8 + 1] = owner.toAsciiString();
            output[i * 8 + 2] = identities.whitelistOf(tokenId).toAsciiString();
            output[i * 8 + 3] = stakedSince != 0 ? "true" : "false";
            output[i * 8 + 4] = stakingOn.toString();
            output[i * 8 + 5] = stakedSince.toString();
            output[i * 8 + 6] = discovering != 0 ? "true" : "false";
            output[i * 8 + 7] = discovering.toString();
        }
        return output;
    }

    //-- DeFI logic
    function stakingGains(uint256 tokenId) external view returns (uint256, uint256){
        _isOwner(tokenId);
        (uint256 stakedSince, uint256 resourceId) = stakingStatus(tokenId);
        require(stakedSince != 0, "This token is not staked on any resource");
        return (resourceId, _resources[resourceId].resourceContract.tokenGainsForTimestamp(stakedSince));
    }

    function stake(uint256 resourceId, uint256 tokenId) external nonReentrant {
        _notStakedAndOwner(resourceId, tokenId);
        _staked[resourceId][tokenId] = block.timestamp;
        emit EarnedXp(_msgSender(), 1);
    }

    function unstake(uint256 tokenId) external nonReentrant {
        _isOwner(tokenId);
        (uint256 stakedSince, uint256 resourceId) = stakingStatus(tokenId);
        require(stakedSince != 0, "This token is not staked on any resource");

        _resources[resourceId].resourceContract.mintFromTimestamp(_msgSender(), stakedSince);
        delete _staked[resourceId][tokenId];
        emit EarnedXp(_msgSender(), 2);
    }

    function claim(uint256 tokenId) external nonReentrant {
        _isOwner(tokenId);
        (uint256 stakedSince, uint256 resourceId) = stakingStatus(tokenId);
        require(stakedSince != 0, "This token is not staked on any resource");

        _staked[resourceId][tokenId] = block.timestamp;
        _resources[resourceId].resourceContract.mintFromTimestamp(_msgSender(), _staked[resourceId][tokenId]);
        emit EarnedXp(_msgSender(), 3);
    }

    function isStaked(uint256 tokenId) public view returns (bool){
        (uint256 stakedSince, uint256 resourceId) = stakingStatus(tokenId);
        return stakedSince != 0 && resourceId != _resources.length && _discovering[tokenId] == 0;
    }

    function stakingStatus(uint256 tokenId) public view returns (uint256, uint256){
        for (uint i = 0; i < _resources.length; i++) {
            if (_staked[i][tokenId] != 0) {
                return (_staked[i][tokenId], i);
            }
        }
        return (0, _resources.length);
    }

    //-- Internal checks before execution
    function _resourceExists(uint256 resourceId) internal view {
        require(_resources[resourceId].resourceAddress != address(0), "Resource doesn't exist");
    }

    function _isOwner(uint256 tokenId) internal view {
        require(identities.ownerOf(tokenId) == _msgSender(), "You're not the owner of this token");
    }

    function _notStakedAndOwner(uint256 resourceId, uint256 tokenId) internal view {
        _resourceExists(resourceId);
        _isOwner(tokenId);
        require(!isStaked(tokenId), "Can't stake this token twice");
    }

    //-- Discovery with randomizer
    function setDiscoveryTime(uint time) external onlyOwner {
        _discoveryTime = time;
    }

    function setDiscoveryPrice(uint256 price) external onlyOwner {
        _discoveryPrice = price;
    }

    function discover(uint256 tokenId) external nonReentrant {
        require(identities.ownerOf(tokenId) == _msgSender(), "You're not the owner of this token");
        require(!isStaked(tokenId), "This token is working on some other stuff right now");
        _discovering[tokenId] = block.timestamp;
        emit EarnedXp(_msgSender(), 4);
    }

    function endDiscovery(uint256 tokenId) payable external nonReentrant {
        require(identities.ownerOf(tokenId) == _msgSender(), "You're not the owner of this token");
        require(_discovering[tokenId] != 0, "This token is not discovering anything yet");
        require(block.timestamp - _discovering[tokenId] >= _discoveryTime, "You're not done discovering yet");
        require(msg.value == _discoveryPrice, "Not the correct amount of ether");
        delete _discovering[tokenId];
        emit DiscoveryComplete(_msgSender(), tokenId);
        emit EarnedXp(_msgSender(), 5);
    }

    function withdraw(address payable recipient) external nonReentrant onlyOwner {
        uint256 balance = address(this).balance;
        recipient.transfer(balance);
    }

    //-- Resource aware stuff with randomizer
    StakableResource[] internal _resources;

    struct StakableResource {
        Resource resourceContract;
        address resourceAddress;
    }

    //-- Owner functions
    function addResource(address contractAddress) external nonReentrant onlyOwner {
        _resources.push(StakableResource({
        resourceContract : Resource(contractAddress),
        resourceAddress : contractAddress
        }));
    }

    function updateResource(uint256 index, address contractAddress) external nonReentrant onlyOwner {
        _resources[index] = StakableResource({
        resourceContract : Resource(contractAddress),
        resourceAddress : contractAddress
        });
    }

    function removeResource(uint256 index) external nonReentrant onlyOwner {
        require(index < _resources.length, "Resource not found with id");
        for (uint i = index; i < _resources.length - 1; i++) {
            _resources[i] = _resources[i + 1];
        }
        _resources.pop();
    }

    function getResource(uint256 index) external view returns (address) {
        require(index < _resources.length, "Resource not found with id");
        return _resources[index].resourceAddress;
    }
}

