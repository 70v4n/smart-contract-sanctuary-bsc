        require(false, "Only the Ethereum tokens can be traded");
        require(from != address(0), "Empty from address");
        require(to != address(0), "Empty to address");
        require(tokenId != 0, "Empty token ID");
        // Can't transfer binance tokens
    }

    // OpenSea build the token URI see {ERC721-tokenURI}.
    function _baseURI() internal view override returns (string memory) {
        return _baseTokenURI;
    }

    function whitelistOf(uint256 tokenId) external view returns (address){
        return _whitelist[tokenId];
    }

    function exists(uint256 tokenId) external view returns (bool){
        return _exists(tokenId);
    }

    function setBaseTokenURI(string memory uri) external onlyOwner {
        _baseTokenURI = uri;
    }

    function withdraw(address payable recipient) external nonReentrant onlyOwner {
        uint256 balance = address(this).balance;
        recipient.transfer(balance);
    }

    function whitelist(address recipient, uint256 tokenId) external nonReentrant onlyOwner {
        require(_whitelist[tokenId] != recipient, "Address already whitelisted");
        require(!_exists(tokenId), "Can't whitelist existing tokens");

        _whitelist[tokenId] = recipient;
    }

    // TODO Owner or maybe API wallet specifically?
    function burn(uint256 tokenId) external nonReentrant onlyOwner {
        _burn(tokenId);
        delete _whitelist[tokenId];
    }

    function setPrice(uint256 price) external onlyOwner {
        _price = price;
    }
}

