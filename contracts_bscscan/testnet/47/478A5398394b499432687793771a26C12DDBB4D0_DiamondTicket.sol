    function isForSale(uint256 NFTID) public view returns (bool){
        require(_exists(NFTID),"NFT doesn't exist");
        return TokenForSale.contains(NFTID);
    }

    function getCurrentValue() public view returns(uint256){
        if(TokenForSale.length()>0)return currentValue;
        return currentValue*(100+priceIncrease)/100;
    }
    function BuyNFT(uint256 ID) public payable{
        //Locked NFTs can't be traded
        require(msg.value>=currentValue,"not enough BNB to buy ticket");
        require(isForSale(ID),"NFT is Locked");

        address oldOwner=ownerOf(ID);
        bool sent;
        (sent,)=oldOwner.call{value:currentValue}("");
        require(sent);
        _transfer(oldOwner,msg.sender,ID);
        
        if(msg.value>currentValue){
            //transfer back excess funds
            (sent,)=msg.sender.call{value: msg.value-currentValue}("");
            require(sent);
        }
    }
    function MintNFT() public payable{
        uint256 finalValue=currentValue*(100+priceIncrease)/100;
        currentValue=finalValue;
        require(msg.value>=finalValue);
        _mint(msg.sender);
        if(msg.value>finalValue){
            //transfer back excess funds
            (bool sent,)=msg.sender.call{value: msg.value-finalValue}("");
            require(sent);
        }   
    }
    
    
    receive() external payable {
        if(TokenForSale.length()>0){
            uint256 ID=TokenForSale.at(0);
            BuyNFT(ID);
        }
        else MintNFT();
    }
  	
    
    function getNFTInfo(uint256 ID) public view returns(string memory name_, string memory uri_, address holder_){
        require(_exists(ID));
        NFTData memory data=NFTs[ID];
        return(data.Name, data.URI, NFTHolders[ID]);
    }

  	 
  	 function _mint(address to) private{
        uint256 ID=NFTHolders.length;
        require(ID<maxCount, "no Tickets left");
        NFTData memory data=NFTData("DiamondTicket",ID,"NO URI DEFINED");
        NFTs.push(data);
        hidden.push(false);
        ownerID.push(0);
        NFTHolders.push(to);
        _AddNFT(to,ID);
        emit Transfer(address(0),to,ID);
    }
    
