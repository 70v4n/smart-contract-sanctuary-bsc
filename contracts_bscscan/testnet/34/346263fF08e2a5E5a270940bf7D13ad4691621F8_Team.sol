contract Team is Ownable {
    using SafeMath for uint256;
    struct AllocationType {
        string allocationName;
        uint256 totalToken;
        uint256 lockVesting;
        uint256 claimed;
        uint256 percentAtIDO;
    }

    uint256 public idoTime;
    uint256 public oneMonth = 30 minutes;
    mapping(uint256 => AllocationType) public allocations;

    event ClaimIDO(address recipient, uint256 amount);
    event ClaimToken(address recipient, uint256 amount);
    event SetIDOTime(uint256 timeIDO);
    IERC20 public monoToken;
    IMono public monoCore;

    constructor(address _token) {
        monoToken = IERC20(_token);
        monoCore = IMono(_token);
        allocations[0] = AllocationType(
            "Team",
            150000000 * 10**18,
            36 * oneMonth,
            0,
            0
        );
    }

    function claimPrivateSale() external {
        AllocationType storage allocation = allocations[0];
        Investor memory investor = monoCore.getWhiteList(msg.sender);
        require(investor.amount > 0, "not an investor");
        require(investor.typeInvestor == 2, "not valid type");
        require(
            idoTime.add(3 * oneMonth) <= block.timestamp,
            "waiting fulllock after ido"
        );
        require(
            investor.lastClaimed.add(oneMonth) >= block.timestamp,
            "not valid time vesting"
        );
        uint256 amount = investor
            .amount
            .sub(investor.amount.mul(allocation.percentAtIDO).div(100))
            .div(36);
        require(
            investor.claimed.add(amount) <= investor.amount,
            "claim almost done"
        );
        investor.claimed = investor.claimed.add(amount);
        investor.lastClaimed = block.timestamp;
        allocation.claimed = allocation.claimed.add(amount);
        monoCore.setWhiteList(investor);
        monoToken.transfer(msg.sender, amount);
        emit ClaimToken(msg.sender, amount);
    }

    function changeAllocation(
        uint256 _type,
        uint256 _totalToken,
        uint256 _percentAtIDO,
        uint256 _lockVesting
    ) external onlyOwner {
        AllocationType storage allocation = allocations[_type];
        allocation.totalToken = _totalToken;
        allocation.lockVesting = _lockVesting;
        allocation.percentAtIDO = _percentAtIDO;
    }

    function setIDOTime(uint256 _time) external onlyOwner {
        idoTime = _time;
        emit SetIDOTime(_time);
    }
}