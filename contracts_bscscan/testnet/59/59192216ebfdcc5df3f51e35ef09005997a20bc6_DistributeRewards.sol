contract DistributeRewards is ERC1155Holder, Ownable {
    using ECDSA for bytes32;
    
    IERC1155 nftToken;
    IERC20 utilityToken;
    
    address private _signerAddress = 0x10B22E69768d825638981c0050626F5b9C4EADc2;
    
    struct Campaing {
        uint256 tokenId;
        uint256 amount;
        uint256 claimed;
        string password;
    }

    mapping (uint256 => Campaing) private campaingsFromId;
    mapping (bytes32 => bool) private hashClaimed;
    
    constructor (address _tokenAddress,address _nftAddress) {
        utilityToken = IERC20(_tokenAddress);
        nftToken = IERC1155(_nftAddress);
    }
    
    function createNftCampaing (uint256 _tokenId, uint256 _amount, string memory _password, uint256 _campaingId) public  {
        createCampaing(_tokenId, _amount, _password, _campaingId);
        
        nftToken.safeTransferFrom(
            msg.sender,
            address(this),
            _tokenId,
            _amount,
            ""
        );
    }
    
    function createTokenCampaing (uint256 _amount, string memory _password, uint256 _campaingId) public  {
        createCampaing(0, _amount, _password, _campaingId);
        
        utilityToken.transferFrom(
            msg.sender,
            address(this),
            _amount
        );
    }
    
    function createCampaing (uint256 _tokenId, uint256 _amount, string memory _password, uint256 _campaingId) internal {  
        campaingsFromId[_campaingId] = Campaing ({
            tokenId: _tokenId,
            amount: _amount,
            claimed: 0,
            password: _password
        });
    }
    
    function claimNftReward (bytes32 _hash, bytes memory _signature, uint256 _campaingId, uint256 _amount) public {
        checkClaiming(_hash, _signature, _campaingId, _amount);
        
        nftToken.safeTransferFrom(
            address(this),
            msg.sender,
            campaingsFromId[_campaingId].tokenId,
            _amount,
            ""
        );
    }
    
    function claimTokenReward (bytes32 _hash, bytes memory _signature, uint256 _campaingId, uint256 _amount) public {
        checkClaiming(_hash, _signature, _campaingId, _amount);
        
        utilityToken.transfer(
            msg.sender,
            _amount
        );
    }
    
    function checkClaiming (bytes32 _hash, bytes memory _signature, uint256 _campaingId, uint256 _amount) internal {
        require(matchAddresSigner(_hash, _signature), "WRONG_SIGNATURE");
        require(!hashClaimed[_hash], "hash already used");
        
        Campaing storage campaing = campaingsFromId[_campaingId];
        
        require (campaing.amount > 0, "campaing does not exist");
        require(hashTransaction(msg.sender, _campaingId, _amount, campaing.password) == _hash, "HASH_FAIL");
        require(campaing.claimed + _amount <= campaing.amount, "exceeds campaing rewards limit");
        
        campaing.claimed = campaing.claimed + _amount;
        hashClaimed[_hash] = true;
    }
    
    function hashTransaction(address _sender, uint256 _campaingId, uint256 _amount, string memory _password) internal pure returns(bytes32) {
        bytes32 s = keccak256(abi.encodePacked(_sender, _campaingId, _amount, _password));
        
         return ECDSA.toEthSignedMessageHash(s);
    }
    
    function matchAddresSigner(bytes32 hash, bytes memory signature) internal view returns(bool) {
        return _signerAddress == hash.recover(signature);
    }
 
}