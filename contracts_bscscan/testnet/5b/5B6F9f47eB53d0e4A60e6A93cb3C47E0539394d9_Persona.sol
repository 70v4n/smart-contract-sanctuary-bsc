contract Persona is Context, Ownable {
    using Address for address;

    mapping(address => uint256) _avatars;
    IERC1155 _avatar;

    constructor() {
        _setAvatarContract(0xDDBc3e86cFe4125541E71D3093dCDd96e326cbCF);
    }

    function updateAvatarContract(address contractAddress) external {
        require(
            contractAddress.isContract() == true,
            "Invalid contract address"
        );
        _setAvatarContract(contractAddress);
    }

    function _setAvatarContract(address contractAddress) internal {
        _avatar = IERC1155(contractAddress);
    }

    function setPerona(uint256 tokenId) external {
        require(
            _avatar.balanceOf(_msgSender(), tokenId) > 0,
            "You are not the owner"
        );
        _avatars[_msgSender()] = tokenId;
    }

    function getPersona(address account) external view returns (uint256) {
        return _avatars[account];
    }
}