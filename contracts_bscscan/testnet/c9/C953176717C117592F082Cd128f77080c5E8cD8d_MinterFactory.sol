import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "./Signature.sol";

interface IMintableERC721 is IERC721 {
    function mintTo(address to, uint256 tokenId) external;
}

contract MinterFactory is Ownable, Pausable, Signature {
    IERC20 token;
    address private _admin;
    address private _treasuryAddress;
    mapping(bytes => bool) usedSignatures;

    constructor(address tokenAddress) {
        token = IERC20(tokenAddress);
        _admin = _msgSender();
    }

    function setAdmin(address addr) external onlyOwner {
        require(
            addr != address(0),
            "MinterFactory : Admin can not be address 0"
        );
        _admin = addr;
    }

    function admin() public view returns (address) {
        return _admin;
    }

    function setTreasury(address addr) external onlyOwner {
        require(
            addr != address(0),
            "MinterFactory : Treasury can not be address 0"
        );
        _treasuryAddress = addr;
    }

    function treasury() public view returns (address) {
        return _treasuryAddress;
    }

    function mintTo(
        address nftAddress,
        address to,
        uint256 tokenId
    ) public onlyOwner {
        IMintableERC721 nft = IMintableERC721(nftAddress);
        nft.mintTo(to, tokenId);
    }

    function userMint(
        address nftAddress,
        uint256 price,
        uint256 amount,
        uint256 time,
        uint256[] memory ids,
        bytes memory signature
    ) external {
        require(
            token.balanceOf(_msgSender()) >= price,
            "MinterFactory : User not enought to mint"
        );
        require(
            token.allowance(_msgSender(), address(this)) >= price,
            "MinterFactory : User not approve enought token"
        );
        require(
            !usedSignatures[signature],
            "MinterFactory : Signature was used"
        );
        require(
            amount == ids.length,
            "MinterFactory : Amount not match with array token id"
        );
        require(
            isValidData(
                _msgSender(),
                nftAddress,
                price,
                amount,
                time,
                signature,
                _admin
            ),
            "MinterFactory : Invalid signature"
        );
        token.transferFrom(_msgSender(), _treasuryAddress, amount);
        IMintableERC721 nft = IMintableERC721(nftAddress);
        for (uint256 index = 0; index < amount; index++) {
            nft.mintTo(_msgSender(), ids[index]);
        }
        usedSignatures[signature] = true;
    }

    function isValidData(
        address _user,
        address _nftAddress,
        uint256 _price,
        uint256 _amount,
        uint256 _time,
        bytes memory _sig,
        address _signAddress
    ) internal pure returns (bool) {
        bytes32 message = keccak256(
            abi.encodePacked(_user, _nftAddress, _price, _amount, _time)
        );
        return (recoverSigner(message, _sig) == _signAddress);
    }
}

