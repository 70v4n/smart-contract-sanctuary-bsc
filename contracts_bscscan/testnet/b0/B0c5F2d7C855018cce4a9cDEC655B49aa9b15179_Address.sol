            map.values[key] = val;
        } else {
            map.inserted[key] = true;
            map.values[key] = val;
            map.indexOf[key] = map.keys.length;
            map.keys.push(key);
        }
    }

    function remove(Map storage map, address key) public {
        if (!map.inserted[key]) {
            return;
        }

        delete map.inserted[key];
        delete map.values[key];

        uint index = map.indexOf[key];
        uint lastIndex = map.keys.length - 1;
        address lastKey = map.keys[lastIndex];

        map.indexOf[lastKey] = index;
        delete map.indexOf[key];

        map.keys[index] = lastKey;
        map.keys.pop();
    }
}

contract ElonGODL is Context, IERC20, Ownable {
    using SafeMath for uint256;
    using Address for address;
    using SmartMap for SmartMap.Map;
    
    struct Winner {
        address walletAddress;
        uint256 amount;
    }
    
    string private _name = "ElonGODL";
    string private _symbol = "ElonGODL";
    uint8 private _decimals = 6;
    uint256 private _totalSupply = 100000000000 * 10**_decimals;
    
    mapping (address => uint256) private _balances;
    mapping (address => mapping (address => uint256)) private _allowances;
    mapping (address => bool) private _isExcluded;
    
    uint256 private _maxTransactionAmount = 100000000 * 10**_decimals;
    
    uint256 private _liquidityTaxRate = 3;
    uint256 private _liquidityPoolAmount = 0;
    uint256 private _liquidityTargetSwapAmount = 1000000 * 10**_decimals;
    
    uint256 private _burnTaxRate = 1;
    uint256 private _burnTotalAmount = 0;
    address private _burnAddress = 0x000000000000000000000000000000000000dEaD;
    
    uint256 private _lotteryTaxRate = 2;
    SmartMap.Map private _lotteryContestants;
    uint256 _lotteryContestantMinTokenAmount = 1000000 * 10**_decimals;
    uint256 private _lotteryPoolAmount = 0;
    uint256 private _lotteryCurrentRound = 0;
    uint256 private _lotteryDrawRound = 100;
    Winner[] private _lotteryWinnerLog;
    
    uint256 private _marketingTaxRate = 3;
    uint256 private _marketingPoolAmount = 0;
    uint256 private _marketingTargetSwapAmount = 1000000 * 10**_decimals;
    address private _marketingWalletAddress = 0x8DdC70477Fe03fd618a247713E30852027f1d163;
    
    IUniswapV2Router02 public immutable uniswapV2Router;
    address public immutable uniswapV2Pair;
    
    bool private _isDoingTask;
    
    modifier lockTasks {
        _isDoingTask = true;
        _;
        _isDoingTask = false;
    }
    
    event SwapAndLiquify(
        uint256 tokensSwapped,
        uint256 ethReceived,
        uint256 tokensIntoLiqudity
    );
    
    event SwapAndTransferToMarketing(
        uint256 tokensSwapped,
        uint256 ethReceived
    );
    
    event LotteryDraw(
        address winnerAddress,
        uint256 lotteryAmount
    );

    constructor () {
        _balances[owner()] = _totalSupply;
        
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory()).createPair(address(this), _uniswapV2Router.WETH());
        uniswapV2Router = _uniswapV2Router;
        
        // exclude system addresses from holder actions
        _isExcluded[address(this)] = true;
        _isExcluded[owner()] = true;
        _isExcluded[_marketingWalletAddress] = true;
        _isExcluded[_burnAddress] = true;
        
        emit Transfer(address(0), owner(), _totalSupply);
        
        // placeholders for the winner log
        _lotteryWinnerLog.push(Winner(address(0), 0));
        _lotteryWinnerLog.push(Winner(address(0), 0));
        _lotteryWinnerLog.push(Winner(address(0), 0));
        _lotteryWinnerLog.push(Winner(address(0), 0));
        _lotteryWinnerLog.push(Winner(address(0), 0));
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint8) {
        return _decimals;
    }

    function totalSupply() public view override returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return _balances[account];
    }

    function allowance(address owner, address spender) public view override returns (uint256) {
        return _allowances[owner][spender];
    }
    
    function isExcluded(address account) public view returns(bool) {
        return _isExcluded[account];
    }
    
    function maxTransactionAmount() public view returns (uint256) {
        return _maxTransactionAmount;
    }
    
    function liquidityTaxRate() public view returns (uint256) {
        return _liquidityTaxRate;
    }
    
    function liquidityPoolAmount() public view returns (uint256) {
        return _liquidityPoolAmount;
    }
    
    function marketingTaxRate() public view returns (uint256) {
        return _marketingTaxRate;
    }
    
    function marketingPoolAmount() public view returns (uint256) {
        return _marketingPoolAmount;
    }
    
    function lotteryTaxRate() public view returns (uint256) {
        return _lotteryTaxRate;
    }
    
    function lotteryPoolAmount() public view returns (uint256) {
        return _lotteryPoolAmount;
    }
    
    function lotteryContestantMinTokenAmount() public view returns (uint256) {
        return _lotteryContestantMinTokenAmount;
    }
    
    function lotteryContestantCount() public view returns (uint256) {
        return _lotteryContestants.size();
    }
    
    function lotteryWinnerLog() public view returns (Winner[] memory) {
        return _lotteryWinnerLog;
    }
    
    function burnTaxRate() public view returns (uint256) {
        return _burnTaxRate;
    }
    
    function burnTotalAmount() public view returns (uint256) {
        return _burnTotalAmount;
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    function approve(address spender, uint256 amount) public override returns (bool) {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(sender, _msgSender(), _allowances[sender][_msgSender()].sub(amount, "Transfer amount exceeds allowance"));
        return true;
    }

    function increaseAllowance(address spender, uint256 amount) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].add(amount));
        return true;
    }

    function decreaseAllowance(address spender, uint256 amount) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].sub(amount, "Decreased allowance below zero"));
        return true;
    }

    function excludeAccount(address account) public onlyOwner {
        _isExcluded[account] = true;
    }
    
    function includeAccount(address account) public onlyOwner {
        _isExcluded[account] = false;
    }
    
    //to recieve ETH from uniswapV2Router when swaping
    receive() external payable {}
    
    function _approve(address owner, address spender, uint256 amount) private {
        require(owner != address(0), "Approve from the zero address");
        require(spender != address(0), "Approve to the zero address");

        _allowances[owner][spender] = amount;
        
        emit Approval(owner, spender, amount);
    }
    
    function _transfer(address from, address to, uint256 amount) private {
        require(from != address(0), "Transfer from the zero address");
        require(to != address(0), "Transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");
        require(amount <= _maxTransactionAmount, "Transfer amount exceeds the max amount.");
        
        bool isSell = to == uniswapV2Pair;
        
        // only do one task per transaction to minimize gas fees
        if (!_isDoingTask) {
            _doFirstEligibleTask(isSell);
        }
        
        // transfer the tokens
        // this will also handle the taxes
        _tokenTransfer(from, to, amount, isSell);
        
        // validate for eligibility in lottery
        if (isSell) {
            _validateLotteryContestant(from);
        } else {
            _validateLotteryContestant(to);
        }
        
        // increment the lottery round
        _lotteryCurrentRound = _lotteryCurrentRound.add(1);
    }
    
    function _doFirstEligibleTask(bool isSell) private lockTasks {
        // don't swap if sender is uniswap pair (buying)
        if (isSell) {
            if (_liquidityPoolAmount >= _liquidityTargetSwapAmount) {
                _swapAndLiquify(_liquidityTargetSwapAmount);
                return;
            }
           
            if (_marketingPoolAmount >= _marketingTargetSwapAmount) {
                _swapAndTransferToMarketing(_marketingTargetSwapAmount);
                return;
            }
        }
        
        // is the lottery to ready to draw
        if (_lotteryCurrentRound >= _lotteryDrawRound) {
            _drawLottery();
            return;
        }
    }
    
    function _swapAndLiquify(uint256 tokenAmount) private {
        // split the contract balance into halves
        uint256 half = tokenAmount.div(2);
        uint256 otherHalf = tokenAmount.sub(half);

        // capture the contract's current ETH balance.
        uint256 initialBalance = address(this).balance;

        // swap tokens for ETH
        _swapTokensForEth(half);

        // how much ETH did we just swap into?
        uint256 ethAmount = address(this).balance.sub(initialBalance);

        // add liquidity to uniswap
        _addLiquidity(otherHalf, ethAmount);
        
        emit SwapAndLiquify(half, ethAmount, otherHalf);
    }
    
    function _addLiquidity(uint256 tokenAmount, uint256 ethAmount) private {
        // approve token transfer to cover all possible scenarios
        _approve(address(this), address(uniswapV2Router), tokenAmount);

        // add the liquidity
        uniswapV2Router.addLiquidityETH{value: ethAmount}(
            address(this),
            tokenAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            owner(),
            block.timestamp
        );
    }
    
    function _swapAndTransferToMarketing(uint256 tokenAmount) private {
        // capture the contract's current ETH balance.
        uint256 initialBalance = address(this).balance;
        
        // swap tokens for ETH
        _swapTokensForEth(tokenAmount);
        
        // how much ETH did we just swap into?
        uint256 ethAmount = address(this).balance.sub(initialBalance);
        
        // transfer eth to marketing wallet
        payable(_marketingWalletAddress).transfer(ethAmount);
        
        emit SwapAndTransferToMarketing(tokenAmount, ethAmount);
    }
    
    function _validateLotteryContestant(address walletAddress) private {
        if (!_isExcluded[walletAddress] && balanceOf(walletAddress) >= _lotteryContestantMinTokenAmount) {
            _lotteryContestants.set(walletAddress, balanceOf(walletAddress));
        } else {
            _lotteryContestants.remove(walletAddress);
        }
    }
    
    function _drawLottery() private {
        uint256 count = _lotteryContestants.size();
        
        // dont draw the lottery too early
        if (count < 2) return;
        
        // pick a winner
        uint256 winnerIndex = uint(keccak256(abi.encodePacked(block.difficulty, block.timestamp, count))) % count;
        address winnerAddress = _lotteryContestants.getKeyAtIndex(winnerIndex);
        
        // give the winner the tokens
        _balances[winnerAddress] = _balances[winnerAddress].add(_lotteryPoolAmount);
        
        emit Transfer(address(this), winnerAddress, _lotteryPoolAmount);
        
        // log the winner for external reference / transparency
        _lotteryWinnerLog.push(Winner(winnerAddress, _lotteryPoolAmount));
        _lotteryWinnerLog.pop();
        
        emit LotteryDraw(winnerAddress, _lotteryPoolAmount);
        
        // reset the lottery
        _lotteryPoolAmount = 0;
        _lotteryCurrentRound = 0;
    }
    
    function _tokenTransfer(address sender, address recipient, uint256 transactionAmount, bool isSell) private {
        uint taxAmount = _takeTaxes(sender, recipient, transactionAmount, isSell);
        uint256 grossAmount = transactionAmount.sub(taxAmount);
        
        _balances[address(this)] = _balances[address(this)].add(taxAmount);
        _balances[sender] = _balances[sender].sub(transactionAmount);
        _balances[recipient] = _balances[recipient].add(grossAmount);
        
        emit Transfer(sender, recipient, grossAmount);
    }
    
    function _takeTaxes(address sender, address recipient, uint256 transactionAmount, bool isSell) private returns(uint256) {
        bool doTax = !_isExcluded[sender] && !_isExcluded[recipient];
        
        if (!doTax) return 0;
        
        uint256 liquidityTaxAmount = _takeLiquidityTax(transactionAmount, isSell);
        uint256 marketingTaxAmount = _takeMarketingTax(transactionAmount, isSell);
        uint256 lotteryTaxAmount = _takeLotteryTax(transactionAmount, isSell);
        uint256 burnTaxAmount = _takeBurnTax(transactionAmount, isSell);
        
        return liquidityTaxAmount.add(marketingTaxAmount).add(lotteryTaxAmount).add(burnTaxAmount);
    }
    
    function _takeLiquidityTax(uint256 transactionAmount, bool isSell) private returns(uint256) {
        uint256 taxAmount = _getTaxAmount(transactionAmount, _liquidityTaxRate, isSell);
        
        _liquidityPoolAmount = _liquidityPoolAmount.add(taxAmount);
        
        return taxAmount;
    }
    
    function _takeMarketingTax(uint256 transactionAmount, bool isSell) private returns(uint256) {
        uint256 taxAmount = _getTaxAmount(transactionAmount, _marketingTaxRate, isSell);
        
        _marketingPoolAmount = _marketingPoolAmount.add(taxAmount);
        
        return taxAmount;
    }
    
    function _takeLotteryTax(uint256 transactionAmount, bool isSell) private returns(uint256) {
        uint256 taxAmount = _getTaxAmount(transactionAmount, _lotteryTaxRate, isSell);
        
        _lotteryPoolAmount = _lotteryPoolAmount.add(taxAmount);
        
        return taxAmount;
    }
    
    function _takeBurnTax(uint256 transactionAmount, bool isSell) private returns(uint256) {
        uint256 taxAmount = _getTaxAmount(transactionAmount, _burnTaxRate, isSell);
        
        _burnTotalAmount = _burnTotalAmount.add(taxAmount);
        _balances[_burnAddress] = _balances[_burnAddress].add(taxAmount);
        
        return taxAmount;
    }
    
    function _getTaxAmount(uint256 transactionAmount, uint256 baseRate, bool isSell) private pure returns(uint256) {
        uint256 rate = isSell ? baseRate.mul(2) : baseRate;
        uint256 taxAmount = transactionAmount.mul(rate).div(100);
        
        return taxAmount;
    }
    
    function _swapTokensForEth(uint256 tokenAmount) private {
        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = uniswapV2Router.WETH();

        _approve(address(this), address(uniswapV2Router), tokenAmount);

        // make the swap
        uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );
    }
