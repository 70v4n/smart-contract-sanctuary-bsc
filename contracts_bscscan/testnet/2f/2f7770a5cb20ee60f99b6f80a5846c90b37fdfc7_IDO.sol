contract IDO{
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    uint256 public NextId = 0;
    
    struct Raise{
        bool status;
        address receiver;
        uint256 tokenOutHope;
        uint256 tokenOutRaised;
        uint256 tokenInRate;
        uint256 tokenOutRate;
        address tokenIn;
        address tokenOut;
        uint256 starSaleTime;
        uint256 endSaleTime;

    }
    mapping(uint256 => Raise) public raiseMap;
    mapping(address => bool) public manager;
    
    constructor() public {
        manager[msg.sender] = true;
    }
    
    receive() external payable {
	}
    
    function plan(uint256 _id, uint256 _amount) external{
        require(raiseMap[_id].status,"This order is not opened");
        require(raiseMap[_id].tokenOutRaised < raiseMap[_id].tokenOutHope,"Insufficient quota" );
        require(raiseMap[_id].tokenOutHope.sub(raiseMap[_id].tokenOutRaised) > _amount," No more quota");
        require(block.timestamp > raiseMap[_id].starSaleTime,"Not started yet");
        require(block.timestamp < raiseMap[_id].endSaleTime,"It has ended");
        IERC20(raiseMap[_id].tokenOut).transferFrom(msg.sender, raiseMap[_id].receiver, _amount);
        IERC20(raiseMap[_id].tokenIn).transfer(msg.sender, _amount.mul(raiseMap[_id].tokenInRate).div(raiseMap[_id].tokenOutRate));
        raiseMap[_id].tokenOutRaised = raiseMap[_id].tokenOutRaised.add(_amount);
    }
    
    function setRaise(uint256 _tokenOutHope, uint256 _tokenInRate, uint256 _tokenOutRate, address _tokenIn, address _tokenOut, uint256 _starSaleTime, uint256 _endSaleTime) external{

        require(raiseMap[NextId].status != true,"Plan already exists");   
        IERC20(_tokenIn).transferFrom(msg.sender, address(this), _tokenOutHope.mul(_tokenInRate).div(_tokenOutRate));
        raiseMap[NextId].status = true;
        raiseMap[NextId].receiver = msg.sender;
        raiseMap[NextId].tokenOutHope = _tokenOutHope;
        raiseMap[NextId].tokenInRate = _tokenInRate;
        raiseMap[NextId].tokenOutRate = _tokenOutRate;
        raiseMap[NextId].tokenIn = _tokenIn;
        raiseMap[NextId].tokenOut = _tokenOut;
        raiseMap[NextId].starSaleTime = _starSaleTime;
        raiseMap[NextId].endSaleTime = _endSaleTime;
        NextId = NextId.add(1);
    }
    
    function setNextId(uint256 _nextId) external onlyOwner{
        NextId = _nextId;
    }
    
    function withdrawStuckTokens(address _token, uint256 _amount) public onlyOwner {
        IERC20(_token).transfer(msg.sender, _amount);
    }
    
    function withdrawal() public onlyOwner {
		payable(msg.sender).transfer(address(this).balance);
	}
    
        
    modifier onlyOwner {
        require(manager[msg.sender] == true);
        _;
    }
}