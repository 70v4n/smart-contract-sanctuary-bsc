pragma solidity ^0.8.0;

import "./token/BEP20/IBEP20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./chainlink/AggregatorV3Interface.sol";
import "./utils/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/math/SafeCast.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract TokenSaleV2 is Ownable, ReentrancyGuard {
    using SafeMath for uint256;

    AggregatorV3Interface private priceFeed;
    address payable private wallet;
    IBEP20 private quill;
    IBEP20 private busd;
    uint256 private rate;
    uint256 private purchaseLimit;
    uint256 private priceImpact;
    bool private isActive;
    bool private applyBonus;
    uint256 private referralBonusPercent;
    address[] public referrers;

    mapping(address => uint256) private tokenPurchased;
    mapping(address => address) public buddy;
    event TokensPurchased(address indexed purchaser, uint256 amount);

    constructor(
        address payable _wallet,
        IBEP20 _quill, 
        IBEP20 _busd, 
        uint256 _rate,
        uint256 _purchaseLimit,
        bool _isActive,
        AggregatorV3Interface _priceFeed,
        uint256 _priceImpact
    ){
        require(_rate > 0, "busdRate is 0");
        require(_wallet != address(0), "wallet is the zero address");
        require(address(_quill) != address(0), "quill is the zero address");
        require(address(_busd) != address(0), "busd is the zero address");

        wallet = _wallet;
        quill = _quill;
        busd = _busd;
        rate = _rate;
        purchaseLimit = _purchaseLimit;
        isActive = _isActive;
        priceFeed = _priceFeed;
        priceImpact = _priceImpact;
        applyBonus = true;
        referralBonusPercent = 4;
    }

    function getLatestPrice() public view returns (int) {
        (,int price,,,) = priceFeed.latestRoundData();
        return price * 10 ** 10;
    }

    function getTokenPurchased(address _purchasher) public view returns (uint256) {
        return tokenPurchased[_purchasher];
    }

    function getRate() public view returns (uint256) {
        return rate;
    }

    function getPriceImpact() public view returns (uint256) {
        return priceImpact;
    }

    function getPurchaseLimit() public view returns (uint256) {
        return purchaseLimit;
    }

    function getStatus() public view returns (bool) {
        return isActive;
    }

    function setRate(uint256 _rate) external onlyOwner {
        rate = _rate;
    }

    function setPriceImpact(uint256 _priceImpact) external onlyOwner {
        priceImpact = _priceImpact;
    }

    function setPurchaseLimit(uint256 _purchaseLimit) external onlyOwner {
        purchaseLimit = _purchaseLimit;
    }

    function getBusd() public view returns (IBEP20) {
        return busd;
    }

    function setBusd(IBEP20 _busd) external onlyOwner {
        busd = _busd;
    }

    function getQuill() public view returns (IBEP20) {
        return quill;
    }

    function setQuill(IBEP20 _quill) external onlyOwner {
        quill = _quill;
    }

    function toggleApplyBonus(bool _applyBonus) external onlyOwner {
        applyBonus = _applyBonus;
    }

    function applyBonusStatus() public view returns (bool) {
        return applyBonus;
    }

    function getReferrers() external view returns (address[] memory) {
        return referrers;
    }

    function setReferralBonusPercent(uint256 _referralBonusPercent) external onlyOwner {
        referralBonusPercent = _referralBonusPercent;
    }

    function getReferralBonusPercent() external view returns (uint256) {
        return referralBonusPercent;
    }

    function purchaseFromBnb(uint256 _lastPrice, address _referrer) public whenActive nonReentrant payable {
        require(msg.sender != address(0), "wallet is the zero address");
        require(msg.value != 0, "Amount is 0");
        require(msg.sender != _referrer, "You cannot refer your self.");
        int256 lp = getLatestPrice();
        uint256 bnbInUsd = msg.value * SafeCast.toUint256(lp);
        uint256 token = bnbInUsd * rate / 1000000000000000000;
        uint256 diff = SafeCast.toUint256(lp) - _lastPrice;
        uint256 _priceImpact = diff * 1000000000000000000 / _lastPrice;
        require(_priceImpact <= priceImpact, "Price impact too high");
        require(tokenPurchased[msg.sender].add(token) <= purchaseLimit, "Individual cap exceeded");
        if (buddy[msg.sender] != address(0)) {
            _referrer = buddy[msg.sender];
        } else {
            buddy[msg.sender] = _referrer;
        }

        IBEP20(quill).transfer(msg.sender, token);
        tokenPurchased[msg.sender] = tokenPurchased[msg.sender].add(token);
        wallet.transfer(msg.value);
        if(_referrer != address(0)) {
            if (applyBonus) {
                uint256 referralBonus = (token / 100) * referralBonusPercent;
                quill.transfer(_referrer, referralBonus);
                referrers.push(_referrer);
            }
        }
        emit TokensPurchased(msg.sender, token);
    }

    function purchaseFromBusd(uint256 _busdAmount, address _referrer) external whenActive {
        // only if active
        require(msg.sender != address(0), "wallet is the zero address");
        require(_busdAmount > 0, 'BUSD amount is zero');
        require(msg.sender != _referrer, "You cannot refer your self.");
        uint256 token = _busdAmount * rate;
        require(tokenPurchased[msg.sender].add(token) <= purchaseLimit, "Individual cap exceeded");

        if (buddy[msg.sender] != address(0)) {
            _referrer = buddy[msg.sender];
        } else {
            buddy[msg.sender] = _referrer;
        }

        busd.transferFrom(msg.sender, wallet, _busdAmount);
        quill.transfer(msg.sender, token);
        if(_referrer != address(0)) {
            if (applyBonus) {
                uint256 referralBonus = (token / 100) * referralBonusPercent;
                quill.transfer(_referrer, referralBonus);
                referrers.push(_referrer);
            }
        }
        tokenPurchased[msg.sender] = tokenPurchased[msg.sender].add(token);
        emit TokensPurchased(msg.sender, token);
    }

    function activate() external onlyOwner {
        isActive = true;
    }

    function deactivate() external onlyOwner {
        isActive = false;
    }

    function withdraw() external onlyOwner whenInactive {
        uint256 quillBalance = quill.balanceOf(address(this));
        quill.transfer(wallet, quillBalance);
    }

    modifier whenActive {
        require(isActive == true, 'Token Sale is not active');
        _;
    }

    modifier whenInactive {
        require(isActive == false, 'Token Sale is active');
        _;
    }

}

