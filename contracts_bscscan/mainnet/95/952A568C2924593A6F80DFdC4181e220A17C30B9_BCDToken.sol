        _taxFeeEnabled = _enabled;
        emit taxFeeEnabledUpdated(_enabled);
    }

    function setPricePercentage(uint256 pricePercent_) external onlyManager() {
        require (pricePercent_ > 1 && pricePercent_ < 100, "pricePercent should be in 2 - 99");
        _pricePercent = pricePercent_;
    }

    function setYellowTaxFeePercent(uint256 yellowtaxFee_) external onlyManager() {
        require (yellowtaxFee_ > 0 && yellowtaxFee_ < 100, "yellowtaxFee should be in 1 - 99");
        _yellowtaxFee = yellowtaxFee_;
    }

    function setRedTaxFeePercent(uint256 redtaxFee_) external onlyManager() {
        require (redtaxFee_ > 0 && redtaxFee_ < 100, "redtaxFee should be in 1 - 99");
        _redtaxFee = redtaxFee_;
    }

