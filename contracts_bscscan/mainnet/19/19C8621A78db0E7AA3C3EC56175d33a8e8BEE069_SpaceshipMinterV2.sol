interface IBYGSpaceShip {
    function mint(address to, uint256 fuelUnit, uint256 coef, uint8 typeOfShip) external;
    function setReceiver(address _newAddress) external;
    function setRenameFee(uint _fee) external;
    function setBaseTokenURI(string calldata _uri) external;
    function setCoef(uint256 tokenId, uint256 coef) external;
    function setFuelUnit(uint256 tokenId, uint256 fuelUnit) external;
    function setType(uint256 tokenId, uint8 typeOfShip) external;
    function totalSupply() external view returns (uint256);
    function transferOwnership(address newOwner) external;
}

contract SpaceshipMinterV2 is Initializable {

    using Strings for uint256;
    using EnumerableSet for EnumerableSet.UintSet;

    EnumerableSet.UintSet mintedUUIDs;

    address private _owner;
    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);
    event SpaceshipMinted(address indexed target, uint256 indexed tokenId, uint256 indexed typeOfShip);

    /**
     * @dev Throws if called by any account other than the owner.
     */
    modifier onlyOwner() {
        require(_owner == msg.sender, "Minter: caller is not the owner");
        _;
    }

    /**
     * @dev Transfers ownership of the contract to a new account (`newOwner`).
     * Can only be called by the current owner.
     */
    function transferOwnership(address newOwner) public onlyOwner {
        require(newOwner != address(0), "Minter: new owner is the zero address");
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }

    /**
     * @dev Returns the bep token owner.
     */
    function getOwner() external view returns (address) {
        return _owner;
    }

    string private _secret;
    IERC20 quote;
    IBYGSpaceShip public ship;

    uint256[] public mintedTokenIds;
    uint256 public openTimestamp;

    modifier isOpened() {
        require(block.timestamp>=openTimestamp, "Minter: This pool is not opened");
        _;
    }

    constructor(){}

    /**
     * @dev initialize
     */
    function initialize(IERC20 quote_, IBYGSpaceShip ship_) public initializer {
        quote = quote_;
        ship = ship_;
        _owner = msg.sender;
    }

    function mintShip(uint256 _uuid, uint256 _fuelUnit, uint256 _coef, uint256 _typeOfShip, uint256 _price, bytes32 _hash) external isOpened returns(uint256){
        require(verify(abi.encodePacked(_uuid.toString(), _fuelUnit.toString(), _coef.toString(), _typeOfShip.toString(), _price.toString()), _hash), "Minter: Invalid action.");
        require(!mintedUUIDs.contains(_uuid), "Minter: Invalid UUID");
        mintedUUIDs.add(_uuid);
        if(_price>0){
            require(quote.balanceOf(msg.sender)>=_price, "Minter: Insufficient BYG balance");
            require(quote.transferFrom(msg.sender, _owner, _price), "Minter: Insufficient allowance");
        }
        uint256 tokenId = ship.totalSupply();
        mintedTokenIds.push(tokenId);
        emit SpaceshipMinted(msg.sender, tokenId, _typeOfShip);
        ship.mint(msg.sender, _fuelUnit, _coef, uint8(_typeOfShip));
        return tokenId;
    }

    // verify if the input values is valid
    function verify(bytes memory input, bytes32 hashInput) private view returns(bool) {
        return hashInput == sha256(abi.encodePacked(input, _secret));
    }

    function numOfTokensMinted() external view returns(uint256) {
        return mintedTokenIds.length;
    } 

    function setSecret(string memory _sec) external onlyOwner {
        _secret = _sec;
    }

    function setOpenTimestamp(uint256 _openTimestamp) external onlyOwner {
        openTimestamp = _openTimestamp;
    }

    function transferOwnershipOfNftToDeployer() external onlyOwner {
        ship.transferOwnership(_owner);
    }

    function withdrawBYG() external onlyOwner {
        quote.transfer(_owner, quote.balanceOf(address(this)));
    }

    function getAllMintedUUIDs() external view returns(uint256[] memory) {
        uint256[] memory ids = new uint256[](mintedUUIDs.length());
        for(uint i=0; i<mintedUUIDs.length(); i++){
            ids[i]=mintedUUIDs.at(i);
        }
        return ids;
    }

}