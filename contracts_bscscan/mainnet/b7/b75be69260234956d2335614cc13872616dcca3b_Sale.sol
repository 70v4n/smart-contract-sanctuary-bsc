contract Sale is Ownable {
    address public immutable TROO = address(0x8Cb06C8ad9Eb28a56427F609D2819Dd4d4B7699C); //TROO
    uint256 public tokenPrice = 0.001 ether;
    uint256 public decimals = 18;
    
    address payable public wallet;
    
    receive() payable external {
        deposit();
    }
    
    function deposit() public payable {
        require(msg.value == tokenPrice, "Incorrect token price");
        
        uint256 balance = IERC20(TROO).balanceOf(address(this));
        uint256 amount = 10 ** decimals;
        require(balance >= amount, "Not enough TROO in contract");

        IERC20(TROO).transfer(msg.sender, amount);
        wallet.transfer(address(this).balance);
    }
    
    function setTokenPrice(uint256 _tokenPrice) public onlyOwner {
        tokenPrice = _tokenPrice;
    }
    
    function setWallet(address payable _wallet) public onlyOwner {
        wallet = _wallet;
    }
    
    function setTokenDecimals(uint256 _decimals) public onlyOwner {
        decimals = _decimals;
    }
}