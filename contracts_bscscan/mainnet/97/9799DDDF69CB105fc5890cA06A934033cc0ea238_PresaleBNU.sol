// Presale Contract

contract PresaleBNU {
    uint256 public remainingSupply;
    address payable public owner;
    address public tokenAddress;
    address public busdAddress;
    uint256 public ratePerBUSD;
    uint maxCap = 1000000000000000000000;
 
    mapping(address => uint) purchases;
 
    constructor() {
        remainingSupply = 15000000000000000000000000; // 15M
        owner = payable(0x03CC44784aE0b6875F4741a7FDf5eb6837470AE7);
        tokenAddress = 0x874b43cbEB7D6D895b6aE862ce57D1056EA07EDC;
        busdAddress = 0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56;
        ratePerBUSD = 18; // 0.0555555
    }

    function transferBNUForBUSD(uint amount) public payable {
        require(amount >= 10000000000000000000, "Amount should be greater than $10");
        uint256 amountOfTokens = SafeMath.mul(amount, ratePerBUSD);
        require(amountOfTokens <= remainingSupply, "Not enough tokens to transfer");
        TransferHelper.safeTransferFrom(busdAddress, msg.sender, owner, amount);
        TransferHelper.safeTransferFrom(tokenAddress, owner, msg.sender, amountOfTokens);
        remainingSupply = remainingSupply-amountOfTokens;
    }
 
    fallback() external payable {
        revert();
    }
}