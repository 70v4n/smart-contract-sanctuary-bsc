pragma solidity ^0.8.0;

import "./openzeppelin/SafeMath.sol";
import "./openzeppelin/Ownable.sol";
import "./openzeppelin/SafeERC20.sol";
import "./openzeppelin/IERC20.sol";
import "./openzeppelin/ReentrancyGuard.sol";
import "./library/WhitelistedAuctionHouse.sol";

contract AuctionHouse is Ownable, WhitelistedAuctionHouse, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    // The token being sold
    IERC20 public auctioningToken;

    // Token state price
    uint256 public tokenPrice;

    // Accepted tokens
    mapping(address => bool) public acceptedTokens;

    // Address where funds are collected
    address payable public fundingWallet;

    // Token Reserved
    mapping(address => uint256) public tokenReserved;

    // Claim date
    uint256 public dday;

    uint256 public startBlock;
    uint256 public endBlock;

    // How many selling token
    uint256 public cap;

    // How many persoal cap
    uint256 public personalCap;

    // Raised cap;
    uint256 public raised;

    /**
     * -----------------------
     * Event
     * -----------------------
     */

    event TokenPurchase(address indexed purchaser, address indexed payableToken, uint256 amount, uint256 fiat);

    event TokenClaimed(address indexed purshaser, uint256 amount);

    constructor(
        IERC20 _auctioningToken,
        uint256 _supply,
        uint256 _openingBlocktime,
        uint256 _closingBlocktime,
        address payable _fundingWallet,
        uint256 _dday
    ) {
        require(_supply > 0, "supply can't below zero");
        require(_fundingWallet != address(0), "can't send to address 0");
        require(_dday > block.number, "dday must be in the future block");
        auctioningToken = _auctioningToken;
        cap = _supply;
        fundingWallet = _fundingWallet;
        dday = _dday;
        tokenPrice = 1000e18;
        personalCap = 0;
        startBlock = _openingBlocktime;
        endBlock = _closingBlocktime;
    }

    function setDDay(uint256 _dday) public onlyOwner {
        dday = _dday;
    }

    function setStartBlock(uint256 _startBlock) public onlyOwner {
        startBlock = _startBlock;
    }

    function setEndBlock(uint256 _endBlock) public onlyOwner {
        endBlock = _endBlock;
    }

    function setCap(uint256 _cap) public onlyOwner {
        require(_cap > 0, "cap can't below zero");
        cap = _cap;
    }

    // Set 1 token per fiat price // token vs fiat, put fiat price
    function setTokenPrice(uint256 _tokenPrice) public onlyOwner {
        tokenPrice = _tokenPrice;
    }

    function setPersonalCap(uint256 _personalCap) public onlyOwner {
        personalCap = _personalCap;
    }

    function setAcceptedToken(address _addr, bool _isAccepted) public onlyOwner {
        acceptedTokens[_addr] = _isAccepted;
    }

    /**
     * @param payableToken Address performing the token purchase
     * @param _amount amount of our token customer wanted to buy
     */
    function buyToken(address payableToken, uint256 _amount) public nonReentrant isWhitelisted(msg.sender) {
        bool isAccepted = acceptedTokens[payableToken] == true;
        require(isAccepted, "token is not acceptable");
        require(startBlock <= block.number, "Presale is not started");
        require(block.number <= endBlock, "Presale has ended");

        uint256 payAmount = _amount.mul(tokenPrice).div(1e18);
        uint256 senderBalance = IERC20(payableToken).balanceOf(msg.sender);
        require(payAmount >= 10e18, "Minimum purchase is 10USD");
        require(senderBalance >= payAmount, "Insufficate amount");
        raised = raised.add(_amount);
        require(raised <= cap, "Token sold out");

        uint256 _tokenReserved = tokenReserved[msg.sender].add(_amount);
        require(_tokenReserved <= personalCap, "Token reach personal cap.");
        IERC20(payableToken).transferFrom(msg.sender, address(fundingWallet), payAmount);
        tokenReserved[msg.sender] = _tokenReserved;
        emit TokenPurchase(msg.sender, payableToken, _amount, payAmount);
    }

    /**
     * Claim tokens
     */
    function claimToken() public nonReentrant isWhitelisted(msg.sender) {
        require(block.number > dday, "not dday yet");
        IERC20(auctioningToken).safeTransfer(msg.sender, tokenReserved[msg.sender]);
        emit TokenClaimed(msg.sender, tokenReserved[msg.sender]);
        tokenReserved[msg.sender] = 0;
    }

    /**
     * transferBack use when claim end and token left to sell to funding wallet
     */
    function transferBack() public onlyOwner {
        require(block.number > dday, "not dday yet");
        bool _isValid;
        uint256 _tokenLeftToSell;
        (_isValid, _tokenLeftToSell) = cap.trySub(raised);
        if (_isValid) {
            IERC20(auctioningToken).safeTransfer(owner(), _tokenLeftToSell);
        }
    }

    /**
     * @dev Checks whether the cap has been reached.
     * @return Whether the cap was reached
     */
    function capReached() public view returns (bool) {
        return raised >= cap;
    }
}

