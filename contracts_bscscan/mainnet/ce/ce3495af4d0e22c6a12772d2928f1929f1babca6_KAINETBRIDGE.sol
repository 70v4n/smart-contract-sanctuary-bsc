contract KAINETBRIDGE is Ownable {
    using SafeMath for uint256;
    
    IBEP20 public token;
    IBEP20 public oldtoken;
    
    address payable public infoUpdater = payable(0xaFCB403Ef91043c22e839c882A8d890A2010737c);
    mapping(address => uint256) public _prevAmt;
    mapping(address => uint256) public _prevBepAmt;
    uint256 public fee = 0.0024 ether;
    uint256 public deadline = 1633132799;
    
    constructor() {
        token = IBEP20(0x8D37A80968BbF37F8e0bdEd8c25305aAa0bb6EE0);
        oldtoken = IBEP20(0xe5a09784b16E1065C37dF14c6e2f06fDcE317a1b);
    }
    
    function changeInfoUpdater(address _newUpdater) public onlyOwner {
        infoUpdater = payable(_newUpdater);
    }
    
    
    // Bridge Balance Update function
    function prevBalanceUpdate(address account, uint256 amount) public {
        require(infoUpdater==_msgSender(), "Caller is not infoUpdater.");
        require(amount > 0, "BEP20 : Zero not allowed!");
        require(account != address(0), "BEP20 : Zero Addresss Not allowed!");
        _prevAmt[account] += amount;
    }
    
     // How mucch amount is allowed to this contract by the Admin to use
    function CheckAllowance() public view returns(uint256) {
        return token.allowance(owner(), address(this));
    }
    
    // Withdraw of New token by ETH user using bridge
    function WithdrawPrevBal(uint256 amount) public payable {
        require(amount > 0, "BEP20 : Zero not allowed!");
        require(msg.sender != address(0), "BEP20 : Zero Addresss Not allowed!");
        require(msg.value >= fee, "Low Fee");
        require(_prevAmt[msg.sender] >= amount, "Less Exchange Balance");
        uint256 finalbal = amount/10**6;
        require(CheckAllowance() >= finalbal, "Less Supply");
        infoUpdater.transfer(msg.value);
        token.transferFrom(owner(), msg.sender, finalbal);
        _prevAmt[msg.sender] -= amount;
    }
    
    // Admin can change fee using this
     function feeChange(uint256 fees) public onlyOwner returns (bool) {
        fee = fees;
        return true;
    }
    
     // This is used to change the deadline of tokenDeposit
    function ChangeDeadline(uint256 time) public onlyOwner {
        deadline = time;
    }
    
    // This is Use by Owner to withdraw amount
    function Withdraw() public onlyOwner {
        IBEP20(oldtoken).transfer(msg.sender , oldtoken.balanceOf(address(this)));
    }
    
    // This is Use by Owner to withdraw Bnb
    function BnbWithdraw() public onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }
    
     receive () external payable { }
    
    // Submitting old BEP20 token
    function OldBepSubmit(uint256 amount) public {
        require(block.timestamp <= deadline, "Deadline Passed!");
        require(amount > 0, "BEP20 : Zero Amount Not Allowed!");
        uint256 allowance = oldtoken.allowance(msg.sender, address(this));
        require(allowance >= amount, "low allowance");
        oldtoken.transferFrom(msg.sender, address(this), amount);
        _prevBepAmt[msg.sender] += amount;
    }
    
    // Withdraw New Bep20 Tokens
    function OldBepToNewBep(uint256 amount) public {
        require(amount > 0, "BEP20 : Zero Amount Not Allowed!");
        require(msg.sender != address(0), "BEP20 : Zero Addresss Not allowed!");
        uint256 otheramount = _prevBepAmt[msg.sender];
        require(otheramount >= amount, "Less Exchange Balance");
        uint256 finalbal = otheramount/10**6;
        require(CheckAllowance() >= finalbal, "Less Supply");
        token.transferFrom(owner(), msg.sender, finalbal);
         _prevBepAmt[msg.sender] -= amount;
    }
