contract XWGBUSDTFactory is Pausable, Ownable {
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    Counters.Counter private _tokenIds;

    uint256 public _maxTotalSupply;

    IRandomNumber public randomNumber;

    INFT public nft;
    INFTRepository public nftRepository;

    IFeeToken public feeToken;
    uint256 public fee;
    address public devFeeAddress;

    IXWGRole public xwgRole;
    IXWGGrade public xwgGrade;
    IXWGSkill public xwgSkill;
    IXWGFiveElements public xwgFiveElements;

    constructor() public {
        _maxTotalSupply = 500000;
    }

    function setMaxTotalSupply(uint256 maxTotalSupply) external onlyOwner virtual {
        _maxTotalSupply = maxTotalSupply;
    }

    /**
     * @dev Triggers stopped state.
     *
     * Requirements:
     *
     * - The contract must not be paused.
     */
    function pause() external virtual onlyOwner whenNotPaused {
        _pause();
    }

    /**
     * @dev Returns to normal state.
     *
     * Requirements:
     *
     * - The contract must be paused.
     */
    function unpause() external virtual onlyOwner whenPaused {
        _unpause();
    }

    function setFee(uint256 number) public onlyOwner {
        fee = number;
    }

    function initialize(
                        address randomNumberAddr,
                        address nftAddr,
                        address nftRepositoryAddr,
                        address feeTokenAddr,
                        uint256 feeNumber,
                        address devFeeAddr,
                        address xwgRoleAddr,
                        address xwgGradeAddr,
                        address xwgSkillAddr,
                        address xwgFiveElementsAddr
                        ) external onlyOwner {
        randomNumber = IRandomNumber(randomNumberAddr);
        nft = INFT(nftAddr);
        nftRepository = INFTRepository(nftRepositoryAddr);
        feeToken = IFeeToken(feeTokenAddr);
        devFeeAddress = devFeeAddr;
        xwgRole = IXWGRole(xwgRoleAddr);
        xwgGrade = IXWGGrade(xwgGradeAddr);
        xwgSkill = IXWGSkill(xwgSkillAddr);
        xwgFiveElements = IXWGFiveElements(xwgFiveElementsAddr);

        setFee(feeNumber);
    }

    function innerBuild() private returns(uint256) {
        uint256 id = nft.mint(_msgSender());
        uint32 number = uint32(randomNumber.random(_msgSender(), id) % 100000);

        uint32[] memory role = xwgRole.randomRole(number);
        (uint grade, uint skillNumer, uint32 blood, uint32 attack) = xwgGrade.randomGrade(number);
        role[4] = role[4]+blood;
        role[5] = role[5]+attack;
        uint[] memory skills = xwgSkill.randomSkill(number, _msgSender(), role[0], skillNumer);
        uint fiveElement = xwgFiveElements.randomFiveElements(number);

        nftRepository.add(id, role, grade, skills, fiveElement);
        
        _tokenIds.increment();

        return id;
    }

    function build() external whenNotPaused returns(uint256) {
        require(_tokenIds.current() <= _maxTotalSupply, "XWGFactory: total supply is error");

        feeToken.transferFrom(_msgSender(), devFeeAddress, fee);

        uint256 id = innerBuild();

        return id;
    }

    function bulidList(uint number) external whenNotPaused returns(uint256[] memory) {
        require(_tokenIds.current() <= _maxTotalSupply, "XWGFactory: total supply is error");
        
        feeToken.transferFrom(_msgSender(), devFeeAddress, fee.mul(number));

        uint256[] memory tokenList = new uint256[](number);
        for(uint i=0; i<number; i++) {
            uint256 tokenId = innerBuild();
            tokenList[i] = tokenId;
        }

        return tokenList;
    }

}