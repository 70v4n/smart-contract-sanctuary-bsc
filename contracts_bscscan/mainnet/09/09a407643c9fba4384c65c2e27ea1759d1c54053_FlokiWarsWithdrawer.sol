pragma solidity 0.8.10;



contract FlokiWarsWithdrawer{
    address tokenOwner;
    address signingWallet;

    using SafeMath for uint256;

    string public constant name = "Floki Wars Withdraw Contract";
    string public constant version = "1";

    IBEP20 floki;

    mapping(address => uint256) withdrawalAmounts;
    
    bytes32 public DOMAIN_SEPARATOR;
    // keccak256("Withdraw(uint256 totalamountearned,address towallet)")
    bytes32 public constant WITHDRAW_TYPEHASH = 0xaf5022ccb4a4e66d79626c5c3edcd065cc96eb7a21e10baeef139916314ecde0;

    constructor(){
        tokenOwner = msg.sender;
        floki = IBEP20(0x7aD8383Ac98F20B23f133160D9634C22931dD24E);
        signingWallet = 0x0f936d627f6D1c3a24e9b289acD1B7edbf910f08;

        DOMAIN_SEPARATOR = keccak256(abi.encode(
            keccak256(
                "EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"
            ),
            keccak256(bytes(name)),
            keccak256(bytes(version)),
            uint256(56),
            address(this)
        ));
    }

    function getAmountWithdrawnByUser(address wallet) public view returns (uint256){
        return withdrawalAmounts[wallet];
    }

    function withdraw(uint256 totalamountearned, address towallet, uint8 v, bytes32 r, bytes32 s) external{

        bytes32 digest =
            keccak256(abi.encodePacked(
                "\x19\x01",
                DOMAIN_SEPARATOR,
                keccak256(abi.encode(WITHDRAW_TYPEHASH,
                                     totalamountearned,
                                     towallet))
        ));
        require(signingWallet == ecrecover(digest, v, r, s), "invalid-permit");

        uint256 available = totalamountearned.sub(withdrawalAmounts[towallet]);
        withdrawalAmounts[towallet] = withdrawalAmounts[towallet].add(available);
        floki.transferFrom(tokenOwner, towallet, available);
    }
}