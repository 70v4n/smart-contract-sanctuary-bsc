        _delegates[delegator] = delegatee;

        emit DelegateChanged(delegator, currentDelegate, delegatee);

        _moveVotingPower(currentDelegate, delegatee, delegatorBalance);
    }

    function _moveVotingPower(
        address src,
        address dst,
        uint256 amount
    ) private {
        if (src != dst && amount > 0) {
            if (src != address(0)) {
                uint256 srcCkptLen = _checkpoints[src].length;
                uint256 srcCkptOld = srcCkptLen == 0 ? 0 : _checkpoints[src][srcCkptLen - 1].votes;
                uint256 srcCkptNew = srcCkptOld - amount;
                _writeCheckpoint(src, srcCkptLen, srcCkptOld, srcCkptNew);
            }

            if (dst != address(0)) {
                uint256 dstCkptLen = _checkpoints[dst].length;
                uint256 dstCkptOld = dstCkptLen == 0 ? 0 : _checkpoints[dst][dstCkptLen - 1].votes;
                uint256 dstCkptNew = dstCkptOld + amount;
                _writeCheckpoint(dst, dstCkptLen, dstCkptOld, dstCkptNew);
            }
        }
    }

    function _writeCheckpoint(
        address delegatee,
        uint256 pos,
        uint256 oldWeight,
        uint256 newWeight
    ) private {
        if (pos > 0 && _checkpoints[delegatee][pos - 1].fromBlock == block.number) {
            _checkpoints[delegatee][pos - 1].votes = SafeCast.toUint224(newWeight);
        } else {
            _checkpoints[delegatee].push(Checkpoint({fromBlock: SafeCast.toUint32(block.number), votes: SafeCast.toUint224(newWeight)}));
        }

        emit DelegateVotesChanged(delegatee, oldWeight, newWeight);
    }

    function _mint(address account, uint256 amount) internal virtual override {
        super._mint(account, amount);
        require(totalSupply() <= type(uint224).max, "ERC20Votes: total supply exceeds 2**224");
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override {
        _moveVotingPower(delegates(from), delegates(to), amount);
    }
}


// Root file: contracts/MMT.sol


pragma solidity 0.8.3;

// import "openzeppelin-contracts/contracts/token/ERC20/ERC20.sol";
// import "openzeppelin-contracts/contracts/access/AccessControl.sol";
// import "openzeppelin-contracts/contracts/token/ERC20/extensions/ERC20Votes.sol";


contract MMT is ERC20Votes, AccessControl {
    bytes32 public constant BURNER_ROLE = keccak256("BURNER_ROLE");

    bytes32 public constant SALE_ROLE = keccak256("SALE_ROLE");

    bytes32 public constant COMPANY_ROLE = keccak256("COMPANY_ROLE");

    bytes32 public constant MEMBERS_ROLE = keccak256("MEMBERS_ROLE");

    bytes32 public constant BONUS_ROLE = keccak256("BONUS_ROLE");

    /*
        SUPPLY
    */

    uint256 public constant INITIAL_SUPPLY = 20000000 * 1e18;
    uint256 public constant SALE_SUPPLY = 12500000 * 1e18;
    uint256 public constant COMPANY_SUPPLY = 4000000 * 1e18;
    uint256 public constant MEMBERS_SUPPLY = 3000000 * 1e18;
    uint256 public constant BONUS_SUPPLY = 500000 * 1e18;

    uint256 public startSale;
    uint256 public endSale;

    uint256 public softCap;
    uint256 public hardCap;

    address public sale;
    address public company;
    address public members;
    address public bonus;

    /**
        Members Vesting 
    **/

    uint256 public constant MEMBERS_VESTING_PERIOD = 36;
    uint256 public timelock;
    uint256 public counter;

    constructor(
        address _sale,
        address _company,
        address _members,
        address _bonus,
        uint256 _startSale,
        uint256 _endSale,
        uint256 _softCap,
        uint256 _hardCap
    ) ERC20("Mental Motorsports Token", "MMT") ERC20Permit("Mental Motorsports Token") {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender()); //set owner role

        /** grant roles to burners **/

        grantRole(BURNER_ROLE, _msgSender());

        grantRole(BURNER_ROLE, _sale);

        /* grant roles to owners */

        grantRole(SALE_ROLE, _sale);

        sale = _sale;

        grantRole(COMPANY_ROLE, _company);

        company = _company;

        grantRole(MEMBERS_ROLE, _members);

        members = _members;

        grantRole(BONUS_ROLE, _bonus);

        bonus = _bonus;

        /** mint tokens **/

        _mint(address(this), INITIAL_SUPPLY);

        /** metadata **/

        require(_startSale < _endSale, "invalid dates");

        startSale = _startSale;
        endSale = _endSale;

        require(((_softCap <= INITIAL_SUPPLY) && (_hardCap <= INITIAL_SUPPLY)), "invalid hardcap");

        softCap = _softCap;
        hardCap = _hardCap;

        timelock = _endSale;
    }

    function burn(uint256 _amount) external onlyRole(BURNER_ROLE) {
        _burn(_msgSender(), _amount);
    }

    function claim() external {
        if (hasRole(SALE_ROLE, _msgSender())) {
            _transfer(address(this), _msgSender(), SALE_SUPPLY);
        }

        if (hasRole(COMPANY_ROLE, _msgSender())) {
            _transfer(address(this), _msgSender(), COMPANY_SUPPLY);
        }

        if (hasRole(BONUS_ROLE, _msgSender())) {
            _transfer(address(this), _msgSender(), BONUS_SUPPLY);
        }

        if (hasRole(MEMBERS_ROLE, _msgSender())) {
            _claimFromVesting();
        }
    }

    function _claimFromVesting() internal {
        //checking cliff, monthes
        if ((counter < MEMBERS_VESTING_PERIOD) && (timelock <= block.timestamp)) {
            uint256 monthsFromStart = (block.timestamp - timelock) / 30 days; //months from start

            monthsFromStart = (monthsFromStart > MEMBERS_VESTING_PERIOD) ? MEMBERS_VESTING_PERIOD : monthsFromStart;

            uint256 unlockAmount =
                (monthsFromStart < MEMBERS_VESTING_PERIOD) || counter != 0
                    ? (MEMBERS_SUPPLY / MEMBERS_VESTING_PERIOD) * (monthsFromStart - counter)
                    : MEMBERS_SUPPLY; //current unlock amounts

            counter = monthsFromStart;

            if (unlockAmount > 0) {
                _transfer(address(this), _msgSender(), unlockAmount);
            }
        }
    }

    /**
        update metadata
    **/

    function updateStartSale(uint256 _startSale) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_startSale < endSale, "startdate is greater than enddate");
        startSale = _startSale;
    }

    function updateEndSale(uint256 _endSale) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(timelock >= block.timestamp, "vesting started");
        endSale = _endSale;
        timelock = _endSale;
    }

    function updateSoftcap(uint256 _softCap) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_softCap <= INITIAL_SUPPLY, "invalid softcap");
        softCap = _softCap;
    }

    function updateHardcap(uint256 _hardCap) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_hardCap <= INITIAL_SUPPLY, "invalid hardcap");
        hardCap = _hardCap;
    }

    function updateSaleWallet(address _wallet) external onlyRole(DEFAULT_ADMIN_ROLE) {
        revokeRole(SALE_ROLE, sale);
        revokeRole(BURNER_ROLE, sale);

        sale = _wallet;

        grantRole(SALE_ROLE, _wallet);
        grantRole(BURNER_ROLE, _wallet);
    }

    function updateCompanyWallet(address _wallet) external onlyRole(DEFAULT_ADMIN_ROLE) {
        revokeRole(COMPANY_ROLE, company);

        company = _wallet;

        grantRole(COMPANY_ROLE, _wallet);
    }

    function updateMembersWallet(address _wallet) external onlyRole(DEFAULT_ADMIN_ROLE) {
        revokeRole(MEMBERS_ROLE, members);

        members = _wallet;

        grantRole(MEMBERS_ROLE, _wallet);
    }

    function updateBonusWallet(address _wallet) external onlyRole(DEFAULT_ADMIN_ROLE) {
        revokeRole(BONUS_ROLE, bonus);

        bonus = _wallet;

        grantRole(BONUS_ROLE, _wallet);
    }

    function getChainId() external view returns (uint256) {
        return block.chainid;
    }
}