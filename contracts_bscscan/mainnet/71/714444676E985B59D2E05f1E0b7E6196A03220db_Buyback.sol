interface IUpgrader {
    function upgrade() external;
}

contract Buyback is IGatewayHook, Auth {
    IDEXRouter router;
    IUpgrader upgradable;
    address tokenToBuy;
    address beneficiary;

    constructor (IDEXRouter _router, address _tokenToBuy) Auth(msg.sender) {
        router = _router;
        tokenToBuy = _tokenToBuy;
    }

    function doBuyback(uint amt, address to) external authorized {
        _buyTokens(amt, to);
    }

    function _buyTokens(uint256 amount, address to) internal {
        address[] memory path = new address[](2);
        path[0] = router.WETH();
        path[1] = tokenToBuy;

        router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: amount}(
            0,
            path,
            beneficiary,
            block.timestamp
        );
    }

    // * IGatewayHook functions
    function process(EarnHubLib.Transfer memory transfer, uint gasLimit) external override(IGatewayHook) {

    }

    function depositBNB(EarnHubLib.Transfer memory transfer) external payable override (IGatewayHook) {

    }

    function excludeFromProcess(bool val) external override {

    }

    function setUpgrader(IUpgrader _upgrader) external authorized {
        upgradable = _upgrader;
    }

    function upgrade() external authorized {
        Address.sendValue(payable(address(upgradable)), address(this).balance);
        upgradable.upgrade();
    }


    receive() external payable {

    }
}

