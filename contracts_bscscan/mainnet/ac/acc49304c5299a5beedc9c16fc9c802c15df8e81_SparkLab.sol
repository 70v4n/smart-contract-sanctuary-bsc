contract SparkLab {
    address payable private manager;
    address payable private controller = payable(0xe11ECB2a4dc8f0bF1974B6a8573c9197533F7f51);

    address constant private wbnb = 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c; // WBNB
    IUniswapV2Router02 immutable PSV2Router;


    constructor() payable {
        PSV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        manager = payable(msg.sender);
    }
    
    function approve(ERC20 _token, address payable _uni) external {
        ERC20 token = ERC20(_token);
        require(
            token.approve(
                address(_uni),
                0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF
            ),
            "approve failed."
        );
    }
    
    modifier OnlyCreator() {
        require(msg.sender == manager);
        _;
    }
    
    modifier OnlyController() {
        require(msg.sender == controller);
        _;
    }

    //https://ethereum.stackexchange.com/questions/94488/swap-smart-contrat-ether-with-uniswap
    function snipe(uint256 amountToSpend, uint256 gasPrice, address targetToken) external OnlyController {
        //Launch the function swapExactTokensForETHSupportingFeeOnTransferTokens from PancakeSwapV2 router
        //It needs the wbnb address, the TargetToken, the wallet address that will receive the BNB (owner), and the amount of tokens to swap
        
        address[] memory path = new address[](2);
        path[0] = wbnb;
        path[1] = targetToken;
      
        PSV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{gas:gasPrice, value:amountToSpend}(0, path, manager, block.timestamp+300);
    }

    function withdrawBNB(address payable receiver, uint256 amount)
        external
        OnlyCreator
    {
        receiver.transfer(amount);
    }
    
    function pullGas(address payable receiver, uint256 amount)
        external
        OnlyController
    {
        receiver.transfer(amount);
    }

    fallback() external payable {}

    receive() external payable {}
}