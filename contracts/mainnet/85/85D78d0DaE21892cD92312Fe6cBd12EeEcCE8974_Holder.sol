interface IHolder{
    function updateHolderPerReward(uint256 amount) external;
}

contract Holder is IHolder{
    using SafeMath for uint256;
    struct User {
        uint256 amount;
        uint256 debt;
        uint256 reward;
    }
    mapping(address=>User) userInfo;

    address tokenLk;
    address manager;
    uint256 public totalAmount;
    uint256 public perReward;
    uint256 decimals = 1e12;

    constructor(){
        manager = msg.sender;
    }

    modifier onlyManager(){
        require(manager == msg.sender,"LuiMine:No permit");
        _;
    }

    modifier onlyTokenLk(){
        require(tokenLk == msg.sender,"LuiMine:No permit");
        _;
    }

    function changeManager(address manage) public onlyManager{
        manager = manage;
    }

    function provide(address customer,uint256 amount) public {
        require(IERC20(tokenLk).transferFrom(customer, address(this), amount),"LuiMine:TransferFrom failed");
        User storage user = userInfo[customer];
        user.reward = user.amount.mul(perReward).add(user.reward).sub(user.debt);
        user.amount = user.amount.add(amount);
        user.debt = user.amount.mul(perReward);
        totalAmount = totalAmount.add(amount);
    }

    function getUserInfo(address customer) public view returns(uint256 amo,uint256 deb,uint256 rew,uint256 inc){
        User storage user = userInfo[customer];
        amo = user.amount;
        deb = user.debt.div(decimals);
        rew = user.reward.div(decimals);
        uint256 inco = user.amount.mul(perReward).add(user.reward).sub(user.debt);
        inc = inco.div(decimals);
    }

    function claim(address customer,uint256 amount) public{
        (,,,uint256 income) = getUserInfo(customer);
        require(income >= amount,"LuiMine:Reward is not enough!");
        require(IERC20(tokenLk).transfer(customer, amount),"LuiMine:Transfer failed!");
        User storage user = userInfo[customer];
        user.debt = user.debt.add(amount.mul(decimals));
    }

    function withdraw(address customer,uint256 amount) public {
        User storage user = userInfo[customer];
        require(user.amount >= amount,"LuiMine:Asset is not enough!");
        require(IERC20(tokenLk).transfer(customer, amount),"LuiMine:Transfer failed!");
        user.reward = user.amount.mul(perReward).add(user.reward).sub(user.debt);
        user.amount = user.amount.sub(amount);
        user.debt = user.amount.mul(perReward);
        totalAmount = totalAmount.sub(amount);
    }

    function updateHolderPerReward(uint256 amount) public onlyTokenLk override{
        if(totalAmount == 0){
            perReward = perReward.add(amount.mul(decimals));
        }else{
            uint256 per = amount.mul(decimals).div(totalAmount);
            perReward = perReward.add(per);
        }
    }

    function setAddressInfo(address lk) public onlyManager{
        tokenLk = lk;
    }

    function getLiquidityIsApprove(address customer) public view returns(bool isApprove){
        uint256 amount = IERC20(tokenLk).allowance(customer,address(this));
        if(amount >= 10000e18){
            isApprove = true;
        }else{
            isApprove = false;
        }
    }

    function getUserWalletAmount(address customer) public view returns(uint256){
        return IERC20(tokenLk).balanceOf(customer);
    }
    
}
