pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "./HordeNodeManager.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Factory.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";
import "./IHordeLiquidityManager.sol";
import "./IBEP20.sol";

contract Horde is ERC20Upgradeable, OwnableUpgradeable {
    using SafeMath for uint256;

    IUniswapV2Router02 public uniswapV2Router;

    address public nodeManagerAddr;
    address public uniswapV2Pair;
    address private swapTokenAddress;

    IBEP20 tokenForSwapPair;
    IHordeLiquidityManager liquidityManager;

    address public treasuryPool;
    address public rewardPool;
    address public hordePool;

    uint256 public nodeCreationFeeTreasuryShare;
    uint256 public nodeCreationFeeRewardsPoolShare;
    uint256 public nodeCreationFeeLiquidityPoolShare;
    uint256 public nodeCreationFeeHordePoolShare;
    uint256 public feeOnNodeCashout;

    uint256 public antiWhaleAmount;
    bool public tradingEnabled; // This variable can only be changed once to activate the trading. See the setEnableTrading method.
    bool public swappingOnlyFromContract;
    mapping(address => bool) private _blackListedAddresses;
    mapping(address => bool) private _AddressesClearedForSwap;

    bool public swapping;
    uint256 public distributionThreshold;

    mapping(address => bool) public automatedMarketMakerPairs;

    event UpdateUniswapV2Router(
        address indexed newAddress,
        address indexed oldAddress
    );
    event SetAutomatedMarketMakerPair(address indexed pair, bool indexed value);

    event SwapAndLiquify(
        uint256 tokensSwapped,
        uint256 ethReceived,
        uint256 tokensIntoLiqudity
    );

    modifier onlyNodeManager() {
        address sender = _msgSender();
        require(
            sender == nodeManagerAddr,
            "Only the Node Manager can perform this action"
        );
        _;
    }

    function setSwappingOnlyFromContract(bool value) external onlyOwner {
        swappingOnlyFromContract = value;
    }

    function allowSwap(address addr) internal {
        _AddressesClearedForSwap[addr] = true;
    }

    function disallowSwap(address addr) internal {
        _AddressesClearedForSwap[addr] = false;
    }

    function blackListAddr(address walletAddr) external onlyOwner {
        _blackListedAddresses[walletAddr] = true;
    }

    function removeFromBlackList(address walletAddr) external onlyOwner {
        _blackListedAddresses[walletAddr] = false;
    }

    function isBlackListed(address walletAddr) external view returns (bool) {
        return _blackListedAddresses[walletAddr];
    }

    function setNodeManagerAddr(address _nodeManagerAddr) external onlyOwner {
        nodeManagerAddr = _nodeManagerAddr;
    }

    function setSwapPairToken(address _tokenToPayWithAddr) public onlyOwner {
        swapTokenAddress = _tokenToPayWithAddr;
        tokenForSwapPair = IBEP20(_tokenToPayWithAddr);
    }

    function setLiquidityManager(address _liquidityManager) public onlyOwner {
        liquidityManager = IHordeLiquidityManager(_liquidityManager);
    }

    function initialize(
        address[] memory pools,
        uint256[] memory balances,
        uint256 swapAmount,
        address uniV2Router,
        address _tokenForSwapPair
    ) public initializer {
        __ERC20_init("Horde", "HORDE");
        __Ownable_init();

        setSwapPairToken(_tokenForSwapPair);

        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(uniV2Router);
        address _uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
            .createPair(address(this), _tokenForSwapPair);
        uniswapV2Router = _uniswapV2Router;
        uniswapV2Pair = _uniswapV2Pair;
        _setAutomatedMarketMakerPair(_uniswapV2Pair, true);

        setLiquidityManager(pools[1]);
        rewardPool = pools[2];
        treasuryPool = pools[3];
        hordePool = pools[4];

        allowSwap(address(liquidityManager));

        tradingEnabled = true;

        for (uint256 i = 0; i < pools.length; i++) {
            _mint(pools[i], balances[i] * 10**18);
        }
        require(
            totalSupply() == 1111111e18,
            "TotalSupply must equal 1.111.111 "
        );
        tradingEnabled = false; // This variable can only be changed once to activate the trading. See the setEnableTrading method.
        distributionThreshold = swapAmount * (10**18);

        nodeCreationFeeTreasuryShare = 20;
        nodeCreationFeeRewardsPoolShare = 60;
        nodeCreationFeeLiquidityPoolShare = 0;
        nodeCreationFeeHordePoolShare = 20;
        feeOnNodeCashout = 0;

        antiWhaleAmount = 300 * 10**18;
        swappingOnlyFromContract = true;
        swapping = false;
    }

    function updateUniswapV2Router(address newAddress) public onlyOwner {
        require(
            newAddress != address(uniswapV2Router),
            "The router already has that address"
        );
        emit UpdateUniswapV2Router(newAddress, address(uniswapV2Router));
        uniswapV2Router = IUniswapV2Router02(newAddress);
        address _uniswapV2Pair = IUniswapV2Factory(uniswapV2Router.factory())
            .createPair(address(this), uniswapV2Router.WETH());
        uniswapV2Pair = _uniswapV2Pair;
    }

    function _beforeTokenTransfer(
        address from,
        address recipient,
        uint256 amount
    ) internal view override {
        require(
            !_blackListedAddresses[from] && !_blackListedAddresses[recipient],
            "Wallet is blacklisted"
        );

        if (swappingOnlyFromContract) {
            if (automatedMarketMakerPairs[from]) {
                require(
                    _AddressesClearedForSwap[recipient],
                    "You are not allowed to SWAP directly on Pancake"
                );
            }
        }

        if (!tradingEnabled && automatedMarketMakerPairs[from]) {
            //While tradingEnabled = false, it is only possible to transfer tokens to LP not from LP.
            //Transfers between regular wallets are not affected.
            require(tradingEnabled, "Warning: Trading has not yet started");
        }

        require(
            amount <= antiWhaleAmount ||
                !automatedMarketMakerPairs[from] ||
                recipient == address(liquidityManager),
            "You are not permitted to swap buy more than #antiWhale tokens"
        );
    }

    function setdistributionThreshold(uint256 newVal) external onlyOwner {
        distributionThreshold = newVal * 10**18;
    }

    function setTreasuryPoolAddr(address addr) external onlyOwner {
        treasuryPool = addr;
    }

    function setRewardPoolAddr(address addr) external onlyOwner {
        rewardPool = addr;
    }

    function setHordePoolAddr(address addr) external onlyOwner {
        hordePool = addr;
    }

    function setFees(
        uint256 rewardFee,
        uint256 treasuryFee,
        uint256 hordePoolFee,
        uint256 liquidityFee,
        uint256 cashoutFee
    ) external onlyOwner {
        nodeCreationFeeRewardsPoolShare = rewardFee;
        nodeCreationFeeTreasuryShare = treasuryFee;
        nodeCreationFeeHordePoolShare = hordePoolFee;
        nodeCreationFeeLiquidityPoolShare = liquidityFee;
        feeOnNodeCashout = cashoutFee;
    }

    function setEnableTrading() external onlyOwner {
        tradingEnabled = true;
    }

    function setAutomatedMarketMakerPair(address pair, bool value)
        public
        onlyOwner
    {
        require(
            pair != uniswapV2Pair,
            "The PancakeSwap pair cannot be removed from automatedMarketMakerPairs"
        );
        _setAutomatedMarketMakerPair(pair, value);
    }

    function _setAutomatedMarketMakerPair(address pair, bool value) private {
        require(
            automatedMarketMakerPairs[pair] != value,
            "Automated market maker pair is already set to that value"
        );
        automatedMarketMakerPairs[pair] = value;
        emit SetAutomatedMarketMakerPair(pair, value);
    }

    function _swapAndLiquify(uint256 tokens) private {
        if (tokens == 0) return;
        uint256 half = tokens.div(2);
        uint256 otherHalf = tokens.sub(half);
        uint256 tmpBalance = tokenForSwapPair.balanceOf(address(this));
        _swapTokensForBUSD(address(this), half);
        uint256 balanceToTransfer = tokenForSwapPair
            .balanceOf(address(this))
            .sub(tmpBalance);
        _addLiquidity(otherHalf, balanceToTransfer);
        emit SwapAndLiquify(half, balanceToTransfer, otherHalf);
    }

    function swapBusdForHorde(uint256 amountIn, uint256 amountOutMin) external {
        allowSwap(_msgSender());

        liquidityManager.swapBusdForHorde(_msgSender(), amountIn, amountOutMin);

        disallowSwap(_msgSender());
    }

    function swapHordeForBusd(uint256 amountIn, uint256 amountOutMin) external {
        allowSwap(_msgSender());

        liquidityManager.swapHordeForBusd(_msgSender(), amountIn, amountOutMin);

        disallowSwap(_msgSender());
    }

    function _swapTokensForBUSD(address destination, uint256 tokenAmount)
        private
    {
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = swapTokenAddress;
        _approve(address(this), address(uniswapV2Router), tokenAmount);

        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of BUSD
            path,
            destination,
            block.timestamp
        );
    }

    function _addLiquidity(uint256 tokenAmount, uint256 busdAmount) private {
        // approve token transfer to cover all possible scenarios
        _approve(address(this), address(uniswapV2Router), tokenAmount);
        IERC20(swapTokenAddress).approve(address(uniswapV2Router), busdAmount);
        // add the liquidity
        uniswapV2Router.addLiquidity(
            address(this),
            swapTokenAddress,
            tokenAmount,
            busdAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            address(0),
            block.timestamp
        );
    }

    function addLiquidity(uint256 tokenAmount, uint256 busdAmount)
        public
        onlyOwner
    {
        _addLiquidity(tokenAmount, busdAmount);
    }

    function payForNode(address recipient, uint256 nodePrice)
        external
        onlyNodeManager
    {
        require(
            recipient != treasuryPool && recipient != rewardPool,
            "Treasury and Reward Pool cannot create nodes"
        );

        super._transfer(recipient, address(this), nodePrice);
    }

    function distributeNodeCreationFees(uint256 amount) public onlyOwner {
        uint256 contractTokenBalance = balanceOf(address(this));
        uint256 inputAmount = amount * 10**18;
        uint256 amountToBeDistributed;

        if (inputAmount <= contractTokenBalance) {
            //Distribute what is asked for
            amountToBeDistributed = inputAmount;
        } else {
            //Distribute all there is
            amountToBeDistributed = contractTokenBalance;
        }

        if (amountToBeDistributed >= distributionThreshold && !swapping) {
            // Mutex var
            swapping = true;

            // Treasury pool only receive BUSD
            uint256 treasuryTokens = amountToBeDistributed
                .mul(nodeCreationFeeTreasuryShare)
                .div(100);
            _swapTokensForBUSD(treasuryPool, treasuryTokens);

            // Reward pool only receive Horde tokens
            uint256 rewardsPoolTokens = amountToBeDistributed
                .mul(nodeCreationFeeRewardsPoolShare)
                .div(100);

            super._transfer(address(this), rewardPool, rewardsPoolTokens);

            // Liquidity pool gets half Horde token and half BUSD
            uint256 swapTokens = amountToBeDistributed
                .mul(nodeCreationFeeLiquidityPoolShare)
                .div(100);
            _swapAndLiquify(swapTokens);

            // Horde pool only receive BUSD
            uint256 hordePoolTokens = amountToBeDistributed
                .mul(nodeCreationFeeHordePoolShare)
                .div(100);
            _swapTokensForBUSD(hordePool, hordePoolTokens);

            swapping = false;
        }
    }

    function _feeOnCashout(uint256 rewardAmount) private {
        uint256 feeAmount;
        if (feeOnNodeCashout > 0) {
            feeAmount = rewardAmount.mul(feeOnNodeCashout).div(100);
            _swapTokensForBUSD(treasuryPool, feeAmount);
        }
        rewardAmount -= feeAmount;
    }

    function cashoutRewardToNoder(address sender, uint256 rewardAmount)
        external
        onlyNodeManager
    {
        require(
            sender != treasuryPool && sender != rewardPool,
            "Treasury and Reward Pool cannot cashout rewards"
        );

        _feeOnCashout(rewardAmount);
        super._transfer(rewardPool, sender, rewardAmount);
    }

    function setAntiWhale(uint256 amount) public onlyOwner {
        antiWhaleAmount = amount * 10**18;
    }
}

