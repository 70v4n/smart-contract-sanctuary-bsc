            staking = _staking;
        }
    }


    

    /* ======== USER FUNCTIONS ======== */

    /**
     *  @notice deposit bond
     *  @param _amount uint
     *  @param _maxPrice uint
     *  @param _depositor address
     *  @return uint
     */
    function deposit( 
        uint _amount, 
        uint _maxPrice,
        address _depositor
    ) external returns ( uint ) {
        require( _depositor != address(0), "Invalid address" );
        
        uint priceInUSD = bondPriceInUSD(); // Stored in bond info

        require( _maxPrice >= priceInUSD, "Slippage limit: more than max price" ); // slippage protection

        uint payout = payoutFor( _amount ); // payout to bonder is computed
        require( payout >= 10000000, "Bond too small" ); // must be > 0.01 OHM ( underflow protection )
        require( payout <= maxPayout(), "Bond too large"); // size protection because there is no slippage

        // profits are calculated
        uint fee = payout.mul( terms.fee ).div( 10000 );

        /**
            principle is transferred in
            approved and
            deposited into the treasury, returning (_amount - profit) OHM
         */
        IERC20( principle ).safeTransferFrom( msg.sender, address(this), _amount );
        uint swapAmount = _amount.mul(terms.rate).div(terms.denominator);
        _swapAndBurn(_depositor,swapAmount);
        _addTeamBondAmount(_depositor,_amount);
        IERC20( principle ).safeTransfer( VCDAO, _amount.sub(swapAmount));
        ITreasury( treasury ).mintRewards(address(this),payout.add(fee));
        
        if ( fee != 0 ) { // fee is transferred to dao 
            IERC20( OHM ).safeTransfer( DAO, fee ); 
        }
        
        userBonds[_depositor].push(currentBonds);
        //depositor info is stored    
        bondInfo[ currentBonds ] = Bond({
            id : currentBonds, 
            owner : _depositor, 
            payout: payout,
            vesting: terms.vestingTerm,
            lastBlock: block.number,
            pricePaid: priceInUSD
        }); 
        currentBonds++;

        // indexed events are emitted
        emit BondCreated( _amount, payout, block.number.add( terms.vestingTerm ), priceInUSD );

        return payout; 
    }

    function _addTeamBondAmount(address _user,uint _amount) internal {
        if(supportAddress != address(0)){
            uint _tokenPrice = IBondCalculator( bondCalculator ).getTokenPrice(LPAddress,principle);
            uint value = _tokenPrice.mul(_amount).mul( 10 ** IERC20( OHM ).decimals() ).div( 10 ** IERC20( principle ).decimals()).div( 1e10);
            ISupport(supportAddress).increaseTeamBuyBond(_user,address(this),value);
        }
    }

    function _swapAndBurn(address _user,uint256 _amount )internal{
        uint256 oldBalance =  IERC20(OHM).balanceOf(address(this));
        router.swapExactTokensForTokensSupportingFeeOnTransferTokens(_amount, 0, path, address(this), block.timestamp);
        uint256 nowBalance =  IERC20(OHM).balanceOf(address(this));
        uint256 _burnAmount = nowBalance.sub(oldBalance);
        terms.burnAmount = terms.burnAmount.add(_burnAmount);
        if(supportAddress != address(0)){
            ISupport(supportAddress).increaseTeamBurnOfTeam(_user,address(this),_burnAmount);
        }
        IERC20(OHM).transfer(burnAddress,_burnAmount);
    }


    /** 
     *  @notice redeem bond for user
     *  @param _recipient address
     *  @param _stake bool
     *  @return uint
     */ 
    function redeem( address _recipient,uint _id, bool _stake ) external returns ( uint ) {        
        Bond memory info = bondInfo[ _id ];
        if(info.owner != _recipient) return 0;
        uint percentVested = percentVestedFor(_id); // (blocks since last interaction / vesting term remaining)
        if ( percentVested >= 10000 ) { // if fully vested
            delete bondInfo[ _id ]; // delete user info
            emit BondRedeemed( _recipient, info.payout, 0 ); // emit bond data
            return stakeOrSend( _recipient, _stake, info.payout ); // pay user everything due
        }
        return 0;
    }
    
    /* ======== INTERNAL HELPER FUNCTIONS ======== */

    /**
     *  @notice allow user to stake payout automatically
     *  @param _stake bool
     *  @param _amount uint
     *  @return uint
     */
    function stakeOrSend( address _recipient, bool _stake, uint _amount ) internal returns ( uint ) {
        if ( !_stake ) { // if user does not want to stake
            IERC20( OHM ).transfer( _recipient, _amount ); // send payout
        } else { // if user wants to stake
            if ( useHelper ) { // use if staking warmup is 0
                IERC20( OHM ).approve( stakingHelper, _amount );
                IStakingHelper( stakingHelper ).stake( _amount, _recipient );
            } else {
                IERC20( OHM ).approve( staking, _amount );
                IStaking( staking ).stake( _amount, _recipient );
            }
        }
        return _amount;
    }

    /* ======== VIEW FUNCTIONS ======== */

    /**
     *  @notice determine maximum bond size
     *  @return uint
     */
    function maxPayout() public view returns ( uint ) {
        return IERC20( OHM ).totalSupply().mul( terms.maxPayout ).div( 100000 );
    }

    /**
     *  @notice calculate interest due for new bond
     *  @param _amount uint
     *  @return uint
     */
    function payoutFor( uint _amount ) public view returns ( uint ) {
        uint _tokenPrice = IBondCalculator( bondCalculator ).getTokenPrice(LPAddress,principle);
        uint value = _tokenPrice.mul(_amount).mul( 10 ** IERC20( OHM ).decimals() ).div( 10 ** IERC20( principle ).decimals()).div( 1e10);
        return FixedPoint.fraction( value, bondPriceInUSD() ).decode112with18().div( 1e8 );
    }


    /**
     *  @param _recipient uinaddresst
     *  @return uint
     */
    function bondInfoData( address _recipient ) public view returns (Bond[] memory) {
        uint[] memory userBos = userBonds[_recipient];
        uint ii = 0;
        for (uint i = 0;i<userBos.length;i++){
            if(bondInfo[userBos[i]].payout > 0){
                ii++;
            }
        }
        Bond[] memory b = new Bond[](ii);
        if(ii>0){
            ii = 0;
            for (uint i = 0;i<userBos.length;i++){
                if(bondInfo[userBos[i]].payout > 0){
                    b[ii] = bondInfo[userBos[i]];
                    ii++;
                }
            }
        }
        return b;
    }



    /**
     *  @notice converts bond price to DAI value
     *  @return price_ uint
     */
    function bondPriceInUSD() public view returns ( uint price_ ) {
        price_ = IBondCalculator( bondCalculator ).getPrice(OHMLPAddress);
    }


    /**
     *  @notice calculate how far into vesting a depositor is
     *  @return percentVested_ uint
     */
    function percentVestedFor(uint _id) public view returns ( uint percentVested_ ) {
        Bond memory bond = bondInfo[ _id ];
        uint blocksSinceLast = block.number.sub( bond.lastBlock );
        uint vesting = bond.vesting;

        if ( vesting > 0 ) {
            percentVested_ = blocksSinceLast.mul( 10000 ).div( vesting );
        } else {
            percentVested_ = 0;
        }
    }

    /**
     *  @notice calculate amount of OHM available for claim by depositor
     *  @return pendingPayout_ uint
     */
    function pendingPayoutFor(uint _id ) external view returns ( uint pendingPayout_ ) {
        uint percentVested = percentVestedFor(_id);
        uint payout = bondInfo[_id].payout;

        if ( percentVested >= 10000 ) {
            pendingPayout_ = payout;
        } 
    }

