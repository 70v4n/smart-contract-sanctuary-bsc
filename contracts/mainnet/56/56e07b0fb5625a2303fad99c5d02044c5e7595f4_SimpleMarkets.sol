interface WETH is IERC20 {
    function deposit() external payable;
    function withdraw(uint wad) external;
    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) external override returns (bool);
}

contract SimpleMarkets is OwnableWithoutConstructor, Initializable {
    // using SafeMath for uint256;

    /**
     * Event emitted when a trade is executed.
     */
    event Trade(
        bytes32 indexed hash,
        address indexed maker,
        address taker,
        address indexed nft,
        uint256 makerWei,
        uint256[] makerIds,
        uint256 takerWei,
        uint256[] takerIds,
        uint256 commissionRate,
        address seller
    );

    /**
     * Event emitted when a trade offer is cancelled.
     */
    event OfferCancelled(bytes32 hash);

    struct Offer {
        address maker;
        address taker;
        address nft;
        uint256 makerWei;
        uint256[] makerIds;
        uint256 takerWei;
        uint256[] takerIds;
        uint256 expiry;
        uint256 commissionRate;
        uint256 salt;
    }

    address public _receptor;

    WETH public _WETH;
    
    mapping(bytes32 => bool) public cancelledOffers;

    uint256 public marketFee;

    bool private _lock;
    
    bool private _paused;

    address public _innerWallet;

    modifier nonReentrant() {
        require(!_lock, "lock");
        _lock = true;
        _;
        _lock = false;
    }

    modifier whenNotPaused(){
        require(!_paused,'paused');
        _;
    }

    function initialize(
        address weth_,
        address dev_,
        address innerWallet_
    ) public initializer {
        _receptor = dev_;
        _WETH = WETH(weth_);
        marketFee = 20;
        _setOwner(_msgSender());
        _innerWallet = innerWallet_;
    }

    function hashOffer(Offer memory offer) private pure returns (bytes32) {
        return keccak256( abi.encode( offer.maker, offer.taker, offer.nft, offer.makerWei, keccak256(abi.encodePacked(offer.makerIds)), offer.takerWei, keccak256(abi.encodePacked(offer.takerIds)), offer.expiry, offer.salt ) );
    }

    function hashToSign( Offer memory offer) public pure returns (bytes32) {
        // Offer memory offer = Offer( maker, taker, nft, makerWei, makerIds, takerWei, takerIds, expiry,commissionRate, salt );
        return hashOffer(offer);
    }

    function hashToVerify(Offer memory offer) private pure returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(
                    "\x19Ethereum Signed Message:\n32",
                    hashOffer(offer)
                )
            );
    }

    function verify(
        address signer,
        bytes32 hash,
        bytes memory signature
    ) internal pure returns (bool) {
        require(signer != address(0));
        require(signature.length == 65);

        bytes32 r;
        bytes32 s;
        uint8 v;

        assembly {
            r := mload(add(signature, 32))
            s := mload(add(signature, 64))
            v := byte(0, mload(add(signature, 96)))
        }

        if (v < 27) {
            v += 27;
        }

        require(v == 27 || v == 28);

        return signer == ecrecover(hash, v, r, s);
    }

    function tradeValid( Offer memory offer, bytes memory signature ) public view returns (bool) {
        require(IERC165(offer.nft).supportsInterface(type(IERC721).interfaceId),"Unsupported NFT");
        // Offer memory offer = Offer( maker, taker, nft, makerWei, makerIds, takerWei, takerIds, expiry, commissionRate, salt );
        // Check for cancellation
        bytes32 hash = hashOffer(offer);
        require(cancelledOffers[hash] == false, "Trade offer was cancelled.");
        require(offer.commissionRate < 1000,'commission rate must lte 1000');
        // Verify signature
        bytes32 verifyHash = hashToVerify(offer);
        require(
            verify(offer.maker, verifyHash, signature),
            "Signature not valid."
        );
        // Check for expiry
        require(block.timestamp < offer.expiry, "Trade offer expired.");
        // Only one side should ever have to pay, not both
        require(
            offer.makerWei == 0 || offer.takerWei == 0,
            "Only one side of trade must pay."
        );
        // At least one side should offer tokens
        require(
            offer.makerIds.length > 0 || offer.takerIds.length > 0,
            "One side must offer tokens."
        );
        // Make sure the maker has funded the trade
        require(
            _WETH.balanceOf(offer.maker) >= offer.makerWei,
            "Maker does not have sufficient balance."
        );
        // Ensure the maker owns the maker tokens
        for (uint256 i = 0; i < offer.makerIds.length; i++) {
            require(
                IERC721(offer.nft).ownerOf(offer.makerIds[i]) == offer.maker,
                "At least one maker token doesn't belong to maker."
            );
        }
        // If the taker can be anybody, then there can be no taker tokens
        if (offer.taker == address(0)) {
            // If taker not specified, then can't specify IDs
            require(
                offer.takerIds.length == 0,
                "If trade is offered to anybody, cannot specify tokens from taker."
            );
        } else {
            // Ensure the taker owns the taker tokens
            for (uint256 i = 0; i < offer.takerIds.length; i++) {
                require(
                    IERC721(offer.nft).ownerOf(offer.takerIds[i]) == offer.taker,
                    "At least one taker token doesn't belong to taker."
                );
            }
        }
        return true;
    }

    function cancelOffer(Offer memory offer) external {
        require(offer.maker == msg.sender, "Only the maker can cancel this offer.");
        // Offer memory offer = Offer( maker, taker, nft, makerWei, makerIds, takerWei, takerIds, expiry, commissionRate, salt );
        bytes32 hash = hashOffer(offer);
        cancelledOffers[hash] = true;
        emit OfferCancelled(hash);
    }

    function gratuity( address from, address to, uint256 amount ,uint256 commissionRate,address seller) internal {
        if (amount == 0) {
            return;
        }
        _WETH.transferFrom(from,address(this),amount);

        if(commissionRate != 0 && seller != address(0)){
            uint fee_ = amount * commissionRate / 1000;
            amount = amount - fee_;
            uint devFee_ = fee_ * 200 / 1000;
            _WETH.transfer(_receptor,devFee_);    
            _WETH.transfer(_innerWallet,fee_ - devFee_);
        }

        uint256 fee = amount * marketFee / 1000;
        _WETH.transfer(to,amount - fee);
        uint devFee = fee * 200 / 1000;
        _WETH.transfer(_receptor,devFee);
        _WETH.transfer(_innerWallet,fee - devFee);
    }


    function acceptTradeByETH( Offer memory offer,address seller ,bytes memory signature ) external payable whenNotPaused {
        _WETH.deposit{value:msg.value}();
        _WETH.transfer(msg.sender,msg.value);
        // Offer memory offer = Offer( maker, taker, nft, makerWei, makerIds, takerWei, takerIds, expiry, commissionRate,salt );
        acceptTrade( offer, seller, signature);
    }

    function acceptTrade(Offer memory offer,address seller, bytes memory signature ) public nonReentrant whenNotPaused {
        require(msg.sender != offer.maker, "Can't accept ones own trade.");
        // Offer memory offer = Offer( maker, taker, nft, makerWei, makerIds, takerWei, takerIds, expiry, commissionRate,salt );
        require(
            offer.taker == address(0) || offer.taker == msg.sender,
            "Not the recipient of this offer."
        );
        require( tradeValid( offer, signature ), "Trade not valid." );
        require(
            _WETH.balanceOf(msg.sender) >= offer.takerWei,
            "Insufficient funds to execute trade."
        );

        // Transfer ETH
        gratuity(offer.maker, msg.sender, offer.makerWei,offer.commissionRate,seller);
        gratuity(msg.sender, offer.maker, offer.takerWei,offer.commissionRate,seller);

        // Transfer maker ids to taker (msg.sender)
        for (uint256 i = 0; i < offer.makerIds.length; i++) {
            IERC721(offer.nft).safeTransferFrom(offer.maker, msg.sender, offer.makerIds[i]);
        }
        // Transfer taker ids to maker
        for (uint256 i = 0; i < offer.takerIds.length; i++) {
            IERC721(offer.nft).safeTransferFrom(msg.sender, offer.maker, offer.takerIds[i]);
        }
        // Prevent a replay attack on this offer
        bytes32 hash = hashOffer(offer);
        cancelledOffers[hash] = true;
        emit Trade(
            hash,
            offer.maker,
            msg.sender,
            offer.nft,
            offer.makerWei,
            offer.makerIds,
            offer.takerWei,
            offer.takerIds,
            offer.commissionRate,
            seller
        );
    }

    //update transaction fee
    function setMarketFee(uint256 marketFee_) public onlyOwner {
        marketFee = marketFee_;
    }

    //Close Unlock
    function pause() public onlyOwner {
        _paused = true;
    }

    //Open Unlock
    function unPause() public onlyOwner {
        _paused = false;
    }
    
    function setInnerWallet(address _innerWallet_) public onlyOwner {
        _innerWallet = _innerWallet_;
    }
}

