contract BuybackFaucet{
    mapping(address => uint256) private _cycle;
    address private constant PancakeRouter=0x10ED43C718714eb63d5aA57B78B54704E256024E;
    IPancakeRouter02 private  _pancakeRouter;
    address public owner;
    modifier onlyOwner() {
        require(msg.sender==owner, "caller not owner");
        _;
    }
    address rewardToken;
    constructor(address token){
        _pancakeRouter = IPancakeRouter02(PancakeRouter);
        owner=msg.sender;
        rewardToken=token;
    }
    IBEP20 public requiredToken;
    uint256 public minHoldAmount;
    uint256 public rewardWeiAmount;
    uint256 public rewardCycle;
    function SetNewReward(address requiredTokenAddress,uint256 minHold, uint256 rewardWei) public onlyOwner{
        requiredToken=IBEP20(requiredTokenAddress);
        minHoldAmount=minHold;
        rewardWeiAmount=rewardWei;
        rewardCycle++;
    }
    function IsEligibleForRewards(address addr) public view returns(bool){
        uint256 balance=requiredToken.balanceOf(addr);
        return(_cycle[addr]<rewardCycle)&&(balance>=minHoldAmount);
    }
    function Claim() public{
        require(IsEligibleForRewards(msg.sender),"sender not eligible for rewards");
        _cycle[msg.sender]=rewardCycle;
        uint256 amount=rewardWeiAmount;
        if(amount>address(this).balance)amount=address(this).balance;
        
        address[] memory path = new address[](2);
        path[0] = _pancakeRouter.WETH(); //BNB
        path[1] = rewardToken;  
        _pancakeRouter.swapExactETHForTokensSupportingFeeOnTransferTokens{value: amount}(
        0,
        path,
        msg.sender,
        block.timestamp);
    }
    receive() external payable {}
}