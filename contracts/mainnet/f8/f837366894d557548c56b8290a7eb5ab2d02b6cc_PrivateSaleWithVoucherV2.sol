pragma solidity 0.8.9;

/**
 * @title PrivateSaleWithVoucher
 */
contract PrivateSaleWithVoucherV2 is TokenVoucherFactory, AccessControl, Pausable, ReentrancyGuard {
    struct BuyerInfo {
        /// @notice The list of voucher id that the buyer used
        uint32[] voucherIds;
        /// @notice Total amount of token the user bought
        uint256 totalTokenAmount;
    }

	/**
	 * GUARD
	 */
	using SafeBEP20 for IBEP20;

	/**
	 * IMPORTED INTERFACES
	 */
	IBEP20 immutable public BUSDToken;

	/**
	 * SALE VARIABLES
	 */
	address[] private _buyers;
	mapping(address => BuyerInfo) private _buyerInfos;
	uint32[] private _vouchers;
	mapping(uint32 => VoucherRedeemInfo) private _voucherRedeemInfos;

	uint256 public maxBusdSale;
	uint256 public totalBusdSale;

	uint256 public nTokenPerSlot;
	uint256 public busdPerSlot;
	uint32 public nMaxSlotPerVoucher;
	uint32 public nMaxSlot;
	uint32 public nTotalSoldSlot;

	uint256 public tOpenSale;
	uint256 public tCloseSale;

	/**
	 * VOUCHER FACTORY
	 */
	/// @notice The signing domain for NVE token voucher
	string private constant SIGNING_DOMAIN = "NVE-PrivateSale-Voucher";
	/// @notice The signature version for NVE token voucher
	string private constant SIGNATURE_VERSION = "1";

	/**
	 * ACCESS CONTROL
	 */
	bytes32 public constant VOUCHER_ISSUER_ROLE = keccak256("VOUCHER_ISSUER_ROLE");
	bytes32 public constant NVE_ADMIN_ROLE = keccak256("NVE_ADMIN_ROLE");

	/**
	 * EVENT
	 */
	event BuyOption(address indexed redeemerAddress, uint256 indexed voucherId, uint256 nSlot);
	event CloseSale(uint256 timestamp);
	event UpdateConfig(address invoker);

	/**
	 * MODIFIERS
	 */

	modifier onlyAdmin() {
		require(hasRole(NVE_ADMIN_ROLE, msg.sender), "Admin only");
		_;
	}

	constructor() TokenVoucherFactory(SIGNING_DOMAIN, SIGNATURE_VERSION) {
		/**
		 * MAINNET 
		 */
		BUSDToken = IBEP20(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56);
		nTokenPerSlot = 16666666666666666666668; // 16,666 NVE
		busdPerSlot = 1_000 * (10**18); 		 // 1,000 BUSD (mainnet)  1000000000000000
		nMaxSlotPerVoucher = 10;
		nMaxSlot = 4050;
		maxBusdSale = busdPerSlot * nMaxSlot;
		tOpenSale = 1645401600;				 	// Mon Feb 21 2022 07:00:00 GMT+0700 (Indochina Time)
		tCloseSale = tOpenSale + (1 * 30 days);

		// Setup role for deployer
		_setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
		_setupRole(NVE_ADMIN_ROLE, msg.sender);
		_setupRole(VOUCHER_ISSUER_ROLE, msg.sender);
	}

	// Function to receive Ether. msg.data must be empty
	receive() external payable {}

	fallback() external payable {}

	/**
	 * SALE FUNCTIONS
	 */

	function redeem(TokenVoucher calldata voucher_, uint32 nSlot_) public whenNotPaused
	{
		require(block.timestamp >= tOpenSale, "privateSale: sale not begin");
		require(block.timestamp <= tCloseSale, "privateSale: sale has ended");
		require(nTotalSoldSlot + nSlot_ <= nMaxSlot, "privateSale: sold out");

		// check voucher
		require(nSlot_ > 0 && nSlot_ <= nMaxSlotPerVoucher, "privateSale: invalid numSlots");
		require(isNotVoidVoucher(voucher_.id), "privateSale: already redeemed");
		require(isValidVoucher(voucher_), "privateSale: unauthorized");

		uint256 currentBuyInBusd = nSlot_ * busdPerSlot;
		uint256 currentBuyInToken = nSlot_ * nTokenPerSlot;

		// transfer the busd
		require(
			BUSDToken.allowance(msg.sender, address(this)) >= currentBuyInBusd,
			"privateSale: not enough BUSD allowance"
		);
		BUSDToken.safeTransferFrom(msg.sender, address(this), currentBuyInBusd);

		// update sale info
		totalBusdSale += currentBuyInBusd;
		nTotalSoldSlot += nSlot_;

		// update buyer status
		_addBuyerInfo(msg.sender, voucher_.id, currentBuyInToken);

		// update voucher status
		_addVoucherRedeemInfo(voucher_.id, nSlot_);

		emit BuyOption(msg.sender, voucher_.id, nSlot_);
	}

	function _addBuyerInfo(address buyer, uint32 voucherId, uint256 buyAmount) private {
		BuyerInfo storage currentBuyerInfo = _buyerInfos[buyer];
		
		if (currentBuyerInfo.totalTokenAmount == 0) {
			_buyers.push(buyer);
		}
		
		currentBuyerInfo.totalTokenAmount += buyAmount;
		currentBuyerInfo.voucherIds.push(voucherId);
	}

	function _addVoucherRedeemInfo(uint32 voucherId, uint32 redeemedSlot) private {
		VoucherRedeemInfo storage currentVoucher = _voucherRedeemInfos[voucherId];

		currentVoucher.isRedeemed = true;
		currentVoucher.redeemedSlot = redeemedSlot;
		
		_vouchers.push(voucherId);
	}

	function isValidVoucher(TokenVoucher calldata voucher) public view returns (bool) {
		// make sure signature is valid and get the address of the signer
		address signer = _verify(voucher);
		// make sure that the signer is authorized to issue sale voucher
		return hasRole(VOUCHER_ISSUER_ROLE, signer);
	}

	function isNotVoidVoucher(uint32 voucherId) public view returns (bool) {
		VoucherRedeemInfo storage voucherRedeemInfo = _voucherRedeemInfos[voucherId];
		return voucherRedeemInfo.isRedeemed == false;
	}

	function getVoucherRedeemedSlot(uint32 voucherId) public view returns (uint32)
	{
		VoucherRedeemInfo storage voucherRedeemInfo = _voucherRedeemInfos[voucherId];
		return voucherRedeemInfo.redeemedSlot;
	}

	/**
	 * UPDATE SALE FUNCTIONS 
	 */
	function updateSaleConfig(
		uint256 maxBusdSale_,
		uint256 nTokenPerSlot_,
		uint256 busdPerSlot_,
		uint32 nMaxSlotPerVoucher_,
		uint32 nMaxSlot_,
		uint256 tOpenSale_,
		uint256 tCloseSale_
	) public onlyAdmin {
		if (maxBusdSale_ != 0) {
			maxBusdSale = maxBusdSale_;
		}

		if (nTokenPerSlot_ != 0) {
			nTokenPerSlot = nTokenPerSlot_;
		}

		if (busdPerSlot_ != 0) {
			busdPerSlot = busdPerSlot_;
		}

		if (nMaxSlotPerVoucher_ != 0) {
			nMaxSlotPerVoucher = nMaxSlotPerVoucher_;
		}

		if (nMaxSlot_ != 0) {
			nMaxSlot = nMaxSlot_;
		}

		if (tOpenSale_ != 0) {
			tOpenSale = tOpenSale_;
		}
		
		if (tCloseSale != 0) {
			tCloseSale = tCloseSale_;
		}

		emit UpdateConfig(msg.sender);
	}

	/**
	 * QUERY FUNCTIONS
	 */
	function getBuyers() public view returns (address[] memory) {
		return _buyers;
	}

	function getBuyerInfo(address buyer) public view returns (BuyerInfo memory) {
		return _buyerInfos[buyer];
	}

	function getUsedVouchers() public view returns (uint32[] memory) {
		return _vouchers;
	}

	function getVoucherInfo(uint32 voucherId) public view returns (VoucherRedeemInfo memory) {
		return _voucherRedeemInfos[voucherId];
	}

	/**
	 * ADMINISTRATIVE FUCNTIONS
	 */

	function closeSale() public onlyAdmin
	{
		require(block.timestamp < tCloseSale, "privateSale: Sale already closed");
		tCloseSale = block.timestamp;
		emit CloseSale(tCloseSale);
	}

	function getBalances() public view returns (uint256 BNBBalance, uint256 BUSDBalance)
	{
		BNBBalance = address(this).balance;
		BUSDBalance = BUSDToken.balanceOf(address(this));
	}

	function withdrawBNB(address _to) public onlyAdmin {
		// transfer the bnb
		payable(_to).transfer(address(this).balance);
	}

	function withdrawBUSD(address _to) public onlyAdmin {
		// transfer the busd
		BUSDToken.safeTransfer(_to, BUSDToken.balanceOf(address(this)));
	}

	function pause() public onlyAdmin whenNotPaused {
		_pause();
	}

	function unpause() public onlyAdmin whenPaused {
		_unpause();
	}
}