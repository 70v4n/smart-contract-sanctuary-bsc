    ) EIP712(signing_domain, signature_version) {}

    /// @notice Verifies the signature for a given TokenVoucher, returning the address of the signer.
    /// @dev Will revert if the signature is invalid. Does not verify that the signer is authorized to generate voucher.
    /// @param voucher An TokenVoucher describing a voucher to buy private sale.
    function _verify(TokenVoucher calldata voucher)
        internal
        view
        returns (address)
    {
        bytes32 digest = _hash(voucher);
        return ECDSA.recover(digest, voucher.signature);
    }

    /// @notice Returns a hash of the given TokenVoucher, prepared using EIP712 typed data hashing rules.
    /// @param voucher An TokenVoucher to hash.
    function _hash(TokenVoucher calldata voucher)
        internal
        view
        returns (bytes32)
    {
        return
            _hashTypedDataV4(
                keccak256(
                    abi.encode(
                        keccak256(
                            "TokenVoucher(uint32 id,bytes4 salt)"
                        ),
                        voucher.id,
                        voucher.salt
                    )
                )
            );
    }

