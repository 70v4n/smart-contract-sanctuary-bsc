contract Preseller is Context, Ownable {
    using SafeMath for uint256;
    using Address for address;

    uint8 public currentPresale = 1;
    mapping(address => bool) addressBought;

    uint256 public tokenPerBNB;
    uint256 public minBNB;
    uint256 public maxBNB;
    uint256 public BNB_DECIMAL = 10 ** 18;
    

    TokenInterface tokenInterface;

    bool public isFinalised;

    event Started(uint8 presaleID, uint256 time);
    event Finalised(uint8 presaleID, uint256 time);
    event TokenPurchase(address indexed buyer, address indexed beneficiary, uint256 coinReceived, uint256 tokenSent);

    constructor(address tokenAddress, uint256 _tokenPerBNB, uint256 _minBNB, uint256 _maxBNB) {
        tokenInterface = TokenInterface(tokenAddress);
        tokenPerBNB = _tokenPerBNB;
        minBNB = _minBNB;
        maxBNB = _maxBNB;
        emit Started(currentPresale, block.timestamp);
    }

    //to recieve BNB for presale
    receive() external payable {
        _buyToken(_msgSender());
    }

    function buyToken() external payable {
        _buyToken(_msgSender());
    }

    function _buyToken(address buyer) private {
        require(!isFinalised, "Presale has ended");
        uint256 bnb = uint256(msg.value);
        require(bnb >= minBNB, "Buy Order Is Too Low.");
        require(bnb <= maxBNB, "Buy Order Is Too High.");
        /**
        Debug only:
        require(bnb >= minBNB, append(append(append("Buy Order Is Too Low.", uintToString(bnb)), " : "), uintToString(minBNB)));
        require(bnb <= maxBNB, append(append(append("Buy Order Is Too High.", uintToString(bnb)), " : "), uintToString(maxBNB)));
         */

        uint256 tokens = (bnb * tokenPerBNB) / BNB_DECIMAL;
        tokenInterface.transferPresale(buyer, tokens);
        emit TokenPurchase(buyer, owner(), bnb, tokens);
        //log the address that bought to later determine the airdrop they get
        addressBought[buyer] = true;

        sendCoin(owner(), bnb);
    }

    function sendCoin(address recipient, uint256 amount) private {
        (bool success, ) = recipient.call{value: amount}(new bytes(0));
        require(success, 'Preseller::sendCoin');
    }
    
    function setTokenPerBNB(uint256 _tokenPerBNB) external onlyOwner {
        tokenPerBNB = _tokenPerBNB;
    }
    function setMinBNB(uint256 _minBNB) external onlyOwner {
        minBNB = _minBNB;
    }
    function setMaxBNB(uint256 _maxBNB) external onlyOwner {
        maxBNB = _maxBNB;
    }
    
    
    function withdrawToken(uint256 amount) public onlyOwner {
        uint256 balance = tokenInterface.balanceOf(address(this));
        if(amount == 0 || amount > balance) amount = balance;
        tokenInterface.transferPresale(_msgSender(), amount);
    }

    //allow owner to finalize the presale once the presale is ended
    function finalize() external onlyOwner {
        require(!isFinalised, "Presale already finalised");

        emit Finalised(currentPresale, block.timestamp);
        if(tokenInterface.balanceOf(address(this)) > 0) {
            withdrawToken(0);
        }
        isFinalised = true;
    }

    //allow owner to finalize the presale once the presale is ended
    function restart() external onlyOwner {
        require(isFinalised, "Presale already going on");
        emit Started(currentPresale + 1, block.timestamp);
        currentPresale++;
        isFinalised = false;
    }

