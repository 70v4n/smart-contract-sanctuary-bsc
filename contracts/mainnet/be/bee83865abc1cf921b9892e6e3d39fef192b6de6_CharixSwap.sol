contract CharixSwap is Ownable {
    using SafeMath for uint256;

    IBEP20 public charixToken;
    IPancakePair public charixBNBPair;

    event TokenPurchase(address buyer, uint256 amount);

    constructor()
        public
    {
        charixToken = IBEP20(0x4EaBb20064586DeA07AAaF84d4bA35037854bd44);
        charixBNBPair = IPancakePair(0x2044AC69287440715296DAA933f01bc10Df7FBE0);
    }

    function getCurrentTokenPerBNB() public returns (uint256){
        (uint112 reserve0, uint112 reserve1, uint32 blockTimestampLast) =  charixBNBPair.getReserves();
        uint256 price = reserve0 / reserve1;
        return price;
    }

    receive() external payable {
        swap();
    }

    function withdraw() public onlyOwner(){
        address payable pOwner = payable(owner());
        pOwner.transfer(address(this).balance);
        charixToken.transfer(pOwner, swapContractBalance());
    }

    function swap() public payable {
        require(msg.value > 0, "Amount BNB must be more then zero");
        uint256 swapAmount  = msg.value.mul(getCurrentTokenPerBNB());
        require(swapAmount <= swapContractBalance(), "There is not enough CHARIX in swap");
        charixToken.transfer(address(msg.sender), swapAmount);
        emit TokenPurchase(msg.sender, swapAmount);
    }

    function swapContractBalance() public view returns (uint256) {
        return charixToken.balanceOf(address(this));
    }
}