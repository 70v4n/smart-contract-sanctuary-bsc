import "@openzeppelin/contracts-upgradeable/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";

import "../prize-pool/beefy/IMooToken.sol";
import "../prize-pool/PrizePoolInterface.sol";

/// @title Manager of user's funds entering MooPot
/// @notice Manages divying up assets into prize pool and yield farming
contract GateManager {
    using SafeMathUpgradeable for uint256;

    event GateManagerDeposit(address indexed user, uint256 value);

    /// @notice Interface for the Yield-bearing mooToken by Beefy
    IMooToken public mooToken;

    /// @notice Interface for Moonpot prize pool
    PrizePoolInterface public prizePool;

    /// @notice token which want to maximize
    IERC20Upgradeable public underlying;

    /// @notice prize pool lottery token
    address public prizePoolControlledToken;

    // mooTokens per user
    mapping(address => uint256) public balances;

    /// @notice set up GateManger
    /// @param _mooToken Address of the Beefy mooToken interface
    /// @param _prizePool Address of the MoonPot prize pool
    /// @param _underlying Address of the token to add to the pools
    /// @param _prizePoolControlledToken Address of prize pool token aka lottery tickets
    constructor(
        IMooToken _mooToken,
        PrizePoolInterface _prizePool,
        IERC20Upgradeable _underlying,
        address _prizePoolControlledToken
    ) public {
        mooToken = _mooToken;
        prizePool = _prizePool;
        underlying = _underlying;
        prizePoolControlledToken = _prizePoolControlledToken;
    }
    
    /// Returns user total balance
    function userTotalBalance (address user) external view returns (uint256) {
        uint256 ticketBal = IERC20Upgradeable(prizePoolControlledToken).balanceOf(user);
        uint256 yieldBal = userYieldBalance(user).mul(mooToken.getPricePerFullShare());

        return ticketBal.add(yieldBal);
    }

    /// Returns user mooVault balances
    function userYieldBalance(address user) public view returns (uint256) {
        uint256 balance = balances[user];

        return balance;
    }

    /// Deposit all want tokens in a user address
    function depositAll(address referrer) external {
        uint256 tokenBal = underlying.balanceOf(msg.sender);
        depositMoonPot( tokenBal, referrer);
    }

    /// Withdraw all sender funds with timelock
    function withdrawAllTimelock() external {
        uint256 ticketBal = IERC20Upgradeable(prizePoolControlledToken).balanceOf(msg.sender);
        if ( ticketBal > 0 ) {
        withdrawWithTimeLockFromMoonPotPrizePool(ticketBal);
        }

        uint256 yieldBal = userYieldBalance(msg.sender);
        if ( yieldBal > 0 ) {
        withdrawMoonPotYield(yieldBal);
        }
    }

    /// Withdraw all sender funds without timelock
    function withdrawAllInstantly() external {
        uint256 ticketBal = IERC20Upgradeable(prizePoolControlledToken).balanceOf(msg.sender);
        if (ticketBal > 0) {
        withdrawInstantlyFromMoonPotPrizePool(ticketBal);
        }

        uint256 yieldBal = userYieldBalance(msg.sender);
        if ( yieldBal > 0 ) {
        withdrawMoonPotYield(yieldBal);
        }
    }

    /// @notice Supplies underlying token. 1/2 to MoonPot prize pool and 1/2 to Moo vault.
    /// @param amount The amount of `underlying` to be supplied
    /// @param referrer Partners may receive commission from ticket referral
    function depositMoonPot(uint256 amount, address referrer) public {
        IERC20Upgradeable(underlying).transferFrom(
            msg.sender,
            address(this),
            amount
        );

        uint256 halvedAmount = amount.div(2);

        // deposit to MoonPot prize pool
        IERC20Upgradeable(underlying).approve(address(prizePool), halvedAmount);
        prizePool.depositTo(
            msg.sender,
            halvedAmount,
            prizePoolControlledToken,
            referrer
        );

        // deposit yield farming
        IERC20Upgradeable(underlying).approve(address(mooToken), halvedAmount);
        uint256 mooTokenBalanceBefore = mooToken.balanceOf(address(this));
        mooToken.deposit(halvedAmount);
        uint256 mooTokenDiff =
            mooToken.balanceOf(address(this)).sub(mooTokenBalanceBefore);
        balances[msg.sender] = balances[msg.sender].add(mooTokenDiff);
    }

    /// @notice withdraw underlying from yield earning vault
    /// @param amount The amount of `underlying` to withdraw.
    /// @return The actual amount of tokens that were withdrawn.
    function withdrawMoonPotYield(uint256 amount) public returns (uint256) {
        uint256 mooTokenBalanceBefore = mooToken.balanceOf(address(this));

        uint256 balanceBefore =
            IERC20Upgradeable(underlying).balanceOf(address(this));

        mooToken.withdraw(amount);

        uint256 mooTokenDiff =
            mooTokenBalanceBefore.sub(mooToken.balanceOf(address(this)));
        uint256 diff =
            IERC20Upgradeable(underlying).balanceOf(address(this)).sub(
                balanceBefore
            );

        balances[msg.sender] = balances[msg.sender].sub(mooTokenDiff);

        IERC20Upgradeable(underlying).transfer(msg.sender, diff);

        return diff;
    }

    /// @notice withdraw from prize pool with timeLock.
    /// @param amount The amount of controlled prize pool token to redeem for undelying.
    function withdrawWithTimeLockFromMoonPotPrizePool(uint256 amount) public {
        require(
            IERC20Upgradeable(prizePoolControlledToken).allowance(
                msg.sender,
                address(this)
            ) >= amount,
            "GateManager: approve contract to withdraw tokens for you"
        );

        prizePool.withdrawWithTimelockFrom(
            msg.sender,
            amount,
            prizePoolControlledToken
        );
    }

    /// @notice withdraw from prize pool with possible exit fee.
    /// @param amount The amount of controlled prize pool token to redeem for undelying.
    function withdrawInstantlyFromMoonPotPrizePool(uint256 amount) public {
        require(
            IERC20Upgradeable(prizePoolControlledToken).allowance(
                msg.sender,
                address(this)
            ) >= amount,
            "GateManager: approve contract to withdraw tokens for you"
        );

        (uint256 exitFee, ) =
            prizePool.calculateEarlyExitFee(
                msg.sender,
                prizePoolControlledToken,
                amount
            );

        prizePool.withdrawInstantlyFrom(
            msg.sender,
            amount,
            prizePoolControlledToken,
            exitFee
        );
    }
}

