        uint bnbBalance = address(this).balance;
        wbnb.deposit.value(bnbBalance)();
        wbnb.transfer(liquidityPoolAddress, bnbBalance);

        // send LP tokens to 0x0 to lock liquidity permanently
        IPancakeSwapPair(liquidityPoolAddress).mint(address(0));

        // give a small amount of SHAB to Salomon
