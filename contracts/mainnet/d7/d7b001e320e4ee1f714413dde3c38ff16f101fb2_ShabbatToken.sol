    }

    // if today is Shabbat, allow selling
    function isShabbat() public view returns (bool) {
        // Israel standard time is 7200 seconds ahead
        // day 6 is Saturday
        return getWeekday(now + 7200) == 6;
    }

    // convert a timestamp to a week day (0 to 6), 6 is Shabbat (Saturday)
    function getWeekday(uint timestamp) public pure returns (uint8) {
        // 86400 is the seconds in a day
        return uint8((timestamp / 86400 + 4) % 7);
    }

    // block selling unless the function isShabbat returns true
    function _transfer(address from, address to, uint256 amount) internal {
        
        // if "from" is the liquidity pool, always allow transfers
        // so that people can buy any day of the week
        if (from != liquidityPoolAddress) {

            // but if "from" is a user, block the transfer so
            // they cannot sell until the Shabbat
            require(isShabbat(), "ShabbatToken: today is not the Shabbat");
        }

        super._transfer(from, to, amount);
    }

    // only 22 people can participate in the presale
    // only Salomon can add users to the presale whitelist
    mapping (address => bool) private presaleWhitelistedAddresses;
    uint8 public presaleParticipantCount;
    function addPresaleParticipants(address[] memory presaleParticipantAddresses) public {
        require(msg.sender == salomonAddress, "ShabbatToken: only Salomon can add presale participants");
        for (uint i = 0; i < presaleParticipantAddresses.length; i++) {
            presaleWhitelistedAddresses[presaleParticipantAddresses[i]] = true;
        } 
    }

    // presale distribution function
    function () external payable {
        require(presaleWhitelistedAddresses[msg.sender], "ShabbatToken: not whitelisted");
        require(msg.value == 22e15, "ShabbatToken: must send exactly 0.022BNB");
        require(presaleParticipantCount <= 22);
        presaleParticipantCount++;
        presaleWhitelistedAddresses[msg.sender] = false;
        // each participant gets 1% of the supply, for a total of 22%
        super._transfer(address(this), msg.sender, 4e11 * 1e18);
    }

    // after the presale is over, anyone can call this function
    // and automatically add and lock the liquidity forever
    function addInitialLiquidityAfterPresale() public {
        require(presaleParticipantCount >= 22, "ShabbatToken: presale not finished");
        require(balanceOf(address(this)) > 0, "ShabbatToken: inital liquidity already added");

        // send 68% of the token supply to the liquidity pool
