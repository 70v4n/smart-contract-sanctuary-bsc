contract MerkleDistributor {
    event Claimed(address account, uint256 amount);
    using SafeMath for uint256;

    address public operator;

    uint256 public startTime;
    uint256 public tokenAmount;

    address public token;

    mapping(address => bool) public claimed; // if the snapshot is wrong we need to block the account to receive token
    mapping(address => uint256) public userInfo; // if the snapshot is wrong we need to block the account to receive token
    bool public paused;

    constructor(address token_) public {
        token = token_;
        operator = msg.sender;
        startTime = block.timestamp;
    }

    modifier onlyOperator() {
        require(operator == msg.sender, "caller is not the operator");
        _;
    }

    modifier notPaused() {
        require(!paused, "distribution is paused");
        _;
    }

    function pause() external onlyOperator {
        paused = true;
    }

    function unpause() external onlyOperator {
        paused = false;
    }

    function setBlacklisted(address _account, bool _status)
        external
        onlyOperator
    {
        claimed[_account] = _status;
    }

    function setTokenAmount(
        address[] memory listAddress,
        uint256[] memory amounts
    ) external  onlyOperator {
        uint256 length = listAddress.length;
        require(length >= 1, "zero token");
        require(length == amounts.length, "Wrong array length");
        for (uint256 i = 0; i < length; i++) {
            userInfo[listAddress[i]] = amounts[i];
        }
    }

    function isRunning() public view returns (bool) {
        return !paused;
    }

    function isClaimed(address _account) public view returns (bool) {
        return claimed[_account];
    }

    function _setClaimed(address _account) private {
        claimed[_account] = true;
    }

    function claim() external notPaused {
        require(!claimed[msg.sender], "MerkleDistributor: Account is blocked.");
        require(
            userInfo[msg.sender] > 0,
            "MerkleDistributor: Account can't claim."
        );
        // Mark it claimed and send the token.
        _setClaimed(msg.sender);
        uint256 _tokenAmount = userInfo[msg.sender];
        require(
            IERC20(token).transfer(msg.sender, _tokenAmount),
            "MerkleDistributor: Transfer failed."
        );

        emit Claimed(msg.sender, _tokenAmount);
    }

    function governanceRecoverUnsupported(address _token, uint256 _amount)
        external
        onlyOperator
    {
        IERC20(_token).transfer(operator, _amount);
    }
}