pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract ClaimPreSale is Ownable{
    using SafeMath for uint256;
    IERC20 public token;
    address public rewardWallet;
    uint256 public releaseTime = 1642345800;
    uint256 public timePerMonth = 30 days;
    uint256 public holdTime = 60 days;
    uint256 public apr = 150;
    uint256 public totalHold;
    uint256[] public vestingRatio;

    struct Wallet{
        uint amount;
        uint withdrawAmount;
        uint lastClaim;
    }

    mapping(address => Wallet) private wallets;
    event ClaimToken(address indexed beneficiary, uint256 amount);
    event Withdrawtoken(address indexed to, uint256 amount);

    constructor(IERC20 _token, uint tge, uint first, uint second){
        token = _token;
        vestingRatio.push(tge);
        vestingRatio.push(first);
        vestingRatio.push(second);
    }

    receive() external payable {

    }

    function getPoolInfo() public view returns(uint _releaseTime, uint _holdTime, uint _apr){
        _releaseTime = releaseTime;
        _holdTime = holdTime;
        _apr = apr;
    }

    function setToken(address _token) external onlyOwner{
        require(_token != address(0));
        token = IERC20(_token);
    }

    function setRewardWallet(address _rewardWallet) external onlyOwner{
        require(_rewardWallet != address(0));
        rewardWallet = _rewardWallet;
    }

    function setAPR(uint _apr) external onlyOwner{
        apr = _apr;
    }

    function setVesting(uint _tge, uint _first, uint _second) external onlyOwner{
        vestingRatio[0] = _tge;
        vestingRatio[1] = _first;
        vestingRatio[2] = _second;
    }

    function withdrawtoken(address _to, uint256 _amount) external onlyOwner{
        require(token.balanceOf(address(this)) >= _amount, "Not enough token");
        require(_to != address(0), "Destination is 0");
        token.transfer(_to, _amount);
        emit Withdrawtoken(_to, _amount);
    }

    function setBalances(bytes[] calldata amounts) external onlyOwner{
        address buyer;
        uint amount;
        for(uint i=0; i< amounts.length; i++){
            (buyer, amount) = abi.decode(amounts[i], (address, uint));
            totalHold = totalHold.sub(wallets[buyer].amount).add(amount);
            wallets[buyer] = Wallet(amount, 0, 0);
        }
    }

    function balanceOf(address _holder) public view returns (uint256) {
        return wallets[_holder].amount - wallets[_holder].withdrawAmount;
    }

    function setReleaseTime(uint256 _time) external onlyOwner {
        releaseTime = _time;
    }

    function setHoldTime(uint256 _time) external onlyOwner{
        holdTime = _time;
    }

    function amountCanClaim(address holder) public view returns(uint){
        if(wallets[holder].amount == 0){
            return 0;
        }
        //before release time
        if(block.timestamp < releaseTime){
            return 0;
        }
        // release at second month, release all
        if(block.timestamp >= releaseTime.add(holdTime)){
            return wallets[holder].amount.sub(wallets[holder].withdrawAmount);
        }
        //release at tge
        if(block.timestamp >= releaseTime && block.timestamp < releaseTime.add(timePerMonth)){
            return wallets[holder].amount.mul(vestingRatio[0]).div(100).sub(wallets[holder].withdrawAmount);
        }
        //release at first month
        if(block.timestamp >= releaseTime.add(timePerMonth) && block.timestamp < releaseTime.add(holdTime)){
            return wallets[holder].amount.mul(vestingRatio[0].add(vestingRatio[1])).div(100).sub(wallets[holder].withdrawAmount);
        }
        return 0;
    }

    function rewardAmount(address holder) public view returns(uint){
        uint256 amount = wallets[holder].amount.sub(wallets[holder].withdrawAmount);
        if(amount == 0){
            return 0;
        }
        uint timeElapsed;
        if(wallets[holder].lastClaim != 0){
            timeElapsed = block.timestamp - wallets[holder].lastClaim;
        }else{
            timeElapsed = block.timestamp - releaseTime;
        }
        uint reward = amount.mul(timeElapsed).div(365 days).mul(apr).div(100);
        return reward;
    }

    function claim() external{
        require(block.timestamp >= releaseTime, "Wait for release time");
        require(wallets[msg.sender].amount > 0, "Your balance is 0");
        uint256 amount = amountCanClaim(msg.sender);
        if(amount > 0){
            require(token.balanceOf(address(this)) >= amount, "Not enough token");
            // reward stake
            uint reward = rewardAmount(msg.sender);
            if(reward > 0){
                token.transferFrom(rewardWallet, msg.sender, reward);
                wallets[msg.sender].lastClaim = block.timestamp;
            }
            // release
            token.transfer(msg.sender, amount);
            totalHold = totalHold.sub(amount);
            wallets[msg.sender].withdrawAmount = wallets[msg.sender].withdrawAmount.add(amount);
            emit ClaimToken(msg.sender, amount);
        }
    }
}

