contract SimpleSwap is Ownable{
  using SafeMath for uint256;

  address  public previous_token;
  address public new_token;
  
  mapping (address=>uint256) public _Deposits;
  
    address public owner_address;
    uint256 previous_token_count = 0;
    constructor(address  t_new_token,address t_previous_token) public {
        
        previous_token = t_previous_token;
        new_token = t_new_token;
        owner_address = msg.sender;
    }
    
    function update_previous_token_count() internal returns (uint256)
    {
        previous_token_count = IBEP20(previous_token).balanceOf(address(this));
    }
    
    function previous_tokens_in_contract() public view returns (uint256)
    {
        return IBEP20(previous_token).balanceOf(address(this));
    }
    
    function new_tokens_in_contract() public view returns (uint256)
    {
        return IBEP20(new_token).balanceOf(address(this));
    }
    

    function get_back_tokens(address token_address, uint256 amount) public {
        require(msg.sender == owner_address,"Only owner");
        IBEP20(token_address).transfer(msg.sender, amount);
        update_previous_token_count();
    }
    
    function depositePreviousToken() external {
        uint256 senderBalance = IBEP20(previous_token).balanceOf(_msgSender());
        require(senderBalance > 0, " Balance is empty.");

        IBEP20(previous_token).transferFrom(_msgSender(), address(this), senderBalance);
        _Deposits[_msgSender()] = _Deposits[_msgSender()] + senderBalance;
    }
    
    function claimNewToken() external{

        require(_Deposits[_msgSender()] > 0, "Deposit Previous Token");

        uint256 deposited_amount = _Deposits[_msgSender()];
         IBEP20(new_token).transfer(_msgSender(), deposited_amount);
        _Deposits[_msgSender()] = 0;
    }
    
    
    
    
}