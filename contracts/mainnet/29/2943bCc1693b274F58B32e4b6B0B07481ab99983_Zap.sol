contract Zap is ReentrancyGuard{
    using SafeMath for uint256;

    address  bridgeswapFactory = address(0x79601cB456806a30fA5EFCCCDBb47912f4eF6F67);
    address bridgeSwapRouter = address(0x154D94A3Ddf1a4b4cBda9F5201eCf99C38ef5Aa0);
    address Wbnb_address = address(0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c);
    address brisToken = address(0xF9b0cAcF7E90A67ffd5c3c324854be76Af2E2b75);
    address bpBris;
    bool public paused = false;

    address priceFeed = address(0x0567F2323251f0Aab15c8dFb1967E4e8A7D42aeE);//Mainnet
    // address priceFeed = address(0x2514895c72f50D8bd4B4F9b1110F0D6bD2c97526);//Testnet

    address owner;

    event TestData(uint data);

    constructor(){
        owner = msg.sender;
    }

    modifier isPaused{
        require(!paused,"Event not started");
        _;
    }
    modifier onlyOwner{
        require(msg.sender == owner,"Unauthorised");
        _;
    }

    function bnbToUsdPrice() public view returns(int256 price){
        ( 
            uint80 roundId,
            int256 answer,
            uint startedAt,
            uint timestamp,
            uint80 answeredInRound
        ) = AggregatorV3Interface(priceFeed).latestRoundData();
        price = answer / 1e8;
    }

    function swap(address _tokenA,address _tokenB) external isPaused nonReentrant returns(uint,uint){        
        
        require(bpBris != address(0),"wrong bpbris");

        //Token paths
        address[] memory tokenAPath = new address[](2);
        tokenAPath[0] = _tokenA;
        tokenAPath[1] = Wbnb_address;

        address[] memory tokenBPath = new address[](2);
        tokenBPath[0] = _tokenB;
        tokenBPath[1] = Wbnb_address;

        address[] memory brisPath = new address[](2);
        brisPath[0] = brisToken;
        brisPath[1] = Wbnb_address;

        //Get the pair address for a given token pair from factory
        address pair = IBridgeswapFactory(bridgeswapFactory).getPair(_tokenA,_tokenB);        //Withdrawing lp token from user to contract
        IERC20(pair).transferFrom(msg.sender,pair,IERC20(pair).balanceOf(msg.sender));

        (uint amount0, uint amount1) = IBridgeswapPair(pair).burn(address(this));
        //Getting bnb value for tokens
        uint256[] memory tokenAsBnbAmount1 = IBridgeswapRouter01(bridgeSwapRouter).getAmountsOut(amount0,tokenAPath);
        uint256[] memory tokenAsBnbAmount2 = IBridgeswapRouter01(bridgeSwapRouter).getAmountsOut(amount1,tokenBPath);

        uint256[] memory currentBrisToBnb = IBridgeswapRouter01(bridgeSwapRouter).getAmountsOut(1e18,brisPath);

        //Current BNB/USD price from chainlink oracle
        int256 bnbToUsd = bnbToUsdPrice(); 

        //Total lp worth in bnb
        uint256 userBnbUsdWorth = (tokenAsBnbAmount1[1].add(tokenAsBnbAmount2[1])).mul(uint256(bnbToUsd));
        uint256 brisBnbUsdWorth = currentBrisToBnb[1].mul(uint256(bnbToUsd));

        uint userslpworth = userBnbUsdWorth.div(brisBnbUsdWorth);
        emit TestData(userslpworth);
        return(userBnbUsdWorth,brisBnbUsdWorth);


        IERC20(bpBris).transfer(msg.sender,userslpworth);


    }

    function retrieveToken(IERC20 token, address to) external  onlyOwner{
        token.transfer(to,IERC20(token).balanceOf(address(this)));
    }

    function approvePair(address tokenA,address tokenB) external returns(address pair) {
        pair = IBridgeswapFactory(bridgeswapFactory).getPair(tokenA,tokenB);
    }

    //This should be called after deployment
    function setTokens(address _bpBris,address _brisToken) external onlyOwner{
        bpBris = _bpBris;
        brisToken = _brisToken;
    }

    function setDex(address _factory,address _router) external onlyOwner{
        bridgeswapFactory = _factory;
        bridgeSwapRouter = _router;
    }


    function callFactory() public view returns(address _factory,address _weth){
        _factory = IBridgeswapRouter01(bridgeSwapRouter).factory();
        _weth = IBridgeswapRouter01(bridgeSwapRouter).WETH();

    } 
    receive() external payable{

    }
}