pragma solidity >=0.8.9;

// Galaxy is an Index token for Cosmosium Finance
// Version 1

import "@openzeppelin/contracts/access/Ownable.sol";
import "./BEP20.sol";
import "./IBEP20.sol";
import "./SafeBEP20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "./IUniswapRouter.sol";



contract Galaxy is BEP20,ReentrancyGuard {
    using Address for address;
    using SafeBEP20 for IBEP20;

    struct Component {
        uint256 baseAmount; 
        IBEP20 token;
    }

    struct MintAmounts {
        uint256 amount;
        IBEP20 token;
    }

    struct USDPrices {
        uint256 amount; // usd equivalent of baseAmount
        IBEP20 token;
    }

    mapping(address => uint256) public zapAvailableTokens; // this tokens are available for zapping. also used for min amount
    mapping(address => address) public tokenRouters; // To support multiple routers.

    Component[] public components;

    IBEP20 public stable;

    uint256 public mintFee;
    uint256 public burnFee;

    uint256 public internalSwapSlippage = 100; // 100 -> 1%

    uint256 public minAmount;
    // min amount fixes the errors for minimal minting
    // if lowest = 0.01 for example the min should be makes the lowest higher than 1 includes fee.
    // So make it more than 10000 is a great idea
    
    address public feeReceiver;

    bool public initialized;
    bool public zapAvailable; // Zap wont be available for version 1

    event GalaxyMinted(address indexed minter, uint256 amount);
    event GalaxyBurned(address indexed burner, uint256 amount);
    event FeesChanges(address indexed changer, uint256 mintFee, uint256 burnFee);
    event FeeReceiverChanged(address indexed changer, address receiver);
    event MinAmountChanged(address indexed changer, uint256 minAmount);
    event RouterChanged(address indexed changer, address router);
    event ZapStatusChanged(address indexed changer, bool status);

    constructor(string memory _name, string memory _symbol, IBEP20 _stable) BEP20(_name,_symbol) {
        stable = _stable;
    }

    function insertComponent(IBEP20 _token, uint256 _baseAmount, IUniswapV2Router02 _router) public onlyOwner {
        require(!initialized, "Index is already initialized");
        require(address(_token) != address(0), "Token address zero");
        components.push(Component({
            token : _token,
            baseAmount : _baseAmount
        }));
        tokenRouters[address(_token)] = address(_router);
    }

    function approveRouter(address _spender) public onlyOwner {
        require(!initialized, "Initialized");

        stable.safeApprove(address(_spender), type(uint256).max);
    }

    function initializeIndex() public onlyOwner {
        // whenever index is initialized no one can change any tokens & ratios on it.
        require(!initialized ,"Index already initialized");
        
        initialized = true;
    }

    function getIndexBasePrice() public view returns(uint256) {
        // returns a amount of stable has to paid to get 1 index token.
        uint256 price = mintWithStablePrice(1 ether);
        return price;
    }

    // returns each component stable prices to mint _amount of index
    function componentPrices(uint256 _amount) public view returns(USDPrices[] memory) {
        USDPrices[] memory prices = new USDPrices[](components.length);
        MintAmounts[] memory amounts = tokenMintAmounts(_amount);
        for(uint i = 0; i < amounts.length; i++) {
            address[] memory path = pathMaker(stable,amounts[i].token);
            IUniswapV2Router02 router = IUniswapV2Router02(tokenRouters[address(amounts[i].token)]);
            uint256[] memory output = router.getAmountsIn(amounts[i].amount, path);
            uint256 stableAmount = output[0];
            prices[i] = USDPrices({
                token : amounts[i].token,
                amount : stableAmount
            });
        }

        return prices;
    }

    function mintWithStablePrice(uint256 _amount) public view returns(uint256) {
        MintAmounts[] memory amounts = tokenMintAmounts(_amount);
        uint256 totalAmountNeeded = 0;
        for(uint i = 0; i < amounts.length; i++) {
            // we need that amount token to mint index so
            address[] memory path = pathMaker(stable,amounts[i].token);
            IUniswapV2Router02 router = IUniswapV2Router02(tokenRouters[address(amounts[i].token)]);
            uint256[] memory output = router.getAmountsIn(amounts[i].amount, path);
            uint256 stableAmount = output[0];
            totalAmountNeeded = totalAmountNeeded + stableAmount;
        }
        return totalAmountNeeded;
    }

    // input is amount to buy indexes
    function zapStable(uint256 _amount) public {
        require(zapAvailable, "zap is not available."); // +
        require(_amount >= minAmount, "Amount too low.");
        require(initialized ,"index not initialized"); // +
        MintAmounts[] memory amounts = tokenMintAmounts(_amount); // +

        uint256 totalNeeded = mintWithStablePrice(_amount); // +
        uint256 totalWithSlippage = totalNeeded + ((totalNeeded * internalSwapSlippage) / 10000); // +
        // 70981713774271246 + (( 70981713774271246 * 100) / 10000) 
        uint256 stableBefore = stable.balanceOf(address(this)); // +

        stable.safeTransferFrom(msg.sender, address(this), totalWithSlippage); // maybe there is a problem there
        
        uint256 stableTaken = stable.balanceOf(address(this)) - stableBefore;

        require(stableTaken >= totalWithSlippage, "Error on stable receive");
        // swap
        uint256 stableSpent = 0;
        for(uint i = 0; i < amounts.length; i++) {
            uint256 beforeSpend = stable.balanceOf(address(this)); 
            swapStable(amounts[i].token, amounts[i].amount); // +
            stableSpent = stableSpent + (stable.balanceOf(address(this)) - beforeSpend);
        }

        require(stableSpent <= stableTaken, "Spend overflow.");

        uint256 amountToPayBack = stableTaken - stableSpent;

        stable.safeTransfer(msg.sender, amountToPayBack);
        
        if(mintFee > 0 && feeReceiver != address(0)) {
            uint256 fee = (_amount * mintFee) / 10000;
            _amount = _amount - fee;
            _mint(feeReceiver, fee);
        }
        _mint(msg.sender, _amount);
    }

    //amount should be min not slippaged
    //amount alınması gereken component token miktarı exact olmalı
    // MAKE THIS INTERNAL
    function swapStable(IBEP20 _token, uint256 _amount) public returns(uint256) {
        IUniswapV2Router02 router = IUniswapV2Router02(tokenRouters[address(_token)]);
        require(address(router) != address(0), "router is not set");
        address[] memory path = pathMaker(stable, _token);
        uint256[] memory amounts = router.getAmountsIn(_amount, path);

        uint256 amountWithSlippage = amounts[0] + ((amounts[0] * internalSwapSlippage) / 10000);
        uint256 componentBefore = _token.balanceOf(address(this));
        router.swapExactTokensForTokensSupportingFeeOnTransferTokens(amountWithSlippage, _amount, path, address(this), block.timestamp + 5 minutes);
        uint256 componentTaken = _token.balanceOf(address(this)) - componentBefore;
        
        return componentTaken;
    }

    // core function, mandatory
    function tokenMintAmounts(uint256 _amount) public view returns(MintAmounts[] memory) { // error
        MintAmounts[] memory mintAmounts = new MintAmounts[](components.length);
        for(uint i = 0; i < components.length; i++) {
            uint256 amount = (_amount * components[i].baseAmount) / 1 ether;
             mintAmounts[i] = MintAmounts({
                amount : amount,
                token : components[i].token
            });
            mintAmounts[i].amount = amount;
            mintAmounts[i].token = components[i].token;
        }

        return mintAmounts;
    }

    function isTokenInserted(IBEP20 _token) public view returns(bool) {
        for(uint i = 0; i < components.length; i++) {
            if(components[i].token == _token) {
                return true;
            }
        }
        return false;
    }

    function mintGalaxy(uint256 _amount) public nonReentrant notContract{
        require(initialized ,"index not initialized");
        require(_amount >= minAmount, "Amount too low");

        MintAmounts[] memory mintAmounts = tokenMintAmounts(_amount);

        for(uint i = 0;i < mintAmounts.length; i++) {
            uint256 tokenBefore = mintAmounts[i].token.balanceOf(address(this));
            mintAmounts[i].token.transferFrom(msg.sender, address(this),mintAmounts[i].amount);
            uint256 tokenAfter = mintAmounts[i].token.balanceOf(address(this));

            require((tokenAfter - tokenBefore) >= mintAmounts[i].amount, "Token transfer is not enough");
        }
        if(mintFee > 0 && feeReceiver != address(0)) {
            uint256 fee = (_amount * mintFee) / 10000;
            _amount = _amount - fee;
            _mint(feeReceiver, fee);
        }
        _mint(msg.sender, _amount);
    }


    function burnGalaxy(uint256 _amount) public nonReentrant notContract{
        require(initialized ,"index not initialized");
        require(_amount >= minAmount, "Amount too low");
        // burn galaxy
        _burn(msg.sender, _amount);
        //adama parasını ver

        if(burnFee > 0) {
            uint256 fee = (_amount * burnFee) / 10000;
            _amount = _amount - fee;
        }

        // Galaxy v1 tokenlerde token kazanımı yapılmadığı için amountlar 1:1 temsil ediliyor.

        MintAmounts[] memory mintAmounts = tokenMintAmounts(_amount);
        // control
        for(uint i = 0; i < mintAmounts.length; i++) {
            mintAmounts[i].token.transfer(msg.sender, mintAmounts[i].amount);
        }
    }

    function pathMaker(IBEP20 f, IBEP20 s) internal pure returns(address[] memory) {
        address[] memory path;
        path = new address[](2);
        path[0] = address(f);
        path[1] = address(s);
        return path;
    }

    function indexComponents() public view returns(IBEP20[] memory) {
        IBEP20[] memory tokens = new IBEP20[](components.length);
        for(uint i = 0; i < components.length; i++) {
            tokens[i] = components[i].token;
        }

        return tokens;
    }

    // Owner functions

    function setFees(uint256 _mintFee, uint256 _burnFee) public onlyOwner {
        require(_mintFee <= 1000, "mint fee too high");
        require(_burnFee <= 1000, "burn fee too high");

        mintFee = _mintFee;
        burnFee = _burnFee;

        emit FeesChanges(msg.sender, _mintFee, _burnFee);
    }

    function setFeeReceiver(address _receiver) public onlyOwner {
        feeReceiver = _receiver;

        emit FeeReceiverChanged(msg.sender, _receiver);
    }

    function setMinAmount(uint256 _amount) public onlyOwner {
        minAmount = _amount;

        emit MinAmountChanged(msg.sender, _amount);
    }

    function setRouter(address _token, address _router) public onlyOwner {
        require(address(_router) != address(0), "router address zero");
        tokenRouters[_token] = _router;

        emit RouterChanged(msg.sender, address(_router));
    }

    function setStable(IBEP20 _stable) public onlyOwner {
        stable = _stable;
    }

    function setZapAvailable(bool _val) public onlyOwner {
        zapAvailable = _val;
    }


    function _isContract(address addr) internal view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(addr)
        }
        return size > 0;
    }

    modifier notContract() {
        require(!_isContract(msg.sender), "contract not allowed");
        require(msg.sender == tx.origin, "proxy contract not allowed");
        _;
    }
}

