    IBEP20 public BEP20Interfaces ;
    IBEP20 public BUSDInterfaces;
    
    using SafeMath for uint256;
    address  payable public fund ;
    
    event Swap(address indexed _addr,uint256 _busd,uint256 _plas);   
    
    constructor(IBEP20 _token,IBEP20 _fiat)public {
        
        BEP20Interfaces = _token;
        BUSDInterfaces = _fiat;
        fund = msg.sender;
    }
    

    function presale(uint256 _buyamount) external payable returns(bool){
        uint256 TokenAmount = _buyamount*6/10;
        require(msg.sender != owner(),"Owner can't purchase");
        uint256 _allowance = BUSDInterfaces.allowance(msg.sender, address(this));
        require(_allowance >= _buyamount, "Msg :: Please approve token first");
        uint256 BuyAmount = _buyamount;
        BUSDInterfaces.transferFrom(msg.sender, fund, BuyAmount);
        BEP20Interfaces.transferFrom( fund,msg.sender, TokenAmount); 

        emit Swap(msg.sender,_buyamount,TokenAmount);             
