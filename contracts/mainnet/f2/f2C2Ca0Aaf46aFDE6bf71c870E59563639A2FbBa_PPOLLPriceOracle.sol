pragma solidity ^0.8.0;

import "./IPriceOracle.sol";
import "./IPancakeswapV2Router02.sol";
import "./IPancakeswapV2Factory.sol";
import "./AccessControl.sol";

contract PPOLLPriceOracle is AccessControl, IPriceOracle {
    bytes32 public constant PRICE_UPDATER = keccak256("RANDOMNESS_REQUESTER");
    uint256 buyinusd;
    uint256 public ppollPrice;
    uint256 public duckPrice;

    bool public isStarted;

    IPancakeswapV2Router02 public pancakeswapV2Router;
    address public pancakeswapV2Pair;
    address public tokenPPOLL;
    address public tokenDUCK;
    address public USDT;

    constructor(address _tokenPPOLL, address _tokenDUCK) {
        _setupRole(PRICE_UPDATER, msg.sender);

        ppollPrice = 37500 * 10 ** 18;
        isStarted = false;
        tokenPPOLL = _tokenPPOLL;
        tokenDUCK = _tokenDUCK;
        USDT = 0x55d398326f99059fF775485246999027B3197955;
        IPancakeswapV2Router02 _pancakeswapV2Router = IPancakeswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        // set the rest of the contract variables
        pancakeswapV2Router = _pancakeswapV2Router;    
    }


    function getDuckPrice() internal view returns(uint256) {
        address[] memory path = new address[](2);
        path[0] = pancakeswapV2Router.WETH();
        path[1] = tokenDUCK;
        uint256[] memory result = pancakeswapV2Router.getAmountsOut(1 * 10 ** 18, path);
        return result[1];
    }

    function getPPOLLPrice() internal view returns(uint256) {
        address[] memory path = new address[](2);
        path[0] = pancakeswapV2Router.WETH();
        path[1] = tokenPPOLL;
        uint256[] memory result = pancakeswapV2Router.getAmountsOut(1 * 10 ** 18, path);
        return result[1];
    }

    function getBNBPriceUSD() internal view returns(uint256) {
        address[] memory path = new address[](2);
        path[0] = pancakeswapV2Router.WETH();
        path[1] = USDT;
        uint256[] memory result = pancakeswapV2Router.getAmountsOut(1 * 10 ** 18, path);
        return result[1];
    }
    
    function getDUCKbyUSD(uint256 usd) external override view returns (uint256) {
        return usd * duckPrice / ( getBNBPriceUSD() / 1e18 );

    }

    function getPPOLLbyUSD(uint256 usd) external override view returns (uint256) {
        return usd * ppollPrice / ( getBNBPriceUSD() / 1e18 );

    }

        function _get1USDDUCK() internal view returns (uint256) {
        if (isStarted) {
            return ( 1 * duckPrice / ( getBNBPriceUSD() / 1e18 ) );
        }
        else
            return 0;
    }

    function _get1USDPPOLL() internal view returns (uint256) {
        if (isStarted) {
            return ( 1 * ppollPrice / ( getBNBPriceUSD() / 1e18 ) );
        }
        else
            return 0;
    }    

    function getTokenPrice() external override view returns (uint256 DUCK, uint256 PPOLL, uint256 DUCK1USD, uint256 PPOLL1USD) {
        return (duckPrice, ppollPrice, _get1USDDUCK(), _get1USDPPOLL());
    }

    function fetchDuckPrice() external {
        require(hasRole(PRICE_UPDATER, msg.sender), "Sender cannot update price");
        duckPrice = getDuckPrice();
        ppollPrice = getPPOLLPrice();
    }
     function start() external {
        require(hasRole(PRICE_UPDATER, msg.sender), "Sender cannot update price");
         isStarted = true;
    }      
}

