pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
// import "hardhat/console.sol";

contract IDO is AccessControl, ReentrancyGuard {
    using SafeMath for uint256;

    uint256 public constant MAX_SOLD = 10_048_000 * 10 ** 18;
    // orderno
    uint256 public sequance = 0;

    uint256 public hasBeenSold = 0;

    uint256 public totalReceiveBNB = 0;

    IERC20Metadata private MTXC;

    mapping (address => Purchase[]) purchaseHistory;

    struct Purchase {
        uint256 sequance;
        uint256 qty;
        uint256 totalcost;
        uint256 createdAt;
    }

    mapping (uint256 => LockVault[]) lockVaults;

    struct LockVault {
        uint256 sorting;
        uint256 releaseTime;
        uint256 qty;
        uint256 percentage;
        bool isWithdraw;
    }

    event RedeemLog(address indexed operator, uint256 sequance, uint256 month, uint256 qty);
    event PurchaseLog(address indexed operator, uint256 sequance, uint256 qty, uint256 totalcost);
    event ExtractBNB(address indexed operator, uint256 qty);

    constructor(address _operator, address _MTXC) {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(DEFAULT_ADMIN_ROLE, _operator);

        MTXC = IERC20Metadata(_MTXC);
        MTXC.approve(address(this), MAX_SOLD);
    }

    /**
     *    sold MTXC
     *    @param  {[type]} uint256 _qty)         public payable returns (bool [description]
     *    @return {[type]}         [description]
     */
    function sold(uint256 _qty) public nonReentrant payable returns (bool) {
        require(_qty >= 10000, "qty should gt 10000 wei");
        require(MAX_SOLD >= hasBeenSold.add(_qty), "out of stock");

        uint256 _totalcost = MTXCToBnb(_qty);

        require(msg.value == _totalcost, "sending bnb is not the right value");

        totalReceiveBNB += msg.value;

        hasBeenSold += _qty;

        purchaseHistory[_msgSender()].push(Purchase(sequance, _qty, _totalcost, block.timestamp));

        lockVaults[sequance].push(LockVault(0, block.timestamp, _qty.div(100).mul(10), 10, false));
        lockVaults[sequance].push(LockVault(1, block.timestamp + 30 days, _qty.div(100).mul(10), 10, false));
        lockVaults[sequance].push(LockVault(2, block.timestamp + 60 days, _qty.div(100).mul(20), 20, false));
        lockVaults[sequance].push(LockVault(3, block.timestamp + 90 days, _qty.div(100).mul(20), 20, false));
        lockVaults[sequance].push(LockVault(4, block.timestamp + 120 days, _qty.div(100).mul(20), 20, false));
        lockVaults[sequance].push(LockVault(5, block.timestamp + 150 days, _qty.div(100).mul(20), 20, false));

        emit PurchaseLog(_msgSender(), sequance, _qty, _totalcost);

        sequance++;

        return true;
    }

    function extractBNB(uint256 _qty) public onlyRole(DEFAULT_ADMIN_ROLE) returns (bool) {
        require(address(this).balance >= _qty, "insufficient balance");

        (bool sent, ) = payable(_msgSender()).call{value: _qty}("");

        require(sent, "Failed to send BNB");

        emit ExtractBNB(_msgSender(), _qty);

        return true;
    }

    /**
     *    redeem
     *    @param  {[type]} uint256 _sequance     [description]
     *    @param  {[type]} uint256 _month)       public        returns (bool [description]
     *    @return {[type]}         [description]
     */
    function redeem(uint256 _sequance, uint256 _month) public returns (bool) {
        require(!lockVaults[_sequance][_month].isWithdraw, "this order already withdrawn");
        require(lockVaults[_sequance][_month].releaseTime <= block.timestamp, "It's not release time yet");
        require(isBuyer(_sequance), "you are not the buyer for this order");

        lockVaults[_sequance][_month].isWithdraw = true;

        MTXC.transfer(_msgSender(), lockVaults[_sequance][_month].qty);

        emit RedeemLog(_msgSender(), _sequance, _month, lockVaults[_sequance][_month].qty);

        return true;
    }

    /**
     *    get Purchase
     *    @param  {[type]} ) public        view returns (Purchase[] memory [description]
     *    @return {[type]}   [description]
     */
    function getPurchase(address _buyer) public view returns (Purchase[] memory) {
        return purchaseHistory[_buyer];
    }

    /**
     *    get LockVaults
     *    @param  {[type]} uint _sequance)    public view returns (LockVault[] memory [description]
     *    @return {[type]}      [description]
     */
    function getLockVaults(uint _sequance) public view returns (LockVault[] memory) {
        return lockVaults[_sequance];
    }

    /**
     *    check isBuyer
     *    @param  {[type]}  uint256 _sequance)    public view returns (bool [description]
     *    @return {Boolean}         [description]
     */
    function isBuyer(uint256 _sequance) public view returns (bool) {
        bool _isBuyer = false;
        Purchase[] memory _purchaseHistory = purchaseHistory[_msgSender()];

        for (uint i = 0; i < _purchaseHistory.length; i++) {
            if (_purchaseHistory[i].sequance == _sequance) {
                _isBuyer = true;
                break;
            }
        }

        return _isBuyer;
    }

    /*
     *    find Rank By Volumn
     *    @param  {[type]} uint _targetVolume) public view returns (uint, uint, uint [description]
     *    @return {[type]}      [description]
     */
    function findRankByVolumn(uint _targetVolume) public pure returns (uint, uint, uint) {
        uint256 _volume = 0;
        uint256 _rank = 0;
        uint256 _rankVolumn;

        if (_targetVolume == 0) {
            return (1, 1000 * 10 ** 18, 1000 * 10 ** 18);
        }

        while (_volume < _targetVolume) {
            _rankVolumn = (1000 + (_rank * 300)) * 10 ** 18;
            _volume += _rankVolumn;

            _rank++;
        }

        return (_rank, _rankVolumn, _volume - _targetVolume);
    }

    /**
     *    calc perPrice
     *    @param  {[type]} uint256 _currentRank) public pure returns (uint256 [description]
     *    @return {[type]}         [description]
     */
    function perPrice(uint256 _currentRank) public pure returns (uint256) {
        return 4 * 10 ** (18 - 3) + ((_currentRank - 1) * 2 * 10 ** (18 - 4));
    }

    /**
     *    calc MTXC To Bnb cost
     *    @param  {[type]} uint256 _qty)         public view returns (uint256 [description]
     *    @return {[type]}         [description]
     */
    function MTXCToBnb(uint256 _qty) public view returns (uint256) {
        (uint256 _currentRank, , uint256 _diifNextRankQty) = findRankByVolumn(hasBeenSold);

        if (_qty <= _diifNextRankQty) {
            return (_qty * perPrice(_currentRank)).div(10 ** 18);
        }

        if (_diifNextRankQty == 0) {
            _currentRank++;
        }

        uint256 _totalCost = 0;
        uint256 _remaingQty = _qty;
        uint256 _rankVolumn = (1000 + (_currentRank - 1) * 300) * 10 ** 18;

        while (_remaingQty > _rankVolumn) {
            _rankVolumn = (1000 + (_currentRank - 1) * 300) * 10 ** 18;
            _remaingQty -= _rankVolumn;
            _totalCost += (_rankVolumn * perPrice(_currentRank));
            _currentRank++;
        }

        if (_remaingQty > 0) {
            _totalCost += _remaingQty * perPrice(_currentRank);
        }

        return _totalCost.div(10 ** 18);
    }

}

