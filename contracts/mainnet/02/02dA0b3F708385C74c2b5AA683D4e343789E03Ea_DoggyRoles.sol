interface IDoggyRoles {
    function havePermission(address account, uint256 amount) external view returns (bool);
}

contract DoggyRoles is IDoggyRoles, WhitelistedRole, Pausable {

    mapping(address => uint256) purchaseLimit;
    uint256 defaultPurchaseLimit;

    constructor(uint256 amount) public {
        defaultPurchaseLimit = amount * 10 ** 18;
    }

    function havePermission(address account, uint256 amount) public view whenNotPaused returns (bool) {
        require(account != address(0), "Roles: account is the zero address");
        require(isWhitelisted(account), "Roles: account doesn't have the Whitelisted role");
        require(purchaseLimit[account] >= amount, "Roles: amount exceeds the maximum limit");
        return true;
    }

    function addWhiteUser(address account) public onlyWhitelistAdmin {
        purchaseLimit[account] = defaultPurchaseLimit;
        addWhitelisted(account);
    }

    function addWhiteUserList(address[] memory accountArray) public onlyWhitelistAdmin {
        for (uint i = 0; i < accountArray.length; i++) {
            addWhiteUser(accountArray[i]);
        }
    }

    function setPurchaseLimit(address account, uint256 amount) public onlyWhitelistAdmin {
        require(isWhitelisted(account), "Roles: account doesn't have the Whitelisted role");
        purchaseLimit[account] = amount * 10 ** 18;
    }

    function setDefaultPurchaseLimit(uint256 amount) public onlyWhitelistAdmin {
        defaultPurchaseLimit = amount * 10 ** 18;
    }
}