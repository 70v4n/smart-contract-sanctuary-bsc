contract Presale is Ownable {

    address payable public withdrawAddr;
    uint256 public hardCapEthAmount = 150 ether;
    uint256 public depositAmount = 1 ether;
    address[] public whiteList;
    address[] public deposits;

    mapping(address => bool) public isExistInWhiteList;
    mapping(address => bool) public isDeposited;

    event Deposited(address indexed user, uint256 amount);
    event Recovered(address token, uint256 amount);

    constructor(
        address payable _withdrawAddr
    ) public {
        withdrawAddr = _withdrawAddr;
    }

    receive() payable external {
        deposit();
    }

    function deposit() public payable {
        require(isExistInWhiteList[msg.sender], "account must be whitelisted");
        require(deposits.length <= hardCapEthAmount, "deposit limits reached");
        require(msg.value == depositAmount, "incorrect amount, amount must be 1 BNB");
        require(!isDeposited[msg.sender], "already deposited");
        deposits.push(msg.sender);
        isDeposited[msg.sender] = true;
        emit Deposited(msg.sender, msg.value);
    }
    
    function releaseFunds() external onlyOwner {
        require(deposits.length == hardCapEthAmount, "presale is active");
        withdrawAddr.transfer(address(this).balance);
    }

    function getDepositAmount() public view returns (uint256) {
        return deposits.length;
    }
    
    function addWhiteList(address _account) public onlyOwner {
        require(!isExistInWhiteList[_account], "account was already listed");
        whiteList.push(_account);
        isExistInWhiteList[_account] = true;
    }

    function refund() public onlyOwner {
        for (uint256 index = 0; index < deposits.length; index++) {
            payable(deposits[index]).transfer(depositAmount);
            isDeposited[deposits[index]] = false;
        }
        address[] memory newArray;
        deposits = newArray;
    }

}