/*

Mom contract deploys a number of daughter proxies, storing a single implementation
address for all of them.

DaughterProxy stores its parent (the contract that created it), and its EOA owner
in pseudorandom slots. It delegates calls to the implementation slot stored on its parent.

Because EOA owner can call this proxy directly, we can do rescues on single one of the daughters by updating the
implementation contract for all of the daughters, then calling the fallback function of that specific daughter
proxy from the EOA.

To upgrade the implementation for all daughters, we use the Mom contract.

*/
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

import "./Mom.sol";
import "./StorageSlot.sol";

contract DaughterProxy {
    // the address of the slot is constant, it never changes
    bytes32 private constant PARENT_SLOT = bytes32(uint256(keccak256("eip1967.proxy.implementation")) - 1);
    bytes32 private constant OWNER_SLOT = bytes32(uint256(keccak256("eip1967.proxy.motherfuck")) - 1);

    // only memory the proxy stores which wasn't triggered by code from the implementation, are these two slots
    constructor() {
        StorageSlot.setAddressAt(PARENT_SLOT, msg.sender);
        StorageSlot.setAddressAt(OWNER_SLOT, tx.origin);
    }

    // internal means this can only be called in this contract
    function _delegate(address impl) internal virtual {
        assembly {
            let ptr := mload(0x40)
            calldatacopy(ptr, 0, calldatasize())

            // execute code on implementation contract but with our storage
            let result := delegatecall(gas(), impl, ptr, calldatasize(), 0, 0)

            let size := returndatasize()
            returndatacopy(ptr, 0, size)

            switch result
            case 0 { revert(ptr, size) }
            default { return(ptr, size) }
        }
    }

    // executed when transaction has value, but no data
    receive() external payable {
        
    }

    // executed when the transaction data does not match any functions
    // external means we don't copy arguments to memory (gas optimization)
    // this is optionally payable depending on if any of the functions we're forwarding to are
    // because we verify that mom or dad is sender on every forwarded call, no one can hit our functions
    // on the implementation slot with the memory of this contract
    fallback() external payable onlyFam {
        address implementation = Mom(payable(StorageSlot.getAddressAt(PARENT_SLOT))).childImplementation();
        _delegate(implementation);
    }

    // you're either mom or dad
    modifier onlyFam {
        require(msg.sender == StorageSlot.getAddressAt(PARENT_SLOT) || msg.sender == StorageSlot.getAddressAt(OWNER_SLOT));
        _;
    }
}

