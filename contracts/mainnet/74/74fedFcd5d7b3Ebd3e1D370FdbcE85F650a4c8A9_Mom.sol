import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol"; // this doesn't really need to be the upgradeable version, but the names conflict otherwise, and this provides the same behavior (all we need is the initializer modifier)
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

import "./DaughterProxy.sol";
import "./DaughterImpl.sol";
import "./StorageSlot.sol";

contract Mom is Ownable, Initializable {

    address public childImplementation;

    DaughterProxy[] public daughters;
    uint public numChildren;
    uint public actualNumChildren;

    uint public stage = 0;
    IERC20 public entryToken;

    address public target;
    uint256 public maxTokens;

    constructor(uint _numChildren) {
        require(_numChildren > 0, "You gotta have kids");
        numChildren = _numChildren;
        actualNumChildren = numChildren;

        setChildImplementation(address(new DaughterImpl()));

        for (uint i; i < numChildren; i++) {
            DaughterProxy daughter = new DaughterProxy();
            daughters.push(daughter);
        }
    }

    function initialize() public onlyOwner initializer {
        // logic implementation is initialized via its constructor by default

        // proxies are explicitly initialized
        for (uint i; i < numChildren; i++) {
            DaughterImpl(address(daughters[i])).initialize();
        }
    }

    // first EOA (dad) must send ERC20 or BNB (ether) to this contract, then call load.
    // Actually because address(this).balance is incremented by msg.value before a payable
    // function is executed, if we are paying with ETH (_entryToken == 0), money can
    // be provided in the same tx that calls load 

    function load(address _entryToken) public payable onlyOwner {
        require(stage == 0, "Can't load a loaded gun");

        entryToken = IERC20(_entryToken); // this will be IERC20(0) if entryToken is ETH

        // either entering with BNB (ether) or with an ERC20
        bool isEther = _entryToken == address(0);
        uint256 bal = isEther ? address(this).balance : entryToken.balanceOf(address(this));
        uint256 balPerChild = bal / numChildren;

        if (!isEther) {
            entryToken.approve(address(this), bal);
        }
    
        for (uint i; i < numChildren; i++) {
            if (isEther) {
                address(daughters[i]).call{ value: balPerChild }("");
            } else {
                entryToken.transfer(address(daughters[i]), balPerChild);
            }
        }

        stage = 1;
    }

    function snipe() public onlyOwner {
        require(stage == 1, "Can't shoot an unloaded gun");
        require(target != address(0) && maxTokens != 0, "That makes no fuckin sense");

        for (uint i; i < numChildren; i++) {
            DaughterImpl(address(daughters[i])).snipe(address(entryToken), target, maxTokens);
        }

        stage = 2;
    }

    // // dad is owner, pay him back
    // function payDad() public onlyOwner {
    //     require(stage == 2, "Can't collect an undead body");



    //     stage = 0;
    // }

    // note: if dad deploys new child implementation, the owner now becomes dad
    // so for byebye to work, dad must call transfer ownership on new child implementation, sending ownership to mom
    function setChildImplementation(address _implementation) public onlyOwner {
        childImplementation = _implementation;
    }

       
    function setTarget(address _target) public onlyOwner {
        target = _target;
    }

    function setMaxTokens(uint256 _maxTokens) public onlyOwner {
        maxTokens = _maxTokens;
    }

    // just in case
    function setStage(uint i) public onlyOwner {
        stage = i;
    }

    // can use this to limit
    function setNumChildren(uint _numChildren) public onlyOwner {
        require(_numChildren <= actualNumChildren && _numChildren > 0);
        numChildren = _numChildren;
    }

    function emergencyPayDadFromMom(address _token) public onlyOwner {
        if (_token == address(0)) {
            owner().call{ value: address(this).balance }("");
        } else {
            IERC20 token = IERC20(_token);

            uint bal = token.balanceOf(address(this));

            token.approve(address(this), bal);
            token.transfer(owner(), bal);
        }
    }


    function emergencyPayDadFromDaughters(address _token) public onlyOwner {
        for (uint i; i < numChildren; i++) {
            DaughterImpl(address(daughters[i])).emergencyPayDad(_token);
        }
    }

    // requires initialized
    function byebye() public onlyOwner {
        require(stage == 69, "Foreplay is crucial");

        for (uint i; i < numChildren; i++) {
            // these are proxies, so their byebye will hit the logic of daughterimpl, with the state of the proxy
            // proxy created by mom initialize, so the onlyowner modifier on them will pass
            DaughterImpl(address(daughters[i])).byebye();
        }

        DaughterImpl(childImplementation).byebye(); // logic created by mom, so the 

        selfdestruct(payable(owner()));
    }

    // executed when transaction has value, but no data
    receive() external payable {
        
    }

    // function r() {
    //     bool success = address(this).call(abi.encodeWithSignature(snipe.selector, ));

    // }
}

