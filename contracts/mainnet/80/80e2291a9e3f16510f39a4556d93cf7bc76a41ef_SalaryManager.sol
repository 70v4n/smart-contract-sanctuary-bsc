contract SalaryManager is Ownable {
    using SafeMath for uint256;

    address public lp;
    IERC20 public token;

    mapping(address => uint) public staff;  
    
    mapping (address => uint256) public lastClaim;
    
    constructor(IERC20 _token, address _lp) {
        token = _token;
        lp = _lp;
    }
    
    function getRank(address employee) public view returns (uint) {
        return staff[employee];
    }
    
    // function promote(address employee) external onlyOwner {
    //     staff[employee] = getRank(employee) + 1 ether;
    // }
    
    // function demote(address employee) external onlyOwner {
    //     require(getRank(employee) > 1 ether, "Employee cannot be demoted!");
    //     staff[employee] = getRank(employee) - 1 ether;
    // }
    
    function changeLp(address _lp) public onlyOwner {
        lp = _lp;
    }
    
    function changeToken(IERC20 _token) public onlyOwner {
        token = _token;
    }
    
    function hire(address _employee) external onlyOwner {
        staff[_employee] = 1 ether;
    }
    
    function fire(address employee) external onlyOwner {
        staff[employee] = 0 ether;
    }
    
    function getTokenPrice(address pairAddress, uint amount) public view returns(uint) {
        IUniswapV2Pair pair = IUniswapV2Pair(pairAddress);
        // IERC20 token0 = IERC20(pair.token0());
        (uint Res0, uint Res1,) = pair.getReserves();
    
        // decimals
        // uint res0 = Res0*(10**token0.decimals());
        return((amount*Res0)/Res1); // return amount of token0 needed to buy token1
    }
    
    function emergencyWithdraw() public onlyOwner {
        token.transfer(msg.sender, balance());
    }
    
    function claim() public {
        require(getRank(msg.sender) > 0, "You are not an employee!");
        require(block.number.sub(lastClaim[msg.sender]) >= 195096, "It has not been a week since your last claim"); 
        
        uint wageBusd = 0;
        
        if (getRank(msg.sender) == 1 ether) {
            wageBusd = 100 ether;
        }
        
        uint wage = getTokenPrice(lp, wageBusd);

        token.transfer(msg.sender, wage);
    }
    
    function balance() public view returns (uint256) {
        return token.balanceOf(address(this));
    }
    
}