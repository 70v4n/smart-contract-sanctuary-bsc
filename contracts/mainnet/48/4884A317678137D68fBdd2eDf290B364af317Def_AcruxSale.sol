contract AcruxSale is Ownable {
    using SafeMath for uint256;
    
    IUniswapV2Router02 public uniswapV2Router;
    
    address public immutable USDT = address(0x55d398326f99059fF775485246999027B3197955); //USDT
    address public immutable ACRUX = address(0x242D4Fc8ff920D53A89CEf6a663C3081DE272742); //ACRUX
    uint256 public tokenPrice = 50000000000000000;
    uint256 public decimals = 18;
    bool public isSale = true;
    
    mapping(address => uint256) public userInfo;
    
    address payable public wallet;
    
    constructor() public {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        uniswapV2Router = _uniswapV2Router;
    }
    
    receive() payable external {
        deposit();
    }
    
    function deposit() public payable {
        require(isSale, 'Sale is not started.');
        
        uint256 initialUSDTBalance = IERC20(USDT).balanceOf(address(this));
        swapTokensForUSDT(msg.value);
        uint256 newUSDTBalance = IERC20(USDT).balanceOf(address(this)).sub(initialUSDTBalance);
        uint256 buyAmount = newUSDTBalance.div(tokenPrice);
        
        userInfo[msg.sender] = userInfo[msg.sender].add(newUSDTBalance);
        safeAcruxTransfer(msg.sender, buyAmount);
    }
    
    function deposit(uint256 _amount) public {
        require (_amount > 0, 'amount 0');
        require(isSale, 'Sale is not started.');

        IERC20(USDT).transferFrom(address(msg.sender), address(this), _amount);
        uint256 buyAmount = _amount.div(tokenPrice);

        userInfo[msg.sender] = userInfo[msg.sender].add(_amount);        
        safeAcruxTransfer(msg.sender, buyAmount);
    }
    
    function setTokenPrice(uint256 _tokenPrice) public onlyOwner {
        tokenPrice = _tokenPrice;
    }
    
    function setWallet(address payable _wallet) public onlyOwner {
        wallet = _wallet;
    }
    
    function swapTokensForUSDT(uint256 tokenAmount) private {
        address[] memory path = new address[](2);
        path[0] = uniswapV2Router.WETH();
        path[1] = USDT;

        // make the swap
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }
    
    function safeAcruxTransfer(address _to, uint256 _amount) internal {
        uint256 acruxBal = IERC20(ACRUX).balanceOf(address(this));
        if (_amount > acruxBal) {
            IERC20(ACRUX).transfer(_to, acruxBal);
        } else {
            IERC20(ACRUX).transfer(_to, _amount);
        }
    }
    
    function getUserInfo(address user) external view returns (uint256, uint256){
        uint256 acxAmount = userInfo[user].div(25000);
        uint256 points = userInfo[user] > 999 ? 100: 20;
        
        return (acxAmount, points);
    }
    
    function setIsSale(bool _isSale) public onlyOwner {
        isSale = _isSale;
    }
}