        _cancelFee = cancelFee;
        _burnFee = burnFee;
        _refFee = refFee;
        _prizeFee = prizeFee;
        _PTLKX = IBEP20(Ptlkx);
     }
     
    modifier noContract{
        require(!Address.isContract(msg.sender), "noContract: Only Humans");
        _;
    }
    
    function toss(bytes32 jokerSeed,bytes32 bruceSeed) internal view returns(uint256) { return uint(keccak256(abi.encodePacked(block.difficulty, block.timestamp, block.gaslimit, block.coinbase, block.number,jokerSeed,bruceSeed))) % 100; }
    
    function send(address winner, uint256 amt) private returns (bool){
        uint256 burnAmount = amt.mul(_burnFee).div(10000);
        uint256 marketingAmount = amt.mul(_marketingFee).div(10000);
        uint256 prizeAmount = amt.mul(_prizeFee).div(10000);
        uint256 refAmount = amt.mul(_refFee).div(10000);
        uint256 amount = amt.sub(burnAmount).sub(marketingAmount).sub(prizeAmount).sub(refAmount);
        
        _PTLKX.safeTransfer(_chef,marketingAmount);
        marketingFees+=marketingAmount;
        _PTLKX.safeTransfer(winner,amount);
        prizePool+=prizeAmount;
        _PTLKX.safeTransfer(BURN_ADDRESS,burnAmount);
        if(refAmount > 0) {
            if(Warriors[winner].wariorRef != 0x0000000000000000000000000000000000000000) {
                _PTLKX.safeTransfer(Warriors[winner].wariorRef,refAmount);
            }
        }
        return true;
    }
    
    function removeBattle(address addr) private {
        for (uint256 i = 0; i < BattleList.length; i++) {
            if (BattleList[i] == addr) {
                delete Battles[addr];
                BattleList[i] = BattleList[BattleList.length - 1];
                BattleList.pop();
                break;
            }
        }
    }
    
    function createBattle (uint256 betFor, address ref,uint256 amount,bytes32 seed) public nonReentrant payable {
        require(amount > 10 ether, "Cant bet for zero");
        require(msg.sender != ref, "!self ref");
        require(betFor < 2,"Bet for JOKER OR BRUCE");
        require(Battles[msg.sender].value == 0, "You have a pending battle");
        address refAddress;
        
        Warrior memory warrior = Warriors[msg.sender];

        if (warrior.wariorAddress == address(0))
        {
            Warriors[msg.sender] = Warrior(msg.sender,ref,0,0,0,0,0,0);
            refAddress = ref;
        }
        else
        {
            refAddress = warrior.wariorRef;
        }
        _PTLKX.safeTransferFrom(msg.sender,address(this),amount);
        
        Battles[msg.sender] = Battle({ creator: msg.sender, value: amount, betFor: betFor, time: block.timestamp,seed:seed });
        BattleList.push(msg.sender);
        Warriors[msg.sender].totalBattles+=1;
        emit NewBattle(msg.sender, betFor, msg.value, block.timestamp);
    }
    
    function cancelBattle () public payable nonReentrant {
        require(Battles[msg.sender].value > 0, "You have no pending battle");
        uint256 amount = Battles[msg.sender].value;
        uint256 transferTax = amount.mul(100).div(10000);
        amount = amount.sub(transferTax);
        uint256 cancelAmount = amount.mul(_cancelFee).div(10000);
        uint256 backAmount = amount.sub(cancelAmount);
        _PTLKX.safeTransfer(_chef,cancelAmount);
        _PTLKX.safeTransfer(msg.sender,backAmount);
        removeBattle(msg.sender);
        Warriors[msg.sender].battlesCancelled += 1;
        Warriors[msg.sender].totalLoss += cancelAmount;
        emit CancelBattle(msg.sender, Battles[msg.sender].betFor, Battles[msg.sender].value);
    }
    
    function acceptBattle(address with, uint256 amount, bytes32 seed, address ref) public payable noContract nonReentrant {
        address refAddress;
        Warrior memory warrior = Warriors[msg.sender];
        if (warrior.wariorAddress == address(0))
        {
            Warriors[msg.sender] = Warrior(msg.sender,ref,0,0,0,0,0,0);
            refAddress = ref;
        }
        else
        {
            refAddress = warrior.wariorRef;
        }
        Battle memory battle = Battles[with];
        require(battle.value > 0, "Battle is unavailable");
        require(amount > 0 && amount == battle.value, "Unfair battle");
        uint256 winNum = toss(battle.seed,seed);
        uint256 winAmount = amount.add(battle.value);
        uint256 transferTax = winAmount.mul(100).div(10000);
        winAmount = winAmount.sub(transferTax);
        address winner = address(0);
        address loser = address(0);
        uint256 winnerWarrior = winNum % 50;
        
        if(winNum % 50 == battle.betFor){
             require(send(with, winAmount), 'Reward failed');
             winner = battle.creator;
             loser = msg.sender;
        }
        else
        {
             require(send(msg.sender, winAmount), 'Reward failed');
             loser = battle.creator;
             winner = msg.sender;
        }
        removeBattle(with);
        Warriors[msg.sender].totalBattles+=1;
        
        Warriors[winner].totalWin += amount.div(2);
        Warriors[winner].battlesWon += 1;
        
        Warriors[loser].totalLoss += amount.div(2);
        Warriors[loser].battlesLost += 1;
        emit WinBattle(winner, Warriors[winner].wariorRef, winnerWarrior, winNum, winAmount, block.timestamp);
    }
    
    
    function countBattles() public view returns (uint256) { return BattleList.length; }
    
    
