import '@openzeppelin/contracts/utils/Counters.sol';
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import '@openzeppelin/contracts/access/Ownable.sol';
import './Global.sol';

contract Jackpot is ReentrancyGuard, ERC20, Ownable {
    using Counters for Counters.Counter;

    Counters.Counter private _tokenIds;
    bool public _runningStatus;
    address payable jackpotAdminAddress;
    uint256 public _jackpot;

    constructor() ERC20 ("Slimmy Warrior", "TSW") {
        _runningStatus = true;
        jackpotAdminAddress = payable(msg.sender);
        _jackpot = Global.DEFAULT_JACKPOT_AMOUNT;
    }

    struct LotteryRound {
        uint index;
        uint256 jackpot;
        uint256[] pots;
        uint startTime;
        Global.LotteryStatusEum status;
    }

    mapping(uint256 => LotteryRound) internal _idToLotteryRound;

    event Log(string message);
    event PublishLotteryRound(uint index, uint256 jackpot, uint256[] pots, uint startTime, Global.LotteryStatusEum status);

    function createJackpot() public payable returns (LotteryRound memory) {
        uint256 itemId = _tokenIds.current();
        if (itemId > 0) {
            require(_idToLotteryRound[itemId].status != Global.LotteryStatusEum.PENDING, "Previous jackpot is running");
        }

        if (_runningStatus == true) {
            _tokenIds.increment();
            itemId = _tokenIds.current();
            uint256 _startTime = block.timestamp;
            Global.LotteryStatusEum _status = Global.LotteryStatusEum.PENDING;
            uint256[] memory _pots;
            // Create new Round with input data
            LotteryRound memory lotteryRound = LotteryRound(itemId, _jackpot, _pots, _startTime, _status);
            _idToLotteryRound[itemId] = lotteryRound;

            // emit new Round
            emit PublishLotteryRound(itemId, _jackpot, _pots, _startTime, _status);
        }

        return _idToLotteryRound[itemId];
    }

        /// @param _pots Array number want to create in Jackpot
        function settlementJackpot(uint[] memory _pots, uint256 roundId
        ) public payable nonReentrant {
            require(msg.value >= 0, "admin account balance is empty");
            require(msg.sender == jackpotAdminAddress, "only admin can change Pool status");
            require(_pots.length == Global.POT_LENGTH, "Jackpot must be has 6 numbers");
            require(roundId <= _tokenIds.current(), "Round id is invalid");
            require(Global.checkDuplicateNumber(_pots) == true);

            // update old _jackpot
            uint itemId = roundId;
            if (itemId == 0) {
                itemId = _tokenIds.current();
            }
            require(_idToLotteryRound[itemId].status != Global.LotteryStatusEum.CLOSED, "Jackpot is closed");
            _idToLotteryRound[itemId].pots = _pots;
            _idToLotteryRound[itemId].status = Global.LotteryStatusEum.CLOSED;

            // create new old _jackpot
            if (_runningStatus == true && itemId == _tokenIds.current()) {
                _jackpot = _jackpot + Global.DEFAULT_JACKPOT_AMOUNT;
                createJackpot();
            }
        }

    /// @param _index Id of round. Put it 0 to get latest
    function getJackpotById(uint256 _index) public view returns (LotteryRound memory) {
        require(0 < _tokenIds.current(), "Jackpot is not open");
        require(_index <= _tokenIds.current(), "Your jackpot id is invalid");
        if (_index == 0) {
            _index = _tokenIds.current();
        }

        return _idToLotteryRound[_index];
    }

    /// @param _status status want to update Jackpot chain status
    function changePoolRunningStatus(bool _status) public payable nonReentrant returns (bool) {
        require(msg.sender == jackpotAdminAddress, "Only admin can change Pool status");
        _runningStatus = _status;
        return _runningStatus;
    }

    function getPoolRunningStatus() public view returns (bool) {
        return _runningStatus;
    }

    function getCurrentJackpot() public view returns (uint256) {
        return _jackpot;
    }

    // Every ticket sold success will upgrade 5% for Jackpot
        function updateJackpotPriceWhenSoldTicket(address ticketAdminAddress) public payable returns (uint256) {
            require(jackpotAdminAddress == ticketAdminAddress, "Only jackpot admin can change jackpot price");
            if (_runningStatus == true) {
                uint itemId = _tokenIds.current();
                _jackpot = _jackpot + (Global.TICKET_AMOUNT * Global.TICKET_REWARD_AMOUNT )/ 100;
                _idToLotteryRound[itemId].jackpot = _jackpot;
            }
            return _jackpot;
        }

    function resetJackpotPrice(address ticketAddmin) public payable nonReentrant {
        require(ticketAddmin == jackpotAdminAddress, "Only admin can change Pool status");
        _jackpot = Global.DEFAULT_JACKPOT_AMOUNT;
    }

}

