import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/ContextUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "./interfaces/IMagicElpisGem.sol";
import "./interfaces/IElpisHeroEvolution.sol";

contract ElpisHeroEvolution is
    IElpisHeroEvolution,
    Initializable,
    ContextUpgradeable,
    OwnableUpgradeable,
    PausableUpgradeable
{
    using SafeMath for uint256;

    IERC721 public hero;
    IMagicElpisGem public meg;

    uint256 public maximumRankOfHero;

    mapping(uint256 => uint256) private _heroRanks;

    mapping(uint256 => uint256) private _evolutionFees;

    bytes32 private _HASHED_NAME;
    bytes32 private _HASHED_VERSION;
    bytes32 public DOMAIN_SEPARATOR;
    // keccak256("EvolvePermit(uint256 tokenId,uint256 amount,uint256 nonce,uint256 deadline)");
    bytes32 public constant PERMIT_TYPEHASH =
        0xf41cba514596751dd9ea0705d86749e1d7ab4c2ece8e0d7120d936b4c078c283;
    mapping(address => uint256) public nonces;

    constructor() {}

    function initialize(
        IERC721 _hero,
        IMagicElpisGem _meg,
        uint256 _maximumRankOfHero,
        uint256[] memory _fees,
        string memory name,
        string memory version
    ) public initializer {
        __Context_init_unchained();
        __Ownable_init_unchained();
        __Pausable_init_unchained();

        hero = _hero;
        meg = _meg;
        maximumRankOfHero = _maximumRankOfHero;
        for (uint256 rank = 0; rank < _fees.length; ++rank) {
            _evolutionFees[rank + 1] = _fees[rank];
        }
        _HASHED_NAME = keccak256(bytes(name));
        _HASHED_VERSION = keccak256(bytes(version));
        DOMAIN_SEPARATOR = keccak256(
            abi.encode(
                keccak256(
                    "EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"
                ),
                _HASHED_NAME,
                _HASHED_VERSION,
                _getChainId(),
                address(this)
            )
        );
    }

    function _getChainId() internal view returns (uint256) {
        uint256 chainId;
        assembly {
            chainId := chainid()
        }
        return chainId;
    }

    function rankOf(uint256 tokenId) external view override returns (uint256) {
        return _heroRanks[tokenId];
    }

    function getEvolutionFee(uint256 tokenId)
        external
        view
        override
        returns (uint256)
    {
        require(
            _heroRanks[tokenId].add(1) <= maximumRankOfHero,
            "Hero evolution exceeds maximum"
        );
        return _evolutionFees[_heroRanks[tokenId].add(1)];
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpasue() external onlyOwner {
        _unpause();
    }

    function setEvolutionFee(uint256 rank, uint256 value)
        external
        override
        onlyOwner
    {
        require(
            rank <= maximumRankOfHero,
            "The rank must be less than or equal maximumRankOfHero"
        );
        require(value > 0, "The value must be bigger than 0");
        _evolutionFees[rank] = value;
        emit EvolutionFeeSet(_msgSender(), rank, value);
    }

    function updateMaximumRankOfHero(uint256 newMaximumRank)
        external
        onlyOwner
    {
        require(newMaximumRank > 0, "The newMaximumRank must be bigger than 0");
        maximumRankOfHero = newMaximumRank;
        emit MaximumRankOfHeroChanged(_msgSender(), newMaximumRank);
    }

    function evolve(uint256 tokenId, uint256 amount)
        external
        override
        whenNotPaused
    {
        require(
            hero.ownerOf(tokenId) == _msgSender(),
            "Evolve caller is not owner"
        );
        _evolve(tokenId, amount);
    }

    function evolvePermit(
        uint256 tokenId,
        uint256 amount,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external override whenNotPaused {
        require(deadline >= block.timestamp, "Expried");
        bytes32 digest =
            keccak256(
                abi.encodePacked(
                    "\x19\x01",
                    DOMAIN_SEPARATOR,
                    keccak256(
                        abi.encode(
                            PERMIT_TYPEHASH,
                            tokenId,
                            amount,
                            nonces[hero.ownerOf(tokenId)]++,
                            deadline
                        )
                    )
                )
            );
        address tokenOwner = hero.ownerOf(tokenId);
        address recoveredAddress = ecrecover(digest, v, r, s);
        require(
            recoveredAddress != address(0) && recoveredAddress == tokenOwner,
            "Invalid singature"
        );
        _evolve(tokenId, amount);
    }

    function _evolve(uint256 tokenId, uint256 amount) internal {
        uint256 _nextRank = _heroRanks[tokenId].add(1);
        require(
            _nextRank <= maximumRankOfHero,
            "Hero evolution exceeds maximum"
        );
        uint256 _evolveFee = _evolutionFees[_nextRank];
        require(
            amount >= _evolveFee,
            "The amount is not enough to pay the evolve fee"
        );

        meg.transferFrom(_msgSender(), address(this), amount);
        meg.burn(amount);
        _heroRanks[tokenId] = _nextRank;
        emit Evolved(hero.ownerOf(tokenId), tokenId, _nextRank);
    }
}

