contract FeeToReward is Ownable {
    IUniswapV2Router02 public immutable uniswapV2Router;
    address public receiver;

    constructor (IUniswapV2Router02 _uniswapV2Router) {
        uniswapV2Router = _uniswapV2Router;
        receiver = msg.sender;
    }

    function swapTokensForBNB(address tokenAddress, uint256 tokenAmount) public {
        TransferHelper.safeApprove(tokenAddress, address(uniswapV2Router), tokenAmount);

        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = tokenAddress;
        path[1] = uniswapV2Router.WETH();

        // make the swap
        uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            receiver,
            block.timestamp + 300
        );
    }

    function swapTokensForWBNB(address tokenAddress, uint256 tokenAmount) public {
        TransferHelper.safeApprove(tokenAddress, address(uniswapV2Router), tokenAmount);

        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = tokenAddress;
        path[1] = uniswapV2Router.WETH();

        // make the swap
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of WBNB
            path,
            receiver,
            block.timestamp + 300
        );
    }

    function swapTokensForTokens(address tokenFrom, address tokenTo, uint256 tokenAmount) public {
        TransferHelper.safeApprove(tokenFrom, address(uniswapV2Router), tokenAmount);

        // generate the uniswap pair path of tokens
        address[] memory path = new address[](2);
        path[0] = tokenFrom;
        path[1] = tokenTo;

        // make the swap
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of new token
            path,
            receiver,
            block.timestamp + 300
        );
    }

    function removeLiquidity(address pair, address tokenA, address tokenB, uint256 liquidity) public {
        TransferHelper.safeApprove(pair, address(uniswapV2Router), liquidity);

        uniswapV2Router.removeLiquidity(tokenA, tokenB, liquidity, 0, 0, address(this), block.timestamp + 300);
    }

    function transferETH(uint256 _value) public onlyOwner() {
        TransferHelper.safeTransferETH(receiver, _value);
    }

    function transferAsset(address _token, uint256 _value) public onlyOwner() {
        TransferHelper.safeTransfer(_token, receiver, _value);
    }

    function changeReceiver(address _receiver) public onlyOwner() {
        receiver = _receiver;
    }
}