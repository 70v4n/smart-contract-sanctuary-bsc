pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "../interface/Icreation_cattle.sol";

contract Market is Ownable {
    using SafeERC20 for IERC20;

    IStable public birthplace;

    // handle fee(percentage)
    uint public fee = 2;

    // by default,1 is main coin
    mapping(uint => address) public tradeType;
    mapping(uint => tradeCattle) public sellingCattle;
    mapping(uint => bool) public sellingStatus;
    mapping(address => uint[]) private _sellingList;

    constructor(address birthplace_)  {
        tradeType[1] = address(0);

        // TODO update to official address
        birthplace = IStable(birthplace_);
    }

    struct tradeCattle {
        uint tradeType;
        uint price;
    }


    event UpdateCattleStatus(uint indexed cattleId, bool indexed status, uint indexed tradeType, uint price);
    event Exchanged(uint indexed cattleId, uint indexed tradeType, uint indexed price, address seller, address buyer);


    // ------------------------------  only owner ---------------------------------------
    function newTradeType(uint id_, address bank_) external onlyOwner returns (bool) {
        require(tradeType[id_] == address(0),"Exist trade type");
        tradeType[id_] = bank_;
        return true;
    }

    function changeFee(uint fee_) external onlyOwner returns (bool) {
        require(fee_ > 0,"Invalid fee");
        fee = fee_;
        return true;
    }

    function updateCattleBirthplace(address addr_)  external onlyOwner returns (bool) {
        require(addr_ != address(0) && addr_ != address(birthplace), "wrong");
        birthplace = IStable(addr_);
        return true;
    }

    function divestFee(address payable payee_, uint value_,uint tradeType_) external onlyOwner returns (bool){
        if (tradeType_ == 1) {
            payee_.transfer(value_);
            return true;
        }
        require(tradeType[tradeType_] != address(0), "divest type");
        address bank = tradeType[tradeType_];
        IERC20(bank).transfer(payee_, value_);
        return true;
    }


    // ------------------------------  only owner end---------------------------------------

    function sell(uint cattleId_, uint tradeType_, uint price_) public {
        require(birthplace.ownerOf(cattleId_) == _msgSender(), "Not your cattle");
        require(price_ >= 100 && price_ <  1e8 * 1e18, "price");
        if (tradeType_ != 1) {
            require(tradeType[tradeType_] != address(0), "Invalid trade type");
        }

        require(!sellingStatus[cattleId_], "Selling cattle");
        require(birthplace.isApprovedForAll(_msgSender(), address(this)), "Not approve");

        sellingCattle[cattleId_] = tradeCattle ({
        tradeType : tradeType_,
        price : price_
        });

        uint[] memory list = _sellingList[_msgSender()];
        if (list.length == 0) {
            list = new uint[](1);
            list[0] = cattleId_;
            _sellingList[_msgSender()] = list;
        } else {
            _sellingList[_msgSender()].push(cattleId_);
        }

        sellingStatus[cattleId_] = true;
        emit UpdateCattleStatus(cattleId_, true, tradeType_, price_);
    }

    function cancelSell(uint index_) public {
        require(index_ < _sellingList[_msgSender()].length, "Invalid index");

        uint cattleId = _sellingList[_msgSender()][index_];
        require(birthplace.ownerOf(cattleId) == _msgSender(), "Not your cattle");
        require(sellingStatus[cattleId], "Not selling");

        _sellingList[_msgSender()].pop();

        delete sellingCattle[cattleId];
        delete sellingStatus[cattleId];
        emit UpdateCattleStatus(cattleId, false, 0, 0);
    }

    function mainCoinPurchase(uint cattleId_) public payable {
        require(sellingStatus[cattleId_], "Not selling");
        require(sellingCattle[cattleId_].tradeType == 1, "Main coin");

        address owner = birthplace.ownerOf(cattleId_);
        require(_msgSender() != owner, "Owner");

        tradeCattle memory info = sellingCattle[cattleId_];

        uint handleFee = info.price / 100 * fee;
        uint amount = info.price - handleFee;

        require(info.price == msg.value, "Value");

        payable(address(this)).transfer(msg.value);
        payable(owner).transfer(amount);

        purchaseProcess(cattleId_, info.tradeType, info.price);
    }

    function erc20Purchase(uint cattleId_) public {
        require(sellingStatus[cattleId_], "Not selling");
        require(sellingCattle[cattleId_].tradeType != 1, "erc20");

        address owner = birthplace.ownerOf(cattleId_);
        require(_msgSender() != owner, "Owner");

        tradeCattle memory info = sellingCattle[cattleId_];

        uint handleFee =  info.price / 100 * fee;
        uint amount = info.price - handleFee;

        address banker = tradeType[info.tradeType];
        IERC20(banker).transferFrom(_msgSender(), owner, amount);
        IERC20(banker).transferFrom(_msgSender(), address(this), handleFee);

        purchaseProcess(cattleId_, info.tradeType, info.price);
    }

    function purchaseProcess(uint cattleId_, uint tradeType_, uint price_) internal {
        address owner = birthplace.ownerOf(cattleId_);
        uint length = _sellingList[owner].length;

        if (length > 1) {
            uint[] memory list = new uint[](length - 1);
            uint idx = 0;
            for (uint i = 0; i < length; i++) {
                if (_sellingList[owner][i] != cattleId_) {
                    list[idx] =  _sellingList[owner][i];
                }
            }
            _sellingList[owner] = list;
        } else {
            delete _sellingList[owner];
        }

        birthplace.safeTransferFrom(owner, _msgSender(), cattleId_);

        delete sellingCattle[cattleId_];
        delete sellingStatus[cattleId_];

        emit UpdateCattleStatus(cattleId_, false, 0, 0);
        emit Exchanged(cattleId_, tradeType_, price_, owner, _msgSender());
    }


    function getSellingList(address addr_) public view returns (uint[] memory) {
        return _sellingList[addr_];
    }

    receive() external payable {}
}

