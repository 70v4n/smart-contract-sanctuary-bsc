interface IRandoms {
    // Views
    function getRandomSeed(address user) external view returns (uint256 seed);
    function getRandomSeedUsingHash(address user, bytes32 hash) external view returns (uint256 seed);
}


contract BNBHero is IERC721Receiver, Ownable {
    using SafeMath for uint256;
    IRandoms public randoms;
    IBNBHCharacter public characters;
    IBEP20 public bnbhToken;
    IBNBHPool public bnbhPool;
    uint256 public characterPrice = 5000 * 10 ** 18;
    uint256 public levelUpPrice = 100 * 10 ** 18;
    uint256 public expeditPrice = 500 * 10 ** 18;
    IPancakeswapV2Router02 public pancakeswapV2Router;
    address public pancakeswapV2Pair;
    address public bnbPoolAddress;
    mapping (address => uint256) public balances;
    mapping (address => uint256) public unLockTime;
    uint256 public firstLockTime = 48 * 3600;
    uint256 private constant MAX = ~uint256(0);
    uint256[12] public baseTownPrices = [1200 * 10 ** 18, 1200 * 10 ** 18, 2500 * 10 ** 18,  1200 * 10 ** 18, 1200 * 10 ** 18, 2500 * 10 ** 18, 1000 * 10 ** 18, 1000 * 10 ** 18, 2000 * 10 ** 18, 1000 * 10 ** 18, 1000 * 10 ** 18, 2000 * 10 ** 18];
    
    address public burnAddress = 0xD46D40fBC28BE235C058f9a9214869FC4F5A53bB;
    bool public createdPrizeHeroes = false;
    event UpdatedCharacterPrice(uint256 price);
    event UpdatedTokenContract(address tokenAddress);
    event UpdatedCharacterContract(address characterAddress);
    event UpdatedBNBPoolAddress(address account);
    event UpgradedTown(address player, uint8 townType, uint8 level);
    event UpdatedFirstLockTime(uint256 lockTime);
    event Fight(address player, uint256 _attackingHero, uint256 enemyType, uint256 rewards, uint256 xpGained, uint256 hpLoss);
    event ClaimedRewards(address player, uint256 amount);
    event ExpeditedHero(address player, uint256 _heroId);
    event CreatedHero(address player, uint256 _heroId);
    event UpdatedBurnAddress(address account);
    event UpdatedPrizeAddress(address account);
    event UpdatedExpeditePrice(uint256 price);
    event UpdatedLevelUpPrice(uint256 price);
    event CreatedHeroForPrize(address account, uint256[] heroIds);
    event UnlockedLevel(address player, uint256 _heroId, uint256 level);
    constructor() {
        // mainnet
        // randoms = IRandoms(0x413A7553Bfce459FB69ebE5a0587d6C5447BA3c5);        
        // testnet
        randoms = IRandoms(0xbAD230340151f34401Ef4588b3Ea85B1858aE820); 
        //Test Net
        IPancakeswapV2Router02 _pancakeswapV2Router = IPancakeswapV2Router02(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);
        //Mian Net
        //IPancakeswapV2Router02 _pancakeswapV2Router = IPancakeswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        
        pancakeswapV2Pair = IPancakeswapV2Factory(_pancakeswapV2Router.factory())
            .createPair(address(this), _pancakeswapV2Router.WETH());

        // set the rest of the contract variables
        pancakeswapV2Router = _pancakeswapV2Router;
    }
    function setBurnAddress(address account) public onlyOwner {
        burnAddress = account;
        emit UpdatedBurnAddress(account);
    }
    function setBNBPoolAddress(address account) public onlyOwner {
        bnbPoolAddress = account;
        bnbhPool = IBNBHPool(account);
        emit UpdatedBNBPoolAddress(account);
    }
    function setCharacterPrice (uint256 price) public onlyOwner{
        characterPrice = price;
        emit UpdatedCharacterPrice(price);
    }
    function setBNBHTokenContract(address tokenAddress) public onlyOwner {
        bnbhToken = IBEP20(tokenAddress);
        emit UpdatedTokenContract(tokenAddress);
    }
    function setCharacterContract(address characterAddress) public onlyOwner {
        characters = IBNBHCharacter(characterAddress);
        emit UpdatedCharacterContract(characterAddress);
    }
    function setFirstLockTime(uint256 lockTime) public onlyOwner {
        firstLockTime = lockTime;
        emit UpdatedFirstLockTime(lockTime);
    }
    function setExpeditePrice(uint256 price) public onlyOwner {
        expeditPrice = price;
        emit UpdatedExpeditePrice(price);
    }
    function setLevelUpPrice(uint256 price) public onlyOwner {
        levelUpPrice = price;
        emit UpdatedLevelUpPrice(price);
    }
    function createHeroesForPrize() public onlyOwner {
        require(createdPrizeHeroes == false, "Can not create more than 10 Heroes for prize");
        uint256[] memory heroIds = new uint256[](10);
        for (uint i = 0; i < 10; i++) {
            uint256 seed = randoms.getRandomSeed(address(this));
            // uint256 rand = uint256(keccak256(abi.encodePacked(block.difficulty, block.timestamp, i * 7, seed)));
            uint256 heroId = characters.mint(address(this), seed * 7 * (i + 1));
            heroIds[i] = heroId;
        }
        createdPrizeHeroes = true;
        emit CreatedHeroForPrize(address(this), heroIds);
    }
    function sendPrizeHero(address account) public onlyOwner {        
        uint256 balance = characters.balanceOf(address(this));
        require(balance > 0);
        uint256 index = randoms.getRandomSeed(account).mod(balance);
        characters.safeTransferFrom(address(this), account, characters.tokenOfOwnerByIndex(address(this), index));
    }
    
    function heros() public view returns (Hero[] memory) {
        return characters.heros();
    }

    function getHero(uint256 _heroId, bool calcTown) public view returns (Hero memory) {        
        return characters.getHero(_heroId, calcTown);
    }

    function getHeroesByOwner(address account, bool calcTown) public view returns (Hero[] memory) {
        uint256 balance = characters.balanceOf(account);
        Hero[] memory heroes = new Hero[](balance);
        for(uint256 i = 0; i < balance; i ++) {
            heroes[i] = getHero(characters.tokenOfOwnerByIndex(account, i), calcTown);
        }
        return heroes;
    }
    
    function getTownsOfPlayer(address account) public view returns (Town[4] memory) {
        return characters.getTownsOfPlayer(account);
    }

    function getTownLevel(address account, uint8 townType) public view returns (uint256) {        
        return characters.getTownLevel(account, townType);
    }

    function createNewHero() public {
        require(bnbhToken.balanceOf(msg.sender) >= characterPrice, "Insufficient BNBH balance");
        uint256 seed = randoms.getRandomSeed(msg.sender);
        uint256 heroId = characters.mint(msg.sender, seed);
        payForOperation(characterPrice);
        emit CreatedHero(msg.sender, heroId);
    }
    function payForOperation(uint256 amount) internal {
        bnbhToken.transferFrom(msg.sender, address(this), amount.div(2));
        swapTokensForEthAndSendToPool(amount.div(2));
        bnbhToken.transferFrom(msg.sender, burnAddress, amount.div(2));    
    }

    function unLockLevel(uint256 _heroId) public {
        require(bnbhToken.balanceOf(msg.sender) >= levelUpPrice, "Insufficient BNBH balance");        
        uint256 level = characters.unlockLevel(_heroId);
        payForOperation(levelUpPrice);
        emit UnlockedLevel(msg.sender, _heroId, level);
    }

    function unpackFightData(uint256 data) public pure returns(uint16, uint24, uint128) {
        uint16 hpLoss = uint16(data & 0xFFFF);
        uint24 xpGained = uint24((data >> 16) & 0xFFFFFF);
        uint128 bnbRewards = uint128((data >> 40) & 0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF);
        return (hpLoss, xpGained, bnbRewards);
    }
    
    function fight(uint256 _attackingHero, uint enemyType) public {        
        (uint256 fightData)= characters.fight(msg.sender, _attackingHero, enemyType, randoms.getRandomSeed(msg.sender));
        (uint16 hpLoss, uint24 xpGained, uint128 bnbRewards) = unpackFightData(fightData);
        if (balances[msg.sender] == 0) {
            unLockTime[msg.sender] = block.timestamp + firstLockTime;
        }
        balances[msg.sender] = balances[msg.sender].add(bnbRewards);
        emit Fight(msg.sender, _attackingHero, enemyType, bnbRewards, xpGained, hpLoss);
    }

    function expediteHero(uint256 _heroId) public {
        require(bnbhToken.balanceOf(msg.sender) >= expeditPrice, "Insufficient BNBH balance");
        characters.expediteHero(_heroId);
        payForOperation(expeditPrice);    
        emit ExpeditedHero(msg.sender, _heroId);
    }
    
    function upgradeTown(uint8 townType) public {
        require (townType < 4, "There is no town");
        uint8 level = characters.getTownLevel(msg.sender, townType);
        require (level < 3, "Town was fully upgraded");
        uint256 priceForUpdate = baseTownPrices[townType * 3 + level];        
        require(bnbhToken.balanceOf(msg.sender) >= priceForUpdate, "Insufficient BNBH balance");
        characters.upgradeTown(msg.sender, townType);
        payForOperation(priceForUpdate);     
        emit UpgradedTown(msg.sender, townType, level + 1);
    }
    
    function claimRewards() public {
        require(balances[msg.sender] > 0, "Insufficient balance");
        require(block.timestamp > unLockTime[msg.sender], "You can not claim at this time");
        uint256 timespan = block.timestamp - unLockTime[msg.sender];
        uint256 taxFee = 0;
        if (timespan.mul(2) < 20 * 86400) {
            taxFee = 20 - timespan.div(86400).mul(2);
        }
        uint256 amount = balances[msg.sender].mul(100 - taxFee).div(100);
        bnbhPool.claimBNB(msg.sender, amount);
        balances[msg.sender] = 0;
        emit ClaimedRewards(msg.sender, amount);
    }

    function swapTokensForEthAndSendToPool(uint256 tokenAmount) private {
        // generate the pancakeswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = address(bnbhToken);
        path[1] = pancakeswapV2Router.WETH();

        // make the swap
        pancakeswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            bnbPoolAddress,
            block.timestamp
        );
    }

     function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external override pure returns (bytes4) {
        return this.onERC721Received.selector;
    }
}

