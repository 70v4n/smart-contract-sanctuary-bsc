import "Context.sol";
import "Ownable.sol";
import "Pausable.sol";
import "ERC721.sol";
import "IERC20.sol";

contract Character is ERC721, Ownable, Pausable {
    address public DVERSE;
    address public saleToken = address(0);
    uint256 internal currentTokenID = 0;

    uint256 public fusionFee = 1e18;
    uint256 public bnbSalePrice = 1e18;
    uint256 public dverseSalePrice = 1e18;

    uint256[] public charactersOnSale;

    bool public isSaleOn = false;

    event CharacterCreated(
        uint256 indexed charId,
        address receiver,
        uint256 timeCreated
    );

    event CharacterPurchased(
        uint256 indexed charId,
        address receiver,
        uint256 timeBought
    );

    event CharacterFused(
        address indexed receiver,
        uint256 level1,
        uint256 level2,
        uint256 level3,
        uint256 newCharacter
    );

    enum Rarity {
        COMMON,
        UNCOMMON,
        RARE
    }

    struct CharacterInfo {
        string name;
        uint256 level;
        Rarity rarity;
        uint256 accuracy;
        uint256 power;
        uint256 skill;
    }

    mapping(uint256 => CharacterInfo) public charInfo;

    constructor(address _dverse) ERC721("DefVerse Characters", "DVERSENFT") {
        DVERSE = _dverse;
    }

    function getCharacterInfo(uint256 charId)
        external
        returns (CharacterInfo memory character)
    {
        return charInfo[charId];
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function setFusionFee(uint256 _fusionFee) external onlyOwner {
        require(_fusionFee > 0, "Fusion fee must be greater than 0");
        fusionFee = _fusionFee;
    }

    function setBnbSalePrice(uint256 _bnbSalePrice) external onlyOwner {
        require(_bnbSalePrice > 0, "Sale price must be greater than 0");
        bnbSalePrice = _bnbSalePrice;
    }

    function setDverseSalePrice(uint256 _dverseSalePrice) external onlyOwner {
        require(_dverseSalePrice > 0, "Sale price must be greater than 0");
        dverseSalePrice = _dverseSalePrice;
    }

    function setIsSaleOn(bool _isSaleOn) external onlyOwner {
        isSaleOn = _isSaleOn;
    }

    function switchSaleToken() external onlyOwner {
        saleToken = saleToken == address(0) ? DVERSE : address(0);
    }

    function fuseCharacters(
        uint256 char1,
        uint256 char2,
        uint256 char3
    ) external whenNotPaused {
        require(
            char1 != char2 && char1 != char3 && char2 != char3,
            "Repeated character"
        );

        require(ownerOf(char1) == _msgSender(), "Do not own character 1");
        require(charInfo[char1].level == 1, "1st character should be level 1");

        require(ownerOf(char2) == _msgSender(), "Do not own character 2");
        require(charInfo[char2].level == 2, "2nd character should be level 2");

        require(ownerOf(char3) == _msgSender(), "Do not own character 3");
        require(charInfo[char3].level == 3, "3rd character should be level 3");

        IERC20(DVERSE).transferFrom(_msgSender(), owner(), fusionFee);
        _burn(char1);
        _burn(char2);
        _burn(char3);

        CharacterInfo memory char4 = CharacterInfo(
            charInfo[char3].name,
            4,
            charInfo[char3].rarity,
            _random(61, 75),
            _random(61, 75),
            charInfo[char3].skill
        );
        uint256 id = _createCharacter(_msgSender(), char4);
        emit CharacterFused(_msgSender(), char1, char2, char3, id);
    }

    function buyCharacter() external payable whenNotPaused {
        require(isSaleOn, "Sale is not running");

        if (saleToken == address(0)) {
            require(msg.value == bnbSalePrice, "Incorrect message value.");
            payable(owner()).transfer(bnbSalePrice);
