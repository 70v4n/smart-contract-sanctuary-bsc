pragma solidity ^0.8.0;

import "Context.sol";
import "Ownable.sol";
import "Pausable.sol";
import "IERC20.sol";
import "IERC721.sol";
import "IERC721Receiver.sol";
import "Character.sol";

contract Battle is Ownable, Pausable, IERC721Receiver {
    IERC20 public DVERSE;
    Character public characters;

    uint256 public baseReward;
    uint256 public fee = 20; // i.e. 20 == 20%
    uint256 public fightCooldown = 3 hours;
    uint256 public claimCooldown = 7 days;

    uint256[4] private enemies = [15, 30, 45, 60];

    event CharacterAdded(address addedBy, uint256 charId);
    event CharacterRemoved(address removedBy, uint256 charId);
    event Combat(
        uint256 charId,
        uint256 enemy,
        address player,
        uint256 winChance,
        uint256 reward
    );

    struct RosteredCharacter {
        uint256 charId;
        uint256 lastAttack;
    }

    struct Reward {
        uint256 amount;
        uint256 timeRewarded;
    }

    mapping(address => RosteredCharacter[]) private rosters;
    mapping(address => Reward[]) private rewards;

    constructor(
        Character _Character,
        IERC20 _defverse,
        uint256 _baseReward
    ) Pausable() {
        characters = _Character;
        DVERSE = _defverse;
        baseReward = _baseReward;
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return
            bytes4(
                keccak256("onERC721Received(address,address,uint256,bytes)")
            );
    }

    function setBaseReward(uint256 _baseReward) external onlyOwner {
        baseReward = _baseReward;
    }

    function setFightCooldown(uint256 _fightCooldown) external onlyOwner {
        fightCooldown = _fightCooldown;
    }

    function setClaimCooldown(uint256 _claimCooldown) external onlyOwner {
        claimCooldown = _claimCooldown;
    }

    function setEnemies(uint256[4] calldata _enemies) external onlyOwner {
        enemies = _enemies;
    }

    function setFee(uint256 _fee) external onlyOwner {
        require(_fee < 100, "Fee must be less than 100%");
        fee = _fee;
    }

    function addCharacter(uint256 charId) external {
        require(rosters[_msgSender()].length < 10, "Exceeds 10 character max");
        characters.safeTransferFrom(_msgSender(), address(this), charId);
        rosters[_msgSender()].push(
            RosteredCharacter({charId: charId, lastAttack: 0})
        );

        emit CharacterAdded(_msgSender(), charId);
    }

    function removeCharacter(uint256 charIndex) external {
        uint256 charId = rosters[_msgSender()][charIndex].charId;
        require(
            rosters[_msgSender()][charIndex].lastAttack <=
                block.timestamp - 3600,
            "Character is on cooldown"
        );
        characters.safeTransferFrom(address(this), _msgSender(), charId);

        rosters[_msgSender()][charIndex] = rosters[_msgSender()][
            rosters[_msgSender()].length - 1
        ];
        rosters[_msgSender()].pop();
        emit CharacterRemoved(_msgSender(), charId);
    }

    function combat(uint256 charIndex, uint256 enemyIndex) external {
        RosteredCharacter memory rosterChar = rosters[_msgSender()][charIndex];
        require(
            rosterChar.lastAttack <= block.timestamp,
            "Character is on cooldown"
        );
        if (rosterChar.lastAttack > block.timestamp - 10800) {
            rosters[_msgSender()][charIndex].lastAttack =
                block.timestamp +
                3600;
        } else {
            rosters[_msgSender()][charIndex].lastAttack = block.timestamp;
        }
        Character.CharacterInfo memory char = characters.getCharacterInfo(
            rosterChar.charId
        );

        uint256 winChance = _getWinChance(char.accuracy, enemies[enemyIndex]);

        uint256 reward;
        if (_random(0, 100) <= winChance) {
            reward = _getReward(winChance, char.skill, char.power);
            rewards[_msgSender()].push(Reward(reward, block.timestamp));
        }
        emit Combat(
            rosterChar.charId,
            enemyIndex,
            _msgSender(),
            winChance,
            reward
        );
    }

    function claimAll() external {
        Reward[] memory userRewards = rewards[_msgSender()];
        uint256 totalTaxed;
        uint256 totalUntaxed;
        for (uint256 i = 0; i < userRewards.length; i++) {
            if (userRewards[i].timeRewarded < block.timestamp - 7 days) {
                totalUntaxed = totalUntaxed + userRewards[i].amount;
            } else {
                totalTaxed = totalTaxed + userRewards[i].amount;
            }
        }
        delete rewards[_msgSender()];
        uint256 afterTax = (totalTaxed * (100 - fee)) / 100;
        uint256 total = totalUntaxed + afterTax;
        require(
            DVERSE.balanceOf(address(this)) >= total,
            "Insufficient DVERSE"
        );
        DVERSE.transfer(_msgSender(), total);
    }

    function claimUntaxed() external {
        Reward[] memory userRewards = rewards[_msgSender()];
        uint256 totalUntaxed;
        uint256 i = 0;
        uint256 len = rewards[_msgSender()].length;
        while (i < len) {
            if (userRewards[i].timeRewarded < block.timestamp - 7 days) {
                totalUntaxed = totalUntaxed + userRewards[i].amount;
                rewards[_msgSender()][i] = rewards[_msgSender()][len - 1];
                rewards[_msgSender()].pop();
                len--;
            } else {
                i++;
            }
        }
        if (totalUntaxed == 0) return;
        require(
            DVERSE.balanceOf(address(this)) >= totalUntaxed,
            "Insufficient DVERSE"
        );
        DVERSE.transfer(_msgSender(), totalUntaxed);
    }

    function emergencyRewardWithdrawal(uint256 _amount) external onlyOwner {
        require(
            DVERSE.balanceOf(address(this)) >= _amount,
            "Insufficient DVERSE"
        );
        DVERSE.transfer(owner(), _amount);
    }

    function getRoster(address user)
        public
        view
        returns (RosteredCharacter[] memory)
    {
        return rosters[user];
    }

    function getRewards(address user) public view returns (Reward[] memory) {
        return rewards[user];
    }

    function _getCharIndex(RosteredCharacter[] memory chars, uint256 charId)
        private
        pure
        returns (uint256 index)
    {
        for (uint256 i = 0; i < chars.length; i++) {
            if (chars[i].charId == charId) {
                return i;
            }
        }
    }

    function _random(uint256 bottom, uint256 top)
        private
        view
        returns (uint256)
    {
        return
            bottom +
            (uint256(
                keccak256(abi.encodePacked(block.timestamp, block.difficulty))
            ) % (top + 1));
    }

    function _getWinChance(uint256 accuracy, uint256 defense)
        private
        pure
        returns (uint256 winChance)
    {
        if (accuracy < defense) {
            return (accuracy * 100) / (2 * (defense + 1));
        } else {
            // 50% win chance when accuracy and defense are equal.
            return 100 - (((defense + 1) * 100) / (2 * (accuracy + 1)));
        }
    }

    function _getReward(
        uint256 winChance,
        uint256 power,
        uint256 skill
    ) private view returns (uint256 reward) {
        // skill + power must be multiplied by 100 to match units of winChance.
        return
            baseReward *
            ((100 + (100 - winChance) + ((skill + power) * 100)) / 100);
    }
}

