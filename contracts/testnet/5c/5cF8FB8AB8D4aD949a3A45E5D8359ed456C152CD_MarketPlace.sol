/* We inherit ERC1155Holder to include the implementation of 
functions `onERC1155Received()` and `onERC1155BatchReceived()`
without it we wouldn't be able to receive the tokens via safeTransferFrom */
contract MarketPlace is ERC1155Holder, Context, Ownable {

    struct SaleInfo {
        uint256 amount;
        uint256 price;
        address seller;
    }
    
    // from saleID to SaleInfo
    // the saleID is of the form keccak256(abi.encode(msg.sender, _tokenAddress, _id))
    mapping (bytes32 => SaleInfo) public inventory;

    // the fee of tokens sent to the original contract 
    uint256 sellfee = 100 * 10**9;
    address originalTokenContract;
    address NFTMintingContract;
    bool allowOtherNFTContracts = false;

    // allow the owner to set the new fee and also the new original contract address to receive payment for the fee's
    function setSellFees(uint256 newSellFee) public onlyOwner {
        sellfee = newSellFee;
    }

    function setTokenOriginalContract(address newContract) public onlyOwner {
        originalTokenContract = newContract;
    }

    function setNFTContract(address newNftContract) public onlyOwner {
        NFTMintingContract = newNftContract;
    }

    function setCanAcceptOtherNFTs(bool NewNFTAccept) public onlyOwner {
        allowOtherNFTContracts = NewNFTAccept;
    }

    function showOriginalContract() public view returns(address) {
        return originalTokenContract;
    }

    function showNftContract() public view returns(address) {
        return NFTMintingContract;
    }

    function ShowCanAcceptOtherNFTs() public view returns(bool) {
        return allowOtherNFTContracts;
    }


    event ListItem(address indexed seller,address indexed tokenAddress,uint256 id,uint256 amount,uint256 price);
    event BuyItem(address indexed buyer,address indexed seller,address indexed tokenAddress,uint256 id,uint256 amount,uint256 price);


    function listItem(address _tokenAddress, uint256 _id, uint256 _amount, uint256 _price, uint256 _userkey) public {
        require(_amount != 0, "MarketPlace: nothing to list.");
        if (!allowOtherNFTContracts)
            require(_tokenAddress == NFTMintingContract, "Only NFT's minted with the allowed contract are allowed");

        bytes32 saleID = keccak256(abi.encode(_tokenAddress, _id, _userkey));
        SaleInfo storage saleInfo = inventory[saleID];
        require(saleInfo.amount == 0, "MarketPlace: cancel existing listing first.");
        saleInfo.amount = _amount;
        saleInfo.price = _price;
        saleInfo.seller = msg.sender;
        
        IERC1155(_tokenAddress).safeTransferFrom(msg.sender, address(this), _id, _amount, "");
        emit ListItem(msg.sender, _tokenAddress, _id, _amount, _price);
    }

    function buyItem(address _tokenAddress, uint256 _id, uint256 _amount, uint256 _userkey) public {
        require(_amount != 0, "MarketPlace: nothing to buy.");
        bytes32 saleID = keccak256(abi.encode(_tokenAddress, _id, _userkey));
        SaleInfo storage saleInfo = inventory[saleID];

        require(saleInfo.amount >= _amount, "MarketPlace: not enough to sell.");
        require(_amount <= saleInfo.amount, "MarketPlace: not enough to sell.");

        uint _price = saleInfo.price - sellfee;
        uint totalPrice = _price * _amount;
        uint totalFee = sellfee * _amount;
        saleInfo.amount = saleInfo.amount - _amount;
        address seller = saleInfo.seller;

        IERC20 paymentToken = IERC20(originalTokenContract);
        uint256 buyerFunds = paymentToken.balanceOf(msg.sender);
        require(buyerFunds >= totalPrice, "not enough funds");

        paymentToken.transferFrom(msg.sender, originalTokenContract, totalFee);
        paymentToken.transferFrom(msg.sender, seller, totalPrice);

        IERC1155(_tokenAddress).safeTransferFrom(address(this), msg.sender, _id, _amount, "");
        emit BuyItem(msg.sender, seller, _tokenAddress, _id, _amount, _price);
    }

}