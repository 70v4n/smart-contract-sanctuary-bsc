contract Receiver {
    //using library
    using SafeMath for uint256;
    // Constants
    address public owner; // The owner of the contract
    IERC20Token public ShaCoin; // The ShaCoin token contract
    address public constant blackHole = 0x000000000000000000000000000000000000000d; // hole address
    // Variables
    uint256 percent = 5000;
    address public dev;
    uint256 public currentQuantity;
    IWrap public wrap;
    IUniswapV2Router02 uniswapV2Router;

    
    // Events

    constructor (address _dev, IERC20Token shacoin_) public {
        owner = msg.sender;
        dev = _dev;
        ShaCoin = shacoin_;
        uniswapV2Router = IUniswapV2Router02(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);
    }

     //to recieve ETH from uniswapV2Router when swaping
    event Received(address, uint);
    receive() external payable {
        emit Received(msg.sender, msg.value);
    }

    // Parameters:
    // Recipient: the AVAX address to which the PFX tokens should be sent to

    function setSwapRouter(address router) public {
        require(owner == msg.sender, "must owner of contract");
        uniswapV2Router = IUniswapV2Router02(router);
    }

    function setWrap(IWrap _wrap) public {
        require(owner == msg.sender, "must owner of contract");
        wrap = _wrap;
    }

    function setPercent(uint256 _percent) public {
        require(owner == msg.sender, "must owner of contract");
        percent = _percent;
    }

    bool private inSwapAndLiquify=false;

    modifier lockTheSwap {
        if (inSwapAndLiquify) {
            revert("Being swap");
        }

        inSwapAndLiquify = true;
        _;
        inSwapAndLiquify = false;
    }

    event SwapAndLiquify(
        uint256 tokensSwapped,
        uint256 ethReceived,
        uint256 tokensIntoLiqudity
    );

   function swapAndLiquify(uint256 contractTokenBalance) private lockTheSwap {
        // split the contract balance into halves
        uint256 half = contractTokenBalance.div(2);
        uint256 otherHalf = contractTokenBalance.sub(half, "sub half");

        // capture the contract's current ETH balance.
        // this is so that we can capture exactly the amount of ETH that the
        // swap creates, and not make the liquidity event include any ETH that
        // has been manually sent to the contract
        uint256 initialBalance = address(this).balance;

        // swap tokens for ETH
        swapTokensForEth(half); // <- this breaks the ETH -> HATE swap when swap+liquify is triggered

        // how much ETH did we just swap into?
        uint256 newBalance = address(this).balance.sub(initialBalance, "sub balance");

        // add liquidity to uniswap
        addLiquidity(otherHalf, newBalance);

        emit SwapAndLiquify(half, newBalance, otherHalf);
    }

    function swapTokensForEth(uint256 tokenAmount) private {
        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = address(ShaCoin);
        path[1] = uniswapV2Router.WETH();

        ShaCoin.approve(address(uniswapV2Router), tokenAmount);

        // make the swap
        uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );
    }

    function addLiquidity(uint256 tokenAmount, uint256 ethAmount) private {
        // approve token transfer to cover all possible scenarios
        ShaCoin.approve(address(uniswapV2Router), tokenAmount);

        // add the liquidity
        uniswapV2Router.addLiquidityETH{value: ethAmount}(
            address(ShaCoin),
            tokenAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            blackHole,
            block.timestamp
        );
    }

    function start() public {
        require(owner == msg.sender, "must owner of contract");
        if (currentQuantity == 0) {
            currentQuantity = ShaCoin.balanceOf(address(this));
        }
    }

    function setCurquan(uint256 quantity) public {
        require(owner == msg.sender, "must owner of contract");
        currentQuantity = quantity;
    }


    function fill(uint256 bnbAmount, uint256 shabAmount) public{
        require(owner == msg.sender, "must owner of contract");
        require(ShaCoin.balanceOf(address(this)) >= shabAmount, "shacoin is not sufficent");
        require(address(this).balance >= bnbAmount, "BNB is not sufficent");
        addLiquidity(shabAmount, bnbAmount);
        currentQuantity = currentQuantity.sub(shabAmount);
    }

    event REWARD(address,  uint256);
    function reward() public {
        require(ShaCoin.balanceOf(address(this)).sub(currentQuantity, "detect") > 0, "No supplied token");
        uint256 suppliedQuantity = ShaCoin.balanceOf(address(this)).sub(currentQuantity, "first");
        uint256 half = 0;
        uint256 otherHalf = 0;
        if (currentQuantity > 0) {
            half = suppliedQuantity.mul(percent).div(10**4);
            if (currentQuantity > half) {
                currentQuantity = currentQuantity.sub(half, "sub currentQuantity half"); // update remain currentQuantity
                swapAndLiquify(half.mul(2));
            }else {
                half = 0;
            }

        }

        otherHalf = suppliedQuantity.sub(half, "suppliedQuantity");
        ShaCoin.transfer(dev, otherHalf);
        emit REWARD(dev, otherHalf);
    }

}