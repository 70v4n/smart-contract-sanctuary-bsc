pragma solidity ^0.8.4;

import "./access/Ownable.sol";
import "./interfaces/IRugZombieNft.sol";
import "./interfaces/IBEP20.sol";
import "./interfaces/IPriceConsumerV3.sol";
import "./libraries/SafeBEP20.sol";

contract RewardsManagement is Ownable {
    using SafeBEP20 for IBEP20;

    enum RewardType { NFT, TOKEN }

    struct RewardInfo {
        RewardType  rewardType;                     // The type of reward this is
        address     rewardAddress;                  // The address of the reward NFT/token
        uint256     tokenAmount;                    // The amount of tokens to send for token rewards
        uint256     fee;                            // The fee in USD to charge for this reward
        uint        maxClaims;                      // The maximum amount of claims allowed in total (set to 0 to diable)
        uint        totalClaims;                    // How many times this reward has been claimed
        bool        multipleClaims;                 // Flag to allow this to be claimed multiple times
        bool        isSet;                          // Flag for when the reward index has been set

        mapping (address => bool) allowedClaims;    // Mapping for addresses allowed to claim this reward
        mapping (address => bool) hasClaimed;       // Mapping for addresses that have claimed this reward
        mapping (address => uint) claimedCount;     // Mapping to count how many times an address has claimed this reward
    }

    address             public gameMaster;          // The game master
    address             public treasury;            // The treasury
    IPriceConsumerV3    public priceConsumer;       // Price consumer to convert USD to BNB

    mapping (uint => RewardInfo) public rewards;    // Mapping of the rewards

    // Events for when rewards are claimed
    event NftReward(address indexed player, address indexed nft, uint tokenId);
    event TokenReward(address indexed player, address indexed token, uint256 tokens);

    // Constructor for contructing things
    constructor (address _gameMaster, address _treasury, address _priceConsumer) {
        gameMaster = _gameMaster;
        treasury = _treasury;
        priceConsumer = IPriceConsumerV3(_priceConsumer);
    }

    // Modifier to ensure only the game engine can set reward allowances
    modifier onlyGameMaster() {
        require(msg.sender == gameMaster, 'Only the Game Master can call this function');
        _;
    }

    // Function for the owner to change the game master address
    function setGameMaster(address _gameMaster) public onlyOwner() { gameMaster = _gameMaster; }

    // Function for the owner to change the treasury address
    function setTreasury(address _treasury) public onlyOwner() { treasury = _treasury; }

    // Function for the owner to change the price consumer address
    function setPriceConsumer(address _priceConsumer) public onlyOwner() { priceConsumer = IPriceConsumerV3(_priceConsumer); }

    // Function to get the fee for a reward in BNB
    function feeInBnb(uint _id) public view returns (uint256) { return priceConsumer.usdToBnb(rewards[_id].fee); }

    // Function to check the status of a user's rewards
    function checkReward(uint _id, address _player) public view returns (bool, bool) {
        bool canClaim = rewards[_id].allowedClaims[_player];
        bool hasClaimed = rewards[_id].hasClaimed[_player];
        return (canClaim, hasClaimed);
    }

    // Function for the owner to set the values for a reward
    function setReward(
        uint _id, 
        uint _type, 
        address _address, 
        uint256 _tokenAmount, 
        uint256 _fee, 
        uint _maxClaims, 
        bool _multipleClaims) 
    public onlyOwner() {
        require(!rewards[_id].isSet, 'Reward has already been setup');
        rewards[_id].rewardType = RewardType(_type);
        rewards[_id].rewardAddress = _address;
        rewards[_id].tokenAmount = _tokenAmount;
        rewards[_id].fee = _fee;
        rewards[_id].maxClaims = _maxClaims;
        rewards[_id].multipleClaims = _multipleClaims;
        rewards[_id].isSet = true;
    }

    // Function for the game master to allow a player to claim a reward
    function allowClaim(uint _id, address _player) public onlyGameMaster() {
        require(!rewards[_id].allowedClaims[_player], 'Player is already eligible for this reward');
        require(!rewards[_id].hasClaimed[_player] || rewards[_id].multipleClaims, 'Player has already claimed this reward');        
        rewards[_id].allowedClaims[_player] = true;
    }

    // Function for a player to claim a reward
    function claim(uint _id) public payable {
        require(rewards[_id].allowedClaims[msg.sender], 'You are not eligible for this reward');
        require(msg.value >= feeInBnb(_id), 'Insufficient BNB sent to cover fee');
        require(rewards[_id].maxClaims == 0 || rewards[_id].totalClaims < rewards[_id].maxClaims, 'Maximum amount of this reward have already been claimed');

        _safeTransfer(treasury, msg.value);

        if (rewards[_id].rewardType == RewardType.NFT) _claimNft(_id);
        else _claimTokens(_id);

        rewards[_id].allowedClaims[msg.sender] = false;
        rewards[_id].hasClaimed[msg.sender] = true;
        rewards[_id].claimedCount[msg.sender]++;
        rewards[_id].totalClaims++;
    }

    // Function to handle the minting of reward NFTs
    function _claimNft(uint _id) private {
        IRugZombieNft nft = IRugZombieNft(rewards[_id].rewardAddress);
        uint tokenId = nft.reviveRug(msg.sender);        
        emit NftReward(msg.sender, rewards[_id].rewardAddress, tokenId);
    }

    // Function to handle the transfer of reward tokens
    function _claimTokens(uint _id) private {
        IBEP20 token = IBEP20(rewards[_id].rewardAddress);
        require(token.balanceOf(address(this)) >= rewards[_id].tokenAmount, 'Insufficient reward token balance');
        token.safeTransfer(msg.sender, rewards[_id].tokenAmount);
        emit TokenReward(msg.sender, rewards[_id].rewardAddress, rewards[_id].tokenAmount);
    }

    // Function to safely transfer the fee to the treasury
    function _safeTransfer(address _recipient, uint _amount) private {
        (bool _success, ) = _recipient.call{value: _amount}("");
        require(_success, "BNB transfer failed");
    }
}

