pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract TokenTransfer is Ownable {
    uint256 private constant MAX = ~uint256(0);

    mapping (address => bool) private receiverAddress;

    // set default to BUSD 0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56
    // busd on beta 0xeD24FC36d5Ee211Ea25A80239Fb8C4Cfd80f12Ee
    IERC20 public ERC20Interface = IERC20(0xeD24FC36d5Ee211Ea25A80239Fb8C4Cfd80f12Ee);

    function approveAmount(address _to, uint256 _amt) public {
        ERC20Interface.approve(_to, _amt);
    }

    function transferAmount(address _to, uint256 amount) public {
        require(existReceiver(_to), "Receiver Address not fund");
        uint256 dexBalance = getBalanceOf(msg.sender);
        require(amount > 0, "You need to send some tokens");
        require(amount <= dexBalance, "Not enough tokens in the reserve");

        //uint256 allowance = ERC20Interface.allowance(msg.sender, _to);
        //require(allowance >= amount, "Check the token allowance");

        ERC20Interface.transferFrom(msg.sender, _to, amount);
    }

    function getAllowance(address _to) public view returns (uint256) {
        return ERC20Interface.allowance(msg.sender, _to);
    }

    function setERC20Token(address _token) public onlyOwner {
        ERC20Interface = IERC20(_token);
    }

    function getBalanceOf(address _addr) public view virtual returns (uint256) {
        return ERC20Interface.balanceOf(_addr);
    }

    function existReceiver(address _receiver) public view returns(bool) {
        return receiverAddress[_receiver];
    }

    function addReceiver(address _receiver) public onlyOwner {
        if (!existReceiver(_receiver)) {
            receiverAddress[_receiver] = true;
        }
    }

    function addReceivers(address[] calldata _receivers) public onlyOwner {
        for (uint256 i = 0; i < _receivers.length; i++) {
            if (!existReceiver(_receivers[i])) {
                receiverAddress[_receivers[i]]= true;
            }
        }
    }

    function removeReceiver(address _receiver) public onlyOwner {
        if (existReceiver(_receiver)) {
            receiverAddress[_receiver] = false;
        }
    }
}

