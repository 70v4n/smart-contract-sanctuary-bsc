contract LoserUyangTreasury {
    address public contractOwner;

    address public uayngNftGates;
    address public uyangStoneToken;
    address public lowbToken;

    uint256 public TYPE_GATE_1 = 1;
    uint256 public TYPE_GATE_2 = 2;
    uint256 public TYPE_GATE_3 = 3;
    uint256 public TYPE_GATE_4 = 4;
    uint256 public TYPE_GATE_5 = 5;
    uint256 public TYPE_GATE_6 = 6;
    uint256 public TYPE_GATE_7 = 7;
    uint256 public TYPE_GATE_8 = 8;
    uint256 public TYPE_GATE_9 = 9;
    uint256 public TYPE_GATE_10 = 10;
    uint256 public TYPE_UYANG_11 = 11;

    mapping(uint256 => uint256) public treasuryMap;

    modifier onlyOwner() {
        require(msg.sender == contractOwner);
        _;
    }

    /**
     * @dev Sets the values for {name} and {symbol}.
     *
     * The default value of {decimals} is 18. To select a different value for
     * {decimals} you should overload it.
     *
     * All two of these values are immutable: they can only be set once during
     * construction.
     */
    constructor(
        address uayngNftGates_,
        address uyangStoneToken_,
        address lowbToken_
    ) {
        uayngNftGates = uayngNftGates_;
        uyangStoneToken = uyangStoneToken_;
        lowbToken = lowbToken_;
        contractOwner = msg.sender;
    }

    function sendAllTreasuryBalance(uint256 balance_) public {
        require(balance_ > 0, "balance need > 0");
        IERC20 lowb = IERC20(lowbToken);
        require(lowb.transferFrom(msg.sender, address(this), balance_), "sendAllTreasuryBalance transfer fail");
        uint256 halfBalance = balance_ / 2;
        for(uint256 i = 1; i <= 10; i++) {
            treasuryMap[i] += halfBalance / 10;
        }
        treasuryMap[TYPE_UYANG_11] += balance_ - halfBalance;
        
    }

    function sendTreasuryBalance(uint256 id_, uint256 balance_) public {
        treasuryMap[id_] += balance_;
        IERC20 lowb = IERC20(lowbToken);
        lowb.transferFrom(msg.sender, address(this), balance_);
    }

    function claimAndBurnUyangStone(uint256 uyangAmount_) public {
        require(uyangAmount_ > 0, "uyangAmount_ need > 0");
        IERC20 lowb = IERC20(lowbToken);
        IUyangStone uyangStone = IUyangStone(uyangStoneToken);
        require(
            uyangAmount_ <= uyangStone.balanceOf(tx.origin),
            "you do not have enough uyangstone"
        );

        uint256 lowbAmount = (treasuryMap[TYPE_UYANG_11] * uyangAmount_) /
            uyangStone.totalSupply();
        require(lowb.transfer(tx.origin, lowbAmount), "Lowb transfer failed");
        uyangStone._burn(uyangAmount_);
        treasuryMap[TYPE_UYANG_11] -= lowbAmount;
    }

    function claimAndBurnUyangGates(uint256 id_, uint256 amount_) public {
        require(id_ < TYPE_UYANG_11, "only gate nft!");
        require(amount_ > 0, "amount need > 0");
        IERC20 lowb = IERC20(lowbToken);
        IUyangGate uyangGate = IUyangGate(uayngNftGates);
        require(
            amount_ <= uyangGate.balanceOf(tx.origin, id_),
            "you do not have enough gate"
        );

        uint256 lowbAmount = (treasuryMap[id_] * amount_) /
            uyangGate.totalSupply(id_);
        require(lowb.transfer(tx.origin, lowbAmount), "Lowb transfer failed");
        uyangGate.burnYourGate(id_, amount_);
        treasuryMap[id_] -= lowbAmount;
    }
}