/// @title ContributePool contract contains pools to contribute fund then buy properties
contract ContributePool is OwnableUpgradeable, PausableUpgradeable {
	using SafeMathUpgradeable for uint256;
	using SafeERC20Upgradeable for IERC20Upgradeable;

	/// @notice User's information in a pool
	struct UserInfo {
		uint256 amount;
		uint256 receivedAmount;
	}

	enum PoolStatus {
		CONTRIBUTING,
		END_CONTRIBUTION,
		CLOSED
	}

	/// @notice Pool's information
	struct PoolInfo {
		IERC20Upgradeable contributedToken;
		uint40 expectInput;
		uint40 expectOutput;
		uint40 expectProfit;
		uint16 withdrawFee;
		uint256 stakeMin;
		uint256 totalStakeMax;
		uint256 totalStaked;
		uint256 tokenPerShare; // times 1e12
		uint256 withdrawnAmount;
		uint256 totalRefund;
		uint256 endCampaign;
		PoolStatus status;
	}

	/// @dev Pool collection
	PoolInfo[] public poolInfo;

	/// @dev Admin's address
	address public admin;

	/// @dev Mapping pool ID -> user -> user info
	mapping(uint256 => mapping(address => UserInfo)) public userInfo;

	/// @notice Emitted when a user adds token to a pool
	/// @param user User address
	/// @param poolId Pool ID
	/// @param amount Deposited amount
	event Deposit(address indexed user, uint256 indexed poolId, uint256 amount);

	/// @notice Emitted when admin withdraws token from a pool
	/// @param poolId Pool ID
	/// @param amount Withdrawn amount
	event AdminWithdraw(uint256 indexed poolId, uint256 amount);

	/// @notice Emitted when admin refunds token to a pool
	/// @param poolId Pool ID
	/// @param amount Refund amount
	/// @param remainingDebt Remaining withdrawn amount
	event AdminRefund(uint256 indexed poolId, uint256 amount, uint256 remainingDebt);

	modifier onlyAdmin() {
		require(msg.sender == admin, "Caller must be admin");
		_;
	}

	/// @notice Initialiize ContributePool contract
	/// @param _admin Admin address who can withdrawl/refund
	// solhint-disable-next-line func-name-mixedcase
	function __ContributePool_init(address _admin) public initializer {
		__Ownable_init();
		__Pausable_init();
		admin = _admin;
	}

	/// @notice Pause ContributePool contract
	/// @dev Call by only Owner
	function pause() public onlyOwner {
		super._pause();
	}

	/// @notice Unpause ContributePool contract
	/// @dev Call by only Owner
	function unPause() public onlyOwner {
		super._unpause();
	}

	/// @notice Update admin address by the previous admin
	/// @param _newAdmin Address of admin account
	function transferAdminRole(address _newAdmin) public onlyAdmin {
		admin = _newAdmin;
	}

	/// @dev Add a new pool
	/// @notice Can only be called by the owner
	/// @param _contributedToken Token address that is used to stake
	/// @param _expectInput Purchase price of the property (vnd)
	/// @param _expectOutput Estimated selling price of the property (vnd)
	/// @param _withdrawFee Expected profit of this pool
	/// @param _totalStakeMax Expected profit of this pool
	/// @param _stakeMin Expected profit of this pool
	/// @param _endCampaign Expected profit of this pool
	function addPool(
		IERC20Upgradeable _contributedToken,
		uint40 _expectInput,
		uint40 _expectOutput,
		uint16 _withdrawFee,
		uint256 _totalStakeMax,
		uint256 _stakeMin,
		uint256 _endCampaign
	) public onlyOwner {
		require(_expectInput > 0 && _expectOutput >= _expectInput, "Invalid prices");
		require(_stakeMin > 0 && _totalStakeMax > _stakeMin, "Total stake invalid");
		require(_endCampaign > block.timestamp, "Campaign ends too soon");

		poolInfo.push(
			PoolInfo({
				contributedToken: _contributedToken,
				expectInput: _expectInput,
				expectOutput: _expectOutput,
				expectProfit: _expectOutput - _expectInput,
				withdrawFee: _withdrawFee,
				stakeMin: _stakeMin,
				totalStakeMax: _totalStakeMax,
				totalStaked: 0,
				tokenPerShare: 0,
				withdrawnAmount: 0,
				totalRefund: 0,
				endCampaign: _endCampaign,
				status: PoolStatus.CONTRIBUTING
			})
		);
	}

	/// @notice Everyone can stake into a pool
	/// @param _poolId Pool id that is used to stake
	/// @param _amount Amount that user stake
	function deposit(uint256 _poolId, uint256 _amount) public {
		PoolInfo storage pool = poolInfo[_poolId];
		UserInfo storage user = userInfo[_poolId][msg.sender];

		require(
			pool.status == PoolStatus.CONTRIBUTING && pool.endCampaign > block.timestamp,
			"Contribution period ended"
		);
		require(pool.totalStaked < pool.totalStakeMax, "Total fund has been exceeded");
		require(_amount >= pool.stakeMin, "Amount is lower than minimum");

		pool.contributedToken.safeTransferFrom(address(msg.sender), address(this), _amount);
		user.amount = user.amount + _amount;
		pool.totalStaked = pool.totalStaked + _amount;
		_updateState(_poolId);

		emit Deposit(msg.sender, _poolId, _amount);
	}

	/// @notice User claim profit from a pool
	/// @param _poolId Pool id that is used to stake
	function claimProfit(uint256 _poolId) public {
		PoolInfo storage pool = poolInfo[_poolId];
		UserInfo storage user = userInfo[_poolId][msg.sender];
		if (user.amount > 0) {
			uint256 totalProfit = pool.tokenPerShare.mul(user.amount).div(1e12);
			uint256 pendingProfit = totalProfit - user.receivedAmount;
			uint256 feeClaim = (pendingProfit * pool.withdrawFee) / 1000;
			user.receivedAmount = totalProfit;
			pool.contributedToken.safeTransfer(admin, feeClaim);
			pool.contributedToken.safeTransfer(address(msg.sender), pendingProfit - feeClaim);
		}
	}

	/// @notice Admin withdraws contributed fund of a pool
	/// @param _poolId Pool ID
	/// @param _amount Token amount to withdraw
	function adminWithdraw(uint256 _poolId, uint256 _amount) public whenNotPaused onlyOwner {
		PoolInfo storage pool = poolInfo[_poolId];

		require(block.timestamp * 1000 >= pool.endCampaign, "Contribution period havent ended");
		require(pool.totalStaked >= pool.withdrawnAmount + pool.totalRefund + _amount, "Withdrawl amount is too large");

		if (pool.status == PoolStatus.CONTRIBUTING) {
			pool.status = PoolStatus.END_CONTRIBUTION;
		}

		pool.withdrawnAmount += _amount;
		pool.contributedToken.safeTransfer(admin, _amount);

		emit AdminWithdraw(_poolId, _amount);
	}

	/// @notice Admin refund to a pool
	/// @dev This returned-fund will be distributed to investors
	/// withdrawn amount of admin decrease equal to refund amount til 0
	/// @param _poolId Pool ID
	/// @param _amount Token amount to return
	function adminRefund(uint256 _poolId, uint256 _amount) public onlyAdmin {
		PoolInfo storage pool = poolInfo[_poolId];
		require(pool.status != PoolStatus.CLOSED, "This pool has already closed");

		pool.totalRefund += _amount;
		if (_amount > pool.withdrawnAmount) {
			pool.withdrawnAmount = 0;
			_amount -= pool.withdrawnAmount;
		} else {
			pool.withdrawnAmount -= _amount;
		}
		_updateState(_poolId);
		pool.contributedToken.safeTransferFrom(address(msg.sender), address(this), _amount);

		emit AdminRefund(_poolId, _amount, pool.withdrawnAmount);
	}

	/// @notice Admin closes a contribute pool
	/// @param _poolId Pool ID
	function closePool(uint256 _poolId) public onlyAdmin {
		PoolInfo storage pool = poolInfo[_poolId];
		require(pool.status != PoolStatus.CLOSED, "This pool has already closed");
		pool.status = PoolStatus.CLOSED;
	}

	/// @notice Return pending profit of a user in a pool
	/// @param _poolId Pool ID that is used to stake
	/// @param _user User's address
	function getPendingProfit(uint256 _poolId, address _user) public view returns (uint256) {
		PoolInfo storage pool = poolInfo[_poolId];
		UserInfo storage user = userInfo[_poolId][_user];
		if (user.amount > 0) {
			uint256 totalProfit = pool.tokenPerShare.mul(user.amount).div(1e12);
			return totalProfit - user.receivedAmount;
		}
		return 0;
	}

	/// @notice Return pool's length
	/// @return Total pools
	function poolLength() public view returns (uint256) {
		return poolInfo.length;
	}

	/// @notice Return profit of a user in a pool
	/// @dev Both received and pending profit
	/// @param _poolId Pool id that is used to stake
	/// @param _user User's address
	/// @return Profit of a user in a pool
	function getProfitUser(uint256 _poolId, address _user) public view returns (uint256) {
		PoolInfo storage pool = poolInfo[_poolId];
		UserInfo storage user = userInfo[_poolId][_user];
		return user.amount * pool.tokenPerShare;
	}

	/// @notice Get profit of pool
	/// @param _poolId Pool ID
	/// @return All profit that admin send into a pool
	function getProfitPool(uint256 _poolId) public view returns (uint256) {
		return poolInfo[_poolId].totalRefund;
	}

	/// @notice Return pool status
	/// @param _poolId Pool ID
	/// @return Pool's status
	function getPoolStatus(uint256 _poolId) public view returns (string memory) {
		PoolStatus status = poolInfo[_poolId].status;
		if (status == PoolStatus.CONTRIBUTING) {
			return "CONTRIBUTING period";
		} else if (status == PoolStatus.END_CONTRIBUTION) {
			return "ENDED CONTRIBUTION period";
		}
		return "CLOSED contribute pool";
	}

	/// @notice Update tokenPerShare when admin send reward into a pool
	/// @param _poolId Pool id that is used to stake
	function _updateState(uint256 _poolId) internal whenNotPaused {
		PoolInfo storage pool = poolInfo[_poolId];
		pool.tokenPerShare = (pool.totalRefund * 1e12) / pool.totalStaked;

		if (pool.status == PoolStatus.CONTRIBUTING && pool.totalStaked >= pool.totalStakeMax) {
			pool.status = PoolStatus.END_CONTRIBUTION;
		}
	}
