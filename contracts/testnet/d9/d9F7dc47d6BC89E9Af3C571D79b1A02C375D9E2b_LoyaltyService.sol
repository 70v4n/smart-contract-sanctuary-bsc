interface IERC20 {
    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);

    function mint(address account, uint256 amount) external;

    function burn(uint256 amount) external;

    function approve(address spender, uint256 amount) external returns (bool);

    function balanceOf(address account) external view returns (uint256);
}


contract LoyaltyService is Ownable {
    using SafeMath for uint256;

    event Redeem(address receiver, address token, uint256 gold, uint256 tokenAmount);

    IERC20 public GOLD;
    uint256 public goldRate;

    IPancakeRouter02 private constant PANCAKE_ROUTER = IPancakeRouter02(0x89e310DB3feB95cf8eFD1EB47d9e0f2261E0f6bb);
    IERC20 private constant BUSD = IERC20(0x8301F2213c0eeD49a7E28Ae4c3e91722919B8B47);
    address private constant WBNB = 0x97c012Ef10eDc79510A17272CEE3ecBE1443177F;

    address private EXECUTOR;
    mapping(address => bool) acceptedTokens; 

    modifier onlyExecutor {
        require(msg.sender == EXECUTOR, "Only executor");
        _;
    }

    constructor(address gold) {
        GOLD = IERC20(gold);
        BUSD.approve(address(PANCAKE_ROUTER), 1e18 ether);
        goldRate = 2*1e16;
        acceptedTokens[address(BUSD)] = true;
        acceptedTokens[WBNB] = true;
    }

    function setup(address _executor) external onlyOwner {
        EXECUTOR = _executor;
    }

    function setRate(uint256 _rate) external onlyExecutor {
        goldRate = _rate;
    }

    function allocateRoyaltyTo(address to, uint256 amount) external onlyExecutor {
        GOLD.mint(to, amount);
    }

    function redeemTo(address token, uint256 amount) external {
        require(acceptedTokens[token], "Not accepted token");
        uint256 swappedAmount;
        GOLD.transferFrom(msg.sender, address(this), amount);
        GOLD.burn(amount);
        uint256 busdAmount = calculateUSDFromGold(amount);

        if (token == address(BUSD)) {
            swappedAmount = busdAmount;
            SafeToken.safeTransfer(token, msg.sender, swappedAmount);
        } else if (token == WBNB) {
            address[] memory path = new address[](2);
            uint256 swapBefore = address(this).balance;
            path[0] = address(BUSD);
            path[1] = WBNB;
            PANCAKE_ROUTER.swapExactTokensForETH(busdAmount, 0, path, address(this), block.timestamp);
            uint256 swapAmount = address(this).balance.sub(swapBefore);
            swappedAmount = swappedAmount.add(swapAmount);
            SafeToken.safeTransferETH(msg.sender, swappedAmount);
        } else {
            address[] memory path = new address[](2);
            uint256 swapBefore = IERC20(token).balanceOf(address(this));
            path[0] = address(BUSD);
            path[1] = token;
            PANCAKE_ROUTER.swapExactTokensForTokens(busdAmount, 0, path, address(this), block.timestamp);
            uint256 swapAmount = IERC20(token).balanceOf(address(this)).sub(swapBefore);
            swappedAmount = swappedAmount.add(swapAmount);
            SafeToken.safeTransfer(token, msg.sender, swappedAmount);
        }
        emit Redeem(msg.sender, token, amount, swappedAmount);
    }

    function calculateUSDFromGold(uint256 amount) internal returns(uint256) {
        return amount*(1 ether)/goldRate;
    }
}

