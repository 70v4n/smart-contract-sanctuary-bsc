        _;

        // By storing the original value once again, a refund is triggered (see
        // https://eips.ethereum.org/EIPS/eip-2200)
        _status = _NOT_ENTERED;
    }

    modifier isHuman() {
        require(tx.origin == msg.sender, "sorry humans only");
        _;
    }
}


contract airDrop is ReentrancyGuard{
    
    using SafeMath for uint256;
    using Address for address;
    
    address payable public owner;
    IBEP20 public token;
    
    uint256 public claimAmount;
    uint256 public referalAmount; 
    uint256 public startTime;
    uint256 public endTime;
    
    mapping(address => bool) public isClaim;
    
    modifier onlyOwner(){
        require(msg.sender == owner,"not an owner");
        _;
    } 
    
    event Claimed(address _user, address _referrer);
    
    constructor() {
        owner = payable(0xE34216F38531F96f14FCC276e689430EBfd22496);
        token = IBEP20(0x2A32588f7f1C85aC7E73CCDc76323a3773AECc7D);
        claimAmount = 10000 * 1e8;
        referalAmount = 2000 * 1e8;
        startTime = block.timestamp;
        endTime = block.timestamp + 30 days;
    }
    
    receive() payable external{}
    
    function claimAirDrop(address _referrer) public isHuman nonReentrant {
        require(!address(msg.sender).isContract(),"contracts not allowed");
        require(isClaim[msg.sender] == false,"can not claim twice");
        require(_referrer != address(0) && _referrer != msg.sender,"invalid referrer");
        require(block.timestamp >= startTime && block.timestamp <= endTime,"time over");
        
        token.transferFrom(owner, msg.sender, claimAmount);
        token.transferFrom(owner, _referrer, referalAmount);
        
        isClaim[tx.origin] = true;
        
        emit Claimed(msg.sender, _referrer);
    }
    
    function setAirDrop(uint256 _startTime, uint256 _endTime, uint256 _claimAmount, uint256 _refAmount) external onlyOwner{
        startTime = _startTime;
        endTime = _endTime;
        claimAmount = _claimAmount;
        referalAmount = _refAmount;
    }
    
    // transfer ownership
    function changeOwner(address payable _newOwner) external onlyOwner{
        owner = _newOwner;
    }
    
    // to draw funds
    function transferFunds(uint256 _value) external onlyOwner{
        owner.transfer(_value);
    }
    
    function getCurrentTime() public view returns(uint256){
        return block.timestamp;
    }
    
    function contractBalanceBnb() external view returns(uint256){
        return address(this).balance;
    }
    
    function getContractTokenBalance() external view returns(uint256){
        return token.allowance(owner, address(this));
    }
    
}




