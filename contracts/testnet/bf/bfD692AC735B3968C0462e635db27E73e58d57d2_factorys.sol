pragma solidity ^0.8.4;

import "@openzeppelin/contracts/utils/Create2.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
contract factorys {
    using Counters for Counters.Counter;

    event Creation(address indexed Creator, address indexed newContract);
    
    Counters.Counter private _salt;

    function deploys(
        uint256 amount,
        bytes memory bytecode
    ) external returns (address) {

        _salt.increment();

        uint256 salt = _salt.current();

        address destino= Create2.deploy(amount,keccak256(abi.encodePacked(salt)), bytecode);

        emit Creation(address(this),destino);
        return destino;
    }

    function deposit()external payable{
        
    }
    function getCantidad() public view returns(uint){

        return _salt.current();

    }

    function getBalance() public view returns(uint){

        return address(this).balance;

    }

}

