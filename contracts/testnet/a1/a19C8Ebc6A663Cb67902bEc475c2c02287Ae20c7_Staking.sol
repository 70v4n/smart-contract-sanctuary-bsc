contract Staking is Ownable {
  using SafeERC20 for ERC20;
  using SafeMath for uint256;

  address public immutable EVHY;
  address public immutable sEVHY;

  struct Epoch {
    uint256 length;
    uint256 number;
    uint256 endBlock;
    uint256 distribute;
  }
  Epoch public epoch;

  address public distributor;
  address public evryLoans;
  address public evryRouter;
  address public payDebtToken;

  // address public locker;
  // uint public totalBonus;

  address public warmupContract;
  uint256 public warmupPeriod;

  constructor(
    address _EVHY,
    address _sEVHY,
    uint256 _epochLength,
    uint256 _firstEpochNumber,
    uint256 _firstEpochBlock
  ) {
    require(_EVHY != address(0));
    EVHY = _EVHY;
    require(_sEVHY != address(0));
    sEVHY = _sEVHY;

    epoch = Epoch({ length: _epochLength, number: _firstEpochNumber, endBlock: _firstEpochBlock, distribute: 0 });
  }

  struct Claim {
    uint256 deposit;
    uint256 gons;
    uint256 expiry;
    bool lock; // prevents malicious delays
  }
  mapping(address => Claim) public warmupInfo;

  /**
    @notice stake EVHY to enter warmup
    @param _amount uint
    @return bool
  */
  function stake(uint256 _amount, address _recipient) external returns (bool) {
    rebase();

    ERC20(EVHY).safeTransferFrom(msg.sender, address(this), _amount);

    Claim memory info = warmupInfo[_recipient];
    require(!info.lock, "Staking: Deposits for account are locked");

    warmupInfo[_recipient] = Claim({
      deposit: info.deposit.add(_amount),
      gons: info.gons.add(IsEvryHyper(sEVHY).gonsForBalance(_amount)),
      expiry: epoch.number.add(warmupPeriod),
      lock: false
    });

    ERC20(sEVHY).safeTransfer(warmupContract, _amount);
    return true;
  }

  /**
    @notice retrieve sEVHY from warmup
    @param _recipient address
  */
  function claim(address _recipient) public {
    Claim memory info = warmupInfo[_recipient];
    if (epoch.number >= info.expiry && info.expiry != 0) {
      delete warmupInfo[_recipient];
      IWarmup(warmupContract).retrieve(_recipient, IsEvryHyper(sEVHY).balanceForGons(info.gons));
    }
  }

  // /**
  //     @notice forfeit sEVHY in warmup and retrieve EVHY
  //  */
  // function forfeit() external {
  //     Claim memory info = warmupInfo[ msg.sender ];
  //     delete warmupInfo[ msg.sender ];

  //     IWarmup( warmupContract ).retrieve( address(this), IsEvryHyper( sEVHY ).balanceForGons( info.gons ) );
  //     ERC20( EVHY ).safeTransfer( msg.sender, info.deposit );
  // }

  /**
    @notice prevent new deposits to address (protection from malicious activity)
  */
  function toggleDepositLock() external {
    warmupInfo[msg.sender].lock = !warmupInfo[msg.sender].lock;
  }

  /**
      @notice redeem sEVHY for EVHY
      @param _amount uint
      @param _trigger bool
   */
  function unstake(
    uint256 _amount,
    bool _trigger,
    uint256 _repayAmount,
    uint256 deadline,
    uint256 slippage
  ) external {
    if (_trigger) {
      rebase();
    }
    ERC20(sEVHY).safeTransferFrom(msg.sender, address(this), _amount);
    uint256 evhyLeft = _amount;

    // flow
    // call getLoanDebt() if has debt and payDebtAmount > 0
    // call getEvhyToPayDebt() -> check evryAmountToPay
    // if EVHY is more to pay -> swap and call repayDebt()
    // -> return evhy left to user
    // if not -> swap and call repayDebt() (100% of evhy)

    if (_repayAmount > 0) {
      uint256 debt = getLoanDebt(msg.sender);
      if (debt > 0) {
        address[] memory path = new address[](2);
        path[0] = EVHY;
        path[1] = payDebtToken;

        // _repayAmount is BUSD update this code
        uint256 amountsOut = debt;
        if (debt > _repayAmount) amountsOut = _repayAmount;

        uint256[] memory getAmountsIn = IEvryRouter1(evryRouter).getAmountsIn(amountsOut, path);

        uint256 evhyTopayDebt = getAmountsIn[0];
        if (evhyTopayDebt > _amount) {
          evhyTopayDebt = _amount;
          uint256[] memory getAmountsOut = IEvryRouter1(evryRouter).getAmountsOut(evhyTopayDebt, path);
          amountsOut = getAmountsOut[0];
        } 

        // swap and get amount of swap
        uint256 payDebtSlippage = amountsOut.mul(slippage).div(10000);
        amountsOut = amountsOut.sub(payDebtSlippage);
        uint256 swapDeadline = deadline;

        ERC20(EVHY).approve(address(evryRouter), evhyTopayDebt);
        uint256[] memory payDebtAmount = IEvryRouter1(evryRouter).swapExactTokensForTokens(
          evhyTopayDebt,
          amountsOut,
          path,
          address(this),
          swapDeadline
        );
        // repay
        // ERC20(payDebtToken).approve(address(evryLoans), payDebtAmount[1]);
        // IEvryLoans(evryLoans).repayByContract(msg.sender, payDebtAmount[1], 0);
        evhyLeft = evhyLeft.sub(evhyTopayDebt);
      }
    }

    if (evhyLeft > 0) {
      ERC20(EVHY).safeTransfer(msg.sender, evhyLeft);
    }
  }

  function getLoanDebt(address _account) public view returns (uint256) {
    return IEvryLoans(evryLoans).getCdpTotalDebt(_account);
  }

  /**
    @notice returns the sEVHY index, which tracks rebase growth
    @return uint
  */
  function index() public view returns (uint256) {
    return IsEvryHyper(sEVHY).index();
  }

  /**
    @notice trigger rebase if epoch over
  */
  function rebase() public {
    if (epoch.endBlock <= block.number) {
      IsEvryHyper(sEVHY).rebase(epoch.distribute, epoch.number);

      epoch.endBlock = epoch.endBlock.add(epoch.length);
      epoch.number++;

      if (distributor != address(0)) {
        IDistributor(distributor).distribute();
      }

      uint256 balance = contractBalance();
      uint256 staked = IsEvryHyper(sEVHY).circulatingSupply();

      if (balance <= staked) {
        epoch.distribute = 0;
      } else {
        epoch.distribute = balance.sub(staked);
      }
    }
  }

  /**
    @notice returns contract EVHY holdings, including bonuses provided
    @return uint
  */
  function contractBalance() public view returns (uint256) {
    // return ERC20( EVHY ).balanceOf( address(this) ).add( totalBonus );
    return ERC20(EVHY).balanceOf(address(this));
  }

  // /**
  //     @notice provide bonus to locked staking contract
  //     @param _amount uint
  //  */
  // function giveLockBonus( uint _amount ) external {
  //     require( msg.sender == locker );
  //     totalBonus = totalBonus.add( _amount );
  //     ERC20( sEVHY ).safeTransfer( locker, _amount );
  // }

  // /**
  //     @notice reclaim bonus from locked staking contract
  //     @param _amount uint
  //  */
  // function returnLockBonus( uint _amount ) external {
  //     require( msg.sender == locker );
  //     totalBonus = totalBonus.sub( _amount );
  //     ERC20( sEVHY ).safeTransferFrom( locker, address(this), _amount );
  // }

  // enum CONTRACTS { DISTRIBUTOR, WARMUP, LOCKER }
  enum CONTRACTS {
    DISTRIBUTOR,
    WARMUP,
    EVRYLOANS,
    EVRYROUTER,
    PAYDEBTTOKEN
  }

  /**
    @notice sets the contract address for LP staking
    @param _contract address
  */
  function setContract(CONTRACTS _contract, address _address) external onlyOwner {
    if (_contract == CONTRACTS.DISTRIBUTOR) {
      // 0
      distributor = _address;
    } else if (_contract == CONTRACTS.WARMUP) {
      // 1
      require(warmupContract == address(0), "Staking: Warmup cannot be set more than once");
      warmupContract = _address;
    } else if (_contract == CONTRACTS.EVRYLOANS) {
      // 2
      evryLoans = _address;
    } else if (_contract == CONTRACTS.EVRYROUTER) {
      // 3
      evryRouter = _address;
    } else if (_contract == CONTRACTS.PAYDEBTTOKEN) {
      // 4
      payDebtToken = _address;
    }
    // TODO: After discuss about bonus
    // else if ( _contract == CONTRACTS.LOCKER ) { // 2
    //     require( locker == address(0), "Locker cannot be set more than once" );
    //     locker = _address;
    // }
  }

  /**
   * @notice set warmup period for new stakers
   * @param _warmupPeriod uint
   */
  function setWarmup(uint256 _warmupPeriod) external onlyOwner {
    warmupPeriod = _warmupPeriod;
  }
}

