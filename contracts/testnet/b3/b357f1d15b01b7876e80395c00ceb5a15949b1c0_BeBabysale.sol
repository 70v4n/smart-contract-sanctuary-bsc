pragma solidity ^0.8.0;


contract BeBabysale is Ownable, Initializable {

    IERC20 public BeBabyFinance;
    uint256 public totalSupply;
    uint256 public weiPerToken; // in 1 ETH
    uint256 public weiRaised; // in wei
    address payable public fundsReceiver;
    uint256 public startTime;
    uint256 public endTime;

    event Initialization(address BeBabyFinance, uint256 totalSupply, uint256 startTime, uint256 duration);
    event TokenPurchase(address indexed buyer, uint256 tokens, uint256 paid);
    event SoldOutSupply(uint256 time, uint256 totalRaised);
    event TokenWithdrawal(address to, address token, uint256 amount);

    function initialize(
        IERC20 _BeBabyFinance,
        uint256 _totalSupply,
        uint256 _weiPerToken,
        address payable _fundsReceiver,
        uint256 _duration
    ) external onlyOwner initializer {
        BeBabyFinance = _BeBabyFinance;
        BeBabyFinance.transferFrom(msg.sender, address(this), _totalSupply);
        totalSupply = _BeBabyFinance.balanceOf(address(this));
        weiPerToken = _weiPerToken;
        fundsReceiver = _fundsReceiver;
        startTime = block.timestamp;
        endTime = block.timestamp + _duration;

        emit Initialization(address(BeBabyFinance), _totalSupply, block.timestamp, _duration);
    }

    function calculateCost(uint256 BeBabyAmount) public view returns(uint256) {
        uint256 totalCost = (BeBabyAmount / 1e18) * weiPerToken;
        return totalCost;
    }

    
    function purchase(uint256 amount) external payable {
        require(amount != 0, "purchase: unable to buy 0");
        require(totalSupply - amount >= 0, "purchase: underflow");

        uint256 totalCost = calculateCost(amount);
        require(msg.value == totalCost);
        TransferHelper.safeTransferETH(fundsReceiver, totalCost);

        BeBabyFinance.transfer(msg.sender, amount);
        totalSupply -= amount;
        weiRaised += totalCost;

        emit TokenPurchase(msg.sender, amount, totalCost);

        if (totalSupply == 0) {
          emit SoldOutSupply(block.timestamp, weiRaised);
        }
    }

    function withdrawTokens(address to, IERC20 token) external onlyOwner initializer {
      uint256 amount = token.balanceOf(address(this));
      token.transfer(to, amount);

      emit TokenWithdrawal(to, address(token), amount);
    }

    receive() external payable {}
}