contract TicketContract {
    using SafeMath for uint256;
    
    uint256 public price = 0.001 ether;
    uint256 public ticketsales = 10;

    event Bought(uint256 amount);

    IERC20 public token;
    
    constructor() public {
        token = new ERC20Basic();
        // token = IERC20 (0xBE46bA58D315f0d6cD37bd7F313ccBfdC760e891)
    }

    function buyticket() payable public {
        uint256 amount = msg.value;
        require(amount.div(price) > 0, "You need to send some ether");
        uint ticket = amount.div(price);
        uint256 walletBalance = token.balanceOf(address(this));
        require(ticket < ticketsales, "Not enough tickets in the reserve");
        require(ticket <= walletBalance, "Not enough tickets in the reserve");
        token.transfer(msg.sender, ticket);
        ticketsales = ticketsales - ticket;
        emit Bought(ticket);
    }
    
    function balanceOf(address _address) public view returns (uint256) {
        return token.balanceOf(_address);
    }
}