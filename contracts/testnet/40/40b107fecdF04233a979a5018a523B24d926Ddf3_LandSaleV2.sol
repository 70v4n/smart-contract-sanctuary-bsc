import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeCast.sol";

import "./IPancakePair.sol";
import "./commons/Withdrawable.sol";
import "./IWLand.sol";
import "./tokenPrices/ITokenPrice.sol";
import "./tokenPrices/TokenPrice.sol";

contract LandSaleV2 is Withdrawable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using SafeCast for uint256;

    struct PaymentCfg {
        string symbol;
        address tokenPay;
        ITokenPrice tokenPrice;
    }

    uint256 public startTime;
    uint256 public endTime;
    IWLand public nftToken;
    uint8 public maxBuy = 1;
    uint256 public currentSupply;
    uint256 public maxSupply;
    mapping(address => uint8) public availables;
    ReleaseVersion public versionForBuy;
    bool private _initialized;
    bool public isPaused = false;

    address public feeReceiver;
    IERC20 public tokenFee;
    uint256 public priceSaleInWei;
    string public constant BNB_SYMBOL = "BNB";
    string public constant WANA_SYMBOL = "WANA";
    mapping(string => PaymentCfg) public symbolToPaymentCfg;
    string[] public supportedSymbols;

    event SetSupply(uint256 currentSupply, uint256 maxSupply, uint8 maxBuy);
    event Bought(address indexed to, uint256 amount);

    constructor(
        address _nftToken,
        address _feeReceiver,
        address _tokenFee,
        uint256 _priceSaleInWei,
        uint8 _maxBuy
    ) {
        nftToken = IWLand(_nftToken);
        feeReceiver = _feeReceiver;
        tokenFee = IERC20(_tokenFee);
        priceSaleInWei = _priceSaleInWei;
        maxBuy = _maxBuy;
    }
    
    modifier onlyPaused() {
        require(isPaused || !_initialized, "Wanaka: Sale campaign must be paused");
        _;
    }

    function updateVersionForBuy() external {
        (uint128 _versionIndex, bool _existed) = nftToken.latestReleaseVersion();
        if (_existed) {
            (versionForBuy, _initialized) = nftToken.releaseVersionInfo(_versionIndex);
        }
    }

    function updateTime(uint256 _startTime, uint256 _endTime) external onlyOwner onlyPaused {
        require(_endTime > _startTime, "endTime must be greater than startTime");
        startTime = _startTime;
        endTime = _endTime;
    }

    function addSymbolSupport(string memory _symbol, address _tokenPay, address _pairWithBusd) external onlyOwner onlyPaused {
        require(symbolToPaymentCfg[_symbol].tokenPay == address(0), "Wanaka: Only add once");
        ITokenPrice _tokenPrice = new TokenPrice(_pairWithBusd, _tokenPay);
        PaymentCfg memory _cfg = PaymentCfg({
            symbol: _symbol, 
            tokenPay: _tokenPay,
            tokenPrice: _tokenPrice
        });
        symbolToPaymentCfg[_symbol] = _cfg;
        supportedSymbols.push(_symbol);
    }

    function setTokenPricer(string memory _symbol, ITokenPrice _tokenPricer) external onlyOwner onlyPaused {
        require(symbolToPaymentCfg[_symbol].tokenPay != address(0), "Wanaka: Token does not supports");
        symbolToPaymentCfg[_symbol].tokenPrice = _tokenPricer;
    }

    function setTokenFee(address _tokenFee, uint256 _priceSaleInWei) external onlyOwner onlyPaused {
        tokenFee = IERC20(_tokenFee);
        priceSaleInWei = _priceSaleInWei;
    }

    function setSupply(uint256 _currentSupply, uint256 _maxSupply, uint8 _maxBuy) external onlyOwner onlyPaused {
        currentSupply = _currentSupply;
        maxSupply = _maxSupply;
        maxBuy = _maxBuy;
        emit SetSupply(_currentSupply, _maxSupply, _maxBuy);
    }

    function setPaused(bool _isPaused) external onlyOwner {
        isPaused = _isPaused;
    }

    function canBuy() external view returns (bool) {
        return _canBuy();
    }

    function getPriceInToken(string calldata _symbol) external view returns (uint256) {
        PaymentCfg memory _cfg = symbolToPaymentCfg[_symbol];
        if (_cfg.tokenPay == address(0)) return priceSaleInWei;
        return priceSaleInWei * _cfg.tokenPrice.getBps()/_cfg.tokenPrice.getTokenPriceInBps();
    }

    function buyByWana(uint256 _amount) external nonReentrant {
        _checkBuyable(_amount);
        PaymentCfg memory _cfg = symbolToPaymentCfg[WANA_SYMBOL];
        require(_cfg.tokenPay != address(0), "Wanaka: Token does not supports");
        uint256 _totalPrice = _amount * priceSaleInWei;
        uint256 _totalToken = (_totalPrice * _cfg.tokenPrice.getBps()) / _cfg.tokenPrice.getTokenPriceInBps();
        
        availables[msg.sender] += _amount.toUint8();
        currentSupply += _amount;
        IERC20(tokenFee).safeTransferFrom(msg.sender, feeReceiver, _totalToken);
        nftToken.mint(msg.sender, _amount.toUint128(), true);
    }
    
    function buyByBnb(uint256 _amount) external nonReentrant {
        _checkBuyable(_amount);
        PaymentCfg memory _cfg = symbolToPaymentCfg[BNB_SYMBOL];
        require(_cfg.tokenPay != address(0), "Wanaka: Token does not supports");
        uint256 _totalPrice = _amount * priceSaleInWei;
        uint256 _totalToken = (_totalPrice * _cfg.tokenPrice.getBps()) / _cfg.tokenPrice.getTokenPriceInBps();
        
        availables[msg.sender] += _amount.toUint8();
        currentSupply += _amount;
        (bool transferToTreasury, ) = feeReceiver.call{value: _totalToken}("");
        require(transferToTreasury, "Wanaka: Failed to pay fee");
        nftToken.mint(msg.sender, _amount.toUint128(), true);
    }
    
    function buy(uint256 _amount) external nonReentrant {
        _checkBuyable(_amount);
        uint256 _totalPrice = _amount * priceSaleInWei;
        availables[msg.sender] += _amount.toUint8();
        currentSupply += _amount;
        tokenFee.safeTransferFrom(msg.sender, feeReceiver, _totalPrice);
        nftToken.mint(msg.sender, _amount.toUint128(), true);
    }
    
    function _checkBuyable(uint256 _amount) private view {
        require(!isPaused, "Wanaka: land sale is suspended");
        require(_canBuy(), "Wanaka: land sale has not availabled yet");
        require(currentSupply + _amount <= maxSupply, "Wanaka: land sale has sold out");
        require(_amount <= maxBuy, "Wanaka: amount is over maxBuy");
    }

    function _canBuy() private view returns (bool) {
        if (!_initialized || block.timestamp < startTime || block.timestamp > endTime) {
            return false;
        }
        if (availables[msg.sender] >= maxBuy) {
            return false;
        }
        return true;
    }
}

