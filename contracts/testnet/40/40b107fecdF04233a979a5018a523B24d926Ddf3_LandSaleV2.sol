import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "./ITokenPrice.sol";
import "../IPancakePair.sol";

pragma solidity >= 0.8.0;

contract TokenPrice is ITokenPrice {
    
    uint256 public Bps = 10000; 
    IPancakePair public pairAddress;
    // busd, bnb
    IERC20 public tokenPay;

    constructor(address _pairAddress, address _tokenPay){
        pairAddress = IPancakePair(_pairAddress);
        tokenPay = IERC20(_tokenPay);
    }

    function getTokenPriceInBps() external view override returns (uint256) {
        return _tokenPriceInBps();
    }
    
    function getBps() external view override returns (uint256) {
        return Bps;
    }
    
    function _tokenPriceInBps() private view returns (uint256) {
        if (address(pairAddress) == address(0)) return 0;
        (uint Res0, uint Res1,) = pairAddress.getReserves();
        if (pairAddress.token1() == address(tokenPay)) {
            return Res0*Bps/Res1;
        } else {
            return Res1*Bps/Res0;
        }
    }

    function getTokenPayAddress() external view override returns (address) {
        return address(tokenPay);
    }
}

