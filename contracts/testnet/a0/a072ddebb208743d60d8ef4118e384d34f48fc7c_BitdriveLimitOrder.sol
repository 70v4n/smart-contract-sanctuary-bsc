pragma solidity ^0.6.8;

/// @notice Core contract used to create, cancel and execute orders.
contract BitdriveLimitOrder {
    using SafeMath for uint256;
    // ETH orders
    mapping(bytes32 => uint256) public ethDeposits;
    uint256 public adminFees = 20;
    address payable admin;
    address public wbnb;
    // Events
    event DepositETH(
        bytes32 indexed _key,
        address indexed _caller,
        uint256 _amount,
        bytes _data
    );

    event OrderExecuted(
        bytes32 indexed _key,
        address _owner,
        bytes _data,
        uint256 _amount
    );

    event OrderCancelled(
        bytes32 indexed _key,
        address _owner,
        bytes _data,
        uint256 _amount
    );

      constructor (address payable _admin,address _wbnb) public {
        admin = _admin;
        wbnb = _wbnb;
    }
    

    /**
     * @dev Prevent users to send Ether directly to this contract
     */
    receive() external payable {
        require(
            msg.sender != tx.origin,
            "LimitOrder#receive: NO_SEND_ETH_PLEASE"
        );
    }

    function depositEth(
        bytes calldata _data
    ) external payable {
        require(msg.value > 0, "LimitOrderCore#depositEth: VALUE_IS_0");
        uint256 feeAmount = adminFees/10000;
         uint256 amount =  msg.value - feeAmount;
        admin.transfer(feeAmount);
        (
            address wbnb,
            uint256 inputAmount,
            address outputToken,
            bytes memory data,
        ) = decodeOrder(_data);

        bytes32 key = keyOf(
            msg.sender,
            data
        );
        ethDeposits[key] = ethDeposits[key].add(amount);
        emit DepositETH(key, msg.sender, amount, _data);
    }

    function depositToken(
        bytes calldata _data
    ) payable external{
        admin.transfer(msg.value);
        (
            address inputToken,
            uint256 inputAmount,
            address outputToken,
            bytes memory data,
        ) = decodeOrder(_data);

        bytes32 key = keyOf(
            msg.sender,
            data
        );
        ethDeposits[key] = ethDeposits[key].add(inputAmount);
        emit DepositETH(key, msg.sender, inputAmount, _data);
    }

    
    function cancelOrder(
        address _inputToken,
        address _outputToken,
        address _owner,
        bytes calldata _data
    ) external {
        require(msg.sender == _owner, "LimitOrder#cancelOrder: INVALID_OWNER");
        bytes32 key = keyOf(
            _owner,
            _data
        );
        uint256 amount = ethDeposits[key];
        ethDeposits[key] = 0;
        emit OrderCancelled(
            key,
            _owner,
            _data,
            amount
        );
    }

 
    function decodeOrder(
        bytes memory _data
    ) public pure returns (
        address inputToken,
        uint256 inputAmount,
        address outputToken,
        bytes memory data,
        bytes32 secret
    ) {
        (
            inputToken,
            inputAmount,
            outputToken,
            data,
            secret
        ) = abi.decode(
            _data,
            (
                address,
                uint256,
                address,
                bytes,
                bytes32
            )
        );
    }
   
    function executeOrder(
        address _owner,
        bytes calldata _data
    ) external {

        bytes32 key = keyOf(
            _owner,
            _data
        );

        // Pull amount
        uint256 amount = ethDeposits[key];
        require(amount > 0, "LimitOrder#executeOrder: INVALID_ORDER");

        ethDeposits[key] = 0;
       emit OrderExecuted(
            key,
            _owner,
            _data,
            amount
        );
    }
    

  function existOrder(
        address _owner,
        bytes calldata _data
    ) external view returns (bool) {
        bytes32 key = keyOf(
            _owner,
           _data
        );
        if(ethDeposits[key] != 0){
           return true; 
        }else{
            return false;
        }
    }

    function keyOf(
        address _owner,
        bytes memory _data
    ) public pure returns (bytes32) {
        return keccak256(
            abi.encode(
                _owner,
                _data
            )
        );
    }
}