import "./types/CatheonAccessControlled.sol";

contract CatheonStaking is CatheonAccessControlled {
    /* ========== DEPENDENCIES ========== */

    using SafeMath for uint256;
    
    /* ========== EVENTS ========== */
    event WarmupSet(uint256 warmup);

    /* ========== DATA STRUCTURES ========== */


    struct Claim {
        uint256 deposit; 
        uint256 mint_at; // end of warmup period
    }

    /* ========== STATE VARIABLES ========== */

    IBEP20 public immutable Catheon;
    IxCatheon public immutable xCatheon;

    mapping(address => Claim) public warmupInfo;
    uint256 public warmupPeriod;
   
    /* ========== CONSTRUCTOR ========== */

    constructor(
        address _catheon,
        address _xCatheon,
        address _authority
    ) CatheonAccessControlled(ICatheonAuthority(_authority)) {
        require(_catheon != address(0), "Zero address: Catheon");
        Catheon = IBEP20(_catheon);
        require(_xCatheon != address(0), "Zero address: xCatheon");
        xCatheon = IxCatheon(_xCatheon);
        warmupPeriod =  56*24*60*60;
    }

    /* ========== MUTATIVE FUNCTIONS ========== */

    /**
     * @notice stake Catheon to enter warmup
     * @param _to address
     * @param _amount uint
     * @return uint
     */
    function stake(
        address _to,
        uint256 _amount
    ) external returns (uint256) {
        Catheon.transferFrom(msg.sender, address(this), _amount);
        
        //mint xCatheon
        _amount = _amount * xCatheon.balanceOf(address(this)) / Catheon.balanceOf(address(this));
        xCatheon.mint(_to, _amount); // send as xCatheon (equal unit as Catheon)

        Claim memory info = warmupInfo[_to];
       
        warmupInfo[_to] = Claim({
            deposit: info.deposit.add(_amount),
            mint_at: block.timestamp         
        });

        return _amount;
        
    }

    /**
     * @notice redeem xCatheon for Catheons
     * @param _to address
     * @param _amount uint
     * @return amount_ uint
     */
    function unstake(
        address _to,
        uint256 _amount
    ) external returns (uint256 amount_) {
        amount_ = _amount;
        
        Claim memory info = warmupInfo[msg.sender];
        
        if (block.timestamp - info.mint_at < warmupPeriod) { //calculate fee of 20%
            amount_ = amount_.mul(Catheon.balanceOf(address(this))).sub(xCatheon.balanceOf(address(this)))*8/10;
        }else{
            amount_ = amount_ * Catheon.balanceOf(address(this)) / xCatheon.balanceOf(address(this));
        }
        
        require(amount_ <= Catheon.balanceOf(address(this)), "Insufficient Catheon balance in contract");
        Catheon.transfer(_to, amount_);
        //burn xCatheon
        xCatheon.burn(_amount);
    }
    
    /**
     * @notice set warmup period for new stakers
     * @param _warmupPeriod uint
     */
    function setWarmupLength(uint256 _warmupPeriod) external onlyGovernor {
        warmupPeriod = _warmupPeriod;
        emit WarmupSet(_warmupPeriod);
    }

}

