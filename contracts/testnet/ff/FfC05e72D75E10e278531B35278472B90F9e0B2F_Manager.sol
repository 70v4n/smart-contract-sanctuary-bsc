        require(!_usedHash[message], 'ERC721SelfMintable: already used hash');

        bytes32 signature = keccak256(abi.encodePacked('\x19Ethereum Signed Message:\n32', message));
        require(hasRole(OPERATOR_ROLE, ECDSA.recover(signature, _signature)), 'ERC721SelfMintable: invalid signature');

        _usedHash[message] = true;

        for (uint8 i; i < burnIds.length; i++){
            IEtermonNFT(etermonNft).burn(burnIds[i]);
        }

        IEtermonNFT(etermonNft).claim(msg.sender, tokenId);
        emit Release(msg.sender, message);
    }

