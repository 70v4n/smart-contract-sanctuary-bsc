contract Manager is Ownable, Blacklist {
    address public etermonBox;
    address public etermonMonster;
    address public etermonItem;

    mapping(bytes32 => bool) internal _usedHash;

    function getUsedHash(bytes32 hashCheck) external view returns(bool){
        return _usedHash[hashCheck];
    }

    event OpenBox(
        uint8 boxType,
        uint256 boxId,
        address indexed owner,
        address indexed nftAddress,
        uint256 indexed tokenId
    );

    event Release(
        address indexed owner,
        bytes32 indexed message
    );

    function initialize(
        address etermonBox_,
        address etermonMonster_,
        address etermonItem_
    ) external onlyOwner{
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(OPERATOR_ROLE, msg.sender);

        etermonBox = etermonBox_;
        etermonMonster = etermonMonster_;
        etermonItem = etermonItem_;
    }

    function openBox(
        uint256[] memory monsterIds, 
        uint256[] memory itemIds, 
        bytes calldata _signature, 
        uint256 boxId
    ) external {
        require(IEtermonBox(etermonBox).ownerOf(boxId) == msg.sender, "Must be owner");

        bytes32 message = keccak256(abi.encodePacked(address(this), msg.sender, boxId, monsterIds, itemIds, "Open Box"));
        require(!_usedHash[message], 'ERC721SelfMintable: already used hash');

        bytes32 signature = keccak256(abi.encodePacked('\x19Ethereum Signed Message:\n32', message));
        require(hasRole(OPERATOR_ROLE, ECDSA.recover(signature, _signature)), 'ERC721SelfMintable: invalid signature');

        _usedHash[message] = true;

        uint8 boxType = IEtermonBox(etermonBox).getBoxTypeBaseTokenId(boxId);
        require(IEtermonBox(etermonBox).getBox(boxType).isOpen, "Box cannot open");

        uint8 etermonMonsterQuantities = IEtermonBox(etermonBox).getBox(boxType).etermonMonsterQuantities;
        uint8 etermonItemQuantities = IEtermonBox(etermonBox).getBox(boxType).etermonItemQuantities;

        require(
            monsterIds.length == etermonMonsterQuantities &&
            itemIds.length == etermonItemQuantities
            , "Invalid quantities"
        );

        uint256[] memory burnId = new uint[](1);
        burnId[0] = boxId;
        IEtermonBox(etermonBox).burnTokens(burnId);

        for (uint8 i; i < etermonMonsterQuantities; i++){
            IEtermonNFT(etermonMonster).mintTo(msg.sender);
            emit OpenBox(boxType, boxId, msg.sender, etermonMonster, monsterIds[i]);
        }

        for (uint8 i; i < etermonItemQuantities; i++){
            IEtermonNFT(etermonItem).mintTo(msg.sender);
            emit OpenBox(boxType, boxId, msg.sender, etermonItem, itemIds[i]);
        }
    }

    function deposit(
        address etermonNft, 
        uint256 tokenId
    ) external {
        require(IEtermonNFT(etermonNft).ownerOf(tokenId) == msg.sender, "Must be owner");
        IEtermonNFT(etermonNft).deposit(tokenId);
    }

    function claim(
