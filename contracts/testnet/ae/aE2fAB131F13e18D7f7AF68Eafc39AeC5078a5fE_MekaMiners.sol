pragma solidity ^0.8.2;

import "./BEP20.sol";
import "./SafeMath.sol";
import "./Ownable.sol";

contract MekaMiners is BEP20 {
    using SafeMath for uint256;

    mapping(address => bool) private banBlackList;

    constructor() BEP20("MekaMiners", "MEKA") {
        _mint(msg.sender, 200000000 * 10**decimals());
    }

    function isBlacklisted(address addr)
        external
        view
        onlyOwner
        returns (bool)
    {
        return banBlackList[addr];
    }

    function bulkBlackList(address[] calldata addr) external onlyOwner {
        for (uint256 i = 0; i < addr.length; i++) {
            banBlackList[addr[i]] = true;
        }
    }

    function updateBlackList(address addr, bool blacklisted)
        external
        onlyOwner
    {
        banBlackList[addr] = blacklisted;
    }

    function transfer(address _receiver, uint256 _amount)
        public
        override
        returns (bool success)
    {
        require(!banBlackList[msg.sender], "address-blacklisted");
        require(!banBlackList[_receiver], "address-blacklisted");
        require(_receiver != address(0));

        return super.transfer(_receiver, _amount);
    }

    function transferFrom(
        address _from,
        address _receiver,
        uint256 _amount
    ) public override returns (bool) {
        require(!banBlackList[_from], "address-blacklisted");
        require(!banBlackList[_receiver], "address-blacklisted");
        require(_from != address(0), "from can't be address zero");
        require(_receiver != address(0), "receiver can't be address zero");
        require(
            _amount <= allowance(_from, msg.sender),
            "amount must be less or equal the allowance"
        );

        return super.transferFrom(_from, _receiver, _amount);
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override {
        super._beforeTokenTransfer(from, to, amount);

        require(!paused, "ERC20Pausable: token transfer while paused");
    }
}

