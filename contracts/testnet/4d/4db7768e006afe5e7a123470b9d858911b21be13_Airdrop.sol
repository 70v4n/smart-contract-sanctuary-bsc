library SafeBEP20 {
    using SafeMath for uint256;
    using Address for address;

    function safeTransfer(
        IBEP20 token,
        address to,
        uint256 value
    ) internal {
        _callOptionalReturn(token, abi.encodeWithSelector(token.transfer.selector, to, value));
    }

    function safeTransferFrom(
        IBEP20 token,
        address from,
        address to,
        uint256 value
    ) internal {
        _callOptionalReturn(token, abi.encodeWithSelector(token.transferFrom.selector, from, to, value));
    }

    function safeApprove(
        IBEP20 token,
        address spender,
        uint256 value
    ) internal {
        require(
            (value == 0) || (token.allowance(address(this), spender) == 0),
            'SafeBEP20: approve from non-zero to non-zero allowance'
        );
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, value));
    }

    function safeIncreaseAllowance(
        IBEP20 token,
        address spender,
        uint256 value
    ) internal {
        uint256 newAllowance = token.allowance(address(this), spender).add(value);
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, newAllowance));
    }

    function safeDecreaseAllowance(
        IBEP20 token,
        address spender,
        uint256 value
    ) internal {
        uint256 newAllowance = token.allowance(address(this), spender).sub(
            value,
            'SafeBEP20: decreased allowance below zero'
        );
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, newAllowance));
    }

    function _callOptionalReturn(IBEP20 token, bytes memory data) private {

        bytes memory returndata = address(token).functionCall(data, 'SafeBEP20: low-level call failed');
        if (returndata.length > 0) {
            require(abi.decode(returndata, (bool)), 'SafeBEP20: BEP20 operation did not succeed');
        }
    }
}


contract Airdrop is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;

    uint256[] public tokenIds;

    struct Airdrop {
        address user;
        bool isFulfil;
    }

    IBEP20 public orai;
    IKawaiiCore public nftAddress;
    address public oracle;
    bytes32 public merkleRoot;


    mapping(address => bool) public canClaim;
    mapping(bytes32 => Airdrop) public airdropInfos;
    mapping(address => bool) public isFulfiller;
    mapping(address => bool) public isDisableClaim;

    event Fulfill(address indexed user, uint256 tokenId1, uint256 tokenId2, uint256 tokenId3);
    event Claim(address indexed user, bytes32 reqId);

    constructor(IKawaiiCore _tokenAddress, address _vrfOracle, IBEP20 _orai, bytes32 _merkleRoot) public {
        nftAddress = _tokenAddress;
        oracle = _vrfOracle;
        orai = _orai;
        isFulfiller[oracle] = true;
        isFulfiller[msg.sender] = true;

        merkleRoot = _merkleRoot;
    }

    function changeMerkleRoot(bytes32 _merkleRoot) public onlyOwner {
        merkleRoot = _merkleRoot;
    }

    function setIsDisableClaim(address _address, bool status) public onlyOwner {
        isDisableClaim[_address] = status;
    }

    function setFulfiler(address _user, bool _is) public onlyOwner {
        isFulfiller[_user] = _is;
    }

    function addToken(uint256[] memory _tokenId) onlyOwner public {
        for (uint256 i = 0; i < _tokenId.length; i++) {
            tokenIds.push(_tokenId[i]);
        }
    }

    function setOracle(address _oracle) public onlyOwner {
        oracle = _oracle;
    }

    function setTokenFee(IBEP20 _tokenOrai) public onlyOwner {
        orai = _tokenOrai;
    }

    function claim(address _user, bytes32[] memory _merkleProof) public {
        require(!canClaim[_user], "user has already claimed");
        require(!isDisableClaim[_user], "user disable claim");
        require(_verifyClaim(_user, _merkleProof), "Incorrect merkle proof");

        uint256 seed = block.number;
        orai.approve(oracle, VRFOracle(oracle).getFee());
        bytes memory data = abi.encode(address(this), this.fulfillRandomness.selector);
        bytes32 reqId = VRFOracle(oracle).randomnessRequest(seed, data);
        airdropInfos[reqId] = Airdrop(_user, false);

        canClaim[_user] = true;

        emit Claim(_user, reqId);
    }

    function _verifyClaim(address _address, bytes32[] memory _merkleProof) private view returns (bool valid) {
        bytes32 leaf = keccak256(abi.encodePacked(_address));
        return MerkleProof.verify(_merkleProof, merkleRoot, leaf);
    }

    function isSuccess() public view returns (bool){
        return canClaim[_msgSender()];
    }

    function fulfillRandomness(bytes32 _reqId, uint256 _random) external {
        require(isFulfiller[msg.sender], "must is fulfiller");
        require(airdropInfos[_reqId].isFulfil == false, "ERR: this random is not initialized yet ");
        chooseNFT(_random, airdropInfos[_reqId].user);
        airdropInfos[_reqId].isFulfil = true;
    }

    // internal
    function chooseNFT(uint256 _random, address receipient) internal {
        uint256[] memory arrayBuf = tokenIds;
        uint256 index1 = randomWithSalt(_random, gasleft(), arrayBuf.length);
        //random2  remove index random1
        arrayBuf = _remove(arrayBuf, index1);
        uint256 index2 = randomWithSalt(_random, gasleft(), arrayBuf.length.sub(1));
        //random3 remove index2
        arrayBuf = _remove(arrayBuf, index2);

        uint256 index3 = randomWithSalt(_random, gasleft(), arrayBuf.length.sub(2));
        nftAddress.mint(receipient, tokenIds[index1], 1);
        nftAddress.mint(receipient, tokenIds[index2], 1);
        nftAddress.mint(receipient, tokenIds[index3], 1);

        emit Fulfill(receipient, tokenIds[index1], tokenIds[index2], tokenIds[index3]);
    }

    function _remove(uint256[] memory array, uint256 index) private pure returns (uint256[] memory) {
        if (index >= array.length) return array;

        for (uint256 i = index; i < array.length.sub(1); i++) {
            array[i] = array[i.add(1)];
        }
        delete array[array.length.sub(1)];
        array.length.sub(1);
        return array;
    }

    function randomWithSalt(uint256 _oraiNumber, uint256 salt, uint256 _weight) internal returns (uint256) {
        uint256 salt = _oraiNumber.add(salt);
        return uint256(keccak256(abi.encodePacked(block.difficulty, block.timestamp, block.coinbase, block.number, msg.sender, _oraiNumber))).mod(_weight);
    }

    function claim(IBEP20 token, address to, uint256 amount) external onlyOwner {
        token.safeTransfer(to, amount);
    }
}