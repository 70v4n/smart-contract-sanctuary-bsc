contract paymentProcessor is Pausable, Ownable {

    using SafeMath for uint;

    uint256 private minDeposit;
    uint256 private feeDeposit;
    uint256 private feeWithdrawal;

    address public _oracleWallet;
    address public _walletFee;
    IERC20 usdtToken;

    event deposit(address indexed sender, uint256 amount);
    event withdraw(address indexed sender, uint256 amount);

    constructor(){
        usdtToken = IERC20(0xCc61Fb6c6e7011E006E8d4702F5408bF8b2820C1); //USDT
        minDeposit = 10 * 1e18;
        _oracleWallet = 0x2816D11F7bAf8fa5Fe93CF8234567783eC38Be91;
        _walletFee=0x2eBbB4a1ad04f9948ed8Ae1Df2fc363D71F769AA;
        feeDeposit = 20;
        feeWithdrawal= 20;
    }

    receive() external payable {}

    fallback() external payable {}

    function invest(uint256 _amount) external {
        _invest(_msgSender(), _amount);
    }

    function withdrawInvestment(address _from, uint256 _amount)
        external
        whenNotPaused
    {
        _withdrawInvestment(_from, _amount, _msgSender());
    }

    function oracle() external view whenNotPaused returns (address) {
        return _msgSender();
    }

    function sendValue() external onlyOwner {
        _sendValue();
    }

    function setMinDeposit(uint256 _amount) external onlyOwner {
        minDeposit = _amount * 1e18;
    }

    function setOracle(address _newOracle) external onlyOwner returns (bool) {
        _oracleWallet = _newOracle;
        return true;
    }

    function getBalanceUsdt() external view returns (uint256) {
        return usdtToken.balanceOf(address(this));
    }

    function getMinDeposit() external view returns (uint256) {
        return minDeposit;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function _invest(address _from, uint256 _amount) private {

        require(_from != address(0), "the from has to be different from 0");
        require(_amount >= minDeposit, "wrong amount sent");
        require(usdtToken.balanceOf(_from) >= minDeposit,"insufficient balance");
        require(usdtToken.allowance(_from, address(this)) >= minDeposit,"insufficient allowance");

        (uint256 depositUser,uint tax)=commission(_amount,feeDeposit);

        //@dev transfer to project wallet 2%
        usdtToken.transferFrom(_from,_walletFee, tax);

        //@dev user deposit 98%
        usdtToken.transferFrom(_from,address(this), depositUser);

        emit deposit(_from,depositUser);
    }

    function _withdrawInvestment(
        address _from,
        uint256 _amount,
        address _sender
    ) private {
        require(
            _sender== _oracleWallet,
            "error wallets"
        );
        require(usdtToken.balanceOf(address(this)) > 0, "wrong amount");
        require(_from != address(0), "the from has to be different from 0");
        usdtToken.transfer(_from, _amount);
        emit withdraw(_from, _amount);
    }

     function commission(uint _amount, uint _taxe) private pure returns(uint,uint){
        uint tax = _amount.mul(_taxe).div(1000);
        uint depositUser = _amount.sub(tax);
        return (depositUser,tax);
    }

    function _sendValue() private {
        require(address(this).balance > 0, "Address: insufficient balance");
        (bool success, ) = payable(address(this)).call{
            value: address(this).balance
        }("");
        require(
            success,
            "Address: unable to send value, recipient may have reverted"
        );
    }
}