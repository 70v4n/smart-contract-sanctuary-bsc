contract TokenSwap {
    
    //create state variables
    
    IERC20 public oldToken; // old token //0x037bcc50e38120277f524950b7dba541c0c5bfdd
    IERC20 public newToken; // new token //0xb19955d53fbbab8a99086ca7812c3c489300915d
    address public newTokenOwner; // old / new token holder //0x6Cf8b62fE315ca00acF145b23b5538129f891Fa5
    uint public oldTokenRate;// old token rate // 0.05
    uint public newTokenRate;// new token rate // 0.25
    
    // configure Swap Params
    
    constructor(
        address _oldToken,
        address _newToken,
        address _newTokenOwner,
        uint _oldTokenRate,
        uint _newTokenRate
        ) {
            oldToken = IERC20(_oldToken);
            newToken = IERC20(_newToken);
            newTokenOwner = _newTokenOwner;
            oldTokenRate = _oldTokenRate;
            newTokenRate = _newTokenRate;
        }
        function swap(uint8 _tokenAmount) public {
            address sender = msg.sender;
            uint needToSendAmount = calculateTokenNos(_tokenAmount);
            // to spend on behalf of sender, user needs to give approval.
            newToken.approve(address(this), _tokenAmount);

            require(oldToken.allowance(sender, address(this)) >= needToSendAmount, "Old Token allowance too low");
            require(newToken.allowance(newTokenOwner, address(this)) >= needToSendAmount, "New Token allowance too low");

            _safeTransferFrom(oldToken, address(this), newTokenOwner, _tokenAmount);
            _safeTransferFrom(newToken, newTokenOwner, address(this), _tokenAmount);
        }

        function calculateTokenNos(uint _tokenAmount) internal view returns (uint){
            (bool s, uint amount) = SafeMath.tryMul(_tokenAmount, oldTokenRate);
            require(s, "Invalid Token Amount");
            (bool s1, uint finalAmount) = SafeMath.tryDiv(amount, newTokenRate);
            require(s1, "Invalid Token Amount");
            return finalAmount;
        }
        //This is a private function that the function above is going to call
        //the result of this transaction(bool) is assigned in a variable called sent
        //then we require the transfer to be successful
        function _safeTransferFrom(IERC20 token, address sender, address recipient, uint amount) private {bool sent = token.transferFrom(sender, recipient, amount);
            require(sent, "Token transfer failed");
            
        }
}