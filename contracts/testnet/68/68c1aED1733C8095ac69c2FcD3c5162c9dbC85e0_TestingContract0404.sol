pragma solidity ^0.6.2;


contract TestingContract0404 {
    using SafeMath for uint256;

    mapping(address => uint256) public provider;
    mapping(address => uint256) public borrower;

    function deposit(uint256 _amount) public payable {
        require(msg.value == _amount);
        provider[msg.sender] = provider[msg.sender].add(_amount);
    }

    function withdraw(uint256 _amount) public {
        require(provider[msg.sender] >= _amount, "Not enough tokens to withdraw");

        uint256 locked = calcLockedCollateral(borrower[msg.sender]);
        uint256 withdrawLimit = provider[msg.sender].sub(locked);

        require(withdrawLimit >= _amount, "Cannot withdraw more than locked value");

        address payable to = payable(msg.sender);
        to.transfer(_amount);
        provider[msg.sender] = provider[msg.sender].sub(_amount);
    }

    function borrow(uint256 _borrowAmount) public {
        uint256 borrowLimit = calcBorrowLimit(provider[msg.sender]);
        uint256 borrowLeft = borrowLimit.sub(borrower[msg.sender]);

        require(borrowLeft >= _borrowAmount, "Cannot withdraw more than borrow limit");

        address payable to = payable(msg.sender);
        to.transfer(_borrowAmount);
        borrower[msg.sender] = borrower[msg.sender].add(_borrowAmount);
    }

    function repayBorrow(uint256 _repayAmount) public payable {
        require(msg.value == _repayAmount);
        require(borrower[msg.sender] >= _repayAmount, "Cannot repay more than borrow");

        borrower[msg.sender] = borrower[msg.sender].sub(_repayAmount);
    }

    function getBalance() 
        public 
        view 
        returns (uint256) {
        return provider[msg.sender];
    }

    function getBorrowed() 
        public 
        view 
        returns (uint256) {
        return borrower[msg.sender];
    }

    function getVaultBalance() 
        public 
        view 
        returns (uint256) {
        return address(this).balance;
    }

    function calcBorrowLimit(uint256 _collateralValue)
        public
        pure
        returns (uint256)
    {
        uint256 thirdCollatVal = _collateralValue.div(3);
        return thirdCollatVal.add(thirdCollatVal);
    }

    function calcLockedCollateral(uint256 _borrowValue) 
        public
        pure
        returns (uint256)
    {   
        if (_borrowValue == 0) {
            return 0;
        }
        uint halfCeling = (_borrowValue.add(1)).div(2);
        uint calcLocked = halfCeling.mul(3);
        return calcLocked;
    }

    function getLockedCollateral() 
        public 
        view 
        returns (uint256) {
        return calcLockedCollateral(borrower[msg.sender]);
    }

    function getBorrowLimit() 
        public 
        view 
        returns (uint256) {
        return calcBorrowLimit(provider[msg.sender]);
    }

}