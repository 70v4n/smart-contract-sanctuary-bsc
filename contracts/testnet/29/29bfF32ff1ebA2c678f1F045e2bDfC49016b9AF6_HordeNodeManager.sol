pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "./IHorde.sol";
import "./IterableMapping.sol";

contract HordeNodeManager is OwnableUpgradeable {
    using SafeMath for uint256;
    using IterableMapping for IterableMapping.Map;

    enum NodeType {
        Original,
        Light,
        Heavy
    }

    enum NodeCreationType {
        Regular,
        Promotion,
        Giveaway
    }
    //using uint32 instead of uint256 to save on gas for storage
    struct NodeEntity {
        string name;
        uint32 creationTime;
        uint32 lastClaimTime;
        uint256 rewardAvailable;
        NodeType nodeType;
        uint32 nodeId;
        uint32 expirationTime;
        bool expired;
        NodeCreationType creationType;
    }

    IterableMapping.Map private nodeOwners;
    mapping(address => NodeEntity[]) private _nodesOfUser;

    ERC20 promoToken;
    address private promoTokenAddr;
    address public tokenAddr;
    IHorde public token;

    uint256 public priceOriginalNode;
    uint256 public rewardPerDayOriginalNode;
    uint256 public rewardPerEvery6HoursOriginalNode;
    uint256 public lifeSpanOriginalNode;

    uint32 public totalNodesCreated = 0;

    modifier nodeCreationCheck(string memory name, uint256 nodePrice) {
        address sender = _msgSender();
        require(
            bytes(name).length > 3 && bytes(name).length < 32,
            "Name needs to be at least 4 letters and at most 31"
        );
        require(sender != address(0), "No creation from the zero address");
        require(
            token.balanceOf(sender) >= nodePrice,
            "Balance too low for creation."
        );
        _;
    }

    function init() external initializer {
        __Ownable_init();
        priceOriginalNode = 10 ether;
        rewardPerDayOriginalNode = 0.1 ether;
        rewardPerEvery6HoursOriginalNode = 0.025 ether;
        lifeSpanOriginalNode = 300 days;
    }

    function _binarySearchOnNodeId(
        NodeEntity[] memory arr,
        uint256 low,
        uint256 high,
        uint256 x
    ) private view returns (int256) {
        if (high >= low) {
            uint256 mid = (high + low).div(2);
            if (arr[mid].nodeId == x) {
                return int256(mid);
            } else if (arr[mid].nodeId > x) {
                return _binarySearchOnNodeId(arr, low, mid - 1, x);
            } else {
                return _binarySearchOnNodeId(arr, mid + 1, high, x);
            }
        } else {
            return -1;
        }
    }

    function setPromoToken(address _promoTokenAddr) external onlyOwner {
        promoTokenAddr = _promoTokenAddr;
        promoToken = ERC20(_promoTokenAddr);
    }

    function setTokenAddr(address _token) external onlyOwner {
        tokenAddr = _token;
        token = IHorde(tokenAddr);
    }

    function createNode(
        address account,
        string memory nodeName,
        NodeType nodeType,
        uint256 lifespan,
        NodeCreationType creationType
    ) internal {
        NodeEntity memory node = NodeEntity({
            name: nodeName,
            creationTime: uint32(block.timestamp),
            lastClaimTime: uint32(block.timestamp),
            rewardAvailable: 0,
            nodeType: nodeType,
            nodeId: totalNodesCreated,
            expirationTime: uint32(block.timestamp.add(lifespan)),
            expired: false,
            creationType: creationType
        });
        _nodesOfUser[account].push(node);
        nodeOwners.set(account, _nodesOfUser[account].length);
        totalNodesCreated++;
    }

    function _getNodeWithId(NodeEntity[] storage nodes, uint256 nodeId)
        private
        view
        returns (NodeEntity storage)
    {
        uint256 numberOfNodes = nodes.length;
        require(numberOfNodes > 0, "You don't have any nodes");
        bool found = false;
        int256 index = _binarySearchOnNodeId(nodes, 0, numberOfNodes, nodeId);
        uint256 validIndex;
        if (index >= 0) {
            found = true;
            validIndex = uint256(index);
        }
        require(found, "NODE SEARCH: No NODE Found with this NodeId");
        return nodes[validIndex];
    }

    function getNodeWithId(address account, uint32 nodeId)
        public
        view
        returns (NodeEntity memory)
    {
        NodeEntity[] storage nodes = _nodesOfUser[account];
        NodeEntity memory node = _getNodeWithId(nodes, nodeId);
        return node;
    }

    function getNodesOf(address account)
        public
        view
        returns (NodeEntity[] memory)
    {
        NodeEntity[] storage nodes = _nodesOfUser[account];
        uint256 numberOfNodes = nodes.length;
        require(numberOfNodes > 0, "You don't have any nodes");

        return nodes;
    }

    function _updateNodeAfterCashout(address account, uint256 nodeId) internal {
        NodeEntity[] storage nodes = _nodesOfUser[account];
        NodeEntity storage node = _getNodeWithId(nodes, nodeId);
        if (node.expired) return;
        node.rewardAvailable = 0;
        uint256 remainder = _getClaimRemainderInSeconds(
            _getSecondsSinceLastClaim(node)
        );
        node.lastClaimTime = uint32(block.timestamp.sub(remainder));
        if (node.expirationTime <= block.timestamp) node.expired = true;
    }

    function _updateAllNodesAfterCashout(address account) internal {
        NodeEntity[] storage nodes = _nodesOfUser[account];
        uint256 nodesCount = nodes.length;
        NodeEntity storage node;
        for (uint256 i = 0; i < nodesCount; i++) {
            node = nodes[i];
            if (node.expired) continue;
            node.rewardAvailable = 0;
            uint256 remainder = _getClaimRemainderInSeconds(
                _getSecondsSinceLastClaim(node)
            );
            node.lastClaimTime = uint32(block.timestamp.sub(remainder));
            if (node.expirationTime <= block.timestamp) node.expired = true;
        }
    }

    function _getSecondsSinceLastClaim(NodeEntity memory node)
        internal
        view
        returns (uint256)
    {
        uint256 cutOffTime = block.timestamp;

        //Handle if the node expired since last claim, and thus needs reward for a partial periode
        if (node.expirationTime <= block.timestamp)
            cutOffTime = node.expirationTime;
        //If never claimed, the lastClaimTime will be creationTime
        uint256 secondsSinceLastClaim = cutOffTime.sub(node.lastClaimTime);
        return secondsSinceLastClaim;
    }

    function _getClaimRemainderInSeconds(uint256 secondsSinceLastClaim)
        internal
        pure
        returns (uint256)
    {
        uint256 partial6HoursSinceLastClaimInSeconds = (
            secondsSinceLastClaim.mod(6 hours)
        );
        return partial6HoursSinceLastClaimInSeconds;
    }

    //Function is to be used by dapp to show rewards, hence it needs to be "view" and can not update state of eg. node.expired
    function calculateRewardForNode(NodeEntity memory node)
        internal
        view
        returns (uint256)
    {
        uint256 reward = 0;
        if (node.expired) return reward;
        uint256 secondsSinceLastClaim = _getSecondsSinceLastClaim(node);
        uint256 sixHourIntervalsSinceLastClaim = secondsSinceLastClaim.div(
            6 hours
        );

        reward = _getRewardOf().mul(sixHourIntervalsSinceLastClaim);
        return reward;
    }

    function getAllRewardAmountOf(address account)
        public
        view
        returns (uint256)
    {
        require(isNodeOwner(account), "GET REWARD OF: NO NODE OWNER");
        uint256 nodesCount;
        uint256 totalReward = 0;

        NodeEntity[] storage nodes = _nodesOfUser[account];
        nodesCount = nodes.length;

        for (uint256 i = 0; i < nodesCount; i++) {
            uint256 reward = calculateRewardForNode(nodes[i]);
            totalReward += (nodes[i].rewardAvailable).add(reward);
        }
        return totalReward;
    }

    function getRewardAmountOf(address account, uint256 nodeId)
        public
        view
        returns (uint256)
    {
        require(isNodeOwner(account), "GET REWARD OF: NO NODE OWNER");
        NodeEntity[] storage nodes = _nodesOfUser[account];
        NodeEntity storage node = _getNodeWithId(nodes, nodeId);
        uint256 reward = node.rewardAvailable;
        reward += calculateRewardForNode(node);

        return reward;
    }

    function getNodesLastClaimTime(address account)
        external
        view
        returns (string memory)
    {
        require(isNodeOwner(account), "LAST CLAIME TIME: NO NODE OWNER");
        NodeEntity[] memory nodes = _nodesOfUser[account];
        uint256 nodesCount = nodes.length;
        NodeEntity memory _node;
        string memory _lastClaimTimes = Strings.toString(
            nodes[0].lastClaimTime
        );
        for (uint256 i = 1; i < nodesCount; i++) {
            _node = nodes[i];
            _lastClaimTimes = string(
                abi.encodePacked(
                    _lastClaimTimes,
                    "#",
                    Strings.toString(_node.lastClaimTime)
                )
            );
        }
        return _lastClaimTimes;
    }

    function _getRewardOf() private view returns (uint256) {
        return rewardPerEvery6HoursOriginalNode;
    }

    function getNodeNumberOf(address account) external view returns (uint256) {
        return nodeOwners.get(account);
    }

    function isNodeOwner(address account) public view returns (bool) {
        return nodeOwners.get(account) > 0;
    }

    function setNodePriceOriginal(uint256 price) external onlyOwner {
        priceOriginalNode = price;
    }

    function getNodePriceOriginal() external view returns (uint256) {
        return priceOriginalNode;
    }

    function setRewardPerDayOriginalNode(uint256 reward) external onlyOwner {
        rewardPerDayOriginalNode = reward;
    }

    function createOriginalNode(string memory name)
        public
        nodeCreationCheck(name, priceOriginalNode)
    {
        _createHordeNode(
            name,
            NodeType.Original,
            priceOriginalNode,
            lifeSpanOriginalNode,
            NodeCreationType.Regular
        );
    }

    function _createHordeNode(
        string memory name,
        NodeType nodeType,
        uint256 nodePrice,
        uint256 lifespan,
        NodeCreationType creationType
    ) private {
        address sender = _msgSender();
        token.payForNode(sender, nodePrice);
        createNode(sender, name, nodeType, lifespan, creationType);
    }

    function giveawayNode(
        address recipient,
        string memory name,
        NodeType nodeType,
        uint256 lifespanInDays
    ) public onlyOwner {
        createNode(
            recipient,
            name,
            nodeType,
            lifespanInDays.mul(1 days),
            NodeCreationType.Giveaway
        );
    }

    function CreateNodeWithPromoToken(string memory name) public {
        require(promoToken.balanceOf(msg.sender) > 0, "INSUFFICIENT FUNDS");
        promoToken.transferFrom(msg.sender, address(this), 1 * 10**18);
        createNode(
            msg.sender,
            name,
            NodeType.Original,
            lifeSpanOriginalNode,
            NodeCreationType.Promotion
        );
    }

    function cashoutReward(uint256 nodeId) public {
        address sender = _msgSender();
        uint256 rewardAmount = getRewardAmountOf(sender, nodeId);
        require(sender != address(0), "Zero address cannot cash out");
        require(rewardAmount > 0, "You don't have any reward to cash out");
        token.cashoutRewardToNoder(sender, rewardAmount);
        _updateNodeAfterCashout(sender, nodeId);
    }

    function cashoutAll() public {
        address sender = _msgSender();
        require(sender != address(0), "Zero address cannot cash out");
        uint256 rewardAmount = getAllRewardAmountOf(sender);
        require(rewardAmount > 0, "You don't have any reward to cash out");
        token.cashoutRewardToNoder(sender, rewardAmount);
        _updateAllNodesAfterCashout(sender);
    }
}

