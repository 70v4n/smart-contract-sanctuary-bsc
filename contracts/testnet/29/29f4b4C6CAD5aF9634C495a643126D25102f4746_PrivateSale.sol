import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

/**
 * Allows user to deposit funds
 */
contract PrivateSale is Ownable {
    using SafeMath for uint256;

    uint256 public minDepositAmount = 8 * 10**17; // 0.8 BNB
    uint256 public maxDepositAmount = 1 * 10**19; // 10 BNB
    mapping(address => uint256) private accounts;

    address[] depoistedAddressList;

    event LogDeposit(address indexed account, uint256 amount);

    constructor() {}

    /**
     * @dev Deposit funds in the private sale contract.
     */
    function deposit() public payable returns (uint256) {
        require(msg.value >= minDepositAmount, "Deposit amount must be greater than minimum deposit amount");
        require((accounts[msg.sender] + msg.value) <= maxDepositAmount, "Total deposit amount must be smaller than maximum deposit amount");
        if (accounts[msg.sender] == 0) depoistedAddressList.push(msg.sender);
        accounts[msg.sender] += msg.value;
        emit LogDeposit(msg.sender, msg.value);
        return accounts[msg.sender];
    }

    /**
     * @dev owner can withdraw funds from the private sale contract.
     */
    function withdraw() public onlyOwner {
        uint256 balance = address(this).balance;
        require(balance > 0, "Account is empty");
        _widthdraw(msg.sender, balance);
    }

    function _widthdraw(address _address, uint256 _amount) private {
        (bool success, ) = _address.call{value: _amount}("");
        require(success, "Transfer failed.");
    }

    /**
     * @dev get deposited amount with wallet address.
     */
    function getDepositAmount(address _address) public view returns (uint256) {
        return accounts[_address];
    }

    function getDepositedList()
        public
        view
        returns (string memory depositList)
    {
        if (depoistedAddressList.length > 0) {
            string memory depositInfo;
            for (uint256 i; i < depoistedAddressList.length; i++) {
                address depositwalletAddress = depoistedAddressList[i];
                uint256 amount = getDepositAmount(depoistedAddressList[i]);
                if (i < depoistedAddressList.length - 1) {
                    depositInfo = string(
                        abi.encodePacked(
                            addressToString(depositwalletAddress),
                            " : ",
                            uint2str(amount),
                            ", "
                        )
                    );
                } else {
                    depositInfo = string(
                        abi.encodePacked(
                            addressToString(depositwalletAddress),
                            " : ",
                            uint2str(amount)
                        )
                    );
                }
                depositList = string(
                    abi.encodePacked(depositList, depositInfo)
                );
            }
            return depositList;
        }
    }

    function addressToString(address _addr)
        private
        pure
        returns (string memory)
    {
        bytes32 value = bytes32(uint256(uint160(_addr)));
        bytes memory alphabet = "0123456789abcdef";

        bytes memory str = new bytes(51);
        str[0] = "0";
        str[1] = "x";
        for (uint256 i = 0; i < 20; i++) {
            str[2 + i * 2] = alphabet[uint256(uint8(value[i + 12] >> 4))];
            str[3 + i * 2] = alphabet[uint256(uint8(value[i + 12] & 0x0f))];
        }
        return string(str);
    }

    function uint2str(uint256 _i) internal pure returns (string memory str) {
        if (_i == 0) {
            return "0";
        }
        uint256 j = _i;
        uint256 length;
        while (j != 0) {
            length++;
            j /= 10;
        }
        bytes memory bstr = new bytes(length);
        uint256 k = length;
        j = _i;
        while (j != 0) {
            bstr[--k] = bytes1(uint8(48 + (j % 10)));
            j /= 10;
        }
        str = string(bstr);
    }

    function setMinDepositAmount(uint256 _amount) external onlyOwner {
        minDepositAmount = _amount;
    }

    function setMaxDepositAmount(uint256 _amount) external onlyOwner {
        maxDepositAmount = _amount;
    }
}

