    function calculateBuyBack() internal view returns (uint256) {
        uint256 value = (buyBackPercent / 100);
        return value;
    }

    function checkHolder(address user) internal {
        if (isHolder[user] == false) {
            isHolder[user] = true;
            holdersCount += 1;
        }

        if (holdersCount == holdersLimit) {
            buyBackWalletStatus = true;
        }
