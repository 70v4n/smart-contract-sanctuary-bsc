contract ItemRemoval {
    using SafeMath for uint256;
    uint[] public firstArray = [1,2,3,4,5];

    uint256 public nonce;
    uint256 public randomNumber;

    uint256[] public NFTIds;

    function getLength() public view returns (uint){
        return firstArray.length;
    }

    function remove(uint index) public {
        firstArray[index] = firstArray[firstArray.length - 1];
        firstArray.pop();
    }

    function orderedArray(uint index) public {
        for (uint256 i = index; i < firstArray.length - 1; i++) {
            firstArray[i]= firstArray[i+1];
        }
        firstArray.pop();
    }

    function aaa() public {
        uint256 randomSlot = random(0, firstArray.length);
        uint256 heroId = firstArray[randomSlot];
        NFTIds.push(heroId);
        for (uint256 i = randomSlot; i < firstArray.length - 1; i++) {
            firstArray[i]= firstArray[i+1];
        }
        firstArray.pop();
    }

    function setTimeToCancel(uint256[] memory _firstArray) public  {
        firstArray = _firstArray;
    }

    function random(uint256 min, uint256 max)
        internal
        returns (uint256 randomnumber)
    {
        randomnumber = uint256(
            keccak256(abi.encodePacked(block.timestamp, msg.sender, nonce))
        ).mod(max - min);
        randomnumber = randomnumber + min;
        nonce = nonce.add(1);
        return randomnumber;
    }

    function showArray() public view returns (uint[] memory){
        return firstArray;
    }
}