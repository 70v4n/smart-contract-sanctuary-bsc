import "./Uni.sol";

contract Swap is Ownable {
    IUniswapV2Router002 public uniswapV2Router;

    address public baseToken;
    address public targetToken;

    constructor() {
        baseToken = 0x1f03332174Ba7Cc7594f1AD2aCC0C0a80009B025;
        targetToken = 0x8d3eaD4e4d0036e9e62d7F64C54171D8f0cf5311;
        uniswapV2Router = IUniswapV2Router002(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);
    }

    function updateTokens(
        address _baseToken,
        address _targetToken,
        address _uniswapV2Router
    ) external onlyOwner {
        baseToken = _baseToken;
        targetToken = _targetToken;
        uniswapV2Router = IUniswapV2Router002(_uniswapV2Router);
    }

    function swapFromBaseToken(uint256 _amount) external {
        address[] memory path = new address[](2);
        path[0] = baseToken;
        path[1] = targetToken;

        uint256[] memory amounts = uniswapV2Router.swapExactTokensForTokens(
            _amount,
            0,
            path,
            _msgSender(),
            block.timestamp + 10
        );

        address[] memory path2 = new address[](2);
        path2[0] = targetToken;
        path2[1] = baseToken;

        uniswapV2Router.swapExactTokensForTokens(
            amounts[3],
            0,
            path2,
            _msgSender(),
            block.timestamp + 10
        );
    }
}

