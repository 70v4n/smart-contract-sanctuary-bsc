        uint256 amount = ((100 + 40 * (palmLevel - 1)) * 110 * mintUsdtAmount * 10**18 / initTokenPrice / 10000)
        + (_feeFactor(_tokenId) * totalFeedCount * feedTokenAmount / 10)
        + (tokenLevelFeedCount * feedTokenAmount / (dayFeedCount * tokenLevelCount * calcDays()));

        token.safeTransfer(msg.sender,amount);

         // 销毁
        palm.burn(_tokenId);
    }

    function getBuyBackAmount(uint256 _tokenId,address userAddress) public view returns (uint256) {
            (address account,uint256 palmLevel,,uint256 totalFeedCount) = palm.getPalmInfo(_tokenId);
            require(account == userAddress, "owner not is you");
            require(palmLevel > 1, "level too small");

            (uint256 tokenLevelCount,uint256 tokenLevelFeedCount) = palm.getLevelInfo(palmLevel);

            uint256 amount = ((100 + 40 * (palmLevel - 1)) * 110 * mintUsdtAmount * 10**18 / initTokenPrice / 10000)
            + (_feeFactor(_tokenId) * totalFeedCount * feedTokenAmount / 10)
            + (tokenLevelFeedCount * feedTokenAmount / (dayFeedCount * tokenLevelCount * calcDays()));

            return amount;
        }

    function calcDays() view public returns (uint256){
        return (block.number - startBlockNum) / dayBlockNumber +1;
    }

    function _feeFactor(uint256 _tokenId) private view returns (uint256){
