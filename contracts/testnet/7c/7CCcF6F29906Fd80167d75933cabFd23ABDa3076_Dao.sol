        initTokenPrice = _initTokenPrice;
    }
    function setFeedTokenAmount(uint256 _feedTokenAmount) public onlyOwner {
        feedTokenAmount = _feedTokenAmount;
    }
    function setDayFeedCount(uint256 _dayFeedCount) public onlyOwner {
        dayFeedCount = _dayFeedCount;
