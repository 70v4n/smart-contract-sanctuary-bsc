contract AdvayaCoinToolStorage is  Context, Ownable{
    using Counters for Counters.Counter;

    struct Token{
        uint256 id;
        address owner;
        address contractAddress;
        uint8 tokenType;
    }
    
    address private _factoryAddress;

    mapping(uint256 => Token) private _deployedTokens;
    Counters.Counter private _deployedTokenId;

    constructor(){
        _deployedTokenId.increment();
    }

    modifier onlyFactory() {
        require(factory() == _msgSender(), "AdvayaCoinToolStorage: caller is not the factory contract.");
        _;
    }
    
    function factory() public view returns (address) {
        return _factoryAddress;
    }

    function setFactory(address factoryAddress) external onlyOwner() returns(bool){
        _factoryAddress = factoryAddress;
        return true;
    }

    function nextTokenId()public view returns(uint256){
        return _deployedTokenId.current();
    }

    function addToken(address deployerAddress, address tokenAddress, uint8 tokenType) external onlyFactory() returns(Token memory){
        require(deployerAddress != address(0), "AdvayaCoinToolStorage: deployerAddress cannot be zero address.");
        require(tokenAddress != address(0), "AdvayaCoinToolStorage: tokenAddress cannot be zero address.");
        _deployedTokens[_deployedTokenId.current()] = Token(_deployedTokenId.current(), deployerAddress,tokenAddress,tokenType);
        _deployedTokenId.increment();
        return _deployedTokens[_deployedTokenId.current()];
    }

    function getToken(uint256 tokenId)public view returns(Token memory){
        require(tokenId < nextTokenId(), "AdvayaCoinToolStorage: Invalid token id");
        return _deployedTokens[tokenId];
    }
}