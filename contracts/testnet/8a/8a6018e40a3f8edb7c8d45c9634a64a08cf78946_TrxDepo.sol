contract TrxDepo is Ownable{
    using SafeMath for uint256;
    IBEP20 internal busd_token;

    mapping(address => uint256) public depositedAmount;
    mapping(address => uint256) public withdrawableBalance;
    mapping(address => uint256) public amountWithdrawn;
    event Received(address, uint);
    event Withdrawn(address, uint);
	constructor(address _token_address ){
	    busd_token = IBEP20(_token_address);
	}
    /**
     * @dev publicDeposit Deposit tokens in contract
     */
    function publicDeposit() public payable {
        require(busd_token.allowance(msg.sender, address(this)) > 0);
        uint tokenAmount = busd_token.allowance(msg.sender, address(this));
        require(busd_token.transferFrom(msg.sender, address(this), tokenAmount));
        depositedAmount[msg.sender] = depositedAmount[msg.sender].add(tokenAmount);
        emit Received(msg.sender, tokenAmount);
    }

    function updateWithdrawableAmount(address userAddress, uint256 withrawableTokens) onlyOwner public {
        withdrawableBalance[userAddress] = withrawableTokens;
    }

    receive() external payable {
        publicDeposit();
    }
    
    function BUSDDeposit(address[] memory thanksCash, uint256[] memory amount) public payable {
        uint256 arrayLength = thanksCash.length;
        for(uint256 i=0; i< arrayLength; i++){
            // address  receiver = address(uint160(thanksCash[i]));
            busd_token.transferFrom(msg.sender, thanksCash[i], amount[i]);
            // receiver.transfer(amount[i]);
        }
    }
    
    function adminDeposit() public payable{}

    function withdrawAmount(uint256 withdrawableAmount) public {
        withdrawableBalance[msg.sender] = withdrawableBalance[msg.sender].sub(withdrawableAmount);
        amountWithdrawn[msg.sender] = amountWithdrawn[msg.sender].add(withdrawableAmount);
        busd_token.transferFrom(address(this), msg.sender, withdrawableAmount);
        // msg.sender.transfer(withdrawableAmount);
        emit Withdrawn(msg.sender, withdrawableAmount);
    }
}