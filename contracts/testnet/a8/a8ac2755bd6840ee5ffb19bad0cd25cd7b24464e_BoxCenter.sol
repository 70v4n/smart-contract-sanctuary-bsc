contract BoxCenter is Ownable {

    using SafeERC20 for IERC20;
    address public receivedAddress;

    event BoxPaidBNB(
        uint256 indexed boxId,
        address indexed buyer,
        uint256 boxType,
        uint256 price,
        bytes data
    );

    event BoxPaid(
        uint256 indexed boxId,
        address indexed buyer,
        uint256 boxType,
        uint256 price,
        address paymentToken
    );

    function setreceivedAddress(address _receivedAddress)
        public
        onlyOwner
    {
        receivedAddress = _receivedAddress;
    }

  
    function swapBoxWithBNB(
        uint256 boxId,
        uint256 _type,
        address userAddress,
        uint256 price
    ) external payable {
        require(
            !isContract(userAddress),
            "BoxPayment: Only user address is allowed to buy box"
        );
        require(_type > 0, "BoxPayment: Invalid box type");
        require(price > 0, "BoxPayment: Invalid payment amount");
        
        (bool sent, bytes memory data) = receivedAddress.call{
            value: msg.value
        }("");

        require(sent, "BoxPayment: Failed to send BNB");

        // Emit payment event
        emit BoxPaidBNB(boxId, userAddress, _type, price, data);
 
    }

    function swapBoxWithToken(
        uint256 boxId,
        uint256 _type,
        address userAddress,
        uint256 price,
        address paymentErc20
    ) external {
        require(
            !isContract(userAddress),
            "BoxPayment: Only user address is allowed to buy box"
        );
        require(_type > 0, "BoxPayment: Invalid box type");
        require(price > 0, "BoxPayment: Invalid payment amount");

        IERC20 paymentToken = IERC20(paymentErc20);

        // Transfer payment
        paymentToken.safeTransfer(receivedAddress, price);

        // Emit payment event
        emit BoxPaid(boxId, userAddress, _type, price, paymentErc20);
    }

    /**
     * @dev Identify an address is user address or contract address
     */
    function isContract(address _address) private view returns (bool) {
        uint32 size;
        assembly {
            size := extcodesize(_address)
        }
        return (size > 0);
    }
}