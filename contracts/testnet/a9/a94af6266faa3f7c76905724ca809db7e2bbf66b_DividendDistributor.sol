interface IDividendDistributor {
    function deposit() external payable;
    function distributeDividend(address shareholder, uint256 rTokens, uint256 rTotal) external;
}

contract DividendDistributor is IDividendDistributor {
    using SafeMath for uint256;

    address _token;
    
    
    // production BUSD: 0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56
    // testing BUSD: 0x78867BbEeF44f2326bF8DDd1941a4439382EF2A7
    IBEP20 BUSD = IBEP20(0x78867BbEeF44f2326bF8DDd1941a4439382EF2A7);
    
    // production WBNB: 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c
    // testing WBNB: 0xae13d989daC2f0dEbFf460aC112a837C89BAa7cd
    address WBNB = 0xae13d989daC2f0dEbFf460aC112a837C89BAa7cd;
    IUniswapV2Router02 router;

    mapping (address => uint256) shareholderRealizedEarnings;

    uint256 public totalDividends;
    uint256 public totalDistributed;


    modifier onlyToken() {
        require(msg.sender == _token); _;
    }

    constructor (address _router) {
        router = _router != address(0)
            ? IUniswapV2Router02(_router)
              // production: 0x05fF2B0DB69458A0750badebc4f9e13aDd608C7F
              // testing: 0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3
            : IUniswapV2Router02(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);
        _token = msg.sender;
    }


    function deposit() external payable override onlyToken {
        uint256 balanceBefore = BUSD.balanceOf(address(this));

        address[] memory path = new address[](2);
        path[0] = WBNB;
        path[1] = address(BUSD);

        router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: msg.value}(
            0,
            path,
            address(this),
            block.timestamp
        );
        
        uint256 amount = BUSD.balanceOf(address(this)).sub(balanceBefore);
        totalDividends = totalDividends.add(amount);
    }

    function distributeDividend(address shareholder, uint256 shares, uint256 totalShares) external override onlyToken {
        if(shares == 0){ return; }

        uint256 dividends = _getCumulativeDividends(shares, totalShares);
        uint256 amount = _getUnpaidEarnings(shareholder, shares, dividends);
        if(amount > 0){
            totalDistributed = totalDistributed.add(amount);
            BUSD.transfer(shareholder, amount);
            shareholderRealizedEarnings[shareholder] = dividends;
        }
    }

    function _getUnpaidEarnings(address shareholder, uint256 shares, uint256 dividends) internal view returns (uint256) {
        if(shares == 0){ return 0; }

        uint256 realizedEarnings = shareholderRealizedEarnings[shareholder];

        if(dividends <= realizedEarnings){ return 0; }

        return totalDividends.sub(realizedEarnings);
    }

    function _getCumulativeDividends(uint256 shares, uint256 totalShares) internal view returns (uint256) {
        return shares.mul(totalDividends).div(totalShares);
    }
    
    function getUnpaidEarnings(address shareholder, uint256 shares, uint256 totalShares) external view onlyToken returns (uint256) {
        uint256 dividends = _getCumulativeDividends(shares, totalShares);
        return _getUnpaidEarnings(shareholder, shares, dividends);
    }
    
    function getRealisedEarnings(address shareholder)  external view onlyToken returns (uint256) {
        return shareholderRealizedEarnings[shareholder];
    }

}