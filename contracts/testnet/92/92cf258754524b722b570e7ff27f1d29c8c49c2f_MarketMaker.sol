contract MarketMaker is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    event TakeLoan(address indexed maker, address token, uint256 amount);
    event RepayLoan(address indexed maker, address token, uint256 amount);

    ITreasury public treasury;
    IStakingHelper public stakingHelper;
    IStaking public staking;
    IChiToken public chiToken;
    uint256 public loanAmount;

    constructor (
        address newChiToken,
        address newTreasury,
        address newStakingHelper,
        address newStaking
    ) {
        require(newChiToken != address(0));
        require(newTreasury != address(0));
        require(newStakingHelper != address(0));
        require(newStaking != address(0));
        chiToken = IChiToken(newChiToken);
        treasury = ITreasury(newTreasury);
        stakingHelper = IStakingHelper(newStakingHelper);
        staking = IStaking(newStaking);
    }

    modifier gasRefund {
        uint256 gasStart = gasleft();
        _;
        uint256 gasSpent = 21000 + gasStart - gasleft() + 16 * msg.data.length;
        chiToken.freeUpTo((gasSpent + 14154) / 41947);
    }

    receive() payable external {}

    function takeLoan(address token, uint256 amount) public onlyOwner {
        treasury.manage(token, amount);
        loanAmount += amount;
        emit TakeLoan(msg.sender, token, amount);
    }
    function repayLoan(address token, uint256 amount) public onlyOwner {
        require(amount <= loanAmount, "Cannot pay more than loan amount");
        IERC20(token).approve(address(treasury), amount);
        uint256 value = treasury.valueOf(token, amount);
        treasury.deposit(amount, token, value);
        loanAmount -= amount;
        emit RepayLoan(msg.sender, token, amount);
    }
    function _swap(address router, address[] memory path, uint256 amount, uint256 amountOutMin) internal {
        require(IERC20(path[0]).balanceOf(address(this)) >= amount, "Not enough path[0] in the contract");
        IERC20(path[0]).approve(router, amount);
        IUniswapV2Router01(router).swapExactTokensForTokens(
            amount, 
            amountOutMin, 
            path, 
            address(this), 
            block.timestamp);
    }
    function trade(address router, address[] memory path, uint256 amount, uint256 amountOutMin) public onlyOwner {
        _swap(router, path, amount, amountOutMin);        
    }
    function tradeGas(address router, address[] memory path, uint256 amount, uint256 amountOutMin) public onlyOwner gasRefund {
        _swap(router, path, amount, amountOutMin);
    }
    function stake(address token, uint256 amount) public onlyOwner {
        IERC20(token).approve(address(stakingHelper), amount);
        stakingHelper.stake(amount);
    }
    function unstake(address token, uint256 amount) public onlyOwner {
        IERC20(token).approve(address(staking), amount);
        staking.unstake(amount, true);
    }
    function withdrawToken(address token) public onlyOwner {
        uint256 balance = IERC20(token).balanceOf(address(this));
        address to = this.owner();
        IERC20(token).transfer(to, balance);
    }
    function withdrawEth(uint256 amount) public onlyOwner {
       msg.sender.transfer(amount);
    }
    function mintGasToken(uint256 amount) public {
        chiToken.mint(amount);
    }
}

