contract AplLock is Pausable, Ownable {
    using SafeMath for uint256;

    // uint256 OneDayInSeconds = 24 * 60 * 60;
    uint256 OneDayInSeconds = 60;

    struct Lock { 
        uint256 aplAmount;
        uint256 releasedAplAmount;
        uint256 lastRelesedTime;
        uint256 releaseTimes;
        bool isAllive;
    }

    mapping(address => uint256) public ownerOfLockedAplAmount;
    mapping(address => bool) public ownerIsFrozen;
    mapping(address => Lock[]) public ownerOfLockedList;

    IERC20 apl;

    function setAplAddress(address _address) public onlyOwner {
        apl = IERC20(address(_address));
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function frozenUser(address _address) public onlyOwner {
        ownerIsFrozen[_address] = true;
    }

    function unFrozenUser(address _address) public onlyOwner {
        ownerIsFrozen[_address] = false;
    }

    function lockApl(address _address, uint256 _lockAmount) public onlyOwner{
        // before do this, add this contract address to whitelist
        // before do this, approve this contract address in apl contract
        require(_address !=  address(0), "Invalid Account");
        require(_lockAmount > 0, "Invalid lock amount");
        apl.transferFrom(_address, address(this), _lockAmount);
        uint256 oldLockedAmount = ownerOfLockedAplAmount[msg.sender];
        ownerOfLockedAplAmount[msg.sender] = oldLockedAmount.add(_lockAmount);

        Lock memory lock = Lock(_lockAmount, 0, block.timestamp, 0, true);
        ownerOfLockedList[msg.sender].push(lock);
    }

    function releaseApl() public {
        bool isFrozen = ownerIsFrozen[msg.sender];
        require(!isFrozen, "Account is frozen");

        uint256 releaseAmount = 0;
        uint256 nowTime = block.timestamp;
        for(uint8 i=0; i < ownerOfLockedList[msg.sender].length; i++){
            if(ownerOfLockedList[msg.sender][i].isAllive && ownerOfLockedList[msg.sender][i].lastRelesedTime!=0){
                uint256 lastRelesedTime = ownerOfLockedList[msg.sender][i].lastRelesedTime;
                uint256 releaseTimes = ownerOfLockedList[msg.sender][i].releaseTimes;
                uint256 timespan = nowTime.sub(lastRelesedTime);
                uint256 mod = timespan.mod(OneDayInSeconds);
                uint256 numOfDays = timespan.sub(mod).div(OneDayInSeconds);
                if(numOfDays > 0){
                    ownerOfLockedList[msg.sender][i].lastRelesedTime = nowTime;
                    if(releaseTimes.add(numOfDays) >= 1000){
                        ownerOfLockedList[msg.sender][i].releaseTimes = 1000; 
                        releaseAmount = releaseAmount.add(ownerOfLockedList[msg.sender][i].aplAmount.sub(ownerOfLockedList[msg.sender][i].releasedAplAmount));
                        ownerOfLockedList[msg.sender][i].releasedAplAmount = ownerOfLockedList[msg.sender][i].aplAmount;
                        ownerOfLockedList[msg.sender][i].isAllive = false;
                    }else{
                        ownerOfLockedList[msg.sender][i].releaseTimes = releaseTimes.add(numOfDays); 
                        uint256 amount = ownerOfLockedList[msg.sender][i].aplAmount.mul(numOfDays.mul(1)).div(1000);
                        releaseAmount = releaseAmount.add(amount);
                        ownerOfLockedList[msg.sender][i].releasedAplAmount = ownerOfLockedList[msg.sender][i].releasedAplAmount.add(amount);
                    }
                }
            }
        }
        apl.transfer(msg.sender, releaseAmount);
    }

    function getReleasedAplBalance() public view returns(uint256) {
        uint256 releaseAmount = 0;
        uint256 nowTime = block.timestamp;
        for(uint8 i=0; i < ownerOfLockedList[msg.sender].length; i++){
            if(ownerOfLockedList[msg.sender][i].isAllive && ownerOfLockedList[msg.sender][i].lastRelesedTime!=0){
                uint256 lastRelesedTime = ownerOfLockedList[msg.sender][i].lastRelesedTime;
                uint256 releaseTimes = ownerOfLockedList[msg.sender][i].releaseTimes;
                uint256 timespan = nowTime.sub(lastRelesedTime);
                uint256 mod = timespan.mod(OneDayInSeconds);
                uint256 numOfDays = timespan.sub(mod).div(OneDayInSeconds);
                if(numOfDays > 0){
                    if(releaseTimes.add(numOfDays) >= 1000){ 
                        releaseAmount = releaseAmount.add(ownerOfLockedList[msg.sender][i].aplAmount.sub(ownerOfLockedList[msg.sender][i].releasedAplAmount));
                    }else{
                        uint256 amount = ownerOfLockedList[msg.sender][i].aplAmount.mul(numOfDays.mul(1)).div(1000);
                        releaseAmount = releaseAmount.add(amount);
                    }
                }
            }
        }
        return releaseAmount;
    }
}