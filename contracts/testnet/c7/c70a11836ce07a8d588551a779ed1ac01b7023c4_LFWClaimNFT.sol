pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "../interface/ILFW721.sol";

contract LFWClaimNFT is
    Initializable,
    OwnableUpgradeable,
    ReentrancyGuardUpgradeable,
    IERC721Receiver
{
    using SafeMath for uint256;

    bool public isInitialized;
    ILFW721 public lfwContract;
    IERC721 public binanceNFTContract;
    uint256 public totalWhitelist;
    uint256 public totalMinted;
    uint256 private nonce;

    // id of random position form 1 to totalWhitelist;
    mapping(string => uint256[]) public nftSlots;
    // Binance token to LFW token
    mapping(uint256 => uint256) public binanceLFWToken;
    // user address => pool name => number of slot.
    mapping(address => mapping(string => uint256)) public whitelistAddress;
    // pool => list LFW token id
    mapping(string => uint256[]) public poolLFWToken;
    // mapping token id minted
    mapping(uint256 => bool) mintedLFWTokens;

    mapping(address => mapping(uint256 => uint256)) whitelistBinanceAddressNFT;

    mapping(address => bool) whitelistOperator;

    function initialize() public initializer {
        __Ownable_init();
        __ReentrancyGuard_init();
        totalMinted = 0;
    }

    function inititalContract(address _lfwAddress, address _binanceNFTAddress)
        public
        onlyOwner
    {
        require(!isInitialized, "Already initialized");
        require(address(_lfwAddress) != address(0), "Invalid address");
        require(address(_binanceNFTAddress) != address(0), "Invalid address");

        isInitialized = true;
        lfwContract = ILFW721(_lfwAddress);
        binanceNFTContract = IERC721(_binanceNFTAddress);
    }

    /**
     * @notice need approve from user for contract transfer binance NFT
     * @param _binanceNFTId binance NFT id for swap
     */
    function claimBinanceNFT(uint256 _binanceNFTId) external nonReentrant {
        require(totalMinted < totalWhitelist, "You had minted all NFT");
        require(
            binanceLFWToken[_binanceNFTId] > 0,
            "Binance NFT not whitelisted or minted"
        );
        uint256 lfwTokenId = binanceLFWToken[_binanceNFTId];
        binanceNFTContract.safeTransferFrom(
            _msgSender(),
            address(this),
            _binanceNFTId
        );

        totalMinted = totalMinted.add(1);
        delete binanceLFWToken[_binanceNFTId];

        _mint(_msgSender(), lfwTokenId);

        emit ClaimToken(_msgSender(), _binanceNFTId, lfwTokenId);
    }

    /**
     * _signature = sign(_binanceNFTId+_binanceNFTAddress+_lfwId) by operator wallet
     */
    function claimBinanceMysteryBox(
        uint256 _binanceNFTId,
        address _binanceNFTAddress,
        uint256 _lfwId,
        bytes memory _signature
    ) external nonReentrant {
        require(totalMinted < totalWhitelist, "You had minted all NFT");
        require(
            binanceLFWToken[_binanceNFTId] > 0,
            "Binance NFT not whitelisted or minted"
        );
        // validate signature
        bytes32 messageHash = keccak256(
            abi.encodePacked(_binanceNFTId, _binanceNFTAddress, _lfwId)
        );
        bytes32 ethSignedMessageHash = getEthSignedHash(messageHash);
        address signerAddress = verify(ethSignedMessageHash, _signature);
        require(whitelistOperator[signerAddress], "INVALID_SIGNER");

        IERC721(_binanceNFTAddress).safeTransferFrom(
            _msgSender(),
            address(this),
            _binanceNFTId
        );

        totalMinted = totalMinted.add(1);
        delete binanceLFWToken[_binanceNFTId];

        _mint(_msgSender(), _lfwId);

        emit ClaimToken(_msgSender(), _binanceNFTId, _lfwId);
    }

    /**
     * @notice need approve from user for contract transfer binance NFT
     * @param _poolName name of pool : pool1, pool2 ...
     */
    function claimByAddress(string memory _poolName) external nonReentrant {
        require(totalMinted < totalWhitelist, "You had minted all NFT");
        require(
            poolLFWToken[_poolName].length > 0,
            "Pool not whitelisted / initialized or all claimed"
        );
        require(
            whitelistAddress[_msgSender()][_poolName] > 0,
            "You do not have slot"
        );

        address _receipient = msg.sender;
        uint256 randomSlot = random(0, poolLFWToken[_poolName].length);
        uint256 heroId = poolLFWToken[_poolName][randomSlot];
        // remove pool slot nft
        poolLFWToken[_poolName][randomSlot] = poolLFWToken[_poolName][
            poolLFWToken[_poolName].length - 1
        ];
        poolLFWToken[_poolName].pop();

        whitelistAddress[_msgSender()][_poolName] =
            whitelistAddress[_msgSender()][_poolName] -
            1;

        totalMinted = totalMinted.add(1);

        _mint(_receipient, heroId);

        emit ClaimToken(_receipient, 0, heroId);
    }

    function _mint(address _receipient, uint256 tokenId) internal {
        lfwContract.mintBox(_receipient, tokenId);
        mintedLFWTokens[tokenId] = true;
    }

    function updateLFWContract(address _address) external onlyOwner {
        require(address(_address) != address(0), "LFW Address invalid");
        lfwContract = ILFW721(_address);
    }

    function updateBinanceNFTContract(address _address) external onlyOwner {
        require(address(_address) != address(0), "Address invalid");
        binanceNFTContract = IERC721(_address);
    }

    /**
     * @dev only call by owner
     * @param _binanceTokenId: binance nft token id mapping for LFW NFT
     */
    function addWhitelistNft(
        string calldata _heroId,
        uint256 _startId,
        uint256 _endId,
        uint256[] calldata _binanceTokenId
    ) external onlyOwner {
        require(
            _binanceTokenId.length == _endId - _startId + 1,
            "Id invalid size"
        );
        require(_binanceTokenId.length > 0, "Total invalid");
        // require(nftSlots[_heroId].length == 0, "Hero initialized");
        // nftSlots[_heroId] = [_startId, _endId];
        uint256 counter = 0;
        for (
            uint256 lfwTokenId = _startId;
            lfwTokenId <= _endId;
            lfwTokenId++
        ) {
            binanceLFWToken[_binanceTokenId[counter]] = lfwTokenId;
            counter = counter + 1;
            totalWhitelist = totalWhitelist.add(1);
        }
    }

    /**
     * @dev only call by owner
     * @param _binanceTokenId: binance nft token id mapping for LFW NFT
     */
    function addWhitelistBinance3Nft(
        uint256[] calldata _lfwTokenId,
        uint256[] calldata _binanceTokenId,
        address _binanceNFTAddress
    ) external onlyOwner {
        require(
            _binanceTokenId.length == _lfwTokenId.length,
            "Id invalid size"
        );
        for (uint256 id = 0; id <= _lfwTokenId.length; id++) {
            whitelistBinanceAddressNFT[_binanceNFTAddress][
                _binanceTokenId[id]
            ] = _lfwTokenId[id];
            totalWhitelist = totalWhitelist.add(1);
        }
    }

    function revokeWhitelistedNft(
        string calldata _heroId,
        uint256[] calldata _binanceTokenId
    ) external onlyOwner {
        require(_binanceTokenId.length <= totalWhitelist, "Id invalid size");
        require(_binanceTokenId.length > 0, "Total invalid");
        require(nftSlots[_heroId].length == 0, "Hero not initialized");

        delete nftSlots[_heroId];
        for (uint256 i = 0; i <= _binanceTokenId.length; i++) {
            delete binanceLFWToken[_binanceTokenId[i]];
            totalWhitelist = totalWhitelist.sub(1);
        }
    }

    /**
     * @notice whitelist address to pool and update number of slot if existed.
     * @dev only call by owner
     * @param _addresses: list whitelist address
     */
    function addWhitelistAddress(
        string calldata _poolName,
        uint256[] memory _startId,
        uint256[] memory _endId,
        address[] memory _addresses
    ) external onlyOwner {
        require(_startId.length == _endId.length, "Id invalid size");
        // require(_addresses.length > 0, "Address list invalid");
        // require(poolLFWToken[_poolName].length == 0, "Pool initialized");

        for (uint256 i = 0; i < _startId.length; i++) {
            for (uint256 tId = _startId[i]; tId <= _endId[i]; tId++) {
                poolLFWToken[_poolName].push(tId);
                totalWhitelist = totalWhitelist.add(1);
            }
        }
        for (uint256 index = 0; index < _addresses.length; index++) {
            whitelistAddress[_addresses[index]][_poolName] =
                whitelistAddress[_addresses[index]][_poolName] +
                1;
        }
    }

    function getLFWTokenId(uint256 _binanceNFTId)
        external
        view
        returns (uint256)
    {
        uint256 lfwTokenId = binanceLFWToken[_binanceNFTId];
        return lfwTokenId;
    }

    /**
     * return number of slot user can call claim
     */
    function getPoolSlotSize(address _userAddress, string memory _poolName)
        external
        view
        returns (uint256)
    {
        uint256 numSlot = whitelistAddress[_userAddress][_poolName];
        return numSlot;
    }

    /**
     * @dev generate a random number
     * @param min min number include
     * @param max max number exclude
     */
    function random(uint256 min, uint256 max)
        internal
        returns (uint256 randomnumber)
    {
        randomnumber = uint256(
            keccak256(abi.encodePacked(block.timestamp, msg.sender, nonce))
        ).mod(max - min);
        randomnumber = randomnumber + min;
        nonce = nonce.add(1);
        return randomnumber;
    }

    function getEthSignedHash(bytes32 _messageHash)
        internal
        pure
        returns (bytes32)
    {
        return
            keccak256(
                abi.encodePacked(
                    "\x19Ethereum Signed Message:\n32",
                    _messageHash
                )
            );
    }

    // input the getEthSignedHash results and the signature hash results
    // the output of this function will be the account number that signed the original message
    function verify(bytes32 _ethSignedMessageHash, bytes memory _signature)
        internal
        pure
        returns (address)
    {
        (bytes32 r, bytes32 s, uint8 v) = splitSignature(_signature);
        return ecrecover(_ethSignedMessageHash, v, r, s);
    }

    function splitSignature(bytes memory sig)
        internal
        pure
        returns (
            bytes32 r,
            bytes32 s,
            uint8 v
        )
    {
        require(sig.length == 65, "invalid signature length");

        assembly {
            /*
            First 32 bytes stores the length of the signature
            add(sig, 32) = pointer of sig + 32
            effectively, skips first 32 bytes of signature
            mload(p) loads next 32 bytes starting at the memory address p into memory
            */

            // first 32 bytes, after the length prefix
            r := mload(add(sig, 32))
            // second 32 bytes
            s := mload(add(sig, 64))
            // final byte (first byte of the next 32 bytes)
            v := byte(0, mload(add(sig, 96)))
        }

        // implicitly return (r, s, v)
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) external virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    event ClaimToken(
        address indexed minter,
        uint256 binanceTokenId,
        uint256 lfwTokenId
    );
}

