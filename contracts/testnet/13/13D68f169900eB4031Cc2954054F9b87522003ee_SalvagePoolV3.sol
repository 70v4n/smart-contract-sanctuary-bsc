    // check if the capacity of a ship is full
    function isFullOfLength(uint256 shipId) external view returns(bool) {
        return (ships[shipId].stakingTimestamp).add(ships[shipId].stakingLengthInSec) <= block.timestamp;
    }

    // cancel collecting
    // returns salvage id, length in secs of staking
    function cancelCollecting(uint256 shipId) external returns(uint256 salvageId, uint256 lengthInSec){
        require(stakedShips[msg.sender].contains(shipId), "Not an owner");
        ship.safeTransferFrom(address(this), msg.sender, shipId);
        stakedShips[msg.sender].remove(shipId);
        salvageId = ships[shipId].salvageId;
        lengthInSec = (ships[shipId].stakingTimestamp).add(ships[shipId].stakingLengthInSec) > block.timestamp ?
                      (block.timestamp).sub(ships[shipId].stakingTimestamp):
                      ships[shipId].stakingLengthInSec;
        delete ships[shipId];
        emit CancelCollecting(msg.sender, shipId);
    }


    function sellSalvage(uint256 shipId, uint256 planetId, uint256 salvageValueInBYG, uint8 v, bytes32 r, bytes32 s) external {
        require(verify(abi.encodePacked(shipId.toString(), planetId.toString(), salvageValueInBYG.toString()), v, r, s), "Invalid action.");
        require(ship.ownerOf(shipId)==msg.sender, "Not an owner");
        uint256 tax = salvageValueInBYG.mul(STATION_TAX).div(100);
        if(planet.ownerOf(planetId)==address(stakingPlanet)){
            claimablesOf[stakingPlanet.tokenInfos(planetId).owner] = claimablesOf[stakingPlanet.tokenInfos(planetId).owner].add(tax);
        }
        else if(!planet.ownerOf(planetId).isContract()){
            claimablesOf[planet.ownerOf(planetId)] = claimablesOf[planet.ownerOf(planetId)].add(tax);
        }        
        require(quote.transfer(msg.sender, salvageValueInBYG.sub(tax)));
    }

    //claim the rewards when having salvage depots
    function claimTaxes() external {
        require(quote.transfer(msg.sender, claimablesOf[msg.sender]));
        claimablesOf[msg.sender] = 0;
    }
    

    function sellShipAsMetal(uint256 shipId, uint256 sellValueInBYG, uint8 v, bytes32 r, bytes32 s) external {
        require(verify(abi.encodePacked(shipId.toString(), sellValueInBYG.toString()), v, r, s), "Invalid action.");
        require(ship.ownerOf(shipId)==msg.sender, "Not an owner");

        ship.burn(shipId);
        require(quote.transfer(msg.sender, sellValueInBYG));
        emit SellShipAsMetal(msg.sender, shipId);
    }

    // verify if the input values is valid
    function verify(bytes memory input, uint8 v, bytes32 r, bytes32 s) private view returns(bool) {
        bytes32 prefixedHash = keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", keccak256(input)));
        return ecrecover(prefixedHash, v, r, s)==_owner;
    }

    /**
     * @dev Transfers ownership of the contract to a new account (`newOwner`).
     * Can only be called by the current owner.
     */
    function transferOwnership(address newOwner) public onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }

    /**
     * @dev Returns the bep token owner.
     */
    function getOwner() external view returns (address) {
        return _owner;
    }

    /* get staked ship list of a staker */
    function stakedShipsOf(address _staker) 
        external 
        view
        returns( uint256[] memory )
    {
        uint256[] memory tokens = new uint256[](stakedShips[_staker].length());
        for(uint i = 0; i < stakedShips[_staker].length(); i++){
            tokens[i] = stakedShips[_staker].at(i);
        }
        return tokens;
    }


    function setStationTax(uint256 tax) external onlyOwner {
        require(tax>=0 && tax < 100, "Wrong percent");
        STATION_TAX = tax;
    }

    function setSecret(string memory _sec) external onlyOwner {
        _secret = _sec;
    }
    
    /**
     * ERC721Receiver hook for single transfer.
     * @dev Reverts if the caller is not the whitelisted NFT contract.
     */
    function onERC721Received(
        address, /*operator*/
        address, /*from*/
        uint256 id,
        bytes calldata /*data*/
    ) external override view returns (bytes4) {
        require(address(ship) == msg.sender, "You can stake only salvage spaceships.");
        require(ship.getType(id)==3, "Not a salvage spaceship");
        return this.onERC721Received.selector;
    }

    // function to allow admin to claim ERC20 tokens sent to this contract
    function transferAnyERC20Tokens(IERC20 token, address to, uint amount) external onlyOwner {
        require(token.transfer(to, amount), "Could not transfer tokens.");
    }
