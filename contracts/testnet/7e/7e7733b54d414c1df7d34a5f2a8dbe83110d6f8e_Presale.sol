contract Presale is Ownable {
    using SafeMath for uint256;
    IBEP20 public _97BET;
    IBEP20 public BUSD;
    uint constant public maxBuy = 15000 ether;
    uint constant public hardCap = 500000 ether;
    mapping(address => uint) public buyers;
    AggregatorV3Interface internal priceFeed = AggregatorV3Interface(0x2514895c72f50D8bd4B4F9b1110F0D6bD2c97526);

    // event
    event Buy(address receiver, uint amount, uint amount97BET);
    event BuyByBUSD(address receiver, uint amount, uint amount97BET);
    constructor () public {
        _97BET = IBEP20(0xf03a69f6B0D0f1137a597704DA200a6705Ba8E45);
        BUSD = IBEP20(0x12aE57f0Dae724b9944F970fF55b2e462948190E);
    }
    function getLatestPrice() public view returns (int) {
        (,int price,,,) = priceFeed.latestRoundData();
        return price * 10**10;
    }
    function BNB2USD() public view returns (uint _amountUsd){
        return uint(getLatestPrice());
    }
    function USD2BNB() public view returns (uint _amount){
        uint decimal = 1 ether;
        return decimal.mul(1 ether).div(BNB2USD());
    }
    function BNB297BET(uint _amount) public view returns(uint _amount97BET) {
        uint expectedRate = BNB2USD();
        uint usdAmount = expectedRate.mul(_amount).div(1 ether);
        return BUSD297BET(usdAmount);
    }
    function BUSD297BET(uint _amount) public pure returns(uint _amount97BET) {
        return _amount.mul(10);
    }
    function _97BET2BNB(uint _amount) public view returns(uint _amountBNB) {
       return _97BET2BUSD(_amount).mul(USD2BNB());
    }
    function _97BET2BUSD(uint _amount) public pure returns(uint _amountBUSD) {
        return _amount.div(10);
    }
    function userBuyRemain(address _user) public view returns (uint) {
        return maxBuy.sub(buyers[_user]);
    }
    function softCap() public view returns (uint) {
        return hardCap.sub(_97BET2BUSD(getRemainingToken(_97BET)));
    }
    function _buy(uint _amount) internal {
        require(_amount.add(buyers[_msgSender()]) <= maxBuy, 'Over buy amount');
        buyers[msg.sender] = buyers[msg.sender].add(_amount);
        _97BET.transfer(_msgSender(), _amount);
    }
    function buy() public payable{
        uint amount97BET = BNB297BET(msg.value);
        owner().transfer(msg.value);
        _buy(amount97BET);
        emit Buy(msg.sender, msg.value, amount97BET);
    }
    function buyByBUSD(uint _amountBUSD) public {
        uint256 amount97BET = BUSD297BET(_amountBUSD);
        require(BUSD.transferFrom(msg.sender, owner(), _amountBUSD));
        _buy(amount97BET);
        emit BuyByBUSD(msg.sender, _amountBUSD, amount97BET);
    }
   
    function withdraw(IBEP20 _token, address _address) public onlyOwner {
        uint tokenBalanceOfContract = getRemainingToken(_token);
        _token.transfer(_address, tokenBalanceOfContract);
    }

    /**
    * @dev Get the remaining amount of token user can receive.
    * @return Uint256 the amount of token that user can reveive.
    */
    function getRemainingToken(IBEP20 _token) public view returns (uint256) {
        return _token.balanceOf(address(this));
    }
}