import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlEnumerableUpgradeable.sol";

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

interface IERC721 {
    function mint(
        address to,
        string memory tokenUri,
        uint256 amount
    ) external returns (uint256[] memory ids);
}

contract MysteryBoxV2Upgradeable is
    AccessControlEnumerableUpgradeable,
    ReentrancyGuardUpgradeable,
    PausableUpgradeable
{
    using CountersUpgradeable for CountersUpgradeable.Counter;

    struct Reward {
        address nftContract;
        uint256 amount;
        string tokenUri;
        uint256 amountPaidOut;
    }

    struct Box {
        uint256 boxId;
        string boxUri;
        bool isActive;
        address payment;
        uint256 price;
        uint256 availableReward;
    }

    struct Discount {
        uint256 percent;
        uint256 startTime;
        uint256 endTime;
        uint256 amount;
        uint256 amountSold;
    }

    CountersUpgradeable.Counter private _boxIds;
    // boxId => box
    mapping(uint256 => Box) private _boxes;
    // boxId => reward
    mapping(uint256 => Reward[]) private _rewards;
    // boxId => discount
    mapping(uint256 => Discount) private _discounts;

    address private _beneficiary;

    event BuyBox(
        address user,
        uint256 boxId,
        address payment,
        uint256 rawPrice,
        uint256 pricePaid,
        uint256 discountPercent,
        address rewardAddress,
        uint256 rewardTokenId
    );

    modifier onlyAdmin() {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Error: ADMIN role required");
        _;
    }

    function initialize(address beneficiary) public virtual initializer {
        _beneficiary = beneficiary;
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    }

    function getBeneficiary() public view returns (address) {
        return _beneficiary;
    }

    function addBox(
        string memory boxUri,
        address payment,
        uint256 price
    ) public nonReentrant onlyAdmin {
        require(!_compareStrings(boxUri, ""), "Error: boxUri shout not empty");

        _boxIds.increment();
        uint256 newBoxId = _boxIds.current();

        _boxes[newBoxId] = Box(newBoxId, boxUri, true, payment, price, 0);
    }

    function updateBox(
        uint256 boxId,
        string memory boxUri,
        address payment,
        uint256 price
    ) public nonReentrant onlyAdmin {
        require(_exist(boxId), "Error: Nonexistent boxId");
        require(!_compareStrings(boxUri, ""), "Error: boxUri should not empty");

        Box storage box = _boxes[boxId];

        box.boxUri = boxUri;
        box.payment = payment;
        box.price = price;
    }

    function setActiveBox(uint256 boxId, bool isActive) public nonReentrant onlyAdmin {
        require(_exist(boxId), "Error: Nonexistent boxId");
        _boxes[boxId].isActive = isActive;
    }

    function addReward(
        uint256 boxId,
        address nftContract,
        uint256 amount,
        string memory tokenUri
    ) public nonReentrant onlyAdmin {
        require(_boxes[boxId].isActive, "Error: Box is closed");
        require(nftContract != address(0), "Error: NFT contract should not is zero address");
        require(amount > 0, "Error: Amount must be greater than zero");
        require(!_compareStrings(tokenUri, ""), "Error: tokenUri should not empty");

        _rewards[boxId].push(Reward(nftContract, amount, tokenUri, 0));
        _boxes[boxId].availableReward += 1;
    }

    function addReward(
        uint256 boxId,
        uint256 index,
        uint256 amount
    ) public nonReentrant onlyAdmin {
        require(_boxes[boxId].isActive, "Error: Box is closed");
        require(_rewards[boxId].length > index, "Error: Reward not exist");

        Reward memory reward = _rewards[boxId][index];
        if (reward.amount == reward.amountPaidOut) {
            _boxes[boxId].availableReward += 1;
        }

        _rewards[boxId][index].amount += amount;
    }

    function removeReward(uint256 boxId, uint256 index) public nonReentrant onlyAdmin {
        require(_boxes[boxId].isActive, "Error: Box is closed");
        require(_rewards[boxId].length > index, "Error: Reward not exist");

        Reward memory reward = _rewards[boxId][index];

        if (reward.amountPaidOut == 0) {
            _rewards[boxId][index] = _rewards[boxId][_rewards[boxId].length - 1];
            _rewards[boxId].pop();
        } else {
            _rewards[boxId][index].amount = reward.amountPaidOut;
        }

        _boxes[boxId].availableReward -= 1;
    }

    function buy(uint256 boxId) public nonReentrant {
        require(_exist(boxId), "Error: Box not exist");

        Box storage box = _boxes[boxId];
        require(box.isActive, "Error: Box is not active");
        require(box.payment != address(0), "Error: Payment token is native token");

        (uint256 priceAfterDiscount, uint256 discountPercent) = _applyDiscount(box);

        IERC20 paymentContract = IERC20(box.payment);
        require(
            paymentContract.allowance(_msgSender(), address(this)) >= priceAfterDiscount,
            "Error: Payment token not allow by user"
        );
        require(
            paymentContract.transferFrom(_msgSender(), _beneficiary, priceAfterDiscount),
            "Error: Transfer payment token failed"
        );

        _buyBox(box, priceAfterDiscount, discountPercent);
    }

    function setDiscount(
        uint256 boxId,
        uint256 percent,
        uint256 startTime,
        uint256 endTime,
        uint256 amount
    ) public nonReentrant onlyAdmin {
        require(_exist(boxId), "Error: Box not exist");

        _discounts[boxId] = Discount(percent, startTime, endTime, amount, 0);
    }

    function removeDiscount(uint256 boxId) public nonReentrant onlyAdmin {
        require(_exist(boxId), "Error: Box not exist");

        delete _discounts[boxId];
    }

    function buyByNativeToken(uint256 boxId) public payable nonReentrant {
        require(_exist(boxId), "Error: Box not exist");

        Box storage box = _boxes[boxId];
        require(box.isActive, "Error: Box is not active");
        require(box.payment == address(0), "Error: Payment token is erc20 token");

        (uint256 priceAfterDiscount, uint256 discountPercent) = _applyDiscount(box);

        require(msg.value == priceAfterDiscount, "Error: Not enough token");

        _buyBox(box, priceAfterDiscount, discountPercent);
    }

    function _applyDiscount(Box memory box) private view returns (uint256 priceAfterDiscount, uint256 discountPercent) {
        Discount memory discount = _discounts[box.boxId];

        if (
            block.timestamp < discount.startTime ||
            discount.endTime < block.timestamp ||
            discount.amount == discount.amountSold
        ) return (box.price, discount.percent);

        discount.amountSold += 1;

        return ((box.price * discount.percent) / 1 ether, discount.percent);
    }

    function _buyBox(
        Box storage box,
        uint256 priceAfterDiscount,
        uint256 discountPrice
    ) private {
        require(box.availableReward > 0, "Error: Not enough reward");
        uint256[] memory rewardIndexes = _getAvailableRewardIndexes(box.boxId);

        uint256 rewardIndex = rewardIndexes[_getRandomNumber() % rewardIndexes.length];
        Reward storage reward = _rewards[box.boxId][rewardIndex];

        uint256 tokenId = IERC721(reward.nftContract).mint(_msgSender(), reward.tokenUri, 1)[0];

        reward.amountPaidOut += 1;
        if (reward.amount == reward.amountPaidOut) box.availableReward -= 1;

        emit BuyBox(
            _msgSender(),
            box.boxId,
            box.payment,
            box.price,
            priceAfterDiscount,
            discountPrice,
            reward.nftContract,
            tokenId
        );
    }

    function _getAvailableRewardIndexes(uint256 boxId) private view returns (uint256[] memory) {
        uint256[] memory indexes = new uint256[](_boxes[boxId].availableReward);
        uint256 index = 0;
        for (uint256 i = 0; i < _rewards[boxId].length; i++) {
            if (_rewards[boxId][i].amount > _rewards[boxId][i].amountPaidOut) indexes[index++] = i;
        }

        return indexes;
    }

    function tokenUri(uint256 boxId) public view returns (string memory) {
        require(_exist(boxId), "Error: URI query for nonexistent token");
        return _boxes[boxId].boxUri;
    }

    function _countBoxes(bool isActive) private view returns (uint256) {
        uint256 count = 0;
        for (uint256 boxId = 1; boxId <= _boxIds.current(); boxId++) {
            if (_boxes[boxId].isActive == isActive) count++;
        }
        return count;
    }

    function getAllBoxes(bool isActive) public view returns (Box[] memory, Discount[] memory) {
        uint256 count = _countBoxes(isActive);
        Box[] memory boxes = new Box[](count);
        Discount[] memory discounts = new Discount[](count);
        uint256 index = 0;
        for (uint256 boxId = 1; boxId <= _boxIds.current(); boxId++) {
            if (_boxes[boxId].isActive == isActive) {
                boxes[index] = _boxes[boxId];
                discounts[index] = _discounts[boxId];
                index += 1;
            }
        }

        return (boxes, discounts);
    }

    function getBox(uint256 boxId)
        public
        view
        returns (
            Box memory,
            Discount memory,
            Reward[] memory
        )
    {
        require(_exist(boxId), "Error: Box not exist");

        return (_boxes[boxId], _discounts[boxId], _rewards[boxId]);
    }

    function _getRandomNumber() private view returns (uint256) {
        return uint256(keccak256(abi.encodePacked(blockhash(block.number - 1), block.timestamp * block.difficulty)));
    }

    function _exist(uint256 boxId) private view returns (bool) {
        return !_compareStrings(_boxes[boxId].boxUri, "");
    }

    function _compareStrings(string memory a, string memory b) private pure returns (bool) {
        return (keccak256(abi.encodePacked((a))) == keccak256(abi.encodePacked((b))));
    }

    function withdrawERC20(
        address to,
        address token,
        uint256 amount
    ) public nonReentrant onlyAdmin {
        require(IERC20(token).transfer(to, amount), "Error: Transfer failed");
    }
}

