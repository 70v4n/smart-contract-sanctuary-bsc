pragma solidity ^0.8.0;

import "./Utils.sol";

contract MultiTokenAirdrop is Auth {
	// using SafeMath for uint256;

	uint public cap = 500000 * 1e18;
	uint public reserved = 0;
	uint public withdrawn = 0;
	uint public eachReferralEarn = 0.5 ether;
	uint public maxEarn = 25 ether;
	uint public withdrawThreshold = 15 ether;
	uint public duration = 60 days;
	uint public startTime;
	bool public isStarted = false;
	IERC20 public token;

	struct UserInfo {
		bool isAllowedToWithdraw;
		bool isClaimed;
		uint referralCount;
		uint totalEarn;
		bool hasWithdrawn;
	}

	mapping(address => UserInfo) public users;

	constructor(address _tokenAddr) Auth(msg.sender) {
		token = IERC20(_tokenAddr);
	}

	modifier onlyBeforeEnd {
		require(startTime > 0 && isStarted == true, "AIRDROP NOT STARTED YET!!");
		require(block.timestamp < startTime + duration, "AIRDROP AREADY END!!");
		_;
	}

	modifier onlyAfterEnd {
		require(startTime > 0 && isStarted == true, "AIRDROP NOT STARTED YET!!");
		require(block.timestamp > startTime + duration, "AIRDROP NOT ENDS YET!!");
		_;
	}

	event Claimed (address _user, address _referrer, uint _amt);
	event ClaimedNoReferrer (address _user);
	event BEP20TokenWithdrawn (address _BEP20Token, uint _amt);

	// User functions

	function claim(address _referrer) public onlyBeforeEnd {
		require(!users[msg.sender].isClaimed, "ALREADY Claimed");
		require(_referrer.balance > 0, "Referrer wallet must have some BNB");
		require(_referrer != address(0), "Referrer wallet must not be 0x0");
		require(users[_referrer].isClaimed, "Referrer must have already claimed");
		
		uint referralEarn = eachReferralEarn;

		if (users[_referrer].totalEarn + eachReferralEarn > maxEarn) {
			referralEarn = maxEarn - users[_referrer].totalEarn;
		}

		if (!users[_referrer].isAllowedToWithdraw && users[_referrer].totalEarn + referralEarn >= withdrawThreshold) {
			require(reserved + users[_referrer].totalEarn + referralEarn <= cap, "ALREADY CLAIMED OUT1!");
		} 

		require(reserved + referralEarn <= cap, "ALREADY CLAIMED OUT2!");


		users[msg.sender].isClaimed = true;
		users[msg.sender].totalEarn = 1 ether;		

		users[_referrer].totalEarn += referralEarn;
		users[_referrer].referralCount += 1;

		if (users[_referrer].isAllowedToWithdraw) {
			reserved += referralEarn;
		}

		if (users[_referrer].totalEarn >= withdrawThreshold && !users[_referrer].isAllowedToWithdraw) {
			users[_referrer].isAllowedToWithdraw = true;
			reserved += users[_referrer].totalEarn;
		}

		emit Claimed(msg.sender, _referrer, referralEarn);
	}

	function claimNoReferrer() public onlyBeforeEnd {
		require(!users[msg.sender].isClaimed, "ALREADY Claimed");
		require(reserved + 1 ether <= cap, "ALREADY CLAIMED OUT!");
		users[msg.sender].isClaimed = true;
		users[msg.sender].totalEarn = 1 ether;
		emit ClaimedNoReferrer(msg.sender);
	}

	function withdrawMULTI() public onlyAfterEnd {
		require(users[msg.sender].isAllowedToWithdraw , "NOT REACH WITHDRAWABLE THRESHOLD (15 MULTI)");
		require(!users[msg.sender].hasWithdrawn, "ALREADY WITHDRAWN");
		token.transfer(msg.sender, users[msg.sender].totalEarn);
		withdrawn += users[msg.sender].totalEarn;
		users[msg.sender].hasWithdrawn = true;
	}

	// Owner functions
	function startAirdrop() public onlyOwner {
		// Owner need to approve 500000 * 1e18 Multi Tokens
		require(startTime == 0 && isStarted == false, "ALREADY STARTED!!");
		require(token.allowance(msg.sender, address(this) ) >= cap, "APPROVE 500000 MULTI to Airdrop contract first!!");
		token.transferFrom(msg.sender, address(this), cap);
		isStarted = true;
		startTime = block.timestamp;
	}
	
	function resetDuration(uint _sec) external onlyOwner {
		duration = _sec;
	}

	// Utils functions
	function withdrawBEP20(address _BEP20Addr) public authorized {
		require(_BEP20Addr != address(token), "NOT ALLOWED TO WITHDRAW MULTI");
		IERC20 BEP20Token = IERC20(_BEP20Addr);
		uint bal = BEP20Token.balanceOf(address(this));
		BEP20Token.transfer(msg.sender, bal);
		emit BEP20TokenWithdrawn(_BEP20Addr, bal);
	}

	function getUserInfo(address _addr) public view returns(bool isAllowedToWithdraw, bool isClaimed, uint referralCount, uint totalEarn, bool hasWithdrawn) {
		return (
			users[_addr].isAllowedToWithdraw, 
			users[_addr].isClaimed,
			users[_addr].referralCount,
			users[_addr].totalEarn,
			users[_addr].hasWithdrawn
		);
	}	

	
}

