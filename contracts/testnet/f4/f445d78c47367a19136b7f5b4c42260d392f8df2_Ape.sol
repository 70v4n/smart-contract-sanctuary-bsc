contract Ape {
    using SafeMath for uint256;
    IUniswapV2Router02 public immutable uniswapV2Router;

    address _owner;

    modifier onlyOwner() {
        require(
            msg.sender == _owner,
            "Only Contract owner can call this function"
        );
        _;
    }

    constructor(address router) {
        _owner = msg.sender;
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(router);
        uniswapV2Router = _uniswapV2Router;
    }

    function buy(
        address tokenAddress,
        uint256 amount,
        address recipient
    ) private {
        address[] memory path = new address[](2);
        path[0] = uniswapV2Router.WETH();
        path[1] = tokenAddress;

        uint256 deadline = block.timestamp + 15;

        uint256 contract_balance = address(this).balance;
        if (contract_balance > 0)
            uniswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{
                value: amount
            }(0, path, msg.sender, deadline);
    }

    function sell(
        address tokenAddress,
        uint256 amountIn,
        uint256 amountOutMin,
        address recipient
    ) private {
        address[] memory path = new address[](2);
        path[0] = tokenAddress;
        path[1] = uniswapV2Router.WETH();

        uint256 deadline = block.timestamp + 15;

        uint256 contract_balance = address(this).balance;
        if (contract_balance > 0)
            uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(
                amountIn,
                amountOutMin,
                path,
                recipient,
                deadline
            );
    }

    function safe_buy(
        address tokenAddress,
        uint256 amount,
        address recipient
    ) public payable onlyOwner returns (uint256) {
        IBEP20 token = IBEP20(tokenAddress);
        uint256 test_amount = 0.001 ether;

        buy(tokenAddress, test_amount, address(this));
        uint256 tokenBalance = token.balanceOf(address(this));
        token.approve(address(uniswapV2Router), tokenBalance);
        sell(tokenAddress, tokenBalance, test_amount.div(2), address(this));
        buy(tokenAddress, amount, _owner);
    }

    function getContractBalance() public view onlyOwner returns (uint256) {
        return address(this).balance;
    }

    function transferContractBalance(address payable to) public onlyOwner {
        require(address(this).balance > 0, "No Balance in Contract");
        to.transfer(address(this).balance);
    }

    receive() external payable {}
}