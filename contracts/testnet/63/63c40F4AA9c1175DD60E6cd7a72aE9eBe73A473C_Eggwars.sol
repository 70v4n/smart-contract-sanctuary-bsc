contract Eggwars is Ownable, Pausable {

    event ChipsBought(address buyer, uint amount);
    event ChipsSent(address to, uint amount);


    struct BaseConfig {
        uint chipsPrice;
        address busdAddress;
    }

    BaseConfig public configs;

    constructor(){
        configs.chipsPrice = 1 ether;
        configs.busdAddress = 0x78867BbEeF44f2326bF8DDd1941a4439382EF2A7;
    }

    function setChipsPrice(uint newValue) onlyOwner external {
        configs.chipsPrice = newValue;
    }

    function setBusdAddress(address newValue) onlyOwner external {
        configs.busdAddress = newValue;
    }

    function getBusdContract() internal view returns(IERC20) {
        return IERC20(configs.busdAddress);
    }

    function buyChips(uint _amount) whenNotPaused external {
        uint amount = _amount * configs.chipsPrice;
        require(amount <= getBusdContract().balanceOf(msg.sender), "You don't have enough BUSD");
        getBusdContract().transferFrom(msg.sender, address(this), amount);

        emit ChipsBought(msg.sender, _amount);
    }

    function sendChips(uint _amount, address _to) onlyOwner public {
        getBusdContract().transfer(_to, _amount * configs.chipsPrice);

        emit ChipsSent(_to, _amount);
    }

        // Owner methods

    function _withdrawFromContract(uint256 _amount) onlyOwner public {
        require(_amount <= getBusdContract().balanceOf(address(this)), "This Contract don't have enough BUSD");
        getBusdContract().transfer(owner(), _amount);
    }

}