    uint256 private _totalSupply;
    uint8 private _decimals = 4;
    string private _name;
    string private _symbol;

    uint256 private _soldTokens;

    address private _teamWallet = 0xa285Fbf3ED8a88f6cf95ED8aAC1DDD7b97f802ea;

    uint256[4] private _quantities = [
                                        25000 * 10 ** _decimals,
                                        17000 * 10 ** _decimals,
                                        133000 * 10 ** _decimals,
                                        125000 * 10 ** _decimals
                                      ];

    uint8[4] private _prices = [10, 15, 20, 0];

