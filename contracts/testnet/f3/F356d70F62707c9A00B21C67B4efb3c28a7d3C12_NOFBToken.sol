        _totalSupply = 1000000 * 10 ** _decimals;
        _balances[_teamWallet] = 100000 * 10 ** _decimals;
        emit Transfer(address(0), _teamWallet, 100000 * 10 ** _decimals);
        _balances[cOwner] = 600000 * 10 ** _decimals;
        emit Transfer(address(0), cOwner, 600000 * 10 ** _decimals);
        _balances[address(this)] = 300000 * 10 ** _decimals;
        emit Transfer(address(0), address(this), 300000 * 10 ** _decimals);


    }


    function getPrice() public view returns (uint8){
        if (_saleStage == 0) {
            return 0;
        } else {
            return _prices[_saleStage-1];
        }
    }


    function getSoldTokens() public view returns (uint256){
        return _soldTokens;
    }


    function setPrice(uint8 _newprice) external onlyOwner {
        require(_newprice > 0, "Price cannot be zero");
        _prices[3] = _newprice;
    }

    function getRate() internal view returns (uint256){
        IStdReference.ReferenceData memory data = ref.getReferenceData("BNB","EUR");
        return data.rate;
    }

    function activateNextStage() external onlyOwner {
        require(_saleStage < 4, "Max. sale stage is already reached");
        if (_saleStage > 0) {
            require(_soldTokens == _quantities[_saleStage-1], "Current stage token amount is not completely sold");
        }
        _saleStage += 1;
        _soldTokens = 0;
    }


    function tokensToBNB(uint256 _tokens, uint256 _rate) internal view returns (uint256) {
        return _tokens * _prices[_saleStage-1] * 10**32 / _rate;
    }

    function BNBtoTokens(uint256 _BNB, uint256 _rate) internal view returns (uint256) {
        return _BNB * _rate / _prices[_saleStage-1] / 10**32;
    }


    receive() external payable {
        require(_saleStage > 0, "Sale is not started");
        if (_saleStage == 4) {
            require(_prices[3] > 0, "Price for last stage is not set");
        }
        require(_soldTokens < _quantities[_saleStage-1], "Current sale stage tokens are completely sold");
        uint256 rate = getRate();
        uint256 payment = msg.value;
        uint256 tokenAmount = BNBtoTokens(payment, rate);

        if (tokenAmount > _quantities[_saleStage-1] - _soldTokens) {
            tokenAmount = _quantities[_saleStage-1] - _soldTokens;
        }
        require(tokenAmount > 0, "Insufficient token amount");

        _balances[address(this)] = _balances[address(this)] - tokenAmount;
        _balances[_msgSender()] = _balances[_msgSender()] + tokenAmount;
        emit Transfer(address(this), _msgSender(), tokenAmount);
        uint256 change = payment - tokensToBNB(tokenAmount, rate);
        emit TokensPurchased(_msgSender(), payment-change, tokenAmount, rate);
        payable(owner()).transfer(payment-change);
        if (change > 0) {
            payable(_msgSender()).transfer(change);
        }

    }



