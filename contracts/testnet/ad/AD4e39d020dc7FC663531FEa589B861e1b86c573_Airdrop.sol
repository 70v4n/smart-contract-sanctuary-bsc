contract Airdrop{
    IERC20 public token;

constructor(IERC20 _token) public{
   token=_token;
}

    event Airdropped(address indexed _userAddress, uint256 _amount);
    
    
    using SafeMath for uint256;
    

    
    function sendMultiBNB(address []  memory  _contributors,uint256 amount) public  {
        
        uint256 i = 0;
        uint256 totalamount;
        for (i; i < _contributors.length; i++) {
            token.transfer(_contributors[i],amount);

            totalamount+=5;
        }
        emit Airdropped(msg.sender,totalamount);
    }
}









