contract MZBPublic is
    Context,
    Ownable,
    IERC721Receiver,
    ReentrancyGuard
{
    using SafeMath for uint256;

    event NewNftTokenIds(uint256[] nftIds);
    event WhitelistedUser(address[] _addresses, uint256[] _index);
    event ClaimNFT(
        address indexed minter,
        uint256 MZBTokenId
    );
    
    // Admin address
    address public MZB_ADMIN;

    // Base price for minting NFTs
    uint256 basePrice = 0.2 ether;

    // Is initilize the contract yet
    bool public isInitialized;

    // Contract of MZB NFT
    IMZB721 public MZBContract;

    // Number of total NFT Minted
    uint256 public totalMinted;
    
    // Nonce for random
    uint256 private nonce;

    // Maximum number NFTs can be minted
    uint256 public totalNumberNFTs;

    // NFTIds to be minted
    uint256[] public NFTIds;

    // Allow contract to receive ether
    receive() external payable {}


    // mapping token id minted
    mapping(uint256 => bool) mintedMZBTokens;

    constructor() {
        MZB_ADMIN = msg.sender;
    }

    // Initilize contract 
    function inititalContract(address _MZBAddress, uint256 _number)
        public
        onlyOwner
    {
        require(!isInitialized, "Already initialized");
        require(address(_MZBAddress) != address(0), "Invalid address");
        isInitialized = true;
        MZBContract = IMZB721(_MZBAddress);
        totalNumberNFTs = _number;
    }

    /**
     * @dev only call by owner
     */
    function updateNftTokenIds(
        uint256 _startId,
        uint256 _endId
    ) external onlyOwner {
        uint256 counter = 0;
        for (
            uint256 tokenId = _startId;
            tokenId <= _endId;
            tokenId++
        ) {
            NFTIds.push(tokenId);
            counter = counter + 1;
        }
    }

    /**
     * @notice need approve from user for contract transfer
     */
    function claimNFTPublic() external payable nonReentrant {
        require(totalMinted < totalNumberNFTs, "Run out of NFT");

        // Transfer ether to MZB_ADMIN
        uint256 bnbToTransfer = basePrice;
        payable(MZB_ADMIN).transfer(bnbToTransfer);

        // Mint NFTs
        address _receipient = address(msg.sender);
        uint256 randomSlot = random(0, NFTIds.length);
        uint256 heroId = randomSlot;
        totalMinted = totalMinted.add(1);
        _mint(_receipient, heroId);

        // Remove NFT out of NFTIds array
        NFTIds[randomSlot] = NFTIds[NFTIds.length - 1];
        NFTIds.pop(); 

        emit ClaimNFT(_receipient, heroId);
    }

    function _mint(address _receipient, uint256 tokenId) internal {
        MZBContract.mintBox(_receipient, tokenId);
        mintedMZBTokens[tokenId] = true;
    }

    function updateMZBContract(address _address) external onlyOwner {
        require(address(_address) != address(0), "MZB Address invalid");
        MZBContract = IMZB721(_address);
    }

    /**
     * @dev generate a random number
     * @param min min number include
     * @param max max number exclude
     */
    function random(uint256 min, uint256 max)
        internal
        returns (uint256 randomnumber)
    {
        randomnumber = uint256(
            keccak256(abi.encodePacked(block.timestamp, msg.sender, nonce))
        ).mod(max - min);
        randomnumber = randomnumber + min;
        nonce = nonce.add(1);
        return randomnumber;
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) external virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }

}