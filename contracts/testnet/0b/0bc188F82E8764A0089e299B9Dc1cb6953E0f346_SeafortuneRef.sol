pragma solidity >=0.4.22 <0.9.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract SeafortuneRef is Ownable {

    using SafeMath for uint256;
    
    IERC20 token;

    IERC1155 nft;

    address private _contract;

    mapping(address => address) private _reference;

    mapping(address => uint256) private _buyincome;

    mapping(address => uint256) private _refincome;

    mapping(address => uint256) private _buywithdrawn;

    mapping(address => uint256) private _refwithdrawn;

    address[] internal referrerholders;

    uint256 private _refIncomePersentage = 10;

    uint256 private _claimFee = 2000000000000000;

    function Setup(address _addr, address _token, address _nft) public onlyOwner returns (bool) {
        _contract = _addr;
        token = IERC20(_token);
        nft = IERC1155(_nft);
        return true;
    }

    function addReferrer(address _account, address _referrer) public returns (bool) {
        require(msg.sender == _contract, "You are not Authorized");
        _reference[_account] = _referrer;
        _addReferrerholder(_referrer);
        return true;
    }

    function addBuyIncome(address _referrer, uint256 _amount) public returns(bool) {
      require(msg.sender == _contract, "You are not Authorized");
      _buyincome[_referrer] += _amount;
      return true;
    }

    function addRefIncome(address _referrer, uint256 _amount) public returns(bool) {
      require(msg.sender == _contract, "You are not Authorized");
      _refincome[_referrer] += _amount;
      return true;
    }

    function getReferrer(address _account) public view returns (address) {
        return _reference[_account];
    }

    function getBuyIncome(address _account) public view returns(uint256) {
      return _buyincome[_account];
    }

    function getBuyWithdraw(address _account) public view returns(uint256) {
      return _buywithdrawn[_account];
    }

    function getRefIncome(address _account) public view returns(uint256) {
      return _refincome[_account];
    }

    function getRefWithdraw(address _account) public view returns(uint256) {
      return _buywithdrawn[_account];
    }

    function hasReferrer(address _account) public view returns (bool) {
        if (_reference[_account] != address(0x0)) {
            return true;
        }
        return false;
    }

    function _isReferrerholder(address _account) public view returns (bool, uint256) {
        for (uint256 s = 0; s < referrerholders.length; s += 1) {
            if (_account == referrerholders[s]) return (true, s);
        }
        return (false, 0);
    }

    function _addReferrerholder(address _referrer) private {
        (bool blnIsReferrerholder, ) = _isReferrerholder(_referrer);
        if (!blnIsReferrerholder) referrerholders.push(_referrer);
    }

    function totalReferrer() public view returns(uint256){
        return referrerholders.length;
    }

    function getHolderById(uint256 _id) public view returns(address) {
        return referrerholders[_id];
    }

    function claimBuyIncome(uint256 _id) public payable returns(bool) {
        require(msg.value >= _claimFee, "DIFFERENT FROM THE SPECIFIED FEE");
        require(_id <= 3, "ID MUST BE 0-3");
        require(nft.balanceOf(msg.sender, _id) > 0, "You don't have Buy Referance NFT");
        uint256 _buyIncomePersentage = (_id + 1) * 5;
        uint256 _amount = _buyincome[msg.sender].sub(_buywithdrawn[msg.sender]);
        require(_amount >= 0, "INSUFFICIENT INCOME");
        _amount = (_amount * _buyIncomePersentage) / 100;
        token.transfer(msg.sender, _amount);
        return true;
    }

    function claimRefIncome() public payable returns(bool) {
        require(msg.value >= _claimFee, "DIFFERENT FROM THE SPECIFIED FEE");
        uint256 _amount = _refincome[msg.sender].sub(_refwithdrawn[msg.sender]);
        require(_amount >= 0, "INSUFFICIENT INCOME");
        _amount = (_amount * _refIncomePersentage) / 100;
        token.transfer(msg.sender, _amount);
        return true;
    }

    //only owner staff

    function setClaimFee(uint256 _fee) external onlyOwner returns(uint256) {
        _claimFee = _fee;
        return _claimFee;
    }

    function getClaimFee() external view returns(uint256) {
        return _claimFee;
    }

    function updateRefIncomePersentage(uint256 _persentage) public onlyOwner returns(bool) {
        _refIncomePersentage = _persentage;
        return true;
    }

    function withdrawToken(uint256 _amount) external onlyOwner returns(bool){
        require(token.transfer(owner(), _amount), 'TRANSFER FAILED');
        return true;
    }
    
    function withdrawBnb() external onlyOwner returns(bool){
        if(address(this).balance >= 0){
            payable(owner()).transfer(address(this).balance);
        }
        return true;
    }
}

