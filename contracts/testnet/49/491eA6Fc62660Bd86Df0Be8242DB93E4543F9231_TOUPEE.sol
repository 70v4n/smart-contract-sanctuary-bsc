    }

    feeRatesStruct public feeRates =
        feeRatesStruct({rfi: 20, liquidity: 10, charity: 20, dev: 10});

    feeRatesStruct private haircutRepartition =
        feeRatesStruct({rfi:40, liquidity:10, charity:40, dev:10});

    struct valuesFromGetValues {
        uint256 rAmount;
        uint256 rTransferAmount;
        uint256 rRfi;
        uint256 tTransferAmount;
        uint256 tRfi;
        uint256 tLiquidity;
        uint256 tCharity;
