        _taxTable[1] = 30;  // Monday
        _taxTable[2] = 25;  // Tuesday
        _taxTable[3] = 20;  // Wednesday
        _taxTable[4] = 15;  // Thursday
        _taxTable[5] = 10;  // Friday
        _taxTable[6] = 5;   // Saturday
        _taxTable[7] = 0;   // Sunday

