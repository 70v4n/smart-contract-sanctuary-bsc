pragma solidity ^0.6.12;

import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/ERC1155Holder.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Pausable.sol";

contract SotaAirDropNFT is Ownable, Pausable, ERC1155Holder {
    using SafeMath for uint256;
    uint256 public totalAirDropNFTId = 0;
    uint256 public defaultTransferQuantity = 1;
    bytes4 private constant _INTERFACE_ID_ERC1155 = 0xd9b67a26;
    mapping(address => bool) isOperator;
    modifier onlyOperator() {
        require(isOperator[msg.sender], "Only-operator");
        _;
    }
    // bytes4 private constant _INTERFACE_ID_ERC721 = 0x80ac58cd;

    mapping(uint256 => AirDropNFT) public airDropNFT;

    struct AirDropNFT {
        address owner;
        address tokenAddress;
        uint256 tokenId;
        address[] claimableAddress;
        uint256[] quantity;
    }

    constructor() public {
        isOperator[msg.sender] = true;
    }

    function createAirDropNFT(
        address[] calldata _receiveAddress,
        address _tokenAddress,
        uint256 _tokenId
    ) external whenNotPaused {
        bool isERC1155 = IERC1155(_tokenAddress).supportsInterface(
            _INTERFACE_ID_ERC1155
        );
        require(isERC1155, "ERC1155-only");
        uint256 balance;
        balance = IERC1155(_tokenAddress).balanceOf(msg.sender, _tokenId);
        require(balance >= _receiveAddress.length, "Insufficient-token-balance");
        for (uint256 index = 0; index < _receiveAddress.length; index++) {
            IERC1155(_tokenAddress).safeTransferFrom(
                msg.sender,
                _receiveAddress[index],
                _tokenId,
                defaultTransferQuantity,
                "0x"
            );
        }
        totalAirDropNFTId++;
    }
}

