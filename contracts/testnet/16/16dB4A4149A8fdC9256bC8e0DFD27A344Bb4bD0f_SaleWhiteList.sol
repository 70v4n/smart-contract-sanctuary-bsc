pragma solidity 0.6.2;

import "Ownable.sol";
import "ECDSA.sol";
contract SaleWhiteList is Ownable {
    using ECDSA for bytes32;

    mapping(uint256 => bool) public whiteListedCampaign;
    mapping(address => bool) public whiteListedUser;
    mapping(address => bool) public operators;

    function enabledForCampaign(
        address _user, 
        uint256 _campaignId, 
        bytes32 _msgForSign, 
        bytes calldata _signature
    ) external view returns (bool) 
    {
        if (whiteListedCampaign[_campaignId]) {
            return whiteListedUser[_user] || isApproved(_user, _msgForSign, _signature);
        } else {
            return true;
        }
    }

    function setCampaign(uint256 id, bool isWhiteListed) external  {
        require(operators[msg.sender], "Only for operators" );
        whiteListedCampaign[id] = isWhiteListed;
    }

    function setUser(address user, bool isWhiteListed) external  {
        require(operators[msg.sender], "Only for operators" );
        whiteListedUser[user] = isWhiteListed;
    }

    function setOperator(address _op, bool _isValid) external onlyOwner {
        operators[_op] = _isValid;
    }

    function isApproved(address _user, bytes32 _msgForSign, bytes memory _signature) public  view returns(bool) {
        //1. Lets check signer
        address signedBy = _msgForSign.recover(_signature);
        require(operators[signedBy] == true, "Signature check failed!");

        //2. Check signed msg integrety
        bytes32 actualMsg =  getMsgForSign(_user);
        require(actualMsg.toEthSignedMessageHash() == _msgForSign,"Integrety check failed!");
        return true;
    }

    function getMsgForSign(
        address _sender
    )
        public pure returns(bytes32) 
    {
        return keccak256(abi.encode( _sender));
    }
}

